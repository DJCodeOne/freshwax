# Fresh Wax Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ===========================================
# FIREBASE - Server Side
# ===========================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ===========================================
# FIREBASE - Client Side (PUBLIC_ prefix exposes to browser)
# ===========================================
PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
PUBLIC_FIREBASE_API_KEY=your-firebase-web-api-key
PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# ===========================================
# CLOUDFLARE R2 STORAGE
# ===========================================
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_PUBLIC_DOMAIN=https://cdn.yourdomain.com
R2_BUCKET=freshwax-uploads
R2_UPLOADS_BUCKET=freshwax-uploads
R2_RELEASES_BUCKET=freshwax-releases
R2_PUBLIC_URL=https://cdn.yourdomain.com

# ===========================================
# CLOUDFLARE
# ===========================================
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# ===========================================
# STRIPE PAYMENTS
# ===========================================
STRIPE_SECRET_KEY=sk_live_or_sk_test_xxx
STRIPE_PLUS_ANNUAL_PRICE_ID=price_xxx

# ===========================================
# PUSHER (Real-time features)
# ===========================================
PUSHER_APP_ID=123456
PUSHER_SECRET=your-pusher-secret
PUBLIC_PUSHER_KEY=your-pusher-key
PUBLIC_PUSHER_CLUSTER=eu

# ===========================================
# EMAIL (Resend)
# ===========================================
RESEND_API_KEY=re_xxx
ADMIN_EMAIL=admin@yourdomain.com
VINYL_STOCKIST_EMAIL=vinyl@yourdomain.com

# ===========================================
# API KEYS
# ===========================================
# GIF APIs for chat
PUBLIC_GIPHY_API_KEY=your-giphy-api-key
GIPHY_API_KEY=your-giphy-api-key
PUBLIC_TENOR_API_KEY=your-tenor-api-key

# ===========================================
# ADMIN & SECURITY
# ===========================================
# Secret key for admin API endpoints (generate a strong random string)
ADMIN_KEY=your-secure-admin-key-min-32-chars

# Key for gift card system operations
GIFTCARD_SYSTEM_KEY=your-giftcard-system-key
