rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    // Partners collection
    match /partners/{partnerId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Releases
    match /releases/{releaseId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // DJ Mixes
    match /dj-mixes/{mixId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Orders
    match /orders/{orderId} {
      allow read: if isAuthenticated();
      allow create: if true;
      allow update: if isAuthenticated();
    }
    
    // Ratings
    match /ratings/{ratingId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId);
    }
    
    // Comments
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Mix Comments
    match /mix-comments/{commentId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Merch
    match /merch/{itemId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Suppliers
    match /suppliers/{supplierId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Newsletter
    match /newsletter-subscribers/{subId} {
      allow read: if isAuthenticated();
      allow create: if true;
      allow update, delete: if isAuthenticated();
    }
    
    match /newsletter-campaigns/{campaignId} {
      allow read, write: if isAuthenticated();
    }
    
    // Gift Cards
    match /giftcards/{cardId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Wishlists
    match /wishlists/{wishlistId} {
      allow read: if isOwner(resource.data.userId) || isOwner(wishlistId);
      allow write: if isAuthenticated();
    }
    
    // ===== LIVESTREAM COLLECTIONS =====
    
    // Livestreams - main stream data
    match /livestreams/{streamId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Livestream Slots - schedule booking
    match /livestreamSlots/{slotId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Active Streams - real-time stream tracking
    match /activeStreams/{streamId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Livestream Chat - public read, authenticated write
    match /livestream-chat/{messageId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Livestream Reactions - likes and ratings
    match /livestream-reactions/{reactionId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Livestream Viewers - presence tracking
    match /livestream-viewers/{viewerId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // DJ Takeover Requests - handoff between DJs
    match /djTakeoverRequests/{requestId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // DJ Lobby - waiting room for DJs
    match /djLobby/{entryId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // DJ Lobby Chat - chat in the DJ lobby
    match /djLobbyChat/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // ===== RELAY SYSTEM COLLECTIONS =====
    
    // Relay Sources - external radio stations
    match /relaySources/{sourceId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Chat Cleanup Schedule - scheduled chat deletions
    match /chatCleanupSchedule/{scheduleId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // ===== ADMIN COLLECTIONS =====
    
    // Reports - user-submitted reports
    match /reports/{reportId} {
      allow read: if isAuthenticated();
      allow create: if true; // Anyone can submit a report
      allow update, delete: if isAuthenticated(); // Only admins can modify
    }
    
    // Admin settings
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Stock movements
    match /stock-movements/{movementId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Fallback - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
