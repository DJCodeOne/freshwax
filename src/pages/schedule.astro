---
// src/pages/schedule.astro
// Public streaming schedule page - Compact 24-hour daily grid
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = false;
---

<Layout title="Stream Schedule - Fresh Wax">
  <Header />

  <main class="schedule-main">
    <div class="container">
      <div class="schedule-header">
        <h1>üìÖ STREAM <span class="red">SCHEDULE</span></h1>
        <p>See who's going live on Fresh Wax</p>
      </div>

      <!-- Day Navigation -->
      <div class="day-nav">
        <button id="prevDay" class="nav-btn">‚Üê</button>
        <div class="day-selector">
          <button class="day-btn" data-offset="-1">Yesterday</button>
          <button class="day-btn active today-marker" data-offset="0">Today</button>
          <button class="day-btn" data-offset="1">Tomorrow</button>
          <button class="day-btn" data-offset="2"></button>
          <button class="day-btn" data-offset="3"></button>
          <button class="day-btn" data-offset="4"></button>
          <button class="day-btn" data-offset="5"></button>
        </div>
        <button id="nextDay" class="nav-btn">‚Üí</button>
      </div>

      <!-- Selected Date Display -->
      <div class="selected-date">
        <h2 id="selectedDateTitle">Today's Schedule</h2>
        <p id="selectedDateFull">Loading...</p>
      </div>

      <!-- 24-Hour Grid -->
      <div class="calendar-container">
        <div id="noShows" class="no-shows-banner hidden">
          <span class="no-shows-icon">üìª</span>
          <span>No shows scheduled yet - slots available!</span>
        </div>
        <div id="hourlyGrid" class="hourly-grid">
          <!-- Grid rendered by JS -->
        </div>
      </div>

      <!-- Legend -->
      <div class="schedule-legend">
        <span class="legend-item"><span class="legend-dot live"></span> Live Now</span>
        <span class="legend-item"><span class="legend-dot booked"></span> Scheduled</span>
        <span class="legend-item"><span class="legend-dot lobby"></span> In Lobby</span>
        <span class="legend-item"><span class="legend-dot available"></span> Available</span>
      </div>

      <!-- DJ CTA -->
      <div class="dj-cta">
        <h3>Want to go live?</h3>
        <div class="dj-steps">
          <div class="dj-step">
            <span class="step-num">1</span>
            <span class="step-text">Register & login</span>
          </div>
          <div class="dj-step">
            <span class="step-num">2</span>
            <span class="step-text">Book a slot</span>
          </div>
          <div class="dj-step">
            <span class="step-num">3</span>
            <span class="step-text">Go live!</span>
          </div>
        </div>
        <a href="/dj-lobby/book" class="cta-btn">Book a Slot ‚Üí</a>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style is:global>
  .schedule-main {
    min-height: 100vh;
    background: linear-gradient(to bottom, #000 0%, #0a0a0a 100%);
    padding: 1rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .schedule-header {
    text-align: center;
    margin-bottom: 1rem;
  }

  .schedule-header h1 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.5rem;
    color: #fff;
    margin: 0 0 0.25rem 0;
    letter-spacing: 0.02em;
  }

  .schedule-header .red {
    color: #dc2626;
  }

  .schedule-header p {
    color: #666;
    font-size: 0.9rem;
  }

  .day-nav {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .nav-btn {
    background: #dc2626;
    color: #fff;
    border: none;
    width: 36px;
    height: 36px;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.2s;
    border-radius: 6px;
  }

  .nav-btn:hover {
    background: #b91c1c;
  }

  .day-selector {
    display: flex;
    gap: 4px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .day-btn {
    background: #1a1a1a;
    border: 2px solid #333;
    padding: 0.5rem 0.75rem;
    font-weight: 600;
    font-size: 0.75rem;
    color: #888;
    cursor: pointer;
    transition: all 0.2s;
    min-width: 75px;
    text-align: center;
    border-radius: 6px;
  }

  .day-btn:hover {
    background: #222;
    border-color: #444;
    color: #fff;
  }

  .day-btn.active {
    background: #dc2626;
    color: #fff;
    border-color: #dc2626;
  }

  .day-btn.today-marker:not(.active) {
    border-color: #dc2626;
  }

  .selected-date {
    text-align: center;
    margin-bottom: 1rem;
  }

  .selected-date h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.5rem;
    color: #fff;
    margin: 0;
    letter-spacing: 0.02em;
  }

  .selected-date p {
    color: #666;
    font-size: 0.8rem;
    margin: 0.125rem 0 0 0;
  }

  .calendar-container {
    background: #111;
    border: 1px solid #262626;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 1rem;
    padding: 8px;
  }

  /* 24-hour compact grid - 6 columns x 4 rows */
  .hourly-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 4px;
  }

  .hour-cell {
    background: #1a1a1a;
    border: 2px solid transparent;
    border-radius: 6px;
    padding: 0.4rem 0.3rem;
    text-align: center;
    min-height: 60px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    transition: all 0.15s;
    cursor: default;
  }

  .hour-cell.available {
    background: #0f1f0f;
    border-color: rgba(34, 197, 94, 0.2);
  }

  .hour-cell.booked {
    background: linear-gradient(135deg, #1a1a3e 0%, #1a1a2e 100%);
    border-color: rgba(99, 102, 241, 0.4);
    cursor: pointer;
  }

  .hour-cell.booked:hover {
    border-color: rgba(99, 102, 241, 0.8);
    transform: scale(1.02);
  }

  .hour-cell.live {
    background: linear-gradient(135deg, #3e1a1a 0%, #2e1a1a 100%);
    border-color: #dc2626;
    animation: pulse-border 2s infinite;
  }

  .hour-cell.lobby {
    background: linear-gradient(135deg, #3e3a1a 0%, #2e2a1a 100%);
    border-color: rgba(251, 191, 36, 0.5);
  }

  .hour-cell.past {
    opacity: 0.35;
  }

  @keyframes pulse-border {
    0%, 100% { border-color: #dc2626; }
    50% { border-color: #ef4444; }
  }

  .hour-time {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 0.95rem;
    color: #666;
    line-height: 1;
    margin-bottom: 2px;
  }

  .hour-cell.available .hour-time { color: #22c55e; }
  .hour-cell.booked .hour-time { color: #818cf8; }
  .hour-cell.live .hour-time { color: #f87171; }
  .hour-cell.lobby .hour-time { color: #fbbf24; }

  .hour-dj {
    font-size: 0.65rem;
    font-weight: 600;
    color: #fff;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.2;
  }

  .hour-cell.available .hour-dj {
    color: #22c55e;
    font-weight: 400;
    font-size: 0.55rem;
  }

  .hour-status {
    font-size: 0.5rem;
    font-weight: 700;
    text-transform: uppercase;
    margin-top: 2px;
  }

  .hour-cell.live .hour-status {
    color: #dc2626;
    animation: blink 1s infinite;
  }

  .hour-cell.lobby .hour-status {
    color: #fbbf24;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .no-shows-banner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1rem;
    background: #0a0a0a;
    color: #666;
    font-size: 0.9rem;
    font-weight: 500;
    border-radius: 6px;
    margin-bottom: 8px;
  }

  .no-shows-banner.hidden {
    display: none;
  }

  .no-shows-icon {
    font-size: 1.25rem;
  }

  /* Legend */
  .schedule-legend {
    display: flex;
    justify-content: center;
    gap: 1.25rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.75rem;
    color: #888;
  }

  .legend-dot {
    width: 12px;
    height: 12px;
    border-radius: 3px;
  }

  .legend-dot.live { background: #dc2626; }
  .legend-dot.booked { background: #6366f1; }
  .legend-dot.lobby { background: #fbbf24; }
  .legend-dot.available { background: #22c55e; }

  /* DJ CTA */
  .dj-cta {
    background: linear-gradient(135deg, #1a1a1a 0%, #111 100%);
    color: #fff;
    padding: 1.5rem;
    text-align: center;
    border: 1px solid #262626;
    border-radius: 8px;
  }

  .dj-cta h3 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.5rem;
    margin: 0 0 1rem 0;
    letter-spacing: 0.02em;
  }

  .dj-steps {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .dj-step {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .step-num {
    width: 24px;
    height: 24px;
    background: #dc2626;
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.75rem;
  }

  .step-text {
    color: #ccc;
    font-weight: 500;
    font-size: 0.85rem;
  }

  .cta-btn {
    display: inline-block;
    background: #dc2626;
    color: #fff;
    padding: 0.6rem 1.5rem;
    font-weight: 700;
    text-decoration: none;
    transition: background 0.2s;
    border-radius: 6px;
    font-size: 0.9rem;
  }

  .cta-btn:hover {
    background: #b91c1c;
  }

  @media (max-width: 800px) {
    .hourly-grid {
      grid-template-columns: repeat(4, 1fr);
    }

    .day-selector {
      gap: 3px;
    }

    .day-btn {
      min-width: 60px;
      padding: 0.4rem 0.5rem;
      font-size: 0.7rem;
    }
  }

  @media (max-width: 500px) {
    .schedule-main {
      padding: 0.5rem;
    }

    .schedule-header h1 {
      font-size: 1.75rem;
    }

    .hourly-grid {
      grid-template-columns: repeat(4, 1fr);
    }

    .hour-cell {
      min-height: 50px;
      padding: 0.3rem 0.2rem;
    }

    .hour-time {
      font-size: 0.8rem;
    }

    .hour-dj {
      font-size: 0.55rem;
    }

    .day-btn {
      min-width: 45px;
      padding: 0.35rem 0.35rem;
      font-size: 0.6rem;
    }

    .nav-btn {
      width: 30px;
      height: 30px;
    }

    .dj-steps {
      flex-direction: column;
      gap: 0.5rem;
      align-items: center;
    }

    .dj-cta {
      padding: 1rem;
    }

    .dj-cta h3 {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  let allSlots = [];
  let selectedDate = new Date();
  selectedDate.setHours(0, 0, 0, 0);
  let refreshInterval = null;

  function initSchedule() {
    allSlots = [];
    selectedDate = new Date();
    selectedDate.setHours(0, 0, 0, 0);

    updateDayButtons();
    renderGrid();
    loadSchedule();
    setupNavigation();

    // Auto-refresh every 30 seconds
    if (refreshInterval) clearInterval(refreshInterval);
    refreshInterval = setInterval(loadSchedule, 30000);
  }

  function cleanupSchedule() {
    if (refreshInterval) {
      clearInterval(refreshInterval);
      refreshInterval = null;
    }
  }

  document.addEventListener('DOMContentLoaded', initSchedule);
  document.addEventListener('astro:page-load', initSchedule);
  document.addEventListener('astro:before-swap', cleanupSchedule);

  function setupNavigation() {
    const prevBtn = document.getElementById('prevDay');
    const nextBtn = document.getElementById('nextDay');

    if (prevBtn) {
      const newPrevBtn = prevBtn.cloneNode(true);
      prevBtn.parentNode.replaceChild(newPrevBtn, prevBtn);
      newPrevBtn.addEventListener('click', () => {
        selectedDate = new Date(selectedDate.getTime() - 86400000);
        updateDayButtons();
        renderGrid();
      });
    }

    if (nextBtn) {
      const newNextBtn = nextBtn.cloneNode(true);
      nextBtn.parentNode.replaceChild(newNextBtn, nextBtn);
      newNextBtn.addEventListener('click', () => {
        selectedDate = new Date(selectedDate.getTime() + 86400000);
        updateDayButtons();
        renderGrid();
      });
    }

    document.querySelectorAll('.day-btn').forEach(btn => {
      const newBtn = btn.cloneNode(true);
      btn.parentNode.replaceChild(newBtn, btn);
      newBtn.addEventListener('click', () => {
        const offset = parseInt(newBtn.dataset.offset);
        const today = new Date();
        today.setHours(0, 0, 0, 0);
        selectedDate = new Date(today.getTime() + offset * 86400000);
        updateDayButtons();
        renderGrid();
      });
    });
  }

  function updateDayButtons() {
    const today = new Date();
    today.setHours(0, 0, 0, 0);

    document.querySelectorAll('.day-btn').forEach(btn => {
      const offset = parseInt(btn.dataset.offset);
      const btnDate = new Date(today.getTime() + offset * 86400000);

      if (offset === 0) {
        btn.textContent = 'Today';
      } else if (offset === 1) {
        btn.textContent = 'Tomorrow';
      } else if (offset === -1) {
        btn.textContent = 'Yesterday';
      } else {
        btn.textContent = btnDate.toLocaleDateString('en-GB', { weekday: 'short', day: 'numeric' });
      }

      btn.classList.toggle('active', btnDate.getTime() === selectedDate.getTime());
      btn.classList.toggle('today-marker', offset === 0);
    });

    const isToday = selectedDate.getTime() === today.getTime();
    const isTomorrow = selectedDate.getTime() === today.getTime() + 86400000;
    const isYesterday = selectedDate.getTime() === today.getTime() - 86400000;

    let titleText = '';
    if (isToday) titleText = "Today's Schedule";
    else if (isTomorrow) titleText = "Tomorrow's Schedule";
    else if (isYesterday) titleText = "Yesterday's Schedule";
    else titleText = selectedDate.toLocaleDateString('en-GB', { weekday: 'long' }) + "'s Schedule";

    document.getElementById('selectedDateTitle').textContent = titleText;
    document.getElementById('selectedDateFull').textContent =
      selectedDate.toLocaleDateString('en-GB', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' });
  }

  async function loadSchedule() {
    try {
      const start = new Date();
      start.setDate(start.getDate() - 7);
      const end = new Date();
      end.setDate(end.getDate() + 14);

      const response = await fetch(`/api/livestream/slots?start=${start.toISOString()}&end=${end.toISOString()}`);
      const data = await response.json();

      if (data.success) {
        allSlots = (data.slots || []).filter(s => s.status !== 'cancelled');
      }
    } catch (error) {
      console.error('Failed to load schedule:', error);
    }
    renderGrid();
  }

  function renderGrid() {
    const grid = document.getElementById('hourlyGrid');
    const noShows = document.getElementById('noShows');

    if (!grid) return;

    const now = new Date();
    const isToday = selectedDate.toDateString() === now.toDateString();
    const currentHour = now.getHours();

    const dayStart = new Date(selectedDate);
    dayStart.setHours(0, 0, 0, 0);
    const dayEnd = new Date(dayStart.getTime() + 86400000);

    // Get slots for this day
    const daySlots = allSlots.filter(slot => {
      const slotStart = new Date(slot.startTime);
      return slotStart >= dayStart && slotStart < dayEnd;
    });

    // Map slots by hour
    const slotsByHour = {};
    daySlots.forEach(slot => {
      const startHour = new Date(slot.startTime).getHours();
      const duration = slot.duration || 1;
      for (let h = startHour; h < startHour + duration && h < 24; h++) {
        if (!slotsByHour[h]) slotsByHour[h] = slot;
      }
    });

    const formatHour = (h) => {
      const displayHour = h === 0 ? 12 : h > 12 ? h - 12 : h;
      const ampm = h >= 12 ? 'PM' : 'AM';
      return `${displayHour}${ampm}`;
    };

    let html = '';
    let hasBookings = false;

    for (let hour = 0; hour < 24; hour++) {
      const isPast = isToday && hour < currentHour;
      const slot = slotsByHour[hour];

      let cellClass = 'hour-cell';
      let djText = '';
      let statusText = '';

      if (slot) {
        hasBookings = true;
        if (slot.status === 'live') {
          cellClass += ' live';
          djText = slot.djName || 'Live';
          statusText = '‚óè LIVE';
        } else if (slot.status === 'in_lobby') {
          cellClass += ' lobby';
          djText = slot.djName || 'DJ';
          statusText = 'LOBBY';
        } else {
          cellClass += ' booked';
          djText = slot.djName || 'Booked';
        }
      } else {
        cellClass += ' available';
        djText = 'Open';
      }

      if (isPast) {
        cellClass += ' past';
      }

      html += `
        <div class="${cellClass}" data-hour="${hour}">
          <div class="hour-time">${formatHour(hour)}</div>
          <div class="hour-dj">${djText}</div>
          ${statusText ? `<div class="hour-status">${statusText}</div>` : ''}
        </div>
      `;
    }

    grid.innerHTML = html;

    // Show/hide no shows banner
    if (noShows) {
      noShows.classList.toggle('hidden', hasBookings);
    }

    // Add click handlers to booked/live slots
    grid.querySelectorAll('.hour-cell.booked, .hour-cell.live').forEach(cell => {
      cell.addEventListener('click', () => {
        window.location.href = '/live';
      });
    });
  }
</script>
