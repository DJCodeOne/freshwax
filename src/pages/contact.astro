---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = true;
---

<Layout 
  title="Contact Us" 
  description="Get in touch with Fresh Wax. Contact us for order enquiries, demo submissions, licensing requests, or general questions."
>
  <Header />
  
  <main class="bg-gray-50 min-h-screen">
    <!-- Hero -->
    <section class="bg-black text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-bold tracking-wide mb-4">CONTACT US</h1>
        <p class="text-gray-400">We'd love to hear from you</p>
      </div>
    </section>

    <div class="container mx-auto px-4 py-12 max-w-5xl">
      <div class="grid md:grid-cols-2 gap-8">
        
        <!-- Contact Form -->
        <div class="bg-white border-2 border-black p-8">
          <h2 class="text-2xl font-bold mb-6">Send a Message</h2>
          
          <form id="contactForm" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-semibold mb-2">Your Name *</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border-2 border-gray-300 focus:border-black focus:outline-none transition-colors"
                placeholder="John Smith"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold mb-2">Email Address *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border-2 border-gray-300 focus:border-black focus:outline-none transition-colors"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-semibold mb-2">Subject *</label>
              <select 
                id="subject" 
                name="subject" 
                required
                class="w-full px-4 py-3 border-2 border-gray-300 focus:border-black focus:outline-none transition-colors bg-white"
              >
                <option value="">Select a subject...</option>
                <option value="order">Order Enquiry</option>
                <option value="demo">Demo Submission</option>
                <option value="licensing">Licensing Request</option>
                <option value="press">Press / Media</option>
                <option value="wholesale">Wholesale / Trade</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold mb-2">Message *</label>
              <textarea 
                id="message" 
                name="message" 
                required
                rows="5"
                class="w-full px-4 py-3 border-2 border-gray-300 focus:border-black focus:outline-none transition-colors resize-none"
                placeholder="Your message..."
              ></textarea>
            </div>

            <button 
              type="submit"
              class="w-full py-4 bg-black text-white font-bold uppercase tracking-wide hover:bg-red-600 transition-colors"
            >
              Send Message
            </button>

            <div id="formStatus" class="hidden p-4 text-center font-semibold"></div>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="space-y-6">
          <!-- Direct Contacts -->
          <div class="bg-white border-2 border-black p-8">
            <h2 class="text-2xl font-bold mb-6">Direct Contact</h2>
            
            <div class="space-y-4">
              <div>
                <h3 class="font-semibold text-sm uppercase text-gray-500 mb-1">General Enquiries</h3>
                <a href="mailto:info@freshwax.co.uk" class="text-lg font-semibold hover:text-red-600 transition-colors">
                  info@freshwax.co.uk
                </a>
              </div>

              <div>
                <h3 class="font-semibold text-sm uppercase text-gray-500 mb-1">Demo Submissions</h3>
                <a href="mailto:demos@freshwax.co.uk" class="text-lg font-semibold hover:text-red-600 transition-colors">
                  demos@freshwax.co.uk
                </a>
              </div>

              <div>
                <h3 class="font-semibold text-sm uppercase text-gray-500 mb-1">Order Support</h3>
                <a href="mailto:orders@freshwax.co.uk" class="text-lg font-semibold hover:text-red-600 transition-colors">
                  orders@freshwax.co.uk
                </a>
              </div>

              <div>
                <h3 class="font-semibold text-sm uppercase text-gray-500 mb-1">Licensing</h3>
                <a href="mailto:licensing@freshwax.co.uk" class="text-lg font-semibold hover:text-red-600 transition-colors">
                  licensing@freshwax.co.uk
                </a>
              </div>
            </div>
          </div>

          <!-- Social Links -->
          <div class="bg-white border-2 border-black p-8">
            <h2 class="text-2xl font-bold mb-6">Follow Us</h2>
            
            <div class="flex gap-4">
              <a href="https://facebook.com/freshwaxuk" target="_blank" rel="noopener noreferrer" 
                 class="w-12 h-12 bg-black text-white flex items-center justify-center hover:bg-red-600 transition-colors">
