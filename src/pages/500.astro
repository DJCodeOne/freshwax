---
// src/pages/500.astro
// Custom 500 error page - server errors
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Server Error - Fresh Wax" noindex={true}>
  <Header />

  <main class="error-page">
    <div class="error-container">
      <div class="error-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M12 9v2m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>

      <h1>5<span class="red">0</span>0</h1>
      <p class="error-message">Something went wrong on our end.</p>
      <p class="error-sub">We're working on it. Please try again in a moment.</p>

      <div class="error-actions">
        <a href="/" class="cta-btn">Back to Home</a>
        <button onclick="window.location.reload()" class="cta-btn secondary">Try Again</button>
      </div>

      <div class="error-contact">
        <p>If the problem persists, please contact us:</p>
        <a href="mailto:contact@freshwax.co.uk">contact@freshwax.co.uk</a>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .error-page {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    background: linear-gradient(180deg, #0a0a0a 0%, #111 100%);
  }

  .error-container {
    text-align: center;
    max-width: 600px;
  }

  .error-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 2rem;
    color: #ef4444;
  }

  .error-icon svg {
    width: 100%;
    height: 100%;
  }

  h1 {
    font-size: 8rem;
    font-weight: 700;
    line-height: 1;
    margin: 0 0 1rem;
    color: #fff;
    letter-spacing: -0.05em;
  }

  .red {
    color: #ef4444;
  }

  .error-message {
    font-size: 1.5rem;
    color: #fff;
    margin: 0 0 0.5rem;
  }

  .error-sub {
    font-size: 1rem;
    color: #888;
    margin: 0 0 2rem;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .cta-btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    border-radius: 8px;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .cta-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(239, 68, 68, 0.3);
  }

  .cta-btn.secondary {
    background: transparent;
    border: 1px solid #333;
    color: #ccc;
  }

  .cta-btn.secondary:hover {
    background: rgba(255,255,255,0.05);
    border-color: #555;
    box-shadow: none;
  }

  .error-contact {
    padding-top: 2rem;
    border-top: 1px solid #222;
  }

  .error-contact p {
    color: #666;
    margin-bottom: 0.5rem;
  }

  .error-contact a {
    color: #ef4444;
    text-decoration: none;
  }

  .error-contact a:hover {
    text-decoration: underline;
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 5rem;
    }

    .error-message {
      font-size: 1.25rem;
    }

    .error-actions {
      flex-direction: column;
    }

    .cta-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>
