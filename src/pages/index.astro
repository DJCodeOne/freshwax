    <link rel="icon" type="image/png" sizes="32x32" href="/public/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/public/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/public/apple-touch-icon.png">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: #000000;
            color: #ffffff;
        }
        
        .container {
            text-align: center;
            padding: 2rem;
            max-width: 800px;
            width: 100%;
        }
        
        .logo-wrapper {
            background: #ffffff;
            padding: 3rem 2rem;
            border-radius: 20px;
            margin-bottom: 3rem;
            box-shadow: 0 20px 60px rgba(255, 255, 255, 0.1);
            display: inline-block;
        }
        
        .logo {
            max-width: 400px;
            width: 100%;
            height: auto;
            display: block;
        }
        
        h1 {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            font-weight: 900;
            letter-spacing: -0.02em;
            background: linear-gradient(135deg, #ffffff 0%, #cccccc 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .subtitle {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            font-weight: 600;
            color: #ffffff;
        }
        
        p {
            font-size: 1.125rem;
            opacity: 0.8;
            line-height: 1.6;
            margin-bottom: 0.5rem;
        }
        
        .description {
            max-width: 600px;
            margin: 2rem auto;
        }
        
        .construction-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: #ffffff;
            color: #000000;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1rem;
            margin-top: 2rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            position: relative;
        }
        
        .construction-badge::before,
        .construction-badge::after {
            content: '';
            width: 8px;
            height: 8px;
            background: #dc2626;
            border-radius: 50%;
            animation: redPulse 1.5s ease-in-out infinite;
            box-shadow: 0 0 8px rgba(220, 38, 38, 0.8), 0 0 16px rgba(220, 38, 38, 0.4);
        }
        
        .construction-badge::before {
            position: absolute;
            left: -20px;
        }
        
        .construction-badge::after {
            position: absolute;
            right: -20px;
            animation-delay: 0.75s;
        }
        
        @keyframes redPulse {
            0%, 100% {
                opacity: 1;
                transform: scale(1);
                box-shadow: 0 0 8px rgba(220, 38, 38, 0.8), 0 0 16px rgba(220, 38, 38, 0.4);
            }
            50% {
                opacity: 0.4;
                transform: scale(1.3);
                box-shadow: 0 0 12px rgba(220, 38, 38, 1), 0 0 24px rgba(220, 38, 38, 0.6);
            }
        }
        
        .pulse {
            display: inline-block;
            width: 8px;
            height: 8px;
            background: #000000;
            border-radius: 50%;
            animation: pulse 2s ease-in-out infinite;
        }
        
        @keyframes pulse {
            0%, 100% {
                opacity: 1;
                transform: scale(1);
            }
            50% {
                opacity: 0.5;
                transform: scale(1.2);
            }
        }
        
        @keyframes kittScanner {
            0% { left: -100%; opacity: 0; }
            5% { opacity: 1; }
            45% { opacity: 1; }
            50% { left: 100%; opacity: 0; }
            55% { opacity: 1; }
            95% { opacity: 1; }
            100% { left: -100%; opacity: 0; }
        }
        
        .kitt-scanner {
            animation: kittScanner 2.6s ease-in-out infinite;
        }
        
        .genre-tags {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 2rem;
        }
        
        .tag {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.15);
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }
        
        .tag:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.25);
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.15);
        }
        
        .merch-notice {
            background: rgba(26, 26, 26, 0.6);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 2px solid rgba(255, 255, 255, 0.4);
            border-radius: 16px;
            padding: 2rem;
            margin: 3rem auto;
            max-width: 700px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5), 
                        inset 0 0 0 2px rgba(220, 38, 38, 0.3),
                        inset 0 1px 0 rgba(255, 255, 255, 0.05);
            transition: all 0.4s ease;
        }
        
        .merch-notice:hover {
            background: rgba(26, 26, 26, 0.8);
            backdrop-filter: blur(30px);
            -webkit-backdrop-filter: blur(30px);
            border-color: rgba(255, 255, 255, 0.6);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.6), 
                        inset 0 0 0 2px rgba(220, 38, 38, 0.6),
                        inset 0 1px 0 rgba(255, 255, 255, 0.1),
                        0 0 40px rgba(220, 38, 38, 0.15);
            transform: translateY(-4px);
        }
        
        .merch-header {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            margin-bottom: 1.25rem;
        }
        
        .merch-header h2 {
            font-size: 1.5rem;
            font-weight: 900;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin: 0;
            color: #ffffff;
        }
        
        .merch-target {
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 1rem;
            opacity: 1;
            font-weight: 600;
            color: #cccccc;
        }
        
        .merch-details {
            background: #0a0a0a;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border: 1px solid #2a2a2a;
            text-align: left;
        }
        
        .merch-details-grid {
            display: grid;
            gap: 0.875rem;
        }
        
        .merch-item {
            display: flex;
            gap: 0.5rem;
            align-items: start;
        }
        
        .merch-item .checkmark {
            color: #22c55e;
            font-size: 1.125rem;
            flex-shrink: 0;
        }
        
        .merch-item span {
            font-size: 0.9375rem;
            line-height: 1.5;
            color: #e5e5e5;
        }
        
        @media (max-width: 768px) {
            .logo-wrapper {
                padding: 2rem 1.5rem;
                margin-bottom: 2rem;
            }
            
            .logo {
                max-width: 280px;
            }
            
            h1 {
                font-size: 2.5rem;
            }
            
            .subtitle {
                font-size: 1.25rem;
            }
            
            p {
                font-size: 1rem;
            }
            
            .container {
                padding: 1.5rem;
            }
            
            .merch-notice {
                padding: 1.5rem;
            }
            
            .merch-header h2 {
                font-size: 1.25rem;
            }
        }
    </style>
</head>
