// src/pages/pre-orders.astro
// Pre-orders Page - Shows upcoming releases available for pre-order
// Releases with future release dates

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { initializeApp, cert, getApps } from 'firebase-admin/app';
import { getFirestore } from 'firebase-admin/firestore';

// Initialize Firebase Admin
if (!getApps().length) {
  initializeApp({
    credential: cert({
      projectId: import.meta.env.FIREBASE_PROJECT_ID,
      clientEmail: import.meta.env.FIREBASE_CLIENT_EMAIL,
      privateKey: import.meta.env.FIREBASE_PRIVATE_KEY?.replace(/\\n/g, '\n'),
    }),
  });
}

const db = getFirestore();

const now = new Date();

let preorders: any[] = [];

try {
  // Get all live releases
  const releasesSnap = await db.collection('releases')
    .where('status', '==', 'live')
    .get();
  
  // Filter to releases with future release dates (pre-orders)
  preorders = releasesSnap.docs
    .map(doc => {
      const data = { id: doc.id, ...doc.data() };
      const releaseDate = new Date(data.releaseDate);
      const daysUntil = Math.ceil((releaseDate.getTime() - now.getTime()) / (1000 * 60 * 60 * 24));
      return {
        ...data,
        daysUntilRelease: daysUntil,
        releaseDateObj: releaseDate
      };
    })
    .filter(release => release.releaseDateObj > now)
    .sort((a, b) => a.releaseDateObj.getTime() - b.releaseDateObj.getTime()); // Soonest first
  
} catch (e) {
  console.error('Error fetching pre-orders:', e);
}

// Format release date
const formatDate = (dateStr: string) => {
  try {
    return new Date(dateStr).toLocaleDateString('en-GB', { 
      weekday: 'long',
      day: 'numeric', 
      month: 'long',
      year: 'numeric'
    });
  } catch {
    return '';
  }
};

// Get label from release
const getLabel = (release: any) => release.labelName || release.recordLabel || release.copyrightHolder || 'Unknown Label';

// Get digital price
const getPrice = (release: any) => release.pricePerSale || release.pricing?.digital || (release.trackPrice || 1) * (release.tracks?.length || 4);

export const prerender = false;
