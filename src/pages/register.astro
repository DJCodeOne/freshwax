        <div class="features">
          <div class="feature">
            <div class="feature-icon-wrapper">
              <span class="feature-icon">üõí</span>
            </div>
            <div class="feature-text">
              <strong>Shop Exclusive Releases</strong>
              <span>Digital downloads & limited vinyl pressings</span>
            </div>
          </div>
          <div class="feature">
            <div class="feature-icon-wrapper">
              <span class="feature-icon">üéß</span>
            </div>
            <div class="feature-text">
              <strong>Share Your Mixes</strong>
              <span>Upload DJ sets & connect with listeners</span>
            </div>
          </div>
          <div class="feature">
            <div class="feature-icon-wrapper">
              <span class="feature-icon">üéµ</span>
            </div>
            <div class="feature-text">
              <strong>Release Your Music</strong>
              <span>Artists & labels can sell directly to fans</span>
            </div>
          </div>
          <div class="feature">
            <div class="feature-icon-wrapper">
              <span class="feature-icon">üëï</span>
            </div>
            <div class="feature-text">
              <strong>Sell Merchandise</strong>
              <span>T-shirts, hoodies & more for your brand</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Side - Registration Form -->
    <div class="form-side">
      <div class="form-container">
        <!-- Mobile Logo -->
        <a href="/" class="mobile-logo">
          <img src="/logo.webp" alt="Fresh Wax" />
        </a>

        <!-- Registration Form -->
        <div id="registrationForm">
          <div class="form-header">
            <h2>Create Account</h2>
            <p>Join the Fresh <span style="color: #dc2626;">Wax</span> community</p>
          </div>

          <div class="message error-message" id="errorMessage"></div>

          <form id="registerForm" novalidate>
            <!-- Basic Info -->
            <div class="form-group">
              <label for="fullName">Full Name <span class="required">*</span></label>
              <input type="text" id="fullName" name="fullName" required placeholder="Your name" autocomplete="name" maxlength="60">
              <p class="field-error" id="nameError"></p>
            </div>

            <div class="form-group">
              <label for="email">Email Address <span class="required">*</span></label>
              <input type="email" id="email" name="email" required placeholder="you@example.com" autocomplete="email">
              <p class="field-error" id="emailError"></p>
            </div>

            <div class="form-group">
              <label for="displayName">Display Name</label>
              <input type="text" id="displayName" name="displayName" placeholder="How you want to be known" maxlength="30">
              <p class="field-hint">Optional - defaults to your first name if left blank (max 30 characters)</p>
              <p class="field-error" id="displayNameError"></p>
            </div>

            <div class="form-group">
              <label for="password">Password <span class="required">*</span></label>
              <div class="password-wrapper">
                <input type="password" id="password" name="password" required placeholder="At least 8 characters" autocomplete="new-password">
                <button type="button" class="toggle-password" data-target="password" aria-label="Toggle password visibility">
                  <svg class="eye-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                </button>
              </div>
              <p class="field-error" id="passwordError"></p>
            </div>

            <div class="form-group">
              <label for="confirmPassword">Confirm Password <span class="required">*</span></label>
              <div class="password-wrapper">
                <input type="password" id="confirmPassword" name="confirmPassword" required placeholder="Re-enter password" autocomplete="new-password">
                <button type="button" class="toggle-password" data-target="confirmPassword" aria-label="Toggle password visibility">
                  <svg class="eye-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                </button>
              </div>
              <p class="field-error" id="confirmError"></p>
            </div>

            <!-- Optional Partner Roles -->
            <div class="form-group partner-roles">
              <label class="section-label">I want to also... <span class="hint">(optional - requires approval)</span></label>
              <div class="role-options">
                <label class="role-option">
                  <input type="checkbox" name="roles" value="artist" class="role-checkbox">
                  <span class="option-label">Release Music</span>
                </label>
                <label class="role-option">
                  <input type="checkbox" name="roles" value="merch_supplier" class="role-checkbox">
                  <span class="option-label">Sell Merch</span>
                </label>
              </div>
            </div>

            <!-- Approval notice -->
            <div id="approvalNotice" class="approval-notice hidden">
              <span class="notice-icon">‚è≥</span>
              <div class="notice-text">
                <strong>Approval Required</strong>
                <p>Artist & merch accounts are reviewed within 24-48 hours. You can shop and upload mixes immediately.</p>
              </div>
            </div>

            <div class="form-group checkbox-group">
              <label class="checkbox-label">
                <input type="checkbox" id="termsAccept" name="termsAccept" required>
                <span class="checkbox-custom"></span>
                <span>I agree to the <a href="/terms" target="_blank">Terms of Service</a> and <a href="/privacy" target="_blank">Privacy Policy</a></span>
              </label>
              <p class="field-error" id="termsError"></p>
            </div>

            <button type="submit" class="submit-btn" id="submitBtn">
              <span class="btn-text">Create Account</span>
