          <div class="form-footer">
            <p>Already have an account? <a href="/login">Sign In</a></p>
          </div>
        </div>

        <!-- Success State -->
        <div id="successState" class="success-state hidden">
          <div class="success-icon">‚úì</div>
          <h2>Welcome to Fresh <span style="color: #dc2626;">Wax</span>!</h2>
          <p id="successMessage">Your account has been created.</p>
          
          <!-- Gift Card Notice -->
          <div id="giftCardNotice" class="gift-card-notice hidden">
            <div class="gift-card-icon">üéÅ</div>
            <h3>You've received ¬£50 credit!</h3>
            <p class="gift-card-desc">Here's your welcome gift card code:</p>
            <div class="gift-card-code" id="giftCardCodeDisplay">FWGC-XXXX-XXXX-XXXX</div>
            <p class="gift-card-hint">Redeem it in your <a href="/account/dashboard">account dashboard</a> or at <a href="/giftcards">giftcards</a></p>
          </div>
          
          <div id="pendingNotice" class="pending-notice hidden">
            <p><strong>Partner application submitted</strong></p>
            <p class="small">We'll email you when approved. You can shop and upload mixes now!</p>
          </div>
          <a href="/account/dashboard" class="continue-btn">Go to Dashboard</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Firebase SDK -->
  <script is:inline type="module">
    import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js';
    import { getAuth, createUserWithEmailAndPassword, updateProfile } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js';
    import { getFirestore, doc, setDoc, serverTimestamp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js';
    
    const firebaseConfig = {
      apiKey: "AIzaSyBiZGsWdvA9ESm3OsUpZ-VQpwqMjMpBY6g",
      authDomain: "fresh-wax.firebaseapp.com",
      projectId: "fresh-wax",
      storageBucket: "fresh-wax.firebasestorage.app",
      messagingSenderId: "307622215498",
      appId: "1:307622215498:web:e66cee39e098fe973c7081"
    };
    
    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    // Show/hide approval notice based on role selection
    const roleCheckboxes = document.querySelectorAll('input[name="roles"]');
    const approvalNotice = document.getElementById('approvalNotice');
    
    function updateFormState() {
      const selectedRoles = Array.from(document.querySelectorAll('input[name="roles"]:checked')).map(cb => cb.value);
      const needsApproval = selectedRoles.includes('artist') || selectedRoles.includes('merch_supplier');
      
      approvalNotice.classList.toggle('hidden', !needsApproval);
    }
    
    roleCheckboxes.forEach(cb => cb.addEventListener('change', updateFormState));

    // Toggle password visibility for both fields
    document.querySelectorAll('.toggle-password').forEach(btn => {
      btn.addEventListener('click', function() {
        const targetId = this.getAttribute('data-target') || 'password';
        const input = document.getElementById(targetId);
        input.type = input.type === 'password' ? 'text' : 'password';
      });
    });

    // Form submission
    const form = document.getElementById('registerForm');
    const submitBtn = document.getElementById('submitBtn');
    const errorMessage = document.getElementById('errorMessage');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Clear errors
      document.querySelectorAll('.field-error').forEach(el => el.textContent = '');
      errorMessage.textContent = '';
      errorMessage.style.display = 'none';
      
      // Get values
      const fullName = document.getElementById('fullName').value.trim();
      const email = document.getElementById('email').value.trim();
      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirmPassword').value;
      const termsAccept = document.getElementById('termsAccept').checked;
      const displayNameInput = document.getElementById('displayName').value.trim();
      
      // Use first name as default display name if not provided
      const firstName = fullName.split(' ')[0];
      const displayName = displayNameInput || firstName;
      
      const selectedRoles = Array.from(document.querySelectorAll('input[name="roles"]:checked')).map(cb => cb.value);
      const needsApproval = selectedRoles.includes('artist') || selectedRoles.includes('merch_supplier');
      
      // Validation
      let hasErrors = false;
      
      if (!fullName) {
        document.getElementById('nameError').textContent = 'Name is required';
        hasErrors = true;
      }
      
      if (!email) {
        document.getElementById('emailError').textContent = 'Email is required';
        hasErrors = true;
      } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
        document.getElementById('emailError').textContent = 'Please enter a valid email';
        hasErrors = true;
      }
      
      if (!password) {
        document.getElementById('passwordError').textContent = 'Password is required';
        hasErrors = true;
      } else if (password.length < 8) {
        document.getElementById('passwordError').textContent = 'Password must be at least 8 characters';
        hasErrors = true;
      }
      
      if (password !== confirmPassword) {
        document.getElementById('confirmError').textContent = 'Passwords do not match';
        hasErrors = true;
      }
      
      if (!termsAccept) {
        document.getElementById('termsError').textContent = 'You must accept the terms';
        hasErrors = true;
      }
      
      if (hasErrors) return;
      
      // Show loading
      submitBtn.disabled = true;
      submitBtn.querySelector('.btn-text').classList.add('hidden');
      submitBtn.querySelector('.btn-loading').classList.remove('hidden');
      
      try {
        // Create auth account
        const userCredential = await createUserWithEmailAndPassword(auth, email, password);
        const user = userCredential.user;
        
        // Update profile with display name
        await updateProfile(user, { displayName: displayName });
        
        // Determine approval status
        // Customer & DJ = auto-approved, Artist & Merch = needs approval
        const isAutoApproved = !needsApproval;
        
        // Build user document
        const userData = {
          uid: user.uid,
          email: email,
          fullName: fullName,
          displayName: displayName,
          createdAt: serverTimestamp(),
          roles: {
            customer: true,  // All users can shop
            dj: true,        // All users can upload mixes
            artist: selectedRoles.includes('artist'),
            merchSupplier: selectedRoles.includes('merch_supplier'),
            admin: false
          },
          // Partner approval status
          approved: isAutoApproved
        };
        
        // If needs approval, add pending partner info
        if (needsApproval) {
          userData.partnerInfo = {
            displayName: displayName,
            approved: false,
            appliedAt: serverTimestamp(),
            pendingRoles: selectedRoles.filter(r => r === 'artist' || r === 'merch_supplier')
          };
        }
        
        // Save to unified users collection
        await setDoc(doc(db, 'users', user.uid), userData);
        
        // Also save to customers collection for backwards compatibility
        await setDoc(doc(db, 'customers', user.uid), {
          uid: user.uid,
          email: email,
          fullName: fullName,
          displayName: displayName,
          createdAt: serverTimestamp()
        });
        
        // If partner roles selected, also save to artists collection
        if (needsApproval) {
          await setDoc(doc(db, 'artists', user.uid), {
            uid: user.uid,
            email: email,
            name: fullName,
            artistName: displayName,
            isArtist: selectedRoles.includes('artist'),
            isMerchSupplier: selectedRoles.includes('merch_supplier'),
            approved: false,
            registeredAt: serverTimestamp()
          });
        }
        
        // Set cookies for auth
        document.cookie = `customerId=${user.uid}; path=/; max-age=86400; SameSite=Lax`;
        document.cookie = `userId=${user.uid}; path=/; max-age=86400; SameSite=Lax`;
        
        // Show success
        document.getElementById('registrationForm').classList.add('hidden');
        document.getElementById('successState').classList.remove('hidden');
        
        if (needsApproval) {
          document.getElementById('pendingNotice').classList.remove('hidden');
        }
        
      } catch (error) {
        console.error('Registration error:', error);
        
        let message = 'Registration failed. Please try again.';
        if (error.code === 'auth/email-already-in-use') {
          message = 'An account with this email already exists. Try signing in instead.';
        } else if (error.code === 'auth/weak-password') {
          message = 'Password is too weak. Please use a stronger password.';
        } else if (error.code === 'auth/invalid-email') {
          message = 'Invalid email address.';
        }
        
        errorMessage.textContent = message;
        errorMessage.style.display = 'block';
        
        submitBtn.disabled = false;
        submitBtn.querySelector('.btn-text').classList.remove('hidden');
        submitBtn.querySelector('.btn-loading').classList.add('hidden');
      }
    });
  </script>

