---
// src/pages/cart.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = false;
---

<Layout title="Record Bag - Fresh Wax" noindex={true}>
  <Header />
  
  <main class="cart-main">
    
    <!-- Page Header -->
    <header class="cart-header">
      <h1>RECORD BAG</h1>
      <a href="/" class="back-btn">‚Üê Continue Shopping</a>
    </header>
    
    <div id="cart-content">
      <div class="loading-state">Loading your bag...</div>
    </div>
    
  </main>

  <Footer />
</Layout>

<style>
  :global(html), :global(body) {
    background: #000 !important;
  }
  
  .cart-main {
    min-height: 100vh;
    padding: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
    background: #000;
  }
  
  .cart-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2rem;
    padding-bottom: 1.25rem;
    border-bottom: 3px solid #ef4444;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .cart-header h1 {
    margin: 0;
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(2.2rem, 6vw, 3rem);
    font-weight: 400;
    letter-spacing: 0.02em;
    color: #fff;
  }
  
  .back-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    padding: 0.625rem 1.25rem;
    background: #000;
    border: 2px solid #fff;
    border-radius: 8px;
    transition: all 0.2s;
  }
  
  .back-btn:hover {
    background: #fff;
    color: #000;
  }
  
  .loading-state {
    text-align: center;
    padding: 4rem 2rem;
    background: #000;
    border: 3px solid #fff;
    border-radius: 12px;
    color: #888;
    font-size: 1.125rem;
  }
  
  @media (max-width: 600px) {
    .cart-main {
      padding: 1rem 0.75rem;
    }
    
    .cart-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.875rem;
    }
    
    .back-btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<style is:global>
  /* Mobile-optimized cart items */
  @media (max-width: 600px) {
    #cart-content article {
      grid-template-columns: 80px 1fr !important;
      gap: 0.75rem !important;
      padding: 1rem !important;
    }
    
    #cart-content article > div:first-child {
      width: 80px !important;
      height: 80px !important;
    }
    
    #cart-content article > div:first-child img {
      width: 80px !important;
      height: 80px !important;
    }
    
    #cart-content h3 {
      font-size: 1rem !important;
    }
    
    /* Stack quantity controls and price */
    #cart-content article > div:last-child > div:last-child {
      flex-direction: column !important;
      align-items: flex-start !important;
      gap: 0.75rem !important;
    }
    
    /* Make quantity buttons touch-friendly */
    #cart-content button {
      min-height: 44px !important;
      min-width: 44px !important;
    }
    
    /* Checkout button full width */
    #cart-content a[href="/checkout"] {
      width: 100% !important;
      text-align: center !important;
    }
  }
  
  /* Tablet cart adjustments */
  @media (min-width: 601px) and (max-width: 768px) {
    #cart-content article {
      gap: 1rem !important;
    }
  }
  
  /* Touch-friendly cart controls */
  @media (hover: none) and (pointer: coarse) {
    #cart-content button {
      min-height: 44px !important;
    }
    
    #cart-content a {
      min-height: 48px !important;
    }
  }
</style>

<script is:inline src="/cart-page.js"></script>