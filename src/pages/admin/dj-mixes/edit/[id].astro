<script define:vars={{ mixId: mix.id }}>
  const form = document.getElementById('editForm');
  const saveBtn = document.getElementById('saveBtn');
  const descriptionField = document.getElementById('descriptionField');
  const artworkFile = document.getElementById('artworkFile');
  const artworkUrlInput = document.getElementById('artworkUrlInput');
  const artworkPreview = document.getElementById('artworkPreview');
  const clearArtworkBtn = document.getElementById('clearArtwork');

  // Emoji buttons
  document.querySelectorAll('.emoji-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      const emoji = btn.dataset.emoji;
      const start = descriptionField.selectionStart;
      const end = descriptionField.selectionEnd;
      const text = descriptionField.value;
      descriptionField.value = text.substring(0, start) + emoji + text.substring(end);
      descriptionField.selectionStart = descriptionField.selectionEnd = start + emoji.length;
      descriptionField.focus();
    });
  });

  // Artwork file upload preview
  artworkFile.addEventListener('change', (e) => {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = (e) => {
        artworkPreview.innerHTML = `<img src="${e.target.result}" alt="Preview" id="previewImg" />`;
        // Store base64 for upload (in a real implementation, you'd upload to R2)
        artworkUrlInput.dataset.pendingUpload = e.target.result;
      };
      reader.readAsDataURL(file);
    }
  });

  // Artwork URL input preview
  artworkUrlInput.addEventListener('change', () => {
    const url = artworkUrlInput.value.trim();
    if (url) {
      artworkPreview.innerHTML = `<img src="${url}" alt="Preview" id="previewImg" onerror="this.parentElement.innerHTML='<div class=artwork-placeholder>Invalid URL</div>'" />`;
    }
  });

  // Clear artwork
  clearArtworkBtn.addEventListener('click', (e) => {
    e.preventDefault();
    artworkPreview.innerHTML = '<div class="artwork-placeholder">üéß No artwork</div>';
    artworkUrlInput.value = '';
    artworkFile.value = '';
    delete artworkUrlInput.dataset.pendingUpload;
  });

  // Form submit
  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);

    // Check if there's a pending file upload
    let artworkUrl = formData.get('artworkUrl');
    if (artworkUrlInput.dataset.pendingUpload) {
      // For now, use the base64 data URL (in production, upload to R2 first)
      artworkUrl = artworkUrlInput.dataset.pendingUpload;
    }

    const updates = {
      mixId: mixId,
      title: formData.get('title'),
      djName: formData.get('djName'),
      genre: formData.get('genre'),
      description: formData.get('description'),
      tracklist: formData.get('tracklist'),
      artworkUrl: artworkUrl,
      published: formData.get('published') === 'on',
      allowDownload: formData.get('allowDownload') === 'on',
      featured: formData.get('featured') === 'on',
      userId: formData.get('userId'),
    };

    saveBtn.disabled = true;
    saveBtn.textContent = 'Saving...';

    try {
      const response = await fetch('/api/admin/update-mix', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(updates)
      });

      const result = await response.json();

      if (response.ok && result.success) {
        showToast('Mix updated successfully!');
        saveBtn.textContent = '‚úÖ Saved!';
        setTimeout(() => {
          saveBtn.textContent = 'üíæ Save Changes';
          saveBtn.disabled = false;
        }, 2000);
      } else {
        throw new Error(result.error || 'Failed to update');
      }
    } catch (error) {
      console.error('Error:', error);
      showToast('Failed to update mix: ' + error.message, 'error');
      saveBtn.textContent = 'üíæ Save Changes';
      saveBtn.disabled = false;
    }
  });
</script>
