---
// src/pages/admin/dj-mixes/edit/[id].astro
// Admin page to edit DJ mix metadata

import AdminLayout from '../../../../layouts/AdminLayout.astro';
import { getDocument } from '../../../../lib/firebase-rest';

export const prerender = false;

const { id } = Astro.params;

let mix: any = null;
let errorMessage = '';

try {
  const mixDoc = await getDocument('dj-mixes', id as string);

  if (mixDoc) {
    mix = { id, ...mixDoc };
  } else {
    errorMessage = 'Mix not found';
  }
} catch (error) {
  console.error('[EDIT MIX] Error loading mix:', error);
  errorMessage = error instanceof Error ? error.message : 'Unknown error';
}

if (!mix) {
  return Astro.redirect('/admin/dj-mixes/manage');
}

// Format duration - check multiple possible field names
const getDuration = (mix: any) => {
  const seconds = mix.duration || mix.durationSeconds || mix.length || mix.durationMs / 1000 || 0;
  return Math.floor(seconds);
};

const formatDuration = (seconds: number) => {
  if (!seconds || seconds <= 0) return '0:00';
  const hrs = Math.floor(seconds / 3600);
  const mins = Math.floor((seconds % 3600) / 60);
  const secs = Math.floor(seconds % 60);
  if (hrs > 0) {
    return `${hrs}:${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
  }
  return `${mins}:${secs.toString().padStart(2, '0')}`;
};

const mixDuration = getDuration(mix);
