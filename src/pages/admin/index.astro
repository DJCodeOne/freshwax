// /src/pages/admin/index.astro
// Fresh Wax Admin Dashboard - Optimised with Partner System

import { initializeApp, cert, getApps } from 'firebase-admin/app';
import { getFirestore, FieldPath } from 'firebase-admin/firestore';

// Initialize Firebase Admin
if (!getApps().length) {
  initializeApp({
    credential: cert({
      projectId: import.meta.env.FIREBASE_PROJECT_ID,
      clientEmail: import.meta.env.FIREBASE_CLIENT_EMAIL,
      privateKey: import.meta.env.FIREBASE_PRIVATE_KEY?.replace(/\\n/g, '\n'),
    }),
  });
}

const db = getFirestore();

// Fetch stats using count() aggregation where possible (much more efficient)
// Note: Firestore count() requires specific setup, using optimised queries as fallback
async function getCollectionCount(collection: string, conditions?: { field: string; op: any; value: any }[]) {
  let query: any = db.collection(collection);
  if (conditions) {
    conditions.forEach(c => {
      query = query.where(c.field, c.op, c.value);
    });
  }
  const snapshot = await query.select().get(); // select() returns only document refs, not data
  return snapshot.size;
}

// Fetch all stats in parallel for efficiency
const [
  // Partners
  totalPartners,
  pendingArtists,
  pendingDJs,
  pendingMerchSuppliers,
  approvedPartners,
  
  // Releases
  totalReleases,
  liveReleases,
  pendingReleases,
  draftReleases,
  
  // Other content
  totalMerch,
  totalDJMixes,
  totalCustomers,
  totalOrders,
  
  // Sales data
  ordersSnapshot
] = await Promise.all([
  // Partners counts
  getCollectionCount('artists'),
  getCollectionCount('artists', [
    { field: 'approved', op: '==', value: false },
    { field: 'isArtist', op: '==', value: true }
  ]),
  getCollectionCount('artists', [
    { field: 'approved', op: '==', value: false },
    { field: 'isDJ', op: '==', value: true }
  ]),
  getCollectionCount('artists', [
    { field: 'approved', op: '==', value: false },
    { field: 'isMerchSupplier', op: '==', value: true }
  ]),
  getCollectionCount('artists', [{ field: 'approved', op: '==', value: true }]),
  
  // Releases counts
  getCollectionCount('releases'),
  getCollectionCount('releases', [{ field: 'status', op: '==', value: 'live' }]),
  getCollectionCount('releases', [{ field: 'status', op: '==', value: 'pending' }]),
  getCollectionCount('releases', [{ field: 'status', op: '==', value: 'draft' }]),
  
  // Other content
  getCollectionCount('merch'),
  getCollectionCount('dj-mixes'),
  getCollectionCount('customers'),
  getCollectionCount('orders'),
  
  // Get orders for sales calculation (need actual data here)
  db.collection('orders').where('status', '!=', 'cancelled').select('total', 'platformFee').get()
]);

// Calculate sales totals
let totalSales = 0;
let platformFees = 0;
ordersSnapshot.forEach(doc => {
  const data = doc.data();
  totalSales += data.total || 0;
  platformFees += data.platformFee || 0;
});

// Calculate total pending partners
const totalPending = pendingArtists + pendingDJs + pendingMerchSuppliers;

// Format currency
const formatCurrency = (amount: number) => {
  return new Intl.NumberFormat('en-GB', { style: 'currency', currency: 'GBP' }).format(amount);
};
