<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fresh Wax Admin Dashboard</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { 
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; 
      background: #ffffff; 
      min-height: 100vh; 
      padding: 20px; 
    }
    
    .container { max-width: 1400px; margin: 0 auto; }
    
    .logo-container {
      background: white;
      padding: 20px;
      border-radius: 12px;
      margin-bottom: 20px;
      text-align: center;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      height: 60px;
      width: auto;
    }

    .logout-btn {
      padding: 10px 20px;
      background: #dc3545;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }

    .logout-btn:hover {
      background: #c82333;
      transform: translateY(-2px);
    }
    
    .header { 
      background: white; 
      padding: 30px; 
      margin-bottom: 30px; 
      border-radius: 12px; 
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    .header h1 { 
      font-size: 36px; 
      color: #000; 
      margin-bottom: 10px; 
    }
    .header p { color: #000; font-size: 16px; font-weight: 400; }
    
    .stats-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }
    
    .stat-card {
      background: white;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    
    .stat-label {
      font-size: 14px;
      color: #000;
      margin-bottom: 8px;
      font-weight: 600;
    }
    
    .stat-value {
      font-size: 32px;
      font-weight: bold;
      color: #000;
    }
    
    .stat-change {
      font-size: 12px;
      margin-top: 5px;
      color: #000;
      font-weight: 500;
    }
    
    .stat-change.positive { color: #28a745; }
    .stat-change.negative { color: #dc3545; }
    .stat-change.warning { color: #856404; }
    
    .modules-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 25px;
      margin-bottom: 30px;
    }
    
    .module-card {
      background: white;
      border-radius: 12px;
      padding: 30px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.1);
      transition: all 0.3s;
      cursor: pointer;
      position: relative;
      overflow: hidden;
      border: 1px solid #e0e0e0;
    }
    
    .module-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0,0,0,0.15);
      border-color: #000;
    }
    
    .module-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: #000;
    }
    
    .module-icon {
      font-size: 48px;
      margin-bottom: 15px;
    }
    
    .module-title {
      font-size: 20px;
      font-weight: 700;
      color: #000;
      margin-bottom: 10px;
    }
    
    .module-description {
      font-size: 14px;
      color: #666;
      line-height: 1.6;
      margin-bottom: 15px;
    }
    
    .module-badge {
      display: inline-block;
      padding: 4px 12px;
      background: #f5f5f5;
      color: #000;
      border-radius: 12px;
      font-size: 12px;
      font-weight: 600;
      margin-top: 10px;
      border: 1px solid #e0e0e0;
    }
    
    .module-badge.new { background: #d4edda; color: #28a745; border-color: #28a745; }
    .module-badge.important { background: #fff3cd; color: #856404; border-color: #ffc107; }
    
    .quick-actions {
      background: white;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.1);
      margin-bottom: 30px;
      border: 1px solid #e0e0e0;
    }
    
    .quick-actions h2 {
      font-size: 20px;
      color: #000;
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 2px solid #e0e0e0;
    }
    
    .action-buttons {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }
    
    .action-btn {
      padding: 12px 24px;
      background: #000;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 14px;
      font-weight: 600;
      transition: all 0.3s;
      text-decoration: none;
      display: inline-block;
    }
    
    .action-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    
    .action-btn.secondary {
      background: #666;
      color: white;
    }
    
    .action-btn.success {
      background: #28a745;
      color: white;
    }

    .action-btn.warning {
      background: #ffc107;
      color: #000;
    }
    
    .recent-activity {
      background: white;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.1);
      border: 1px solid #e0e0e0;
    }
    
    .recent-activity h2 {
      font-size: 20px;
      color: #000;
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 2px solid #e0e0e0;
    }
    
    .activity-item {
      padding: 15px;
      border-left: 3px solid #000;
      background: #f9f9f9;
      border-radius: 6px;
      margin-bottom: 12px;
    }
    
    .activity-time {
      font-size: 12px;
      color: #666;
      margin-bottom: 5px;
    }
    
    .activity-text {
      font-size: 14px;
      color: #000;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="logo-container">
      <img src="/logo.webp" alt="Fresh Wax" class="logo">
      <button class="logout-btn" id="logoutBtn">Logout</button>
    </div>
    
    <div class="header">
      <h1>🎵 Fresh Wax Admin Dashboard</h1>
      <p>Welcome back! Manage your music store from here.</p>
    </div>

    <div class="stats-row">
      <div class="stat-card">
        <div class="stat-label">Total Sales</div>
        <div class="stat-value">£12,458</div>
        <div class="stat-change positive">↑ 12.5% from last month</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Pending Artists</div>
        <div class="stat-value" id="pendingArtistsCount">-</div>
        <div class="stat-change warning">Awaiting approval</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Active Releases</div>
        <div class="stat-value">47</div>
        <div class="stat-change positive">↑ 3 new this week</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-label">Total Customers</div>
        <div class="stat-value">284</div>
        <div class="stat-change positive">↑ 15 new this month</div>
      </div>
    </div>

    <div class="quick-actions">
      <h2>⚡ Quick Actions</h2>
      <div class="action-buttons">
        <a href="/admin/artists/pending" class="action-btn warning">✅ Review Pending Artists</a>
        <a href="/admin/upload-release" class="action-btn success">📤 Upload New Release</a>
        <a href="/admin/orders" class="action-btn">📦 View Pending Orders</a>
        <a href="/admin/releases" class="action-btn secondary">🎵 Manage Releases</a>
      </div>
    </div>

    <div class="modules-grid">
      <div class="module-card" onclick="window.location.href='/admin/artists/pending'">
        <div class="module-icon">✅</div>
        <div class="module-title">Artist Approvals</div>
        <div class="module-description">
          Review and approve pending artist registrations. Grant upload access to verified artists.
        </div>
        <span class="module-badge important">Requires Action</span>
      </div>

      <div class="module-card" onclick="window.location.href='/admin/upload-release'">
        <div class="module-icon">📤</div>
        <div class="module-title">Upload Release</div>
        <div class="module-description">
          Upload complete release packages with audio files, artwork, and metadata to your storage services.
        </div>
        <span class="module-badge">Essential</span>
      </div>

      <div class="module-card" onclick="window.location.href='/admin/publish-release'">
        <div class="module-icon">🚀</div>
        <div class="module-title">Publish to Store</div>
        <div class="module-description">
          Review uploaded releases and publish them to your Fresh Wax storefront for customers to purchase.
        </div>
        <span class="module-badge important">Important</span>
      </div>

      <div class="module-card" onclick="window.location.href='/admin/releases'">
        <div class="module-icon">🎵</div>
        <div class="module-title">Manage Releases</div>
        <div class="module-description">
          Edit existing releases, update prices, add special offers, change artwork, and manage track listings.
        </div>
        <span class="module-badge">Frequently Used</span>
      </div>

      <div class="module-card" onclick="window.location.href='/admin/orders'">
        <div class="module-icon">📦</div>
        <div class="module-title">Track Orders</div>
        <div class="module-description">
          View and manage customer orders, process payments, send download links, and track order history.
        </div>
        <span class="module-badge">Essential</span>
      </div>

      <div class="module-card" onclick="window.location.href='/admin/customers'">
        <div class="module-icon">👥</div>
        <div class="module-title">Customer Management</div>
        <div class="module-description">
          View customer profiles, order history, manage subscriptions, and handle customer support requests.
        </div>
        <span class="module-badge">Management</span>
      </div>

      <div class="module-card" onclick="window.location.href='/admin/promotions'">
        <div class="module-icon">🏷️</div>
        <div class="module-title">Promotions & Offers</div>
        <div class="module-description">
          Create discount codes, run special promotions, set up bundle deals, and manage seasonal sales.
        </div>
        <span class="module-badge new">New</span>
      </div>

      <div class="module-card" onclick="window.location.href='/admin/analytics'">
        <div class="module-icon">📊</div>
        <div class="module-title">Analytics & Reports</div>
        <div class="module-description">
          View detailed sales reports, track popular releases, analyze customer behavior, and export data.
        </div>
        <span class="module-badge">Insights</span>
      </div>

      <div class="module-card" onclick="window.location.href='/admin/inventory'">
        <div class="module-icon">📋</div>
        <div class="module-title">Inventory Management</div>
        <div class="module-description">
          Manage digital inventory, track format availability (MP3, WAV, FLAC), and handle stock levels.
        </div>
        <span class="module-badge">Management</span>
      </div>

      <div class="module-card" onclick="window.location.href='/admin/artists'">
        <div class="module-icon">🎤</div>
        <div class="module-title">Artist Management</div>
        <div class="module-description">
          Manage artist profiles, royalty splits, contract details, and payment information.
        </div>
        <span class="module-badge">Management</span>
      </div>

      <div class="module-card" onclick="window.location.href='/admin/media-processor'">
        <div class="module-icon">🎛️</div>
        <div class="module-title">Media Processor</div>
        <div class="module-description">
          Convert audio formats, create preview clips, optimize images, and process files before upload.
        </div>
        <span class="module-badge">Tools</span>
      </div>

      <div class="module-card" onclick="window.location.href='/admin/email'">
        <div class="module-icon">📧</div>
        <div class="module-title">Email Marketing</div>
        <div class="module-description">
          Send newsletters, announce new releases, create email campaigns, and manage subscriber lists.
        </div>
        <span class="module-badge new">New</span>
      </div>

      <div class="module-card" onclick="window.location.href='/admin/settings'">
        <div class="module-icon">⚙️</div>
        <div class="module-title">Store Settings</div>
        <div class="module-description">
          Configure store details, payment gateways, tax settings, shipping options, and appearance.
        </div>
        <span class="module-badge">Configuration</span>
      </div>
    </div>

    <div class="recent-activity">
      <h2>📝 Recent Activity</h2>
      <div class="activity-item">
        <div class="activity-time">2 hours ago</div>
        <div class="activity-text">New order #1247 received - £24.99</div>
      </div>
      <div class="activity-item">
        <div class="activity-time">5 hours ago</div>
        <div class="activity-text">Release "Summer Vibes EP" published to store</div>
      </div>
      <div class="activity-item">
        <div class="activity-time">Yesterday</div>
        <div class="activity-text">Updated pricing for "Deep House Collection Vol. 2"</div>
      </div>
      <div class="activity-item">
        <div class="activity-time">2 days ago</div>
        <div class="activity-text">New customer registered: john@example.com</div>
      </div>
    </div>
  </div>

  <script type="module">
    import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js';
    import { getAuth, onAuthStateChanged, signOut } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js';
    import { getFirestore, collection, query, where, getDocs, doc, getDoc } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-firestore.js';

    const firebaseConfig = {
      apiKey: "AIzaSyBiZGsWdvA9ESm3OsUpZ-VQpwqMjMpBY6g",
      authDomain: "freshwax-store.firebaseapp.com",
      projectId: "freshwax-store",
      storageBucket: "freshwax-store.firebasestorage.app",
      messagingSenderId: "675435782973",
      appId: "1:675435782973:web:e8459c2ec4a5f6d683db54"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    // Check admin authentication
    onAuthStateChanged(auth, async (user) => {
      if (!user) {
        window.location.href = '/admin/login';
        return;
      }

      try {
        const adminDoc = await getDoc(doc(db, 'admins', user.uid));
        
        if (!adminDoc.exists()) {
          await signOut(auth);
          window.location.href = '/admin/login';
          return;
        }
        
        // User is authenticated admin - load dashboard data
        loadPendingArtistsCount();
      } catch (error) {
        console.error('Auth check error:', error);
        window.location.href = '/admin/login';
      }
    });

    // Logout button
    document.getElementById('logoutBtn').addEventListener('click', async () => {
      try {
        await signOut(auth);
        window.location.href = '/admin/login';
      } catch (error) {
        console.error('Logout error:', error);
      }
    });

    // Load pending artists count
    async function loadPendingArtistsCount() {
      try {
        const artistsRef = collection(db, 'artists');
        const q = query(artistsRef, where('approved', '==', false));
        const querySnapshot = await getDocs(q);
        
        const count = querySnapshot.size;
        document.getElementById('pendingArtistsCount').textContent = count;
        
        if (count > 0) {
          document.getElementById('pendingArtistsCount').style.color = '#ffc107';
        }
      } catch (error) {
        console.error('Error loading pending artists:', error);
        document.getElementById('pendingArtistsCount').textContent = '0';
      }
    }
  </script>
</body>
</html>