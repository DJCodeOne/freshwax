---
// src/pages/admin/streaming.astro
import AdminLayout from '../../layouts/AdminLayout.astro';

export const prerender = false;
---

<AdminLayout title="Streaming Management">
  <div class="streaming-admin">
    <div class="page-header">
      <h1>üì° Streaming Management</h1>
      <p>Manage DJ streaming permissions and monitor live streams</p>
    </div>

    <!-- Current Live Streams -->
    <div class="section">
      <div class="section-header">
        <h2>üî¥ Live Now</h2>
        <button id="refreshLive" class="refresh-btn">‚Üª Refresh</button>
      </div>
      <div id="liveStreams" class="live-streams">
        <p class="empty-state">No live streams at the moment</p>
      </div>
    </div>

    <!-- Approved DJs -->
    <div class="section">
      <div class="section-header">
        <h2>‚úÖ Approved DJs</h2>
        <button id="addDJBtn" class="add-btn">+ Add DJ</button>
      </div>
      <div id="approvedDJs" class="dj-list">
        <p class="loading">Loading...</p>
      </div>
    </div>

    <!-- Pending Requests -->
    <div class="section">
      <h2>‚è≥ Pending Requests</h2>
      <div id="pendingDJs" class="dj-list">
        <p class="empty-state">No pending requests</p>
      </div>
    </div>

    <!-- Recent Streams -->
    <div class="section">
      <h2>üìº Recent Streams</h2>
      <div id="recentStreams" class="streams-list">
        <p class="loading">Loading...</p>
      </div>
    </div>

    <!-- Lobby Access Bypass -->
    <div class="section">
      <div class="section-header">
        <h2>üé´ Lobby Access Bypass</h2>
        <button id="addBypassBtn" class="add-btn">+ Grant Access</button>
      </div>
      <p class="section-desc">DJs with bypass can access the DJ Lobby and Go Live without needing 10 likes on a mix.</p>
      <div id="bypassList" class="bypass-list">
        <p class="loading">Loading...</p>
      </div>
    </div>

    <!-- DJ Moderation -->
    <div class="section">
      <div class="section-header">
        <h2>üö´ DJ Moderation</h2>
        <div class="header-actions">
          <button id="addHoldBtn" class="hold-btn">‚è∏ Put on Hold</button>
          <button id="addBanBtn" class="ban-btn">üö´ Ban DJ</button>
        </div>
      </div>
      <p class="section-desc">Manage DJ access restrictions. Banned DJs cannot go live. DJs on hold are temporarily restricted.</p>
      
      <div class="moderation-tabs">
        <button class="mod-tab active" data-tab="banned">Banned</button>
        <button class="mod-tab" data-tab="onhold">On Hold</button>
      </div>
      
      <div id="bannedList" class="moderation-list">
        <p class="empty-state">No banned DJs</p>
      </div>
      
      <div id="onholdList" class="moderation-list hidden">
        <p class="empty-state">No DJs on hold</p>
      </div>
    </div>

    <!-- Ban DJ Modal -->
    <div id="banModal" class="modal hidden">
      <div class="modal-content">
        <div class="modal-header">
          <h3>üö´ Ban DJ</h3>
          <button class="close-ban-modal">&times;</button>
        </div>
        <form id="banForm">
          <div class="form-group">
            <label for="banEmail">User Email *</label>
            <input type="email" id="banEmail" required placeholder="DJ's email address">
          </div>
          <div class="form-group">
            <label for="banReason">Reason *</label>
            <input type="text" id="banReason" required placeholder="e.g. Violation of terms, inappropriate content">
          </div>
          <p class="warning-text">‚ö†Ô∏è Banned DJs cannot access the DJ Lobby or Go Live until unbanned.</p>
          <div class="form-actions">
            <button type="button" class="cancel-btn close-ban-modal">Cancel</button>
            <button type="submit" class="submit-btn ban-submit">Ban DJ</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Hold DJ Modal -->
    <div id="holdModal" class="modal hidden">
      <div class="modal-content">
        <div class="modal-header">
          <h3>‚è∏ Put DJ on Hold</h3>
          <button class="close-hold-modal">&times;</button>
        </div>
        <form id="holdForm">
          <div class="form-group">
            <label for="holdEmail">User Email *</label>
            <input type="email" id="holdEmail" required placeholder="DJ's email address">
          </div>
          <div class="form-group">
            <label for="holdReason">Reason</label>
            <input type="text" id="holdReason" placeholder="e.g. Pending review, temporary restriction">
          </div>
          <p class="info-text">‚ÑπÔ∏è DJs on hold cannot go live but can still view the DJ Lobby.</p>
          <div class="form-actions">
            <button type="button" class="cancel-btn close-hold-modal">Cancel</button>
            <button type="submit" class="submit-btn hold-submit">Put on Hold</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Grant Bypass Modal -->
    <div id="bypassModal" class="modal hidden">
      <div class="modal-content">
        <div class="modal-header">
          <h3>Grant Lobby Access</h3>
          <button class="close-bypass-modal">&times;</button>
        </div>
        <form id="bypassForm">
          <div class="form-group">
            <label for="bypassEmail">User Email *</label>
            <input type="email" id="bypassEmail" required placeholder="DJ's email address">
          </div>
          <div class="form-group">
            <label for="bypassReason">Reason (optional)</label>
            <input type="text" id="bypassReason" placeholder="e.g. Known DJ, pre-arranged">
          </div>
          <div class="form-actions">
            <button type="button" class="cancel-btn close-bypass-modal">Cancel</button>
            <button type="submit" class="submit-btn">Grant Access</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Add DJ Modal -->
    <div id="addDJModal" class="modal hidden">
      <div class="modal-content">
        <div class="modal-header">
          <h3>Add DJ for Streaming</h3>
          <button class="close-modal">&times;</button>
        </div>
        <form id="addDJForm">
          <div class="form-group">
            <label for="djUserId">User ID *</label>
            <input type="text" id="djUserId" required placeholder="Firebase User ID">
          </div>
          <div class="form-group">
            <label for="djNameInput">DJ Name *</label>
            <input type="text" id="djNameInput" required placeholder="Display name for streaming">
          </div>
          <div class="form-group">
            <label for="djTwitch">Twitch Channel (optional)</label>
            <input type="text" id="djTwitch" placeholder="Twitch username">
          </div>
          <div class="form-group">
            <label>
              <input type="checkbox" id="djApproved" checked>
              Approve immediately
            </label>
          </div>
          <div class="form-actions">
            <button type="button" class="cancel-btn close-modal">Cancel</button>
            <button type="submit" class="submit-btn">Add DJ</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</AdminLayout>

