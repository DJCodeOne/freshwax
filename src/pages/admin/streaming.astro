---
// src/pages/admin/streaming.astro
import AdminLayout from '../../layouts/AdminLayout.astro';

export const prerender = false;
---

<AdminLayout title="Streaming Management">
  <div class="streaming-admin">
    <div class="page-header">
      <h1>üì° Streaming Management</h1>
      <p>Manage DJ streaming permissions and monitor live streams</p>
    </div>

    <!-- Current Live Streams -->
    <div class="section">
      <div class="section-header">
        <h2>üî¥ Live Now</h2>
        <button id="refreshLive" class="refresh-btn">‚Üª Refresh</button>
      </div>
      <div id="liveStreams" class="live-streams">
        <p class="empty-state">No live streams at the moment</p>
      </div>
    </div>

    <!-- Approved DJs -->
    <div class="section">
      <div class="section-header">
        <h2>‚úÖ Approved DJs</h2>
        <button id="addDJBtn" class="add-btn">+ Add DJ</button>
      </div>
      <div id="approvedDJs" class="dj-list">
        <p class="loading">Loading...</p>
      </div>
    </div>

    <!-- Pending Requests -->
    <div class="section">
      <h2>‚è≥ Pending Requests</h2>
      <div id="pendingDJs" class="dj-list">
        <p class="empty-state">No pending requests</p>
      </div>
    </div>

    <!-- Recent Streams -->
    <div class="section">
      <h2>üìº Recent Streams</h2>
      <div id="recentStreams" class="streams-list">
        <p class="loading">Loading...</p>
      </div>
    </div>

    <!-- Add DJ Modal -->
    <div id="addDJModal" class="modal hidden">
      <div class="modal-content">
        <div class="modal-header">
          <h3>Add DJ for Streaming</h3>
          <button class="close-modal">&times;</button>
        </div>
        <form id="addDJForm">
          <div class="form-group">
            <label for="djUserId">User ID *</label>
            <input type="text" id="djUserId" required placeholder="Firebase User ID">
          </div>
          <div class="form-group">
            <label for="djNameInput">DJ Name *</label>
            <input type="text" id="djNameInput" required placeholder="Display name for streaming">
          </div>
          <div class="form-group">
            <label for="djTwitch">Twitch Channel (optional)</label>
            <input type="text" id="djTwitch" placeholder="Twitch username">
          </div>
          <div class="form-group">
            <label>
              <input type="checkbox" id="djApproved" checked>
              Approve immediately
            </label>
          </div>
          <div class="form-actions">
            <button type="button" class="cancel-btn close-modal">Cancel</button>
            <button type="submit" class="submit-btn">Add DJ</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  .streaming-admin {
    padding: 2rem;
    max-width: 1200px;
  }
  
  .page-header {
    margin-bottom: 2rem;
  }
  
  .page-header h1 {
    font-size: 2rem;
    margin: 0 0 0.5rem 0;
  }
  
  .page-header p {
    color: #666;
    margin: 0;
  }
  
  .section {
    background: #fff;
    border: 2px solid #e5e5e5;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .section h2 {
    margin: 0 0 1rem 0;
    font-size: 1.25rem;
  }
  
  .section-header h2 {
    margin: 0;
  }
  
  .refresh-btn {
    padding: 0.5rem 1rem;
    background: #f5f5f5;
    border: 1px solid #ddd;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.875rem;
  }
  
  .refresh-btn:hover {
    background: #eee;
  }
  
  .add-btn {
    padding: 0.5rem 1rem;
    background: #000;
    color: #fff;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: 600;
  }
  
  .add-btn:hover {
    background: #333;
  }
  
  .empty-state, .loading {
    color: #888;
    text-align: center;
    padding: 2rem;
  }
  
  /* Live Streams */
  .live-streams {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .live-stream-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
    border: 2px solid #dc2626;
    border-radius: 8px;
  }
  
  .live-stream-info h4 {
    margin: 0 0 0.25rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .live-badge {
    background: #dc2626;
    color: #fff;
    font-size: 0.625rem;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-weight: 700;
    animation: pulse 1.5s infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
  }
  
  .live-stream-meta {
    color: #666;
    font-size: 0.875rem;
  }
  
  .live-stream-stats {
    display: flex;
    gap: 1rem;
    color: #666;
    font-size: 0.875rem;
  }
  
  .end-stream-btn {
    padding: 0.5rem 1rem;
    background: #dc2626;
    color: #fff;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
  }
  
  /* DJ List */
  .dj-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .dj-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: #f9f9f9;
    border-radius: 8px;
    border: 1px solid #eee;
  }
  
  .dj-info h4 {
    margin: 0 0 0.25rem 0;
  }
  
  .dj-meta {
    color: #666;
    font-size: 0.8125rem;
  }
  
  .dj-meta code {
    background: #eee;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-size: 0.75rem;
  }
  
  .dj-actions {
    display: flex;
    gap: 0.5rem;
  }
  
  .action-btn {
    padding: 0.375rem 0.75rem;
    border: 1px solid #ddd;
    border-radius: 6px;
    background: #fff;
    cursor: pointer;
    font-size: 0.8125rem;
  }
  
  .action-btn:hover {
    background: #f5f5f5;
  }
  
  .action-btn.approve {
    background: #22c55e;
    color: #fff;
    border-color: #22c55e;
  }
  
  .action-btn.revoke {
    background: #dc2626;
    color: #fff;
    border-color: #dc2626;
  }
  
  /* Streams List */
  .streams-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .stream-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: #f9f9f9;
    border-radius: 6px;
  }
  
  .stream-item-info h5 {
    margin: 0 0 0.125rem 0;
    font-size: 0.9375rem;
  }
  
  .stream-item-meta {
    color: #666;
    font-size: 0.75rem;
  }
  
  .stream-item-stats {
    display: flex;
    gap: 1rem;
    color: #666;
    font-size: 0.8125rem;
  }
  
  /* Modal */
  .modal {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }
  
  .modal.hidden {
    display: none;
  }
  
  .modal-content {
    background: #fff;
    border-radius: 12px;
    padding: 1.5rem;
    width: 100%;
    max-width: 450px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.2);
  }
  
  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  
  .modal-header h3 {
    margin: 0;
  }
  
  .close-modal {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: #666;
  }
  
  .form-group {
    margin-bottom: 1rem;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    font-size: 0.875rem;
  }
  
  .form-group input[type="text"] {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid #ddd;
    border-radius: 6px;
    font-size: 0.9375rem;
  }
  
  .form-group input[type="text"]:focus {
    outline: none;
    border-color: #000;
  }
  
  .form-group input[type="checkbox"] {
    margin-right: 0.5rem;
  }
  
  .form-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
    margin-top: 1.5rem;
  }
  
  .cancel-btn {
    padding: 0.75rem 1.25rem;
    background: #f5f5f5;
    border: 1px solid #ddd;
    border-radius: 6px;
    cursor: pointer;
  }
  
  .submit-btn {
    padding: 0.75rem 1.25rem;
    background: #000;
    color: #fff;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
  }
</style>

<script>
  const ADMIN_KEY = 'freshwax-admin-2024';
  
  async function init() {
    await Promise.all([
      loadLiveStreams(),
      loadApprovedDJs(),
      loadRecentStreams()
    ]);
    
    setupEventListeners();
  }
  
  async function loadLiveStreams() {
    const container = document.getElementById('liveStreams');
    
    try {
      const response = await fetch('/api/stream/status');
      const result = await response.json();
      
      if (result.success && result.isLive && result.streams?.length > 0) {
        container.innerHTML = result.streams.map(stream => `
          <div class="live-stream-card" data-stream-id="${stream.id}">
            <div class="live-stream-info">
              <h4>
                <span class="live-badge">LIVE</span>
                ${stream.title}
              </h4>
              <div class="live-stream-meta">
                ${stream.djName} ‚Ä¢ ${stream.genre || 'Drum & Bass'}
              </div>
            </div>
            <div class="live-stream-stats">
              <span>üëÅ ${stream.viewerCount || 0}</span>
              <span>‚ù§Ô∏è ${stream.likeCount || 0}</span>
            </div>
            <button class="end-stream-btn" onclick="endStream('${stream.id}', '${stream.djId}')">End Stream</button>
          </div>
        `).join('');
      } else {
        container.innerHTML = '<p class="empty-state">No live streams at the moment</p>';
      }
    } catch (error) {
      console.error('Error loading live streams:', error);
      container.innerHTML = '<p class="empty-state">Failed to load live streams</p>';
    }
  }
  
  async function loadApprovedDJs() {
    const container = document.getElementById('approvedDJs');
    
    try {
      const response = await fetch('/api/stream/list-djs?approved=true');
      const result = await response.json();
      
      if (result.success && result.djs?.length > 0) {
        container.innerHTML = result.djs.map(dj => `
          <div class="dj-card">
            <div class="dj-info">
              <h4>${dj.djName}</h4>
              <div class="dj-meta">
                Mount: <code>${dj.icecastMountPoint}</code>
                ${dj.twitchChannel ? ` ‚Ä¢ Twitch: ${dj.twitchChannel}` : ''}
                ${dj.lastStreamAt ? ` ‚Ä¢ Last stream: ${new Date(dj.lastStreamAt).toLocaleDateString()}` : ''}
              </div>
            </div>
            <div class="dj-actions">
              <button class="action-btn" onclick="viewDJDetails('${dj.userId}')">View</button>
              <button class="action-btn revoke" onclick="revokeDJ('${dj.userId}')">Revoke</button>
            </div>
          </div>
        `).join('');
      } else {
        container.innerHTML = '<p class="empty-state">No approved DJs yet</p>';
      }
    } catch (error) {
      console.error('Error loading DJs:', error);
      container.innerHTML = '<p class="empty-state">Failed to load DJs</p>';
    }
  }
  
  async function loadRecentStreams() {
    const container = document.getElementById('recentStreams');
    
    try {
      const response = await fetch('/api/stream/list?limit=10');
      const result = await response.json();
      
      if (result.success && result.streams?.length > 0) {
        container.innerHTML = result.streams.map(stream => {
          const date = new Date(stream.startedAt).toLocaleDateString('en-GB');
          const duration = stream.durationSeconds 
            ? `${Math.floor(stream.durationSeconds / 60)}m`
            : 'N/A';
          
          return `
            <div class="stream-item">
              <div class="stream-item-info">
                <h5>${stream.title}</h5>
                <div class="stream-item-meta">${stream.djName} ‚Ä¢ ${date} ‚Ä¢ ${duration}</div>
              </div>
              <div class="stream-item-stats">
                <span>üëÅ ${stream.peakViewers || 0} peak</span>
                <span>‚ù§Ô∏è ${stream.likeCount || 0}</span>
                <span>‚≠ê ${stream.averageRating?.toFixed(1) || 'N/A'}</span>
              </div>
            </div>
          `;
        }).join('');
      } else {
        container.innerHTML = '<p class="empty-state">No streams yet</p>';
      }
    } catch (error) {
      console.error('Error loading streams:', error);
      container.innerHTML = '<p class="empty-state">Failed to load streams</p>';
    }
  }
  
  function setupEventListeners() {
    document.getElementById('refreshLive')?.addEventListener('click', loadLiveStreams);
    
    document.getElementById('addDJBtn')?.addEventListener('click', () => {
      document.getElementById('addDJModal').classList.remove('hidden');
    });
    
    document.querySelectorAll('.close-modal').forEach(btn => {
      btn.addEventListener('click', () => {
        document.getElementById('addDJModal').classList.add('hidden');
      });
    });
    
    document.getElementById('addDJForm')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const userId = document.getElementById('djUserId').value.trim();
      const djName = document.getElementById('djNameInput').value.trim();
      const twitchChannel = document.getElementById('djTwitch').value.trim();
      const isApproved = document.getElementById('djApproved').checked;
      
      try {
        const response = await fetch('/api/stream/dj-settings', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            userId,
            djName,
            twitchChannel: twitchChannel || null,
            isApproved,
            adminKey: ADMIN_KEY
          })
        });
        
        const result = await response.json();
        
        if (result.success) {
          alert('DJ added successfully!\n\nMount point: ' + (result.mountPoint || 'Check settings'));
          document.getElementById('addDJModal').classList.add('hidden');
          document.getElementById('addDJForm').reset();
          loadApprovedDJs();
        } else {
          alert('Error: ' + result.error);
        }
      } catch (error) {
        console.error('Error adding DJ:', error);
        alert('Failed to add DJ');
      }
    });
  }
  
  window.endStream = async function(streamId, djId) {
    if (!confirm('Are you sure you want to end this stream?')) return;
    
    try {
      const response = await fetch('/api/stream/end', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ streamId, djId })
      });
      
      const result = await response.json();
      
      if (result.success) {
        loadLiveStreams();
        loadRecentStreams();
      } else {
        alert('Error: ' + result.error);
      }
    } catch (error) {
      console.error('Error ending stream:', error);
    }
  };
  
  window.revokeDJ = async function(userId) {
    if (!confirm('Revoke streaming access for this DJ?')) return;
    
    try {
      const response = await fetch('/api/stream/dj-settings', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          userId,
          isApproved: false,
          adminKey: ADMIN_KEY
        })
      });
      
      const result = await response.json();
      
      if (result.success) {
        loadApprovedDJs();
      } else {
        alert('Error: ' + result.error);
      }
    } catch (error) {
      console.error('Error revoking DJ:', error);
    }
  };
  
  window.viewDJDetails = function(userId) {
    alert('DJ ID: ' + userId + '\n\nFull details view coming soon.');
  };
  
  init();
</script>
