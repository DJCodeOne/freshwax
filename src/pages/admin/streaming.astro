    } catch (error) {
      console.error('Error loading moderation list:', error);
      bannedContainer.innerHTML = '<p class="empty-state">Failed to load</p>';
      onholdContainer.innerHTML = '<p class="empty-state">Failed to load</p>';
    }
  }
  
