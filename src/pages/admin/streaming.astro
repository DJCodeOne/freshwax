  async function loadActiveStreams() {
    const container = document.getElementById('activeStreamsList');
    try {
      const response = await fetch(`${STREAM_SERVER}/v3/paths/list`, {
        signal: AbortSignal.timeout(5000)
      });
      if (!response.ok) throw new Error('Failed to fetch paths');

      const contentType = response.headers.get('content-type');
      if (!contentType || !contentType.includes('application/json')) {
        throw new Error('Server returned non-JSON response');
      }

      const data = await response.json();
      const paths = data.items || [];
      const activePaths = paths.filter(p => p.ready);

      if (activePaths.length === 0) {
        container.innerHTML = '<div class="empty-state">No active streams</div>';
        return;
      }

      container.innerHTML = activePaths.map(path => `
        <div class="stream-item">
          <div class="stream-info">
            <span class="stream-path">${path.name}</span>
            <span class="stream-meta">
              ${path.source?.type || 'Unknown'} source ‚Ä¢
              ${path.readers?.length || 0} viewer${(path.readers?.length || 0) !== 1 ? 's' : ''}
            </span>
          </div>
          <button class="kick-stream-btn" onclick="kickStream('${path.name}')">Kick</button>
        </div>
      `).join('');
    } catch (error) {
      console.error('Failed to load active streams:', error);
      container.innerHTML = '<div class="empty-state">Server offline</div>';
    }
