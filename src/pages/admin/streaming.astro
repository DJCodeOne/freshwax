          requestId,
          adminKey: ADMIN_KEY,
          adminEmail: currentAdminEmail || 'admin'
        })
      });
      
      const result = await response.json();
      
      if (result.success) {
        const card = document.querySelector(`.bypass-request-card[data-request-id="${requestId}"]`);
        if (card) {
          card.innerHTML = `
            <div style="padding: 1rem; text-align: center; color: #22c55e; width: 100%;">
              <span style="font-size: 2rem;">‚úÖ</span>
              <p style="margin: 0.5rem 0 0 0;">Approved! ${djName || 'DJ'} can now go live.</p>
            </div>
          `;
          setTimeout(() => {
            loadBypassRequests();
            loadBypassList();
