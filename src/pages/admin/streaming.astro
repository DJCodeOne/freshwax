---
// src/pages/admin/streaming.astro
import AdminLayout from '../../layouts/AdminLayout.astro';
import '../../styles/admin/streaming.css';

export const prerender = false;
---

<style is:global>
  /* Bypass Request Cards - Dynamically Generated */
  .bypass-requests-list { 
    display: flex; 
    flex-direction: column; 
    gap: 1rem; 
  }
  
  .bypass-request-card { 
    display: flex; 
    justify-content: space-between; 
    align-items: center; 
    gap: 2rem; 
    padding: 1.5rem 2rem; 
    background: var(--bg-secondary, #fff); 
    border: 2px solid var(--border-light, #e5e5e5); 
    border-radius: var(--radius-md, 8px); 
    transition: all 0.2s; 
  }
  
  .bypass-request-card:hover { 
    border-color: var(--accent-red, #dc2626);
    box-shadow: var(--shadow-md, 0 4px 6px rgba(0,0,0,0.07));
  }
  
  .bypass-request-card.urgent { 
    border-color: var(--accent-amber, #d97706); 
    background: #fffbeb; 
  }
  
  .bypass-request-info { 
    flex: 1; 
    min-width: 0; 
  }
  
  .bypass-request-info h4 { 
    margin: 0 0 0.75rem 0; 
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.5rem; 
    color: var(--text-primary, #000); 
    display: flex; 
    align-items: center; 
    gap: 1rem; 
    flex-wrap: wrap; 
    letter-spacing: 0.02em;
  }
  
  .bypass-request-info h4 .pending-badge,
  .pending-badge { 
    display: inline-flex; 
    padding: 0.3rem 0.75rem; 
    background: #fef3c7; 
    color: #92400e; 
    font-family: 'Inter', sans-serif;
    font-size: 0.6875rem; 
    font-weight: 700; 
    border-radius: var(--radius-sm, 4px); 
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .bypass-request-meta { 
    font-size: 0.9rem; 
    color: var(--text-secondary, #666); 
    margin-bottom: 1rem;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem 1.5rem;
  }
  
  .bypass-request-meta span { 
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .bypass-request-reason { 
    font-size: 0.875rem; 
    color: var(--text-secondary, #444); 
    background: var(--bg-primary, #f5f5f5); 
    padding: 0.875rem; 
    border-radius: var(--radius-md, 8px); 
    border: 1px solid var(--border-light, #e5e5e5); 
    margin-top: 0.75rem; 
  }
  
  .bypass-request-reason strong { 
    color: var(--text-muted, #666);
    font-weight: 600;
  }
  
  .bypass-request-stats { 
    display: flex; 
    align-items: center;
    gap: 2rem; 
    font-size: 0.9rem; 
  }
  
  .bypass-stat { 
    display: flex; 
    align-items: center; 
    gap: 0.5rem; 
    color: var(--text-secondary, #666);
  }
  
  .bypass-stat .stat-value { 
    font-weight: 700; 
    color: var(--text-primary, #000); 
  }
  
  .bypass-request-actions { 
    display: flex; 
    flex-direction: column; 
    gap: 0.625rem; 
    flex-shrink: 0; 
  }
  
  .approve-bypass-btn { 
    padding: 0.875rem 2rem; 
    background: var(--accent-green, #16a34a); 
    border: none; 
    border-radius: var(--radius-md, 8px); 
    color: #fff; 
    font-size: 0.9rem; 
    font-weight: 700; 
    cursor: pointer; 
    transition: all 0.2s; 
    white-space: nowrap; 
    min-width: 120px;
  }
  
  .approve-bypass-btn:hover { 
    background: #15803d;
    transform: translateY(-1px);
  }
  
  .deny-bypass-btn { 
    padding: 0.875rem 2rem; 
    background: var(--bg-secondary, #fff); 
    border: 2px solid var(--border-light, #e5e5e5); 
    border-radius: var(--radius-md, 8px); 
    color: var(--text-secondary, #666); 
    font-size: 0.9rem; 
    font-weight: 600; 
    cursor: pointer; 
    transition: all 0.2s; 
    white-space: nowrap; 
    min-width: 120px;
  }
  
  .deny-bypass-btn:hover { 
    background: #fee2e2; 
    border-color: var(--accent-red, #dc2626); 
    color: var(--accent-red, #dc2626); 
  }
  
  .empty-bypass { 
    text-align: center; 
    padding: 2.5rem; 
    color: var(--text-muted, #888); 
  }
  
  .empty-bypass .empty-icon { 
    font-size: 2.5rem; 
    margin-bottom: 0.75rem;
    opacity: 0.6;
  }

  /* DJ Cards */
  .dj-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    background: var(--bg-secondary, #fff);
    border-radius: var(--radius-md, 8px);
    border: 2px solid var(--border-light, #e5e5e5);
    transition: all 0.2s;
  }
  
  .dj-card:hover {
    border-color: var(--accent-red, #dc2626);
  }
  
  .dj-info h4 {
    margin: 0 0 0.375rem 0;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.25rem;
    font-weight: 400;
    color: var(--text-primary, #000);
    letter-spacing: 0.02em;
  }
  
  .dj-meta {
    color: var(--text-secondary, #666);
    font-size: 0.8125rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1rem;
  }
  
  .dj-actions {
    display: flex;
    gap: 0.5rem;
  }
  
  .action-btn {
    padding: 0.5rem 1rem;
    border: 2px solid var(--border-light, #e5e5e5);
    border-radius: var(--radius-md, 8px);
    background: var(--bg-secondary, #fff);
    cursor: pointer;
    font-size: 0.8125rem;
    font-weight: 600;
    transition: all 0.2s;
  }
  
  .action-btn:hover {
    border-color: var(--text-primary, #000);
  }
  
  .action-btn.approve {
    background: var(--accent-green, #16a34a);
    color: #fff;
    border-color: var(--accent-green, #16a34a);
  }
  
  .action-btn.revoke {
    background: var(--accent-red, #dc2626);
    color: #fff;
    border-color: var(--accent-red, #dc2626);
  }

  /* Live stream cards */
  .live-stream-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem;
    background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
    border: 2px solid var(--accent-red, #dc2626);
    border-radius: var(--radius-md, 8px);
  }
  
  .live-stream-info h4 {
    margin: 0 0 0.375rem 0;
    font-family: 'Bebas Neue', sans-serif;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.25rem;
    letter-spacing: 0.02em;
  }
  
  .live-badge {
    background: var(--accent-red, #dc2626);
    color: #fff;
    font-family: 'Inter', sans-serif;
    font-size: 0.625rem;
    padding: 0.2rem 0.5rem;
    border-radius: var(--radius-sm, 4px);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    animation: pulse 1.5s infinite;
  }

  /* Moderation cards */
  .mod-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-radius: var(--radius-md, 8px);
  }
  
  .mod-card.banned {
    background: #fef2f2;
    border: 2px solid #fecaca;
  }
  
  .mod-card.onhold {
    background: #fffbeb;
    border: 2px solid #fcd34d;
  }
  
  .mod-info h4 {
    margin: 0 0 0.25rem 0;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.125rem;
    color: var(--text-primary, #000);
    letter-spacing: 0.02em;
  }

  /* Bypass list cards */
  .bypass-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: var(--bg-secondary, #fff);
    border: 2px solid var(--border-light, #e5e5e5);
    border-radius: var(--radius-md, 8px);
  }
  
  .bypass-info h4 {
    margin: 0 0 0.25rem 0;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.125rem;
    color: var(--text-primary, #000);
    letter-spacing: 0.02em;
  }

  /* Stream item cards */
  .stream-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: var(--bg-secondary, #fff);
    border: 2px solid var(--border-light, #e5e5e5);
    border-radius: var(--radius-md, 8px);
  }
  
  .stream-item-info h5 {
    margin: 0 0 0.125rem 0;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.0625rem;
    color: var(--text-primary, #000);
    letter-spacing: 0.02em;
  }

  @media (max-width: 640px) { 
    .bypass-request-card { 
      flex-direction: column; 
    } 
    .bypass-request-actions { 
      flex-direction: row; 
      width: 100%; 
    } 
    .bypass-request-actions button { 
      flex: 1; 
    } 
  }
</style>

<AdminLayout title="Streaming Management">
  <a slot="actions" href="/admin/streaming/schedule" class="schedule-link-btn">üìÖ View Full Schedule ‚Üí</a>
  <div class="streaming-admin">
    <!-- Current Live Streams -->
    <div class="section">
      <div class="section-header">
        <h2>üî¥ Live Now</h2>
        <button id="refreshLive" class="refresh-btn">‚Üª Refresh</button>
      </div>
      <div id="liveStreams" class="live-streams">
        <p class="empty-state">No live streams at the moment</p>
      </div>
    </div>

    <!-- Approved DJs -->
    <div class="section">
      <div class="section-header">
        <h2>‚úÖ Approved DJs</h2>
        <div class="header-buttons">
          <button id="refreshDJsBtn" class="refresh-btn" title="Refresh">‚Üª</button>
          <button id="addDJBtn" class="add-btn">+ Add DJ</button>
        </div>
      </div>
      <div id="approvedDJs" class="dj-list">
        <p class="loading">Loading...</p>
      </div>
    </div>

    <!-- Pending Requests -->
    <div class="section">
      <h2>‚è≥ Pending Requests</h2>
      <div id="pendingDJs" class="dj-list">
        <p class="empty-state">No pending requests</p>
      </div>
    </div>

    <!-- Bypass Requests -->
    <div class="section">
      <div class="section-header">
        <h2>üé´ Bypass Requests</h2>
        <button id="refreshBypassRequests" class="refresh-btn">‚Üª Refresh</button>
      </div>
      <p class="section-desc">DJs requesting immediate access to go live without meeting the 10-likes requirement.</p>
      <div id="bypassRequests" class="bypass-requests-list">
        <p class="loading">Loading...</p>
      </div>
    </div>

    <!-- Recent Streams -->
    <div class="section">
      <h2>üìº Recent Streams</h2>
      <div id="recentStreams" class="streams-list">
        <p class="loading">Loading...</p>
      </div>
    </div>

    <!-- Lobby Access Bypass -->
    <div class="section">
      <div class="section-header">
        <h2>üé´ Lobby Access Bypass</h2>
        <button id="addBypassBtn" class="add-btn">+ Grant Access</button>
      </div>
      <p class="section-desc">DJs with bypass can access the DJ Lobby and Go Live without needing 10 likes on a mix.</p>
      <div id="bypassList" class="bypass-list">
        <p class="loading">Loading...</p>
      </div>
    </div>

    <!-- DJ Moderation -->
    <div class="section">
      <div class="section-header">
        <h2>üö´ DJ Moderation</h2>
        <div class="header-actions">
          <button id="addHoldBtn" class="hold-btn">‚è∏ Put on Hold</button>
          <button id="addBanBtn" class="ban-btn">üö´ Ban DJ</button>
        </div>
      </div>
      <p class="section-desc">Manage DJ access restrictions. Banned DJs cannot go live. DJs on hold are temporarily restricted.</p>
      
      <div class="moderation-tabs">
        <button class="mod-tab active" data-tab="banned">Banned</button>
        <button class="mod-tab" data-tab="onhold">On Hold</button>
      </div>
      
      <div id="bannedList" class="moderation-list">
        <p class="empty-state">No banned DJs</p>
      </div>
      
      <div id="onholdList" class="moderation-list hidden">
        <p class="empty-state">No DJs on hold</p>
      </div>
    </div>

    <!-- Ban DJ Modal -->
    <div id="banModal" class="modal hidden">
      <div class="modal-content">
        <div class="modal-header">
          <h3>üö´ Ban DJ</h3>
          <button class="close-ban-modal">&times;</button>
        </div>
        <form id="banForm">
          <div class="form-group">
            <label for="banEmail">User Email *</label>
            <input type="email" id="banEmail" required placeholder="DJ's email address">
          </div>
          <div class="form-group">
            <label for="banReason">Reason *</label>
            <input type="text" id="banReason" required placeholder="e.g. Violation of terms, inappropriate content">
          </div>
          <p class="warning-text">‚ö†Ô∏è Banned DJs cannot access the DJ Lobby or Go Live until unbanned.</p>
          <div class="form-actions">
            <button type="button" class="cancel-btn close-ban-modal">Cancel</button>
            <button type="submit" class="submit-btn ban-submit">Ban DJ</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Hold DJ Modal -->
    <div id="holdModal" class="modal hidden">
      <div class="modal-content">
        <div class="modal-header">
          <h3>‚è∏ Put DJ on Hold</h3>
          <button class="close-hold-modal">&times;</button>
        </div>
        <form id="holdForm">
          <div class="form-group">
            <label for="holdEmail">User Email *</label>
            <input type="email" id="holdEmail" required placeholder="DJ's email address">
          </div>
          <div class="form-group">
            <label for="holdReason">Reason</label>
            <input type="text" id="holdReason" placeholder="e.g. Pending review, temporary restriction">
          </div>
          <p class="info-text">‚ÑπÔ∏è DJs on hold cannot go live but can still view the DJ Lobby.</p>
          <div class="form-actions">
            <button type="button" class="cancel-btn close-hold-modal">Cancel</button>
            <button type="submit" class="submit-btn hold-submit">Put on Hold</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Grant Bypass Modal -->
    <div id="bypassModal" class="modal hidden">
      <div class="modal-content">
        <div class="modal-header">
          <h3>Grant Lobby Access</h3>
          <button class="close-bypass-modal">&times;</button>
        </div>
        <form id="bypassForm">
          <div class="form-group">
            <label for="bypassEmail">User Email *</label>
            <input type="email" id="bypassEmail" required placeholder="DJ's email address">
          </div>
          <div class="form-group">
            <label for="bypassReason">Reason (optional)</label>
            <input type="text" id="bypassReason" placeholder="e.g. Known DJ, pre-arranged">
          </div>
          <div class="form-actions">
            <button type="button" class="cancel-btn close-bypass-modal">Cancel</button>
            <button type="submit" class="submit-btn">Grant Access</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Add DJ Modal -->
    <div id="addDJModal" class="modal hidden">
      <div class="modal-content">
        <div class="modal-header">
          <h3>Add DJ for Streaming</h3>
          <button class="close-modal">&times;</button>
        </div>
        <form id="addDJForm">
          <div class="form-group">
            <label for="djUserId">User ID *</label>
            <input type="text" id="djUserId" required placeholder="Firebase User ID">
          </div>
          <div class="form-group">
            <label for="djNameInput">DJ Name *</label>
            <input type="text" id="djNameInput" required placeholder="Display name for streaming">
          </div>
          <div class="form-group">
            <label for="djTwitch">Twitch Channel (optional)</label>
            <input type="text" id="djTwitch" placeholder="Twitch username">
          </div>
          <div class="form-group">
            <label>
              <input type="checkbox" id="djApproved" checked>
              Approve immediately
            </label>
          </div>
          <div class="form-actions">
            <button type="button" class="cancel-btn close-modal">Cancel</button>
            <button type="submit" class="submit-btn">Add DJ</button>
          </div>
        </form>
      </div>
    </div>
    
    <!-- Deny Bypass Request Modal -->
    <div id="denyBypassModal" class="modal hidden">
      <div class="modal-content">
        <div class="modal-header">
          <h3>Deny Bypass Request</h3>
          <button class="close-deny-bypass-modal">&times;</button>
        </div>
        <form id="denyBypassForm">
          <input type="hidden" id="denyBypassRequestId" />
          <input type="hidden" id="denyBypassUserId" />
          <input type="hidden" id="denyBypassEmail" />
          <div class="form-group">
            <label for="denyBypassReason">Reason (optional)</label>
            <textarea id="denyBypassReason" placeholder="e.g. Please upload more mixes first, need more community engagement" rows="3"></textarea>
          </div>
          <p class="info-text">‚ÑπÔ∏è The DJ will see this reason and can submit a new request later.</p>
          <div class="form-actions">
            <button type="button" class="cancel-btn close-deny-bypass-modal">Cancel</button>
            <button type="submit" class="submit-btn deny-submit">Deny Request</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</AdminLayout>


<script>
  const ADMIN_KEY = 'freshwax-admin-2024';
  
  async function init() {
    await Promise.all([
      loadLiveStreams(),
      loadApprovedDJs(),
      loadRecentStreams(),
      loadBypassList(),
      loadModerationList(),
      loadBypassRequests()
    ]);
    
    setupEventListeners();
  }
  
  async function loadLiveStreams() {
    const container = document.getElementById('liveStreams');
    
    try {
      const response = await fetch('/api/livestream/status');
      const result = await response.json();
      
      if (result.success && result.isLive && result.streams?.length > 0) {
        container.innerHTML = result.streams.map(stream => `
          <div class="live-stream-card" data-stream-id="${stream.id}">
            <div class="live-stream-info">
              <h4>
                <span class="live-badge">LIVE</span>
                ${stream.title}
              </h4>
              <div class="live-stream-meta">
                ${stream.djName} ‚Ä¢ ${stream.genre || 'Drum & Bass'}
              </div>
            </div>
            <div class="live-stream-stats">
              <span>üëÅ ${stream.viewerCount || 0}</span>
              <span>‚ù§Ô∏è ${stream.likeCount || 0}</span>
            </div>
            <div class="live-stream-actions">
              <button class="kick-btn" onclick="kickDJ('${stream.djId}', '${stream.djName}')">Kick</button>
              <button class="end-stream-btn" onclick="endStream('${stream.id}', '${stream.djId}')">End Stream</button>
            </div>
          </div>
        `).join('');
      } else {
        container.innerHTML = '<p class="empty-state">No live streams at the moment</p>';
      }
    } catch (error) {
      console.error('Error loading live streams:', error);
      container.innerHTML = '<p class="empty-state">Failed to load live streams</p>';
    }
  }
  
  async function loadApprovedDJs() {
    const container = document.getElementById('approvedDJs');
    
    try {
      const response = await fetch('/api/stream/list-djs?approved=true');
      const result = await response.json();
      
      if (result.success && result.djs?.length > 0) {
        container.innerHTML = result.djs.map(dj => `
          <div class="dj-card">
            <div class="dj-info">
              <h4>${dj.djName || dj.email || 'Unknown DJ'}</h4>
              <div class="dj-meta">
                ${dj.email ? `<span>üìß ${dj.email}</span>` : ''}
                ${dj.grantedAt ? `<span>‚úì Approved ${new Date(dj.grantedAt).toLocaleDateString()}</span>` : ''}
                ${dj.lastStreamAt ? `<span>üéô Last stream: ${new Date(dj.lastStreamAt).toLocaleDateString()}</span>` : ''}
              </div>
            </div>
            <div class="dj-actions">
              <button class="action-btn revoke" onclick="revokeDJ('${dj.userId}', '${dj.email || ''}')">Revoke</button>
            </div>
          </div>
        `).join('');
      } else {
        container.innerHTML = '<p class="empty-state">No approved DJs yet</p>';
      }
    } catch (error) {
      console.error('Error loading DJs:', error);
      container.innerHTML = '<p class="empty-state">Failed to load DJs</p>';
    }
  }
  
  async function loadRecentStreams() {
    const container = document.getElementById('recentStreams');
    
    try {
      const response = await fetch('/api/stream/list?limit=10');
      const result = await response.json();
      
      if (result.success && result.streams?.length > 0) {
        container.innerHTML = result.streams.map(stream => {
          const date = new Date(stream.startedAt).toLocaleDateString('en-GB');
          const duration = stream.durationSeconds 
            ? `${Math.floor(stream.durationSeconds / 60)}m`
            : 'N/A';
          
          return `
            <div class="stream-item">
              <div class="stream-item-info">
                <h5>${stream.title}</h5>
                <div class="stream-item-meta">${stream.djName} ‚Ä¢ ${date} ‚Ä¢ ${duration}</div>
              </div>
              <div class="stream-item-stats">
                <span>üëÅ ${stream.peakViewers || 0} peak</span>
                <span>‚ù§Ô∏è ${stream.likeCount || 0}</span>
                <span>‚≠ê ${stream.averageRating?.toFixed(1) || 'N/A'}</span>
              </div>
            </div>
          `;
        }).join('');
      } else {
        container.innerHTML = '<p class="empty-state">No streams yet</p>';
      }
    } catch (error) {
      console.error('Error loading streams:', error);
      container.innerHTML = '<p class="empty-state">Failed to load streams</p>';
    }
  }
  
  function setupEventListeners() {
    document.getElementById('refreshLive')?.addEventListener('click', loadLiveStreams);
    
    document.getElementById('refreshDJsBtn')?.addEventListener('click', () => {
      const btn = document.getElementById('refreshDJsBtn');
      btn.classList.add('spinning');
      loadApprovedDJs().then(() => {
        setTimeout(() => btn.classList.remove('spinning'), 500);
      });
    });
    
    document.getElementById('addDJBtn')?.addEventListener('click', () => {
      document.getElementById('addDJModal').classList.remove('hidden');
    });
    
    document.querySelectorAll('.close-modal').forEach(btn => {
      btn.addEventListener('click', () => {
        document.getElementById('addDJModal').classList.add('hidden');
      });
    });
    
    // Bypass modal
    document.getElementById('addBypassBtn')?.addEventListener('click', () => {
      document.getElementById('bypassModal').classList.remove('hidden');
    });
    
    document.querySelectorAll('.close-bypass-modal').forEach(btn => {
