  // MediaMTX Status
  async function checkMediaMTX() {
    const card = document.getElementById('mediamtxCard');
    const dot = document.getElementById('mediamtxDot');
    const statusText = document.getElementById('mediamtxStatus');
    const startBtn = document.getElementById('startServerBtn');
    const stopBtn = document.getElementById('stopServerBtn');
    const restartBtn = document.getElementById('restartServerBtn');

    dot.className = 'status-dot checking';
    statusText.textContent = 'Checking...';

    try {
      const response = await fetch(`${STREAM_SERVER}/v3/paths/list`, {
        signal: AbortSignal.timeout(5000)
      });

      if (response.ok) {
        const data = await response.json();
        const paths = data.items || [];
        const activePaths = paths.filter(p => p.ready);

        // Count connections
        let totalConnections = 0;
        let totalReadersIn = 0;
        paths.forEach(p => {
          totalConnections += (p.readers?.length || 0) + (p.source ? 1 : 0);
          totalReadersIn += p.source ? 1 : 0;
        });

        // Update UI
        dot.className = 'status-dot online';
        statusText.textContent = 'Online';
        card.className = 'service-card online';

        // Metrics
        const streamCount = activePaths.length;
        document.getElementById('activeStreamsCount').textContent = streamCount;
        document.getElementById('streamsBar').style.width = Math.min(streamCount * 20, 100) + '%';

        document.getElementById('activeConnections').textContent = totalConnections;
        document.getElementById('connectionsBar').style.width = Math.min(totalConnections * 5, 100) + '%';

        // Bandwidth is harder to get from API, show N/A
        document.getElementById('bandwidthIn').textContent = streamCount > 0 ? '~' + (streamCount * 3) + ' Mbps' : '0';
        document.getElementById('bandwidthOut').textContent = totalConnections > 1 ? '~' + ((totalConnections - totalReadersIn) * 2) + ' Mbps' : '0';

        // Enable buttons
        startBtn.disabled = true;
        stopBtn.disabled = false;
        restartBtn.disabled = false;
      } else {
        throw new Error('Server not responding');
      }
    } catch (error) {
      dot.className = 'status-dot offline';
      statusText.textContent = 'Offline';
      card.className = 'service-card offline';
      startBtn.disabled = false;
      stopBtn.disabled = true;
      restartBtn.disabled = true;

      document.getElementById('activeStreamsCount').textContent = '0';
      document.getElementById('streamsBar').style.width = '0%';
      document.getElementById('activeConnections').textContent = '0';
      document.getElementById('connectionsBar').style.width = '0%';
      document.getElementById('bandwidthIn').textContent = '0';
      document.getElementById('bandwidthOut').textContent = '0';
    }
  }

  // Cloudflare Tunnel Status (check stream endpoint reachability)
  async function checkCloudflare() {
    const card = document.getElementById('cloudflaredCard');
    const dot = document.getElementById('tunnelDot');
    const statusText = document.getElementById('tunnelStatus');

    dot.className = 'status-dot checking';
    statusText.textContent = 'Checking...';

    try {
      // Check stream endpoint
      const streamCheck = await fetch(`${STREAM_SERVER}/v3/paths/list`, { signal: AbortSignal.timeout(5000) });
      const streamOk = streamCheck.ok;
      document.getElementById('streamEndpoint').className = `metric-value status-indicator ${streamOk ? 'ok' : 'error'}`;
      document.getElementById('streamEndpoint').textContent = streamOk ? 'Online' : 'Offline';

      // Check playlist endpoint
      let playlistOk = false;
      try {
        const playlistCheck = await fetch('https://playlist.freshwax.co.uk/', { method: 'HEAD', signal: AbortSignal.timeout(5000) });
        playlistOk = playlistCheck.ok || playlistCheck.status === 404;
      } catch {}
      document.getElementById('playlistEndpoint').className = `metric-value status-indicator ${playlistOk ? 'ok' : 'warning'}`;
      document.getElementById('playlistEndpoint').textContent = playlistOk ? 'Online' : 'Offline';

      // Check relay/icecast endpoint
      let relayOk = false;
      try {
        const relayCheck = await fetch('https://icecast.freshwax.co.uk/', { method: 'HEAD', signal: AbortSignal.timeout(5000) });
        relayOk = relayCheck.ok || relayCheck.status === 400 || relayCheck.status === 404;
      } catch {}
      document.getElementById('relayEndpoint').className = `metric-value status-indicator ${relayOk ? 'ok' : 'warning'}`;
      document.getElementById('relayEndpoint').textContent = relayOk ? 'Online' : 'Offline';

      // Overall status
      const allOk = streamOk && playlistOk && relayOk;
      const someOk = streamOk || playlistOk || relayOk;

      if (allOk) {
        dot.className = 'status-dot online';
        statusText.textContent = 'Online';
        card.className = 'service-card online';
      } else if (someOk) {
        dot.className = 'status-dot warning';
        statusText.textContent = 'Partial';
        card.className = 'service-card warning';
      } else {
        throw new Error('All endpoints offline');
      }
    } catch (error) {
      dot.className = 'status-dot offline';
      statusText.textContent = 'Offline';
      card.className = 'service-card offline';
    }
  }

  // Icecast Status
  async function checkIcecast() {
    const card = document.getElementById('icecastCard');
    const dot = document.getElementById('icecastDot');
    const statusText = document.getElementById('icecastStatus');

    dot.className = 'status-dot checking';
    statusText.textContent = 'Checking...';

    try {
      // Icecast admin status page
      const response = await fetch('https://icecast.freshwax.co.uk/status-json.xsl', {
        signal: AbortSignal.timeout(5000)
      });

      if (response.ok) {
        const data = await response.json();
        const sources = data.icestats?.source;
        const mountCount = Array.isArray(sources) ? sources.length : (sources ? 1 : 0);
        let listeners = 0;
        if (Array.isArray(sources)) {
          listeners = sources.reduce((sum, s) => sum + (s.listeners || 0), 0);
        } else if (sources) {
          listeners = sources.listeners || 0;
        }

        dot.className = 'status-dot online';
        statusText.textContent = 'Online';
        card.className = 'service-card online';
        document.getElementById('icecastMounts').textContent = mountCount;
        document.getElementById('icecastListeners').textContent = listeners;
      } else {
        throw new Error('Icecast not responding');
      }
    } catch (error) {
      // Icecast might be running but status page not accessible
      dot.className = 'status-dot warning';
      statusText.textContent = 'Unknown';
      card.className = 'service-card warning';
      document.getElementById('icecastMounts').textContent = '--';
      document.getElementById('icecastListeners').textContent = '--';
    }
  }

