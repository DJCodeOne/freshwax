---
// src/pages/admin/streaming.astro
import AdminLayout from '../../layouts/AdminLayout.astro';
import '../../styles/admin/streaming.css';

export const prerender = false;

// Get admin key from Cloudflare runtime env (production) or import.meta.env (dev)
const runtimeEnv = (Astro.locals as any)?.runtime?.env;
const adminKey = runtimeEnv?.ADMIN_KEY || import.meta.env.ADMIN_KEY || '';
---

<style is:global>
  /* Bypass Request Cards - Dynamically Generated */
  .bypass-requests-list { 
    display: flex; 
    flex-direction: column; 
    gap: 1rem; 
  }
  
  .bypass-request-card { 
    display: flex; 
    justify-content: space-between; 
    align-items: center; 
    gap: 2rem; 
    padding: 1.5rem 2rem; 
    background: var(--bg-secondary, #fff); 
    border: 2px solid var(--border-light, #e5e5e5); 
    border-radius: var(--radius-md, 8px); 
    transition: all 0.2s; 
  }
  
  .bypass-request-card:hover { 
    border-color: var(--accent-red, #dc2626);
    box-shadow: var(--shadow-md, 0 4px 6px rgba(0,0,0,0.07));
  }
  
  .bypass-request-card.urgent { 
    border-color: var(--accent-amber, #d97706); 
    background: #fffbeb; 
  }
  
  .bypass-request-info { 
    flex: 1; 
    min-width: 0; 
  }
  
  .bypass-request-info h4 { 
    margin: 0 0 0.75rem 0; 
    font-family: 'Inter', sans-serif; font-weight: 700;
    font-size: 1.5rem; 
    color: var(--text-primary, #000); 
    display: flex; 
    align-items: center; 
    gap: 1rem; 
    flex-wrap: wrap; 
    letter-spacing: 0.02em;
  }
  
  .bypass-request-info h4 .pending-badge,
  .pending-badge { 
    display: inline-flex; 
    padding: 0.3rem 0.75rem; 
    background: #fef3c7; 
    color: #92400e; 
    font-family: 'Inter', sans-serif;
    font-size: 0.6875rem; 
    font-weight: 700; 
    border-radius: var(--radius-sm, 4px); 
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .bypass-request-meta { 
    font-size: 0.9rem; 
    color: var(--text-secondary, #666); 
    margin-bottom: 1rem;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem 1.5rem;
  }
  
  .bypass-request-meta span { 
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .bypass-request-reason { 
    font-size: 0.875rem; 
    color: var(--text-secondary, #444); 
    background: var(--bg-primary, #f5f5f5); 
    padding: 0.875rem; 
    border-radius: var(--radius-md, 8px); 
    border: 1px solid var(--border-light, #e5e5e5); 
    margin-top: 0.75rem; 
  }
  
  .bypass-request-reason strong {
    color: var(--text-muted, #666);
    font-weight: 600;
  }

  .bypass-request-relay {
    font-size: 0.875rem;
    background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
    border: 1px solid #10b981;
    padding: 0.75rem;
    border-radius: var(--radius-md, 8px);
    margin-top: 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .bypass-request-relay strong {
    color: #065f46;
    font-weight: 600;
  }

  .relay-station {
    display: inline-block;
    background: #10b981;
    color: #fff;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-weight: 600;
    font-size: 0.8125rem;
  }

  .relay-url {
    display: block;
    background: rgba(0,0,0,0.05);
    padding: 0.5rem;
    border-radius: 4px;
    font-family: monospace;
    font-size: 0.75rem;
    color: #374151;
    word-break: break-all;
    margin-top: 0.25rem;
  }

  .bypass-request-stats { 
    display: flex; 
    align-items: center;
    gap: 2rem; 
    font-size: 0.9rem; 
  }
  
  .bypass-stat { 
    display: flex; 
    align-items: center; 
    gap: 0.5rem; 
    color: var(--text-secondary, #666);
  }
  
  .bypass-stat .stat-value { 
    font-weight: 700; 
    color: var(--text-primary, #000); 
  }
  
  .bypass-request-actions { 
    display: flex; 
    flex-direction: column; 
    gap: 0.625rem; 
    flex-shrink: 0; 
  }
  
  .approve-bypass-btn { 
    padding: 0.875rem 2rem; 
    background: var(--accent-green, #16a34a); 
    border: none; 
    border-radius: var(--radius-md, 8px); 
    color: #fff; 
    font-size: 0.9rem; 
    font-weight: 700; 
    cursor: pointer; 
    transition: all 0.2s; 
    white-space: nowrap; 
    min-width: 120px;
  }
  
  .approve-bypass-btn:hover { 
    background: #15803d;
    transform: translateY(-1px);
  }
  
  .deny-bypass-btn { 
    padding: 0.875rem 2rem; 
    background: var(--bg-secondary, #fff); 
    border: 2px solid var(--border-light, #e5e5e5); 
    border-radius: var(--radius-md, 8px); 
    color: var(--text-secondary, #666); 
    font-size: 0.9rem; 
    font-weight: 600; 
    cursor: pointer; 
    transition: all 0.2s; 
    white-space: nowrap; 
    min-width: 120px;
  }
  
  .deny-bypass-btn:hover { 
    background: #fee2e2; 
    border-color: var(--accent-red, #dc2626); 
    color: var(--accent-red, #dc2626); 
  }
  
  .empty-bypass { 
    text-align: center; 
    padding: 2.5rem; 
    color: var(--text-muted, #888); 
  }
  
  .empty-bypass .empty-icon { 
    font-size: 2.5rem; 
    margin-bottom: 0.75rem;
    opacity: 0.6;
  }

  /* DJ Cards */
  .dj-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    background: var(--bg-secondary, #fff);
    border-radius: var(--radius-md, 8px);
    border: 2px solid var(--border-light, #e5e5e5);
    transition: all 0.2s;
  }
  
  .dj-card:hover {
    border-color: var(--accent-red, #dc2626);
  }
  
  .dj-info h4 {
    margin: 0 0 0.375rem 0;
    font-family: 'Inter', sans-serif; font-weight: 700;
    font-size: 1.25rem;
    font-weight: 400;
    color: var(--text-primary, #000);
    letter-spacing: 0.02em;
  }
  
  .dj-meta {
    color: var(--text-secondary, #666);
    font-size: 0.8125rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1rem;
  }
  
  .dj-actions {
    display: flex;
    gap: 0.5rem;
  }
  
  .action-btn {
    padding: 0.5rem 1rem;
    border: 2px solid var(--border-light, #e5e5e5);
    border-radius: var(--radius-md, 8px);
    background: var(--bg-secondary, #fff);
    cursor: pointer;
    font-size: 0.8125rem;
    font-weight: 600;
    transition: all 0.2s;
  }
  
  .action-btn:hover {
    border-color: var(--text-primary, #000);
  }
  
  .action-btn.approve {
    background: var(--accent-green, #16a34a);
    color: #fff;
    border-color: var(--accent-green, #16a34a);
  }
  
  .action-btn.revoke {
    background: var(--accent-red, #dc2626);
    color: #fff;
    border-color: var(--accent-red, #dc2626);
  }

  /* Live stream cards */
  .live-stream-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem;
    background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
    border: 2px solid var(--accent-red, #dc2626);
    border-radius: var(--radius-md, 8px);
  }
  
  .live-stream-info h4 {
    margin: 0 0 0.375rem 0;
    font-family: 'Inter', sans-serif; font-weight: 700;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.25rem;
    letter-spacing: 0.02em;
  }
  
  .live-badge {
    background: var(--accent-red, #dc2626);
    color: #fff;
    font-family: 'Inter', sans-serif;
    font-size: 0.625rem;
    padding: 0.2rem 0.5rem;
    border-radius: var(--radius-sm, 4px);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    animation: pulse 1.5s infinite;
  }

  /* Moderation cards */
  .mod-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-radius: var(--radius-md, 8px);
  }
  
  .mod-card.banned {
    background: #fef2f2;
    border: 2px solid #fecaca;
  }
  
  .mod-card.onhold {
    background: #fffbeb;
    border: 2px solid #fcd34d;
  }
  
  .mod-info h4 {
    margin: 0 0 0.25rem 0;
    font-family: 'Inter', sans-serif; font-weight: 700;
    font-size: 1.125rem;
    color: var(--text-primary, #000);
    letter-spacing: 0.02em;
  }

  /* Bypass list cards */
  .bypass-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: var(--bg-secondary, #fff);
    border: 2px solid var(--border-light, #e5e5e5);
    border-radius: var(--radius-md, 8px);
  }
  
  .bypass-info h4 {
    margin: 0 0 0.25rem 0;
    font-family: 'Inter', sans-serif; font-weight: 700;
    font-size: 1.125rem;
    color: var(--text-primary, #000);
    letter-spacing: 0.02em;
  }

  /* Stream item cards */
  .stream-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: var(--bg-secondary, #fff);
    border: 2px solid var(--border-light, #e5e5e5);
    border-radius: var(--radius-md, 8px);
  }
  
  .stream-item-info h5 {
    margin: 0 0 0.125rem 0;
    font-family: 'Inter', sans-serif; font-weight: 700;
    font-size: 1.0625rem;
    color: var(--text-primary, #000);
    letter-spacing: 0.02em;
  }

  @media (max-width: 640px) {
    .bypass-request-card {
      flex-direction: column;
    }
    .bypass-request-actions {
      flex-direction: row;
      width: 100%;
    }
    .bypass-request-actions button {
      flex: 1;
    }
  }

  /* Quick Access Key Styles */
  .quick-access-key-display {
    margin-top: 1rem;
  }

  .key-card {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    border: 2px solid #10b981;
    border-radius: 12px;
    padding: 1.5rem;
    color: #fff;
  }

  .key-card.inactive {
    border-color: #6b7280;
    opacity: 0.7;
  }

  .key-code-display {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .key-code {
    font-family: 'Courier New', monospace;
    font-size: 2rem;
    font-weight: bold;
    letter-spacing: 0.2em;
    color: #10b981;
    background: rgba(16, 185, 129, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    border: 1px dashed #10b981;
  }

  .copy-key-btn {
    padding: 0.5rem 1rem;
    background: #10b981;
    color: #fff;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
  }

  .copy-key-btn:hover {
    background: #059669;
  }

  .key-meta {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: #9ca3af;
  }

  .key-status {
    font-weight: 600;
  }

  .key-status.active {
    color: #10b981;
  }

  .key-status.inactive {
    color: #ef4444;
  }

  .key-actions {
    display: flex;
    gap: 0.75rem;
  }

  .key-actions button {
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
  }

  .revoke-key-btn {
    background: #ef4444;
    color: #fff;
  }

  .revoke-key-btn:hover {
    background: #dc2626;
  }

  .expiry-btn {
    background: #374151;
    color: #fff;
  }

  .expiry-btn:hover {
    background: #4b5563;
  }

  .no-key-state {
    text-align: center;
    padding: 2rem;
    background: var(--bg-secondary, #f9fafb);
    border: 2px dashed var(--border-light, #e5e5e5);
    border-radius: 12px;
  }

  .no-key-state p {
    margin: 0;
    color: var(--text-secondary, #6b7280);
  }

  .no-key-state .hint {
    font-size: 0.85rem;
    margin-top: 0.5rem;
  }

  .key-users-list {
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-light, #e5e5e5);
  }

  .key-users-list h4 {
    font-size: 0.9rem;
    color: var(--text-secondary, #6b7280);
    margin: 0 0 0.75rem 0;
  }

  .key-user-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0.75rem;
    background: var(--bg-secondary, #f9fafb);
    border-radius: 6px;
    margin-bottom: 0.5rem;
  }

  .user-email {
    font-weight: 500;
  }

  .user-date {
    font-size: 0.8rem;
    color: var(--text-secondary, #6b7280);
  }

  /* Chat Management */
  .chat-management-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    background: var(--bg-secondary, #fff);
    border: 2px solid var(--border-light, #e5e5e5);
    border-radius: var(--radius-md, 8px);
  }

  .chat-stats {
    font-size: 1rem;
    color: var(--text-secondary, #666);
  }

  .chat-stats span {
    font-weight: 700;
    color: var(--text-primary, #000);
  }

  .clear-chat-btn {
    padding: 0.75rem 1.5rem;
    background: #ef4444;
    color: #fff;
    border: none;
    border-radius: var(--radius-md, 8px);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .clear-chat-btn:hover {
    background: #dc2626;
    transform: translateY(-1px);
  }

  .clear-chat-btn:disabled {
    background: #9ca3af;
    cursor: not-allowed;
    transform: none;
  }

  /* MediaMTX Section Styles */
  .mediamtx-section {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    border: 2px solid #0f3460;
    border-radius: 12px;
    padding: 1.5rem;
  }

  .mediamtx-section .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .mediamtx-section h2 {
    color: #e94560;
    margin: 0;
  }

  .server-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(0,0,0,0.3);
    border-radius: 20px;
    font-weight: 600;
    color: #fff;
  }

  .status-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  .status-dot.online {
    background: #22c55e;
    box-shadow: 0 0 10px #22c55e;
  }

  .status-dot.offline {
    background: #ef4444;
    box-shadow: 0 0 10px #ef4444;
    animation: none;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .mediamtx-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
  }

  .mediamtx-card {
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 8px;
    padding: 1.25rem;
  }

  .mediamtx-card.wide {
    grid-column: span 2;
  }

  @media (max-width: 768px) {
    .mediamtx-card.wide {
      grid-column: span 1;
    }
  }

  .mediamtx-card h3 {
    color: #fff;
    font-size: 0.9rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.8;
  }

  .mediamtx-card .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .mediamtx-card .card-header h3 {
    margin: 0;
  }

  .server-controls {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .control-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .control-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .control-btn.start-btn {
    background: #22c55e;
    color: white;
  }

  .control-btn.start-btn:hover:not(:disabled) {
    background: #16a34a;
  }

  .control-btn.stop-btn {
    background: #ef4444;
    color: white;
  }

  .control-btn.stop-btn:hover:not(:disabled) {
    background: #dc2626;
  }

  .control-btn.restart-btn {
    background: #f59e0b;
    color: white;
  }

  .control-btn.restart-btn:hover:not(:disabled) {
    background: #d97706;
  }

  .control-note {
    margin: 0.75rem 0 0 0;
    font-size: 0.75rem;
    color: rgba(255,255,255,0.5);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-label {
    font-size: 0.7rem;
    color: rgba(255,255,255,0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-value {
    font-size: 1.1rem;
    font-weight: 700;
    color: #fff;
  }

  .active-streams-list {
    max-height: 200px;
    overflow-y: auto;
  }

  .active-streams-list .empty-state {
    color: rgba(255,255,255,0.4);
    font-size: 0.875rem;
    text-align: center;
    padding: 1rem;
  }

  .stream-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background: rgba(0,0,0,0.2);
    border-radius: 6px;
    margin-bottom: 0.5rem;
  }

  .stream-item:last-child {
    margin-bottom: 0;
  }

  .stream-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stream-path {
    font-weight: 600;
    color: #22c55e;
    font-family: monospace;
  }

  .stream-meta {
    font-size: 0.75rem;
    color: rgba(255,255,255,0.5);
  }

  .kick-stream-btn {
    padding: 0.375rem 0.75rem;
    background: #ef4444;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 0.75rem;
    cursor: pointer;
    transition: background 0.2s;
  }

  .kick-stream-btn:hover {
    background: #dc2626;
  }

  .quick-actions {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .action-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: rgba(255,255,255,0.1);
    color: #fff;
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .action-btn:hover {
    background: rgba(255,255,255,0.15);
    border-color: rgba(255,255,255,0.3);
  }

  .action-btn.danger {
    background: rgba(239,68,68,0.2);
    border-color: #ef4444;
    color: #fca5a5;
  }

  .action-btn.danger:hover {
    background: rgba(239,68,68,0.3);
  }

  .url-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .url-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .url-label {
    font-size: 0.7rem;
    color: rgba(255,255,255,0.5);
    text-transform: uppercase;
  }

  .url-item code {
    font-size: 0.75rem;
    color: #22c55e;
    background: rgba(0,0,0,0.3);
    padding: 0.375rem 0.5rem;
    border-radius: 4px;
    word-break: break-all;
  }

  .logs-panel {
    margin-top: 1rem;
    background: #000;
    border: 1px solid #333;
    border-radius: 8px;
    overflow: hidden;
  }

  .logs-panel.hidden {
    display: none;
  }

  .logs-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: #1a1a1a;
    border-bottom: 1px solid #333;
  }

  .logs-header h3 {
    margin: 0;
    color: #fff;
    font-size: 0.9rem;
  }

  .logs-header .close-btn {
    background: none;
    border: none;
    color: #666;
    font-size: 1.5rem;
    cursor: pointer;
    line-height: 1;
