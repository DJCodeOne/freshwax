  // ===== Server Monitor Dashboard =====

  async function checkServerStatus() {
    // Update timestamp
    document.getElementById('lastUpdated').textContent = `Updated: ${new Date().toLocaleTimeString()}`;

    // Check all services in parallel
    await Promise.all([
      checkMediaMTX(),
      checkCloudflare(),
