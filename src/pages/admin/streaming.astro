  window.showDenyBypassModal = function(requestId, userId, email) {
    document.getElementById('denyBypassRequestId').value = requestId;
    document.getElementById('denyBypassUserId').value = userId;
    document.getElementById('denyBypassEmail').value = email;
    document.getElementById('denyBypassReason').value = '';
    document.getElementById('denyBypassModal').classList.remove('hidden');
  };
  
  document.querySelectorAll('.close-deny-bypass-modal').forEach(btn => {
    btn.addEventListener('click', () => {
      document.getElementById('denyBypassModal').classList.add('hidden');
    });
  });
  
  document.getElementById('denyBypassForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const requestId = document.getElementById('denyBypassRequestId').value;
    const reason = document.getElementById('denyBypassReason').value.trim();
    
    try {
      const response = await fetch('/api/admin/bypass-requests', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          action: 'deny',
          requestId,
          reason: reason || null,
          adminKey: ADMIN_KEY,
          adminEmail: currentAdminEmail || 'admin'
        })
      });
      
      const result = await response.json();
      
      if (result.success) {
        document.getElementById('denyBypassModal').classList.add('hidden');
        loadBypassRequests();
      } else {
        alert('Error: ' + result.error);
      }
    } catch (error) {
      console.error('Error denying bypass:', error);
      alert('Failed to deny request');
    }
  });
  
  document.getElementById('refreshBypassRequests')?.addEventListener('click', () => {
    loadBypassRequests();
  });

  document.getElementById('refreshEventRequests')?.addEventListener('click', () => {
    loadEventRequests();
  });

