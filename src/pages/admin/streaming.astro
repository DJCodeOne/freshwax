  async function loadEventRequests() {
    const container = document.getElementById('eventRequests');

    try {
      const response = await fetch('/api/livestream/event-requests?admin=true&status=pending', {
        headers: { 'X-Admin-Key': ADMIN_KEY }
      });
      const result = await response.json();

      if (result.success && result.requests?.length > 0) {
        container.innerHTML = result.requests.map(req => {
          const requestDate = req.createdAt ? new Date(req.createdAt) : null;
          const timeAgo = requestDate ? getTimeAgo(requestDate) : 'Unknown';
          const eventDate = req.eventDate ? new Date(req.eventDate + 'T00:00:00').toLocaleDateString('en-GB', { weekday: 'short', day: 'numeric', month: 'short' }) : 'Unknown';

          return `
            <div class="bypass-request-card" data-request-id="${req.id}">
              <div class="bypass-request-info">
                <h4>
                  ${req.userName || 'Unknown DJ'}
                  <span class="pending-badge">‚è≥ ${req.hoursRequested}h requested</span>
                </h4>
                <div class="bypass-request-meta">
                  <span>üìß ${req.userEmail || 'No email'}</span>
                  <span>üìÖ Event: ${eventDate}</span>
                  <span>üïê Requested ${timeAgo}</span>
                </div>
                <div class="bypass-request-reason">
                  <strong>Event:</strong> ${req.eventName || 'Untitled Event'}
                  ${req.eventDescription ? `<br><strong>Details:</strong> ${req.eventDescription}` : ''}
                </div>
              </div>
              <div class="bypass-request-actions">
                <button class="approve-bypass-btn" onclick="approveEventRequest('${req.id}', '${(req.userName || '').replace(/'/g, "\\'")}', ${req.hoursRequested})">‚úì Approve ${req.hoursRequested}h</button>
                <button class="deny-bypass-btn" onclick="rejectEventRequest('${req.id}', '${(req.userName || '').replace(/'/g, "\\'")}')">‚úó Reject</button>
              </div>
            </div>
          `;
        }).join('');
      } else {
        container.innerHTML = `
          <div class="empty-bypass">
            <div class="empty-icon">üìÖ</div>
            <p>No pending event hour requests</p>
          </div>
        `;
      }
    } catch (error) {
      console.error('Error loading event requests:', error);
      container.innerHTML = '<p class="empty-state">Failed to load event requests</p>';
    }
  }

  window.approveEventRequest = async function(requestId, djName, hours) {
    if (!confirm(`Approve ${hours} hours for ${djName || 'this DJ'}?`)) return;

    try {
      const response = await fetch('/api/livestream/event-requests', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          action: 'approve',
          requestId,
          adminId: currentAdminEmail || 'admin'
        })
      });

      const result = await response.json();

      if (result.success) {
        const card = document.querySelector(`.bypass-request-card[data-request-id="${requestId}"]`);
        if (card) {
          card.innerHTML = `
            <div style="padding: 1rem; text-align: center; color: #22c55e; width: 100%;">
              <span style="font-size: 2rem;">‚úÖ</span>
              <p style="margin: 0.5rem 0 0 0;">Approved! ${djName || 'DJ'} can now book up to ${hours} extra hours.</p>
            </div>
          `;
          setTimeout(() => loadEventRequests(), 2000);
        }
      } else {
        alert('Error: ' + result.error);
      }
    } catch (error) {
      console.error('Error approving event request:', error);
      alert('Failed to approve request');
    }
  };

  window.rejectEventRequest = async function(requestId, djName) {
    const reason = prompt(`Reason for rejecting ${djName || 'this DJ'}'s event request (optional):`);
    if (reason === null) return; // Cancelled

    try {
      const response = await fetch('/api/livestream/event-requests', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          action: 'reject',
          requestId,
          adminId: currentAdminEmail || 'admin',
          reason: reason || 'Request declined'
        })
      });

      const result = await response.json();

      if (result.success) {
        loadEventRequests();
      } else {
        alert('Error: ' + result.error);
      }
    } catch (error) {
      console.error('Error rejecting event request:', error);
      alert('Failed to reject request');
    }
  };

  init();
</script>
