---
// Merch Analytics - Pro Dashboard
// View sales and performance analytics
import ProDashboardLayout from '../../../layouts/ProDashboardLayout.astro';
---
<ProDashboardLayout title="Analytics" activeSection="/pro/merch/analytics">
  <div class="analytics-page">
    <div class="page-header">
      <div class="header-content">
        <p class="subtitle">View your merchandise sales and performance</p>
      </div>
      <div class="period-selector">
        <select id="periodSelect">
          <option value="7">Last 7 days</option>
          <option value="30" selected>Last 30 days</option>
          <option value="90">Last 90 days</option>
          <option value="365">Last year</option>
        </select>
      </div>
    </div>

    <!-- Key Metrics -->
    <div class="metrics-grid">
      <div class="metric-card">
        <div class="metric-value" id="totalRevenue">£0.00</div>
        <div class="metric-label">Total Revenue</div>
        <div class="metric-change positive" id="revenueChange">-</div>
      </div>
      <div class="metric-card">
        <div class="metric-value" id="totalOrders">0</div>
        <div class="metric-label">Orders</div>
        <div class="metric-change" id="ordersChange">-</div>
      </div>
      <div class="metric-card">
        <div class="metric-value" id="totalUnits">0</div>
        <div class="metric-label">Units Sold</div>
        <div class="metric-change" id="unitsChange">-</div>
      </div>
      <div class="metric-card">
        <div class="metric-value" id="avgOrder">£0.00</div>
        <div class="metric-label">Avg. Order Value</div>
        <div class="metric-change" id="avgChange">-</div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="charts-grid">
      <div class="chart-card">
        <h3>Sales Over Time</h3>
        <div class="sales-chart" id="salesChart">
          <div class="chart-loading">Loading chart data...</div>
        </div>
      </div>
      <div class="chart-card">
        <h3>Top Products</h3>
        <div id="topProducts" class="top-list">
          <div class="loading">Loading...</div>
        </div>
      </div>
    </div>

    <!-- Recent Sales -->
    <div class="section">
      <h3>Recent Sales</h3>
      <div id="recentSales" class="sales-table-wrapper">
        <table class="sales-table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Product</th>
              <th>Quantity</th>
              <th>Revenue</th>
            </tr>
          </thead>
          <tbody id="salesTableBody">
            <tr>
              <td colspan="4" class="loading">Loading sales data...</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <style>
    .analytics-page {
      max-width: 1200px;
    }

    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1.5rem;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .subtitle {
      color: var(--text-secondary, #a3a3a3);
      margin: 0;
    }

    .period-selector select {
      padding: 0.5rem 1rem;
      background: var(--bg-secondary, #141414);
      border: 1px solid var(--border-color, #262626);
      border-radius: 6px;
      color: var(--text-primary, #fff);
    }

    .metrics-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .metric-card {
      background: var(--bg-secondary, #141414);
      border: 1px solid var(--border-color, #262626);
      border-radius: 8px;
      padding: 1.5rem;
    }

    .metric-value {
      font-size: 2rem;
      font-weight: 700;
      color: var(--text-primary, #fff);
      margin-bottom: 0.25rem;
    }

    .metric-label {
      font-size: 0.9rem;
      color: var(--text-secondary, #a3a3a3);
      margin-bottom: 0.5rem;
    }

    .metric-change {
      font-size: 0.8rem;
      color: var(--text-muted, #666);
    }

    .metric-change.positive {
      color: #22c55e;
    }

    .metric-change.negative {
      color: #ef4444;
    }

    .charts-grid {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    @media (max-width: 900px) {
      .charts-grid {
        grid-template-columns: 1fr;
      }
    }

    .chart-card {
      background: var(--bg-secondary, #141414);
      border: 1px solid var(--border-color, #262626);
      border-radius: 8px;
      padding: 1.5rem;
    }

    .chart-card h3 {
      color: var(--text-primary, #fff);
      font-size: 1rem;
      margin: 0 0 1rem;
    }

    .sales-chart {
      height: 200px;
      display: flex;
      align-items: flex-end;
      justify-content: space-between;
      gap: 4px;
      padding: 1rem 0;
    }

    .sales-chart .chart-loading {
      width: 100%;
      text-align: center;
      color: var(--text-secondary, #a3a3a3);
      align-self: center;
    }

    .chart-bar-wrapper {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 4px;
      max-width: 40px;
    }

    .chart-bar {
      width: 100%;
      min-height: 4px;
      background: linear-gradient(to top, #3b82f6, #60a5fa);
      border-radius: 3px 3px 0 0;
      transition: height 0.3s ease;
      position: relative;
    }

    .chart-bar:hover {
      background: linear-gradient(to top, #2563eb, #3b82f6);
    }

    .chart-bar-tooltip {
      position: absolute;
      bottom: 100%;
      left: 50%;
      transform: translateX(-50%);
      background: #1f1f1f;
      color: #fff;
      padding: 4px 8px;
      border-radius: 4px;
      font-size: 0.75rem;
      white-space: nowrap;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.2s;
      z-index: 10;
    }

    .chart-bar:hover .chart-bar-tooltip {
      opacity: 1;
    }

    .chart-label {
      font-size: 0.65rem;
      color: var(--text-muted, #666);
      text-align: center;
      writing-mode: vertical-rl;
      text-orientation: mixed;
      transform: rotate(180deg);
      max-height: 50px;
      overflow: hidden;
    }

    @media (max-width: 600px) {
      .chart-label {
        display: none;
      }
    }

    .chart-empty {
      width: 100%;
      text-align: center;
      color: var(--text-secondary, #a3a3a3);
      align-self: center;
    }

    .top-list {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .top-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.75rem;
      background: var(--bg-tertiary, #1a1a1a);
      border-radius: 6px;
    }

    .top-item-info {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .top-item-name {
      color: var(--text-primary, #fff);
      font-weight: 500;
    }

    .top-item-units {
      font-size: 0.8rem;
      color: var(--text-muted, #666);
    }

    .top-item-revenue {
      color: var(--accent, #22c55e);
      font-weight: 600;
    }

    .section {
      background: var(--bg-secondary, #141414);
      border: 1px solid var(--border-color, #262626);
      border-radius: 8px;
      padding: 1.5rem;
    }

    .section h3 {
      color: var(--text-primary, #fff);
      font-size: 1rem;
      margin: 0 0 1rem;
    }

    .sales-table-wrapper {
      overflow-x: auto;
    }

    .sales-table {
      width: 100%;
      border-collapse: collapse;
    }

    .sales-table th,
    .sales-table td {
      padding: 0.75rem 1rem;
      text-align: left;
      border-bottom: 1px solid var(--border-color, #262626);
    }

    .sales-table th {
      font-weight: 600;
      color: var(--text-secondary, #a3a3a3);
      font-size: 0.8rem;
      text-transform: uppercase;
    }

    .sales-table td {
      color: var(--text-primary, #fff);
    }

    .sales-table tbody tr:hover {
      background: var(--bg-tertiary, #1a1a1a);
    }

    .loading {
      text-align: center;
      color: var(--text-secondary, #a3a3a3);
      padding: 1rem;
    }

    .empty-message {
      text-align: center;
      color: var(--text-secondary, #a3a3a3);
      padding: 2rem;
    }
  </style>

  <script type="module">
    import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-app.js';
    import { getAuth, onAuthStateChanged } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-auth.js';
    import { getFirestore, collection, query, where, getDocs, orderBy, Timestamp } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-firestore.js';

    const firebaseConfig = window.FIREBASE_CONFIG || {};
    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    let currentUserId = null;
    let currentPeriod = 30;

    onAuthStateChanged(auth, async (user) => {
      if (!user) return;
      currentUserId = user.uid;
      await loadAnalytics();
    });

    document.getElementById('periodSelect').addEventListener('change', async (e) => {
      currentPeriod = parseInt(e.target.value);
      await loadAnalytics();
    });

    async function loadAnalytics() {
      if (!currentUserId) return;

      const startDate = new Date();
      startDate.setDate(startDate.getDate() - currentPeriod);

      try {
        // Get orders for period
        const ordersQuery = query(
          collection(db, 'orders'),
          where('sellerId', '==', currentUserId),
          where('createdAt', '>=', Timestamp.fromDate(startDate)),
          orderBy('createdAt', 'desc')
        );

        const snapshot = await getDocs(ordersQuery);

        let totalRevenue = 0;
        let totalOrders = 0;
        let totalUnits = 0;
        const productSales = {};
        const recentSales = [];
        const dailySales = {}; // For chart

        snapshot.forEach(doc => {
          const order = doc.data();
          totalOrders++;
          totalRevenue += order.total || 0;

          // Track daily sales for chart
          const orderDate = order.createdAt?.toDate?.() || new Date();
          const dateKey = orderDate.toISOString().split('T')[0];
          if (!dailySales[dateKey]) {
            dailySales[dateKey] = { revenue: 0, orders: 0 };
          }
          dailySales[dateKey].revenue += order.total || 0;
          dailySales[dateKey].orders++;

          (order.items || []).forEach(item => {
            const qty = item.quantity || 1;
            totalUnits += qty;

            // Track product sales
            if (!productSales[item.name]) {
              productSales[item.name] = { units: 0, revenue: 0 };
            }
            productSales[item.name].units += qty;
            productSales[item.name].revenue += (item.price || 0) * qty;

            // Add to recent sales
            recentSales.push({
              date: orderDate,
              product: item.name,
              quantity: qty,
              revenue: (item.price || 0) * qty
            });
          });
        });

        // Update metrics
        document.getElementById('totalRevenue').textContent = '£' + totalRevenue.toFixed(2);
        document.getElementById('totalOrders').textContent = totalOrders;
        document.getElementById('totalUnits').textContent = totalUnits;
        document.getElementById('avgOrder').textContent = totalOrders > 0
          ? '£' + (totalRevenue / totalOrders).toFixed(2)
          : '£0.00';

        // Build chart - show last N days based on period
        const chartEl = document.getElementById('salesChart');
        const chartDays = Math.min(currentPeriod, 30); // Max 30 bars
        const chartData = [];

        for (let i = chartDays - 1; i >= 0; i--) {
          const d = new Date();
          d.setDate(d.getDate() - i);
          const dateKey = d.toISOString().split('T')[0];
          const dayData = dailySales[dateKey] || { revenue: 0, orders: 0 };
          chartData.push({
            date: d,
            label: d.toLocaleDateString('en-GB', { day: 'numeric', month: 'short' }),
            revenue: dayData.revenue,
            orders: dayData.orders
          });
        }

        const maxRevenue = Math.max(...chartData.map(d => d.revenue), 1);

        if (totalOrders === 0) {
          chartEl.innerHTML = '<div class="chart-empty">No sales data for this period</div>';
        } else {
          chartEl.innerHTML = chartData.map(day => {
            const height = Math.max((day.revenue / maxRevenue) * 150, day.revenue > 0 ? 8 : 2);
            return `
              <div class="chart-bar-wrapper">
                <div class="chart-bar" style="height: ${height}px;">
                  <div class="chart-bar-tooltip">
                    ${day.label}<br>£${day.revenue.toFixed(2)}<br>${day.orders} order${day.orders !== 1 ? 's' : ''}
                  </div>
                </div>
                <span class="chart-label">${day.label}</span>
              </div>
            `;
          }).join('');
        }

        // Top products
        const topProducts = Object.entries(productSales)
          .sort((a, b) => b[1].revenue - a[1].revenue)
          .slice(0, 5);

        const topProductsEl = document.getElementById('topProducts');
        if (topProducts.length === 0) {
          topProductsEl.innerHTML = '<div class="empty-message">No sales data yet</div>';
        } else {
          topProductsEl.innerHTML = topProducts.map(([name, data]) => `
            <div class="top-item">
              <div class="top-item-info">
                <span class="top-item-name">${name}</span>
                <span class="top-item-units">${data.units} units</span>
              </div>
              <span class="top-item-revenue">£${data.revenue.toFixed(2)}</span>
            </div>
          `).join('');
        }

        // Recent sales table
        const tableBody = document.getElementById('salesTableBody');
        if (recentSales.length === 0) {
          tableBody.innerHTML = '<tr><td colspan="4" class="empty-message">No sales in this period</td></tr>';
        } else {
          tableBody.innerHTML = recentSales.slice(0, 10).map(sale => `
            <tr>
              <td>${sale.date.toLocaleDateString('en-GB')}</td>
              <td>${sale.product}</td>
              <td>${sale.quantity}</td>
              <td>£${sale.revenue.toFixed(2)}</td>
            </tr>
          `).join('');
        }

      } catch (error) {
        console.error('Error loading analytics:', error);
      }
    }
  </script>
</ProDashboardLayout>
