    font-family: monospace;
    background: #374151;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-size: 0.75rem;
  }
  
  /* Release Details */
  .release-details {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    min-width: 160px;
  }

  .detail-grid {
    display: grid;
    grid-template-columns: auto auto;
    gap: 0.25rem 1rem;
    font-size: 0.8125rem;
  }

  .detail-label {
    color: #6b7280;
    text-align: right;
  }

  .detail-value {
    color: #e5e7eb;
    font-weight: 600;
    text-align: right;
  }

  .genre-row {
    margin-top: 0.25rem;
  }

  .genre-tag {
    display: inline-block;
    background: #374151;
    color: #e5e7eb;
    padding: 0.25rem 0.625rem;
    border-radius: 4px;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }
  
  /* Price Section */
  .price-section {
    text-align: right;
    min-width: 100px;
  }

  .price {
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    font-size: 1.375rem;
    color: #fff;
    margin-bottom: 0.125rem;
  }

  .vinyl-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.625rem;
    color: #dc2626;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.03em;
  }

  .vinyl-badge svg {
    width: 12px;
    height: 12px;
  }

  /* Arrow */
  .arrow {
    font-size: 1.25rem;
    color: #404040;
    transition: all 0.2s;
    text-align: center;
  }

  .chart-item:hover .arrow {
    color: #dc2626;
  }
  
  /* View All */
  .view-all {
    margin-top: 2rem;
    text-align: center;
  }
  
  .view-all-btn {
    display: inline-block;
    background: transparent;
    color: #dc2626;
    padding: 0.875rem 2rem;
    border: 2px solid #dc2626;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
  }
  
  .view-all-btn:hover {
    background: #dc2626;
    color: #fff;
  }
  
  /* Responsive */
  @media (max-width: 1000px) {
    .chart-item {
      grid-template-columns: 50px 70px 1fr 100px;
      gap: 1rem;
    }

    .release-details {
      display: none;
    }

    .arrow {
      display: none;
    }

    .stats-bar {
      gap: 2rem;
      padding: 1.25rem 2rem;
    }

    .stat-number {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 600px) {
    .hero h1 {
      font-size: 2.5rem;
    }

    .chart-item {
      grid-template-columns: 40px 60px 1fr auto;
      padding: 0.875rem 1rem;
      gap: 0.75rem;
    }

    .artwork {
      width: 60px;
      height: 60px;
    }

    .release-info h2 {
      font-size: 1rem;
    }

    .artist-name {
      font-size: 0.875rem;
    }

    .release-meta {
      display: none;
    }

    .price {
      font-size: 1.125rem;
    }

    .rank-number {
      font-size: 1.25rem;
    }

    .medal {
      font-size: 1.5rem;
    }

    .stats-bar {
      gap: 1.5rem;
      padding: 1rem;
    }

    .stat-divider {
      display: none;
    }

    .stat-number {
      font-size: 1.5rem;
    }
  }
</style>
