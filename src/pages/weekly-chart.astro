    text-align: center;
    min-width: 50px;
  }

  .medal {
    font-size: 1.75rem;
  }

  .rank-number {
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    font-size: 1.5rem;
    color: #525252;
  }

  /* Artwork */
  .artwork {
    width: 80px;
    height: 80px;
    border-radius: 6px;
    object-fit: cover;
    border: 1px solid #333;
  }
  
  /* Release Info */
  .release-info {
    min-width: 0;
  }
  
  .release-info h2 {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 0 0.25rem;
    color: #fff;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .artist-name {
    font-size: 1rem;
    color: #dc2626;
    margin: 0 0 0.375rem;
    font-weight: 600;
  }
  
  .release-meta {
    display: flex;
    gap: 0.5rem;
    font-size: 0.8125rem;
