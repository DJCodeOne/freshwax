    border-color: #dc2626;
    background: linear-gradient(135deg, #1f1f1f 0%, #181818 100%);
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.4);
  }

  .chart-item.top-three {
    border-width: 2px;
  }

  .chart-item.top-three:nth-child(1) {
    background: linear-gradient(135deg, #1c1a0f 0%, #171510 100%);
    border-color: #ca8a04;
  }

  .chart-item.top-three:nth-child(2) {
