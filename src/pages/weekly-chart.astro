---
// src/pages/weekly-chart.astro
// Weekly New Releases Chart - Ranked by sales, ratings, and engagement
// Shows releases from the last 7 days

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLiveReleases } from '../lib/firebase-rest';

// Get D1 binding from Cloudflare runtime
const db = (Astro.locals as any).runtime?.env?.DB;

// Calculate date range (last 7 days)
const now = new Date();
const oneWeekAgo = new Date(now.getTime() - 7 * 24 * 60 * 60 * 1000);

// Helper to convert date value to Date object
function toDate(value: any): Date | null {
  if (!value) return null;
  if (value instanceof Date) return value;
  if (typeof value === 'string' || typeof value === 'number') return new Date(value);
  return null;
}

// Rating calculation function for releases
function calculateScore(release: any): number {
  const sales = release.salesCount || release.sales || 0;
  const rating = release.ratings?.average || release.overallRating?.average || 0;
  const ratingCount = release.ratings?.count || release.overallRating?.count || 0;
  const views = release.views || release.stats?.views || 0;

  // Weighted score: sales most valuable, then ratings, views
  const score = (sales * 10) + (rating * ratingCount * 2) + (views * 0.1);
  return score;
}

let releases: any[] = [];
let chartWeekStart = oneWeekAgo.toLocaleDateString('en-GB', { day: 'numeric', month: 'short' });
let chartWeekEnd = now.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });

try {
  // Get all live releases - D1 first, Firebase fallback
  const allReleases = await getLiveReleases(undefined, db);

  // Filter to releases from the last 7 days and calculate scores
  releases = allReleases
    .filter(release => {
      const releaseDate = toDate(release.releaseDate) || toDate(release.publishedAt) || toDate(release.createdAt);
      if (!releaseDate) return false;
      return releaseDate >= oneWeekAgo && releaseDate <= now;
    })
    .map(release => ({
      ...release,
      chartScore: calculateScore(release)
    }));

  // Sort by chart score descending
  releases.sort((a, b) => b.chartScore - a.chartScore);

} catch (e) {
  console.error('Error fetching weekly releases:', e);
}

const formatNumber = (num: number) => new Intl.NumberFormat('en-GB').format(num || 0);

// Format release date
const formatDate = (dateValue: any) => {
  try {
    const date = toDate(dateValue);
    if (!date) return '';
    return date.toLocaleDateString('en-GB', { day: 'numeric', month: 'short' });
  } catch {
    return '';
  }
};

// Get label from release
const getLabel = (release: any) => release.labelName || release.recordLabel || release.copyrightHolder || 'Unknown Label';

export const prerender = false;
---

<Layout title="Weekly Chart">
  <Header />
  
  <main class="chart-main">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-grid"></div>
      <div class="hero-content">
        <span class="hero-badge">ðŸ“… This Week</span>
        <h1>WEEKLY <span class="red">CHART</span></h1>
        <p class="subtitle">New releases â€¢ {chartWeekStart} - {chartWeekEnd}</p>
      </div>
    </section>

    <div class="container">
      <!-- Stats Bar -->
      <div class="stats-bar">
        <div class="stat-item">
          <span class="stat-number">{releases.length}</span>
          <span class="stat-label">New Release{releases.length !== 1 ? 's' : ''}</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <span class="stat-number">7</span>
          <span class="stat-label">Days</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <span class="stat-number">{releases.filter(r => r.vinylRelease).length}</span>
          <span class="stat-label">On Vinyl</span>
        </div>
      </div>

      {releases.length === 0 ? (
        <div class="empty-state">
          <div class="empty-icon">ðŸŽµ</div>
          <h2>No New Releases This Week</h2>
          <p>Check back soon for fresh drops!</p>
          <a href="/releases" class="browse-btn">Browse All Releases</a>
        </div>
      ) : (
        <div class="chart-list">
          {releases.slice(0, 20).map((release, index) => (
            <a href={`/item/${release.id}`} class={`chart-item ${index < 3 ? 'top-three' : ''}`}>
              <div class="rank">
                {index === 0 && <span class="medal gold">ðŸ¥‡</span>}
                {index === 1 && <span class="medal silver">ðŸ¥ˆ</span>}
                {index === 2 && <span class="medal bronze">ðŸ¥‰</span>}
                {index > 2 && <span class="rank-number">{index + 1}</span>}
              </div>
              
              <img 
                src={release.coverArtUrl || '/place-holder.webp'} 
                alt={`${release.releaseName} by ${release.artistName}`}
                class="artwork"
                loading="lazy"
              />
              
              <div class="release-info">
                <h2>{release.releaseName}</h2>
                <p class="artist-name">{release.artistName}</p>
                <div class="release-meta">
                  <span class="label">{getLabel(release)}</span>
                  {release.labelCode && (
                    <>
                      <span class="dot">â€¢</span>
                      <span class="code">{release.labelCode}</span>
                    </>
                  )}
                </div>
              </div>
              
              <div class="release-details">
                <div class="detail-grid">
                  <span class="detail-label">Released</span>
                  <span class="detail-value">{formatDate(release.releaseDate)}</span>
                  <span class="detail-label">Tracks</span>
                  <span class="detail-value">{release.tracks?.length || 0}</span>
                </div>
                {release.genre && (
                  <div class="genre-row">
                    <span class="genre-tag">{release.genre}</span>
                  </div>
                )}
              </div>
              
              <div class="price-section">
                <div class="price">Â£{(release.pricePerSale || release.pricing?.digital || 0).toFixed(2)}</div>
                {release.vinylRelease && (
                  <span class="vinyl-badge">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
                      <circle cx="12" cy="12" r="3" fill="currentColor"/>
                    </svg>
                    Vinyl
                  </span>
                )}
              </div>
              
              <div class="arrow">â†’</div>
            </a>
          ))}
        </div>
      )}
      
      <!-- View All Link -->
      {releases.length > 0 && (
        <div class="view-all">
          <a href="/releases" class="view-all-btn">View All Releases â†’</a>
        </div>
      )}
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .chart-main {
    min-height: calc(100vh - 200px);
    background: #0a0a0a;
  }
  
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, #000 0%, #1a1a1a 50%, #0d0d0d 100%);
    color: #fff;
    padding: 4rem 1.5rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }
  
  .hero-grid {
    position: absolute;
    inset: 0;
    background-image: linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px), 
                      linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
  }
  
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }
  
  .hero-badge {
    display: inline-block;
    background: linear-gradient(135deg, #dc2626, #991b1b);
    color: #fff;
    padding: 0.5rem 1.25rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }
  
  .hero h1 {
    font-family: 'Inter', sans-serif; font-weight: 700;
    font-size: 4rem;
    margin: 0 0 0.5rem;
    letter-spacing: 0.05em;
    color: #fff;
  }
  
  .hero h1 .red {
    color: #dc2626;
  }
  
  .hero .subtitle {
    font-size: 1.125rem;
    color: #9ca3af;
    font-weight: 500;
    margin: 0;
  }
  
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }
  
  /* Stats Bar */
  .stats-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
    border: 1px solid #374151;
    border-radius: 12px;
    padding: 1.5rem 3rem;
    margin-bottom: 2rem;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.375rem;
    min-width: 80px;
  }

  .stat-number {
    font-family: 'Inter', sans-serif;
    font-weight: 800;
    font-size: 2.25rem;
    color: #dc2626;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.6875rem;
    color: #9ca3af;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
  }

  .stat-divider {
    width: 1px;
    height: 48px;
    background: linear-gradient(180deg, transparent 0%, #4b5563 50%, transparent 100%);
  }
  
  /* Empty State */
  .empty-state {
    background: linear-gradient(135deg, #1f2937, #111827);
    border: 2px solid #374151;
    border-radius: 16px;
    padding: 4rem 2rem;
    text-align: center;
  }
  
  .empty-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }
  
  .empty-state h2 {
    font-family: 'Inter', sans-serif; font-weight: 700;
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
    color: #fff;
  }
  
  .empty-state p {
    color: #9ca3af;
    margin-bottom: 1.5rem;
  }
  
  .browse-btn {
    display: inline-block;
    background: linear-gradient(135deg, #dc2626, #991b1b);
    color: #fff;
    padding: 0.875rem 2rem;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
  }
  
  .browse-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(220, 38, 38, 0.3);
  }
  
  /* Chart List */
  .chart-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .chart-item {
    display: grid;
    grid-template-columns: 50px 80px 1fr 180px 100px 30px;
    gap: 1.5rem;
    align-items: center;
    background: linear-gradient(135deg, #1a1a1a 0%, #141414 100%);
