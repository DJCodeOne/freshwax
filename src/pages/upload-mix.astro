    djName = djName.substring(0, 30);
    title = title.substring(0, 50);

    return { djName, title };
  }

  // Handle Quick Drop file
  async function handleQuickDropFile(file) {
    // Check if it's a supported format
    if (!isMp3File(file) && !isWavFile(file)) {
      alert('Quick Drop supports MP3 and WAV files only');
      return;
    }

    // Store original filename for parsing before any conversion
    quickDropOriginalFilename = file.name;

    // Parse filename (use original name even if we convert)
    const parsed = parseFilename(quickDropOriginalFilename);
    quickDropDjName = parsed.djName;
    quickDropTitle = parsed.title || 'Untitled Mix';

    // Update modal preview
    quickDropTitlePreview.textContent = quickDropTitle;
    quickDropDjPreview.textContent = quickDropDjName || 'Unknown DJ';
    quickDropDurationPreview.textContent = 'Calculating duration...';

    // Show modal immediately
    quickDropModal.classList.remove('hidden');
    quickDropGenre.value = '';
    quickDropProgressContainer.classList.add('hidden');
    quickDropConfirm.disabled = true; // Disable until ready
    quickDropCancel.disabled = false;

    // Handle WAV conversion
    if (isWavFile(file)) {
      isConverting = true;
      quickDropConverting.classList.remove('hidden');
      quickDropReadyMsg.classList.add('hidden');
      quickDropConvertBar.style.width = '0%';

      try {
        const mp3File = await convertWavToMp3(file, (progress, status) => {
          quickDropConvertBar.style.width = progress + '%';
          quickDropConvertStatus.textContent = status;
        });

        quickDropFile = mp3File;
        isConverting = false;
        quickDropConverting.classList.add('hidden');
        quickDropReadyMsg.classList.remove('hidden');
        quickDropConfirm.disabled = false;

        // Get duration from converted file
        const audioUrl = URL.createObjectURL(mp3File);
        const tempAudio = new Audio();
        tempAudio.addEventListener('loadedmetadata', () => {
          quickDropDuration = Math.round(tempAudio.duration);
          quickDropDurationPreview.textContent = `Duration: ${formatDuration(quickDropDuration)}`;
          URL.revokeObjectURL(audioUrl);
        });
        tempAudio.src = audioUrl;

      } catch (err) {
        console.error('WAV conversion error:', err);
        alert('Failed to convert WAV to MP3. Please try an MP3 file instead.');
        quickDropModal.classList.add('hidden');
        isConverting = false;
        return;
      }
    } else {
      // MP3 file - use directly
      quickDropFile = file;
      quickDropConverting.classList.add('hidden');
      quickDropReadyMsg.classList.remove('hidden');
      quickDropConfirm.disabled = false;

      // Calculate duration
      const audioUrl = URL.createObjectURL(file);
      const tempAudio = new Audio();

      tempAudio.addEventListener('loadedmetadata', () => {
        quickDropDuration = Math.round(tempAudio.duration);
        quickDropDurationPreview.textContent = `Duration: ${formatDuration(quickDropDuration)}`;
        URL.revokeObjectURL(audioUrl);
      });

      tempAudio.addEventListener('error', () => {
        quickDropDurationPreview.textContent = 'Duration: Unknown';
        URL.revokeObjectURL(audioUrl);
      });

      tempAudio.src = audioUrl;
    }
  }

  // Quick Drop zone event listeners
  quickDropZone.addEventListener('dragover', (e) => {
    e.preventDefault();
    quickDropZone.classList.add('drag-over');
  });

  quickDropZone.addEventListener('dragleave', () => {
    quickDropZone.classList.remove('drag-over');
  });

  quickDropZone.addEventListener('drop', async (e) => {
    e.preventDefault();
    quickDropZone.classList.remove('drag-over');

    // Check auth first
    const user = await getAuthUser();
    if (!user) {
      alert('Please log in to upload mixes');
      window.location.href = '/login?redirect=/upload-mix';
      return;
    }

    if (e.dataTransfer?.files && e.dataTransfer.files[0]) {
      handleQuickDropFile(e.dataTransfer.files[0]);
    }
  });

  // Click to browse for Quick Drop
  quickDropZone.addEventListener('click', async () => {
    const user = await getAuthUser();
    if (!user) {
      alert('Please log in to upload mixes');
      window.location.href = '/login?redirect=/upload-mix';
      return;
    }

    const input = document.createElement('input');
    input.type = 'file';
    input.accept = '.mp3,.wav,audio/mpeg,audio/wav,audio/x-wav';
    input.onchange = (e) => {
      if (e.target.files && e.target.files[0]) {
        handleQuickDropFile(e.target.files[0]);
      }
    };
    input.click();
  });

  // Modal cancel
  quickDropCancel.addEventListener('click', () => {
    if (isConverting) {
      alert('Please wait for conversion to complete');
      return;
    }
    quickDropModal.classList.add('hidden');
    quickDropFile = null;
  });

  quickDropBackdrop.addEventListener('click', () => {
    if (isConverting) return; // Don't allow closing during conversion
    if (!quickDropCancel.disabled) {
      quickDropModal.classList.add('hidden');
      quickDropFile = null;
    }
  });

  // Quick Drop upload
  quickDropConfirm.addEventListener('click', async () => {
    if (!quickDropFile) {
      alert('No file selected');
      return;
    }

    const genre = quickDropGenre.value;
    if (!genre) {
      alert('Please select a genre');
      quickDropGenre.focus();
      return;
    }

    const user = await getAuthUser();
    if (!user) {
      alert('Please log in to upload mixes');
      window.location.href = '/login?redirect=/upload-mix';
      return;
    }

    // Check subscription limits
    try {
      const limitCheck = await fetch(`/api/subscription?userId=${user.uid}&action=canUploadMix`);
      const limitResult = await limitCheck.json();

      if (!limitResult.allowed) {
        const upgrade = confirm(
          `${limitResult.reason}\n\nWould you like to upgrade to Pro for unlimited uploads?`
        );
        if (upgrade) {
          window.location.href = '/account/dashboard#upgrade';
        }
        quickDropModal.classList.add('hidden');
        return;
      }
    } catch (err) {
      console.warn('Could not check upload limits:', err);
    }

    // Disable buttons during upload
    quickDropConfirm.disabled = true;
    quickDropCancel.disabled = true;
    quickDropProgressContainer.classList.remove('hidden');

    try {
      const formData = new FormData();
      formData.append('djName', quickDropDjName || 'Unknown DJ');
      formData.append('mixTitle', quickDropTitle);
      formData.append('mixDescription', '');
      formData.append('genre', genre);
      formData.append('tracklist', '');
      formData.append('durationSeconds', quickDropDuration.toString());
      formData.append('audioFile', quickDropFile);
      formData.append('userId', user.uid);
      formData.append('usePlaceholderArtwork', 'true'); // Signal to use placeholder

      quickDropStatus.textContent = 'Uploading...';

      const result = await new Promise((resolve, reject) => {
        const xhr = new XMLHttpRequest();

        xhr.upload.addEventListener('progress', (e) => {
          if (e.lengthComputable) {
            const percentComplete = Math.round((e.loaded / e.total) * 100);
            const visualProgress = Math.min(percentComplete * 0.85, 85);
            quickDropProgressBar.style.width = visualProgress + '%';
            quickDropProgressText.textContent = Math.round(visualProgress) + '%';

            if (percentComplete < 100) {
              const mbUploaded = (e.loaded / (1024 * 1024)).toFixed(1);
              const mbTotal = (e.total / (1024 * 1024)).toFixed(1);
              quickDropStatus.textContent = `Uploading... ${mbUploaded}MB / ${mbTotal}MB`;
            }
          }
        });

        xhr.upload.addEventListener('load', () => {
          quickDropProgressBar.style.width = '90%';
          quickDropProgressText.textContent = '90%';
          quickDropStatus.textContent = 'Processing...';
        });

        xhr.addEventListener('load', () => {
          if (xhr.status >= 200 && xhr.status < 300) {
            try {
              resolve(JSON.parse(xhr.responseText));
            } catch (e) {
              reject(new Error('Invalid server response'));
            }
          } else {
            try {
              const errorResponse = JSON.parse(xhr.responseText);
              reject(new Error(errorResponse.error || `Server error: ${xhr.status}`));
            } catch (e) {
              reject(new Error(`Server error: ${xhr.status}`));
            }
          }
        });

        xhr.addEventListener('error', () => reject(new Error('Network error')));
        xhr.addEventListener('abort', () => reject(new Error('Upload cancelled')));

        xhr.open('POST', '/api/upload-mix');
        xhr.send(formData);
      });

      quickDropProgressBar.style.width = '100%';
      quickDropProgressText.textContent = '100%';

      if (result.success) {
        quickDropStatus.textContent = 'Upload complete!';

        // Record usage
        try {
          const token = await user.getIdToken();
          await fetch('/api/subscription', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Authorization': `Bearer ${token}`
            },
            body: JSON.stringify({
              action: 'recordMixUpload',
              userId: user.uid
            })
          });
        } catch (err) {
          console.warn('Could not record usage:', err);
        }

        alert(`Mix uploaded successfully!\n\n"${quickDropTitle}" is now LIVE on the DJ Mixes page!`);

        setTimeout(() => {
          window.location.href = '/dj-mixes';
        }, 1000);
      } else {
        throw new Error(result.error || 'Upload failed');
      }

    } catch (error) {
      console.error('Quick Drop upload error:', error);
      quickDropStatus.textContent = 'Upload failed';
      alert(`Upload failed: ${error.message}`);

      quickDropConfirm.disabled = false;
      quickDropCancel.disabled = false;
      quickDropProgressContainer.classList.add('hidden');
    }
  });
  // ===== END QUICK DROP =====

  // Form submission
  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Wait for auth to be ready
    const user = await getAuthUser();
    if (!user) {
      alert('Please log in to upload mixes');
      window.location.href = '/login?redirect=/upload-mix';
      return;
    }

    // Check subscription limits before upload
    try {
      const limitCheck = await fetch(`/api/subscription?userId=${user.uid}&action=canUploadMix`);
      const limitResult = await limitCheck.json();

      if (!limitResult.allowed) {
        const upgrade = confirm(
          `${limitResult.reason}\n\nWould you like to upgrade to Pro for unlimited uploads?`
        );
        if (upgrade) {
          window.location.href = '/account/dashboard#upgrade';
        }
        return;
      }
    } catch (err) {
      console.warn('Could not check upload limits:', err);
      // Continue with upload if limit check fails
    }

    const djName = djNameInput.value.trim();
    const mixTitle = mixTitleInput.value.trim();
    const mixDescription = mixDescriptionInput.value.trim();
    const tracklist = tracklistInput.value.trim();
    const genreValue = genreSelect.value;

    // Validate required fields
    if (!djName || !mixTitle) {
      alert('Please fill in DJ Name and Mix Title');
      return;
    }

    if (!genreValue) {
      alert('Please select a genre');
      return;
    }

    // Validate description if provided
    if (mixDescription) {
      const validation = validateDescription(mixDescription);
      if (!validation.valid) {
        alert(validation.error + '\n\nPlease update your shout outs and try again.');
        mixDescriptionInput.focus();
        return;
      }
    }

    if (!selectedAudioFile) {
      alert('Please select an audio file');
      return;
    }

    // Use selected genre
    const finalGenre = genreValue;

    submitBtn.disabled = true;
    submitBtn.textContent = 'Uploading...';
    progressContainer.classList.remove('hidden');

    try {
      const formData = new FormData();
      formData.append('djName', djName);
      formData.append('mixTitle', mixTitle);
      formData.append('mixDescription', mixDescription);
      formData.append('genre', finalGenre);
      formData.append('tracklist', tracklist);
      formData.append('durationSeconds', audioDurationSeconds.toString());
      formData.append('audioFile', selectedAudioFile);
      
      // Add userId from auth (user is already verified above) or cookie fallback
      const userId = user?.uid || getCookie('partnerId') || getCookie('customerId') || '';
      formData.append('userId', userId);
      
      if (selectedArtworkFile) {
        formData.append('artworkFile', selectedArtworkFile);
      }

      statusText.textContent = 'Uploading audio file...';

      // Use XMLHttpRequest for real upload progress tracking
      const result = await new Promise((resolve, reject) => {
        const xhr = new XMLHttpRequest();
        
        // Track upload progress (data being sent to server)
        xhr.upload.addEventListener('progress', (e) => {
          if (e.lengthComputable) {
            const percentComplete = Math.round((e.loaded / e.total) * 100);
            // Cap visual progress at 85% during upload phase
            // Server processing takes the remaining 15%
            const visualProgress = Math.min(percentComplete * 0.85, 85);
            progressBar.style.width = visualProgress + '%';
            progressText.textContent = Math.round(visualProgress) + '%';
            
            // Update status text based on progress
            if (percentComplete < 100) {
              const mbUploaded = (e.loaded / (1024 * 1024)).toFixed(1);
              const mbTotal = (e.total / (1024 * 1024)).toFixed(1);
              statusText.textContent = `Uploading... ${mbUploaded}MB / ${mbTotal}MB`;
            }
          }
        });
        
        // When upload to server completes, show processing state
        xhr.upload.addEventListener('load', () => {
          progressBar.style.width = '90%';
          progressText.textContent = '90%';
          statusText.textContent = 'Processing on server...';
          submitBtn.textContent = 'Processing...';
        });
        
        // Handle response
        xhr.addEventListener('load', () => {
          if (xhr.status >= 200 && xhr.status < 300) {
            try {
              const response = JSON.parse(xhr.responseText);
              resolve(response);
            } catch (e) {
              reject(new Error('Invalid server response'));
            }
          } else {
            try {
              const errorResponse = JSON.parse(xhr.responseText);
              reject(new Error(errorResponse.error || errorResponse.details || `Server error: ${xhr.status}`));
            } catch (e) {
              reject(new Error(`Server error: ${xhr.status}`));
            }
          }
        });
        
        xhr.addEventListener('error', () => {
          reject(new Error('Network error - please check your connection'));
        });
        
        xhr.addEventListener('abort', () => {
          reject(new Error('Upload cancelled'));
        });
        
        xhr.open('POST', '/api/upload-mix');
        xhr.send(formData);
      });

      // Upload complete!
      progressBar.style.width = '100%';
      progressText.textContent = '100%';

      if (result.success) {

        statusText.textContent = 'Upload complete! Mix is now LIVE!';
        submitBtn.textContent = 'Complete!';

        // Record the upload for usage tracking
        try {
          const user = await getAuthUser();
          if (user) {
            const token = await user.getIdToken();
            await fetch('/api/subscription', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`
              },
              body: JSON.stringify({
                action: 'recordMixUpload',
                userId: user.uid
              })
            });
          }
        } catch (err) {
          console.warn('Could not record upload usage:', err);
        }

        alert(`‚úÖ Mix uploaded and published successfully!

Mix: ${mixTitle}
DJ: ${djName}
Genre: ${finalGenre}
Duration: ${formatDuration(audioDurationSeconds)}
Status: LIVE

Your mix is now available on the DJ Mixes page!`);
        
        setTimeout(() => {
          window.location.href = '/dj-mixes';
        }, 2000);
      } else {
        throw new Error(result.error || result.details || 'Upload failed');
      }

    } catch (error) {
      console.error('‚úó Upload error:', error);
      statusText.textContent = 'Upload failed - ' + (error.message || 'Unknown error');
      
      alert(`Failed to upload mix: ${error.message || 'Unknown error'}\n\nPlease check your connection and try again.`);
      
      submitBtn.disabled = false;
      submitBtn.textContent = 'Upload Mix';
      progressContainer.classList.add('hidden');
      progressBar.style.width = '0%';
    }
  });

