    <section class="buy-section">
      <div class="buy-container">
        <h2>Buy a Gift Card</h2>
        <p class="buy-subtitle">Perfect for birthdays, Christmas, or just because. Send credit to any music lover.</p>
        
        <div class="amount-selector">
          <button type="button" class="amount-btn" data-amount="5">Â£5</button>
          <button type="button" class="amount-btn" data-amount="10">Â£10</button>
          <button type="button" class="amount-btn" data-amount="20">Â£20</button>
          <button type="button" class="amount-btn" data-amount="50">Â£50</button>
          <button type="button" class="amount-btn" data-amount="75">Â£75</button>
          <button type="button" class="amount-btn" data-amount="custom">Custom</button>
        </div>
        
        <div id="customAmountWrapper" class="custom-amount-wrapper hidden">
          <label for="customAmount">Enter amount (Â£5 - Â£500)</label>
          <input type="number" id="customAmount" min="5" max="500" placeholder="Enter amount" />
        </div>
        
        <div class="selected-amount">
          <span class="amount-label">Gift Card Value:</span>
          <span class="amount-value" id="selectedAmount">Â£0</span>
