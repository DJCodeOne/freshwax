<Layout title="Order Confirmed - Fresh Wax" noindex={true}>
  <Header />
  
  <main class="confirmation-main">
    <div class="container">
      {error ? (
        <div class="error-state">
          <h1>ORDER NOT FOUND</h1>
          <p>{error}</p>
          <a href="/" class="btn btn-primary">Go to Store</a>
        </div>
      ) : order && (
        <>
          <!-- Success Header -->
          <div class="success-header">
            <div class="success-badge">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <h1>ORDER CONFIRMED</h1>
            <p class="order-ref">Order: <span>{getShortOrderNumber(order.orderNumber)}</span></p>
            <p class="email-sent">Confirmation sent to {order.customer.email}</p>
          </div>
          
          <!-- Digital Downloads -->
          {groupedDigitalItems.length > 0 && (
            <div class="card">
              <div class="card-header">
                <h2 class="card-title">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                  </svg>
                  YOUR DOWNLOADS
                </h2>
                <span class="status ready">Ready</span>
              </div>
              <div class="card-body">
                {groupedDigitalItems.map((item: any) => (
                  <div class="download-release">
                    <div class="release-header">
                      <img src={item.image || item.downloads?.artworkUrl || '/place-holder.webp'} alt={item.downloads?.releaseName || item.name} class="release-art" />
                      <div class="release-info">
                        <h3>{item.downloads?.artistName} - {item.downloads?.releaseName}</h3>
                        <p>
                          {item.downloads?.tracks?.length === 1 ? 'Single Track' : 'Digital Release'}
                          {item.downloads?.tracks?.length > 0 && ` · ${item.downloads.tracks.length} ${item.downloads.tracks.length === 1 ? 'track' : 'tracks'}`}
                        </p>
                      </div>
                    </div>
                    
                    {item.downloads?.artworkUrl && (
                      <div class="artwork-dl" style="margin-bottom: 1rem;">
                        <button type="button" class="dl-btn art" data-url={item.downloads.artworkUrl} data-filename={`${item.downloads.artistName} - ${item.downloads.releaseName} - Artwork.jpg`}>
                          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                          Download Artwork
                        </button>
                      </div>
                    )}
                    
                    {item.downloads?.tracks?.length > 0 ? (
                      <div class="track-list">
                        {item.downloads.tracks.map((track: any, idx: number) => (
                          <div class="track-row">
                            <span class="track-name">
                              <span class="num">{String(idx + 1).padStart(2, '0')}</span>
                              {track.name}
                            </span>
                            <div class="dl-buttons">
                              {track.mp3Url ? (
                                <button type="button" class="dl-btn mp3" data-url={track.mp3Url} data-filename={`${item.downloads.artistName} - ${track.name} - ${item.downloads.releaseName}.mp3`}>
                                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                  </svg>
                                  MP3
                                </button>
                              ) : (
                                <span style="font-size: 0.75rem; color: #999;">No MP3</span>
                              )}
                              {track.wavUrl ? (
                                <button type="button" class="dl-btn wav" data-url={track.wavUrl} data-filename={`${item.downloads.artistName} - ${track.name} - ${item.downloads.releaseName}.wav`}>
                                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                  </svg>
                                  WAV
                                </button>
                              ) : (
                                <span style="font-size: 0.75rem; color: #999;">No WAV</span>
                              )}
                            </div>
                          </div>
                        ))}
                      </div>
                    ) : (
                      <div style="background: #fef3c7; padding: 0.75rem; border-radius: 6px; font-size: 0.8125rem; color: #92400e;">
                        No download files available for this item. Release ID: {item.releaseId || item.productId || 'unknown'}
                      </div>
                    )}
                  </div>
                ))}
              </div>
            </div>
          )}
          
          <!-- Physical Items -->
          {physicalItems.length > 0 && (
            <div class="card">
              <div class="card-header">
                <h2 class="card-title">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                  </svg>
                  PHYSICAL ITEMS
                </h2>
                <span class="status processing">Processing</span>
              </div>
              <div class="card-body">
                {physicalItems.map((item: any) => (
                  <div class="order-item">
                    <img src={item.image || '/place-holder.webp'} alt={item.name} class="item-img" />
                    <div class="item-details">
                      <h4>{item.name}</h4>
                      <span class="item-meta">
                        {item.type}
                        {item.size && ` · ${item.size}`}
                        {item.color && ` · ${item.color}`}
                        {item.quantity > 1 && ` · ×${item.quantity}`}
                      </span>
                    </div>
                    <span class="item-price">£{(item.price * item.quantity).toFixed(2)}</span>
                  </div>
                ))}
              </div>
            </div>
          )}
          
          <!-- Shipping -->
          {order.shipping && (
            <div class="card">
              <div class="card-header">
                <h2 class="card-title">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  SHIPPING TO
                </h2>
              </div>
              <div class="card-body">
                <div class="address-block">
                  <strong>{order.customer.firstName} {order.customer.lastName}</strong><br>
                  {order.shipping.address1}<br>
                  {order.shipping.address2 && <>{order.shipping.address2}<br></>}
                  {order.shipping.city}, {order.shipping.postcode}<br>
                  {order.shipping.county && <>{order.shipping.county}<br></>}
                  {order.shipping.country}
                </div>
              </div>
            </div>
          )}
          
          <!-- Order Summary -->
          <div class="card">
            <div class="card-header">
              <h2 class="card-title">ORDER SUMMARY</h2>
            </div>
            <div class="totals-section">
              <div class="total-line">
                <span class="lbl">Subtotal</span>
                <span class="val">£{order.totals.subtotal.toFixed(2)}</span>
              </div>
              <div class="total-line">
                <span class="lbl">Shipping</span>
                <span class={`val ${!order.hasPhysicalItems || order.totals.shipping === 0 ? 'green' : ''}`}>
                  {order.hasPhysicalItems ? (order.totals.shipping === 0 ? 'FREE' : '£' + order.totals.shipping.toFixed(2)) : 'Digital'}
                </span>
              </div>
              <div class="total-line grand">
                <span class="lbl">TOTAL PAID</span>
                <span class="val">£{order.totals.total.toFixed(2)}</span>
              </div>
              <p class="order-date">Ordered on {formatDate(order.createdAt)}</p>
            </div>
          </div>
          
          <!-- Actions -->
          <div class="actions">
            <a href="/" class="btn btn-primary">Continue Shopping</a>
            <a href="/account/dashboard" class="btn btn-secondary">View Orders</a>
          </div>
        </>
      )}
    </div>
  </main>

  <Footer />
</Layout>

