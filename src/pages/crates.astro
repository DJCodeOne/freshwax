---
// src/pages/crates.astro
// Crates - Vinyl marketplace for stockists to sell their collections
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const faqs = [
  {
    question: "What is Fresh Wax Crates?",
    answer: "Crates is our vinyl marketplace where record shops, collectors, and stockists can list their vinyl for sale. Browse thousands of records with detailed info on condition, price, and audio samples."
  },
  {
    question: "How does buying from Crates work?",
    answer: "Just like buying a new release - add to bag, checkout, and the stockist ships directly to you. Each listing shows the seller, condition grading, and any notes about the record."
  },
  {
    question: "How do I sell my vinyl on Crates?",
    answer: "Register as a stockist, then use our uploader to list your records. Add images, audio samples, condition grades, and pricing. You handle shipping when orders come in."
  },
  {
    question: "What condition grading system do you use?",
    answer: "We use the standard Goldmine grading system: Mint (M), Near Mint (NM), Very Good Plus (VG+), Very Good (VG), Good (G), and Fair (F). Each listing includes detailed condition notes."
  },
  {
    question: "Is there a fee for selling?",
    answer: "Fresh Wax takes a small commission on sales. Contact us for current rates and to set up your stockist account."
  },
  {
    question: "How do seller reviews work?",
    answer: "After receiving their order, buyers can leave a rating and review for the stockist. This helps build trust and gives future customers confidence when buying from you."
  }
];
---

<Layout
  title="Crates - Vinyl Marketplace | Fresh Wax"
  description="Buy and sell vinyl on Fresh Wax Crates. Browse records from stockists and collectors with detailed condition grades, audio samples, and direct checkout."
  faqs={faqs}
>
  <Header />

  <main class="crates-main">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <div class="hero-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4m-6-1v6m8-6v6" />
          </svg>
        </div>
        <h1>DIG THE <span class="red">CRATES</span></h1>
        <p class="hero-subtitle">Vinyl marketplace for stockists, shops & collectors</p>
      </div>
    </section>

    <!-- Coming Soon Section -->
    <section class="coming-soon">
      <div class="coming-soon-content">
        <div class="coming-soon-icon">üì¶</div>
        <h2>Coming Soon</h2>
        <p>We're building a vinyl marketplace where stockists, record shops, and collectors can list their records for sale. Think Discogs, but integrated directly into Fresh Wax - same checkout, same trust.</p>

        <div class="features-grid">
          <div class="feature">
            <div class="feature-icon">üì∏</div>
            <h3>Full Listings</h3>
            <p>Photos, audio samples, condition grades, and detailed notes for every record</p>
          </div>
          <div class="feature">
            <div class="feature-icon">‚≠ê</div>
            <h3>Condition Grading</h3>
            <p>Goldmine standard grading from Mint to Fair - know exactly what you're buying</p>
          </div>
          <div class="feature">
            <div class="feature-icon">üõí</div>
            <h3>Easy Checkout</h3>
            <p>Same bag, same checkout as new releases - stockist ships direct to you</p>
          </div>
          <div class="feature">
            <div class="feature-icon">üí¨</div>
            <h3>Seller Reviews</h3>
            <p>Buyers rate their experience - build confidence with verified feedback on every stockist</p>
          </div>
        </div>

        <div class="notify-section">
          <h3>Get Notified</h3>
          <p>Be the first to know when Crates launches.</p>
          <a href="/newsletter" class="notify-btn">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Subscribe to Newsletter
          </a>
        </div>
      </div>
    </section>

    <!-- Why Crates Section -->
    <section class="why-section">
      <h2>Why Sell With Us?</h2>
      <div class="why-grid">
        <div class="why-card">
          <div class="why-number">01</div>
          <h3>Targeted Audience</h3>
          <p>Your records go straight to jungle and D&B heads who are actively buying. No time-wasters, just serious collectors.</p>
        </div>
        <div class="why-card">
          <div class="why-number">02</div>
          <h3>Quick Uploads</h3>
          <p>Simple uploader - add photos, audio samples, price and condition. Images auto-resize for web. List records in seconds.</p>
        </div>
        <div class="why-card">
          <div class="why-number">03</div>
          <h3>Build Your Rep</h3>
          <p>Buyers leave reviews after purchase. Good service means good ratings, and good ratings mean more sales.</p>
        </div>
        <div class="why-card">
          <div class="why-number">04</div>
          <h3>You Ship Direct</h3>
          <p>When an order comes in, you pack and post. Keep your margins healthy with no middleman handling.</p>
        </div>
      </div>
    </section>

    <!-- Seller Dashboard Section -->
    <section class="dashboard-section">
      <h2>Your Vinyl Dashboard</h2>
      <p class="dashboard-intro">Once approved, you get full access to your own seller dashboard with everything you need to manage your inventory and sales.</p>

      <div class="dashboard-grid">
        <div class="dashboard-card">
          <div class="dashboard-icon">üì§</div>
          <h3>Upload New Items</h3>
          <p>Quick and simple uploader. Add photos (auto-resized for web), audio samples, condition grades, pricing, and notes. Get your records listed fast.</p>
        </div>
        <div class="dashboard-card">
          <div class="dashboard-icon">üì¶</div>
          <h3>Manage Inventory</h3>
          <p>View all your listings in one place. Edit prices, update conditions, mark items as sold, or remove listings. Full control over your stock.</p>
        </div>
        <div class="dashboard-card">
          <div class="dashboard-icon">üí∑</div>
          <h3>Track Sales</h3>
          <p>See your orders as they come in. View buyer details, shipping addresses, and order history. Know exactly what needs posting.</p>
        </div>
        <div class="dashboard-card">
          <div class="dashboard-icon">‚≠ê</div>
          <h3>Monitor Reviews</h3>
          <p>Keep track of your buyer feedback and ratings. See what's working and maintain your reputation on the platform.</p>
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section class="how-it-works">
      <h2>How To Get Started</h2>
      <div class="steps">
        <div class="step">
          <div class="step-number">1</div>
          <h3>Register</h3>
          <p>Create an account and select "Vinyl Seller" as your role during registration.</p>
        </div>
        <div class="step">
          <div class="step-number">2</div>
          <h3>Get Approved</h3>
          <p>We'll review your application and upgrade your account to full Vinyl Seller status.</p>
        </div>
        <div class="step">
          <div class="step-number">3</div>
          <h3>Start Listing</h3>
          <p>Access your dashboard, upload your first records, and start selling to the community.</p>
        </div>
      </div>
    </section>

    <!-- For Stockists Section -->
    <section class="artists-section">
      <div class="artists-content">
        <h2>Want To Sell Your Vinyl?</h2>
        <p>Whether you're a record shop with stock to shift or a collector trimming the collection, we'd love to have you on board. Register your interest and we'll be in touch when Crates launches.</p>
        <a href="/contact" class="artists-btn">Register Interest</a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .crates-main {
    background: linear-gradient(to bottom, #111827, #0f172a);
    min-height: 100vh;
  }

  /* Hero */
  .hero {
    background: linear-gradient(135deg, #1f2937 0%, #111827 50%, #1a0a0a 100%);
    padding: 4rem 1.5rem;
    text-align: center;
    border-bottom: 4px solid #dc2626;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #dc2626, #991b1b);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-icon svg {
    width: 48px;
    height: 48px;
    color: #fff;
  }

  .hero h1 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 4rem;
    color: #fff;
    margin: 0;
    letter-spacing: 0.05em;
  }

  .hero h1 .red {
    color: #dc2626;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: #9ca3af;
    margin: 1rem 0 0 0;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  /* Coming Soon */
  .coming-soon {
    padding: 4rem 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .coming-soon-content {
    text-align: center;
  }

  .coming-soon-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
  }

  .coming-soon h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 3rem;
    color: #fff;
    margin: 0 0 1rem 0;
  }

  .coming-soon > .coming-soon-content > p {
    font-size: 1.125rem;
    color: #9ca3af;
    max-width: 600px;
    margin: 0 auto 3rem;
    line-height: 1.7;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .feature {
    background: linear-gradient(135deg, #1f2937, #111827);
    border: 2px solid #374151;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    transition: all 0.2s;
  }

  .feature:hover {
    border-color: #dc2626;
    transform: translateY(-4px);
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .feature h3 {
    font-family: 'Inter', sans-serif; font-weight: 700;
    font-size: 1.25rem;
    color: #fff;
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .feature p {
    color: #9ca3af;
    font-size: 0.9375rem;
    margin: 0;
    line-height: 1.5;
  }

  /* Notify Section */
  .notify-section {
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
    border: 2px solid #dc2626;
    border-radius: 16px;
    padding: 2.5rem;
    max-width: 500px;
    margin: 0 auto;
    box-shadow: 0 0 30px rgba(220, 38, 38, 0.15);
  }

  .notify-section h3 {
    font-family: 'Inter', sans-serif; font-weight: 700;
    font-size: 1.75rem;
    color: #fff;
    margin: 0 0 0.5rem 0;
  }

  .notify-section p {
    color: #9ca3af;
    margin: 0 0 1.5rem 0;
    font-size: 1rem;
  }

  .notify-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: linear-gradient(to right, #dc2626, #991b1b);
    color: #fff;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 700;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.2s;
    box-shadow: 0 4px 15px rgba(220, 38, 38, 0.3);
  }

  .notify-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(220, 38, 38, 0.4);
  }

  .notify-btn svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Why Section */
  .why-section {
    padding: 4rem 1.5rem;
    background: linear-gradient(135deg, #1f2937, #111827);
    border-top: 2px solid #374151;
    border-bottom: 2px solid #374151;
  }

  .why-section h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.5rem;
    color: #fff;
    text-align: center;
    margin: 0 0 3rem 0;
  }

  .why-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .why-card {
    background: linear-gradient(135deg, #111827, #0f172a);
    border: 2px solid #374151;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    transition: all 0.2s;
  }

  .why-card:hover {
    border-color: #dc2626;
    transform: translateY(-2px);
  }

  .why-number {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 3rem;
    color: #dc2626;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 20px rgba(220, 38, 38, 0.3);
  }

  .why-card h3 {
    font-size: 1.1rem;
    font-weight: 700;
    color: #fff;
    margin: 0 0 0.75rem 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .why-card p {
    color: #9ca3af;
    font-size: 0.9375rem;
    margin: 0;
    line-height: 1.6;
  }

  /* Artists Section */
  .artists-section {
    padding: 4rem 1.5rem;
    text-align: center;
    background: linear-gradient(to bottom, #0f172a, #111827);
  }

  .artists-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .artists-section h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.5rem;
    color: #fff;
    margin: 0 0 1rem 0;
  }

  .artists-section p {
    color: #9ca3af;
    font-size: 1.125rem;
    margin: 0 0 2rem 0;
    line-height: 1.7;
  }

  .artists-btn {
    display: inline-block;
    background: transparent;
    color: #fff;
    border: 2px solid #fff;
    padding: 1rem 2.5rem;
    border-radius: 8px;
    font-weight: 700;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .artists-btn:hover {
    background: #fff;
    color: #111827;
  }

  /* Dashboard Section */
  .dashboard-section {
    padding: 4rem 1.5rem;
    background: linear-gradient(to bottom, #111827, #1f2937);
  }

  .dashboard-section h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.5rem;
    color: #fff;
    text-align: center;
    margin: 0 0 1rem 0;
  }

  .dashboard-intro {
    text-align: center;
    color: #9ca3af;
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto 3rem;
    line-height: 1.7;
  }

  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .dashboard-card {
    background: linear-gradient(135deg, #1f2937, #111827);
    border: 2px solid #374151;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    transition: all 0.2s;
  }

  .dashboard-card:hover {
    border-color: #dc2626;
    transform: translateY(-4px);
  }

  .dashboard-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .dashboard-card h3 {
    font-size: 1.1rem;
    font-weight: 700;
    color: #fff;
    margin: 0 0 0.75rem 0;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .dashboard-card p {
    color: #9ca3af;
    font-size: 0.875rem;
    margin: 0;
    line-height: 1.6;
  }

  /* How It Works Section */
  .how-it-works {
    padding: 4rem 1.5rem;
    background: linear-gradient(135deg, #0f172a, #111827);
    border-top: 2px solid #374151;
    border-bottom: 2px solid #374151;
  }

  .how-it-works h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.5rem;
    color: #fff;
    text-align: center;
    margin: 0 0 3rem 0;
  }

  .steps {
    display: flex;
    justify-content: center;
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .step {
    flex: 1;
    text-align: center;
    max-width: 280px;
  }

  .step-number {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #dc2626, #991b1b);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2rem;
    color: #fff;
    margin: 0 auto 1rem;
    box-shadow: 0 4px 15px rgba(220, 38, 38, 0.3);
  }

  .step h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
  }

  .step p {
    color: #9ca3af;
    font-size: 0.9375rem;
    margin: 0;
    line-height: 1.6;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .why-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .dashboard-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .steps {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 600px) {
    .hero h1 {
      font-size: 3rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .coming-soon h2 {
      font-size: 2.25rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .why-grid {
      grid-template-columns: 1fr;
    }

    .dashboard-grid {
      grid-template-columns: 1fr;
    }

    .why-section h2,
    .artists-section h2,
    .dashboard-section h2,
    .how-it-works h2 {
      font-size: 2rem;
    }
  }
</style>
