      <section class="products-section">
        {products.length === 0 ? (
          <div class="empty-state">
            <span>üëï</span>
            <h3>No merch available</h3>
            <p>Check back soon!</p>
          </div>
        ) : (
          <div id="productsGrid" class="products-grid">
            {products.map((product) => (
              <div 
