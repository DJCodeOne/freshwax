// src/pages/merch.astro
// Public Merch Store - Browse and purchase merchandise
// No login required to browse, only to purchase

import { initializeApp, cert, getApps } from 'firebase-admin/app';
import { getFirestore } from 'firebase-admin/firestore';

// Initialize Firebase Admin
if (!getApps().length) {
  initializeApp({
    credential: cert({
      projectId: import.meta.env.FIREBASE_PROJECT_ID,
      clientEmail: import.meta.env.FIREBASE_CLIENT_EMAIL,
      privateKey: import.meta.env.FIREBASE_PRIVATE_KEY?.replace(/\\n/g, '\n'),
    }),
  });
}

const db = getFirestore();

// Fetch all published merch - single query, cached on page build
let products: any[] = [];
let categories: { [key: string]: string } = {};
let productTypes: { [key: string]: string } = {};

try {
  const merchSnap = await db.collection('merch')
    .where('published', '==', true)
    .where('status', '==', 'active')
    .get();
  
  products = merchSnap.docs.map(doc => {
    const data = doc.data();
    
    // Build categories and types for filters
    if (data.category && data.categoryName) {
      categories[data.category] = data.categoryName;
    }
    if (data.productType && data.productTypeName) {
      productTypes[data.productType] = data.productTypeName;
    }
    
    // Pre-calculate stock status to avoid <= in template
    const stock = data.totalStock || 0;
    const threshold = data.lowStockThreshold || 5;
    let stockStatus = 'in-stock';
    let stockLabel = 'In Stock';
    
    if (stock === 0) {
      stockStatus = 'out-of-stock';
      stockLabel = 'Out of Stock';
    } else if (stock <= threshold) {
      stockStatus = 'low-stock';
      stockLabel = 'Low Stock';
    }
    
    return {
      id: doc.id,
      ...data,
      stockStatus,
      stockLabel,
      // Ensure price is a number
      retailPrice: parseFloat(data.retailPrice) || 0,
      salePrice: data.salePrice ? parseFloat(data.salePrice) : null,
    };
  });
  
  // Sort: featured first, then by date
  products.sort((a, b) => {
    if (a.featured && !b.featured) return -1;
    if (!a.featured && b.featured) return 1;
    return new Date(b.createdAt).getTime() - new Date(a.createdAt).getTime();
  });
  
} catch (e) {
  console.error('Error fetching merch:', e);
}

// Stats
const totalProducts = products.length;
const inStockCount = products.filter(p => p.stockStatus === 'in-stock').length;
const featuredProducts = products.filter(p => p.featured);
const onSaleProducts = products.filter(p => p.onSale);

// Format for JSON (client-side filtering)
const productsJson = JSON.stringify(products.map(p => ({
  id: p.id,
  name: p.name,
  category: p.category,
  categoryName: p.categoryName,
  productType: p.productType,
  productTypeName: p.productTypeName,
  retailPrice: p.retailPrice,
  salePrice: p.salePrice,
  onSale: p.onSale,
  featured: p.featured,
  stockStatus: p.stockStatus,
})));
