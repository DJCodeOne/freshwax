<script>
  function init() {
    // Filters
    const categoryFilter = document.getElementById('categoryFilter') as HTMLSelectElement;
    const typeFilter = document.getElementById('typeFilter') as HTMLSelectElement;
    const stockFilter = document.getElementById('stockFilter') as HTMLSelectElement;
    const sortSelect = document.getElementById('sortSelect') as HTMLSelectElement;
    const clearBtn = document.getElementById('clearFilters');
    const grid = document.getElementById('productsGrid');
    const countEl = document.getElementById('visibleCount');

    function applyFilters() {
      const category = categoryFilter?.value || '';
      const type = typeFilter?.value || '';
      const stock = stockFilter?.value || '';
      const sort = sortSelect?.value || 'featured';

      const cards = Array.from(grid?.querySelectorAll('.product-card') || []) as HTMLElement[];
      let visible = 0;

      cards.forEach(card => {
        let show = true;
        if (category && card.dataset.category !== category) show = false;
        if (type && card.dataset.type !== type) show = false;
        if (stock === 'in-stock' && card.dataset.stock === 'out-of-stock') show = false;
        if (stock === 'on-sale' && card.dataset.sale !== 'true') show = false;
        card.style.display = show ? '' : 'none';
        if (show) visible++;
      });

      const visibleCards = cards.filter(c => c.style.display !== 'none');
      visibleCards.sort((a, b) => {
        switch (sort) {
          case 'featured':
            if (a.dataset.featured === 'true' && b.dataset.featured !== 'true') return -1;
            if (a.dataset.featured !== 'true' && b.dataset.featured === 'true') return 1;
            return 0;
          case 'newest':
            return new Date(b.dataset.created || 0).getTime() - new Date(a.dataset.created || 0).getTime();
          case 'price-low':
            return parseFloat(a.dataset.price || '0') - parseFloat(b.dataset.price || '0');
          case 'price-high':
            return parseFloat(b.dataset.price || '0') - parseFloat(a.dataset.price || '0');
          case 'name':
            return (a.dataset.name || '').localeCompare(b.dataset.name || '');
          default:
            return 0;
        }
      });
      visibleCards.forEach(card => grid?.appendChild(card));
      if (countEl) countEl.textContent = String(visible);
    }

    categoryFilter?.addEventListener('change', applyFilters);
    typeFilter?.addEventListener('change', applyFilters);
    stockFilter?.addEventListener('change', applyFilters);
    sortSelect?.addEventListener('change', applyFilters);
    clearBtn?.addEventListener('click', () => {
      if (categoryFilter) categoryFilter.value = '';
      if (typeFilter) typeFilter.value = '';
      if (stockFilter) stockFilter.value = '';
      if (sortSelect) sortSelect.value = 'featured';
      applyFilters();
    });

    // Color dot hover - show corresponding image
    document.querySelectorAll('.product-card').forEach(card => {
      const product = JSON.parse((card as HTMLElement).dataset.product || '{}');
      const cardImg = card.querySelector('.card-image img') as HTMLImageElement;
      const originalSrc = cardImg?.src || '';

      // Store original image for mouseout
      if (cardImg) {
        cardImg.dataset.originalSrc = originalSrc;
      }

      // Add hover listeners to color dots
      card.querySelectorAll('.color-dots .dot').forEach(dot => {
        dot.addEventListener('mouseenter', () => {
          const colorName = (dot as HTMLElement).dataset.color;
          if (!colorName || !cardImg || !product.imageObjects) return;

          // Find image matching this color
          const matchingImage = product.imageObjects.find((img: any) => {
            if (typeof img === 'object' && img.color) {
              return img.color.toLowerCase() === colorName.toLowerCase();
            }
            return false;
          });

          if (matchingImage?.url) {
            cardImg.src = matchingImage.url;
          }
        });

        dot.addEventListener('mouseleave', () => {
          // Restore original image
          if (cardImg && cardImg.dataset.originalSrc) {
            cardImg.src = cardImg.dataset.originalSrc;
          }
        });
      });
    });

    // Modal
    const modal = document.getElementById('buyModal');
    const modalClose = document.querySelector('.modal-close');
    let currentProduct: any = null;
    let selectedSize: string | null = null;
    let selectedColor: string | null = null;

    // Open modal when clicking on card image, info, or buy button
    document.querySelectorAll('.product-card').forEach(card => {
      const product = JSON.parse((card as HTMLElement).dataset.product || '{}');

      // Click on image or info opens modal
      card.querySelectorAll('.card-clickable').forEach(el => {
        el.addEventListener('click', (e) => {
          e.preventDefault();
          openModal(product);
        });
      });

      // Buy button also opens modal
      const buyBtn = card.querySelector('.buy-btn');
      buyBtn?.addEventListener('click', (e) => {
        e.preventDefault();
        openModal(product);
      });
    });

    modalClose?.addEventListener('click', closeModal);
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeModal();
    });

    function openModal(product: any, skipPushState = false) {
      if (!modal) return;
      currentProduct = product;
      selectedSize = null;
      selectedColor = null;
      
      // Add hash to URL for back navigation (unless coming from popstate)
      if (!skipPushState) {
        history.pushState({ productId: product.id }, '', `#quick-view-${product.id}`);
      }

      // Image
      const mainImg = document.getElementById('modalImg') as HTMLImageElement;
      if (mainImg) {
        mainImg.src = product.imageUrl || '';
        mainImg.alt = product.name;
      }

      // Thumbnails
      const thumbs = document.getElementById('modalThumbs');
      if (thumbs && product.images?.length > 1) {
        thumbs.innerHTML = product.images.map((img: string, i: number) => `
          <button class="thumb ${i === 0 ? 'active' : ''}" data-src="${img}">
            <img src="${img}" alt="" />
          </button>
        `).join('');
        thumbs.querySelectorAll('.thumb').forEach(t => {
          t.addEventListener('click', () => {
            mainImg.src = (t as HTMLElement).dataset.src || '';
            thumbs.querySelectorAll('.thumb').forEach(x => x.classList.remove('active'));
            t.classList.add('active');
          });
        });
      } else if (thumbs) {
        thumbs.innerHTML = '';
      }

      // Details
      const nameEl = document.getElementById('modalName');
      const catEl = document.getElementById('modalCategory');
      const descEl = document.getElementById('modalDesc');
      const priceBox = document.getElementById('modalPriceBox');
      const viewLink = document.getElementById('viewDetailsLink') as HTMLAnchorElement;

      if (nameEl) nameEl.textContent = product.name || '';
      if (catEl) catEl.textContent = product.categoryName || '';
      if (descEl) descEl.textContent = product.description || '';
      if (viewLink) viewLink.href = `/merch/${product.id}`;

      if (priceBox) {
        const price = product.onSale && product.salePrice ? product.salePrice : product.retailPrice;
        if (product.onSale && product.salePrice) {
          priceBox.innerHTML = `
            <span class="current-price">¬£${product.salePrice.toFixed(2)}</span>
            <span class="old-price">¬£${product.retailPrice.toFixed(2)}</span>
            <span class="save-badge">SAVE ¬£${(product.retailPrice - product.salePrice).toFixed(2)}</span>
          `;
        } else {
          priceBox.innerHTML = `<span class="current-price">¬£${product.retailPrice.toFixed(2)}</span>`;
        }
      }

      // Sizes
      const sizeSection = document.getElementById('sizeSection');
      const sizeOptions = document.getElementById('sizeOptions');
      if (sizeSection && sizeOptions) {
        if (product.sizes?.length > 0) {
          sizeSection.style.display = 'block';
          sizeOptions.innerHTML = product.sizes.map((s: string, i: number) => 
            `<button class="opt-btn size-btn ${product.sizes.length === 1 ? 'selected' : ''}" data-size="${s}">${s}</button>`
          ).join('');
          
          // Auto-select if only one size
          if (product.sizes.length === 1) {
            selectedSize = product.sizes[0];
          }
          
          sizeOptions.querySelectorAll('.size-btn').forEach(btn => {
            btn.addEventListener('click', () => {
              sizeOptions.querySelectorAll('.size-btn').forEach(b => b.classList.remove('selected'));
              btn.classList.add('selected');
              selectedSize = (btn as HTMLElement).dataset.size || null;
              updateCartButton();
            });
          });
        } else {
          sizeSection.style.display = 'none';
          selectedSize = 'none';
        }
      }

      // Colors
      const colorSection = document.getElementById('colorSection');
      const colorOptions = document.getElementById('colorOptions');
      if (colorSection && colorOptions) {
        if (product.colorList?.length > 0) {
          colorSection.style.display = 'block';
          colorOptions.innerHTML = product.colorList.map((hex: string, i: number) => {
            const name = product.colorNames?.[i] || hex;
            const isSelected = product.colorList.length === 1 ? 'selected' : '';
            return `<button class="opt-btn color-opt ${isSelected}" data-color="${name}" data-hex="${hex}" style="background:${hex}" title="${name}"></button>`;
          }).join('');
          
          // Auto-select if only one color
          if (product.colorList.length === 1) {
            selectedColor = product.colorNames?.[0] || product.colorList[0];
          }
          
          colorOptions.querySelectorAll('.color-opt').forEach(btn => {
            btn.addEventListener('click', () => {
              colorOptions.querySelectorAll('.color-opt').forEach(b => b.classList.remove('selected'));
              btn.classList.add('selected');
              selectedColor = (btn as HTMLElement).dataset.color || null;

              // Find and show image for this color
              const colorName = selectedColor;
              if (colorName && currentProduct?.imageObjects) {
                // Look for an image associated with this color
                const matchingImage = currentProduct.imageObjects.find((img: any) => {
                  if (typeof img === 'object' && img.color) {
                    return img.color.toLowerCase() === colorName.toLowerCase();
                  }
                  return false;
                });

                const mainImg = document.getElementById('modalImg') as HTMLImageElement;
                const thumbs = document.getElementById('modalThumbs');

                if (matchingImage && mainImg) {
                  const imgUrl = matchingImage.url;
                  if (imgUrl) {
                    mainImg.src = imgUrl;
                    // Update thumbnail active state
                    if (thumbs) {
                      thumbs.querySelectorAll('.thumb').forEach(t => {
                        t.classList.toggle('active', (t as HTMLElement).dataset.src === imgUrl);
                      });
                    }
                  }
                }
              }

              updateCartButton();
            });
          });
        } else {
          colorSection.style.display = 'none';
          selectedColor = 'none';
        }
      }

      // Stock status
      const stockStatus = document.getElementById('modalStockStatus');
      if (stockStatus) {
        stockStatus.className = `stock-info ${product.stockStatus}`;
        stockStatus.textContent = product.stockLabel;
      }

      updateCartButton();
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function updateCartButton() {
      const btn = document.getElementById('addToCartBtn') as HTMLButtonElement;
      const btnText = btn?.querySelector('.btn-text');
      const btnPrice = btn?.querySelector('.btn-price');
      
      if (!btn || !currentProduct) return;

      const needsSize = currentProduct.sizes?.length > 0;
      const needsColor = currentProduct.colorList?.length > 0;
      const sizeOk = !needsSize || selectedSize;
      const colorOk = !needsColor || selectedColor;

      if (currentProduct.stockStatus === 'out-of-stock') {
        btn.disabled = true;
        if (btnText) btnText.textContent = 'Sold Out';
        if (btnPrice) btnPrice.textContent = '';
      } else if (!sizeOk || !colorOk) {
        btn.disabled = true;
        const missing = [];
        if (!sizeOk) missing.push('size');
        if (!colorOk) missing.push('colour');
        if (btnText) btnText.textContent = `Select ${missing.join(' & ')}`;
        if (btnPrice) btnPrice.textContent = '';
      } else {
        btn.disabled = false;
        if (btnText) btnText.textContent = 'Add to Cart';
        const price = currentProduct.onSale && currentProduct.salePrice 
          ? currentProduct.salePrice 
          : currentProduct.retailPrice;
        if (btnPrice) btnPrice.textContent = `¬£${price.toFixed(2)}`;
      }
    }

    // Add to Cart
    document.getElementById('addToCartBtn')?.addEventListener('click', () => {
      if (!currentProduct) return;

      // Find image matching selected color, fallback to primary image
      let cartImage = currentProduct.imageUrl;
      if (selectedColor && selectedColor !== 'none' && currentProduct.imageObjects) {
        const matchingImage = currentProduct.imageObjects.find((img: any) => {
          if (typeof img === 'object' && img.color) {
            return img.color.toLowerCase() === selectedColor.toLowerCase();
          }
          return false;
        });
        if (matchingImage?.url) {
          cartImage = matchingImage.url;
        }
      }

      const item = {
        id: currentProduct.id,
        name: currentProduct.name,
        type: 'merch',  // Important: identifies as physical merch not digital
        price: currentProduct.onSale && currentProduct.salePrice
          ? currentProduct.salePrice
          : currentProduct.retailPrice,
        image: cartImage,
        size: selectedSize !== 'none' ? selectedSize : undefined,
        color: selectedColor !== 'none' ? selectedColor : undefined,
        quantity: 1
      };

      // Use global cart if available
      if (typeof (window as any).FreshWaxCart !== 'undefined') {
        (window as any).FreshWaxCart.add(item);
      } else {
        console.log('Added to cart:', item);
        alert(`Added ${item.name} to cart!`);
      }

      closeModal();
    });

    function closeModal() {
      modal?.classList.remove('active');
      document.body.style.overflow = '';
      currentProduct = null;
      selectedSize = null;
      selectedColor = null;
      
      // Remove hash from URL
      if (window.location.hash.startsWith('#quick-view-')) {
        history.pushState(null, '', window.location.pathname + window.location.search);
      }
    }
    
    // Handle browser back/forward navigation
    window.addEventListener('popstate', () => {
      const hash = window.location.hash;
      if (hash.startsWith('#quick-view-')) {
        const productId = hash.replace('#quick-view-', '');
        const products = (window as any).PRODUCTS_DATA || [];
        const product = products.find((p: any) => p.id === productId);
        if (product) {
          openModal(product, true); // skipPushState = true
        }
      } else {
        // Close modal if hash is gone
        modal?.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
    
    // Check for hash on page load
    const initialHash = window.location.hash;
    if (initialHash.startsWith('#quick-view-')) {
      const productId = initialHash.replace('#quick-view-', '');
      const products = (window as any).PRODUCTS_DATA || [];
      const product = products.find((p: any) => p.id === productId);
      if (product) {
        // Small delay to ensure DOM is ready
        setTimeout(() => openModal(product, true), 100);
      }
    }
  }

  document.addEventListener('DOMContentLoaded', init);
  document.addEventListener('astro:page-load', init);
</script>

<script type="module">
  // Gift Card Modal Functionality
  import { initializeApp, getApps } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js';
  import { getAuth, onAuthStateChanged } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js';

  const firebaseConfig = {
    apiKey: 'AIzaSyBiZGsWdvA9ESm3OsUpZ-VQpwqMjMpBY6g',
    authDomain: "freshwax-store.firebaseapp.com",
    projectId: "freshwax-store",
  };

  const app = getApps().length ? getApps()[0] : initializeApp(firebaseConfig);
  const auth = getAuth(app);

  let gcCurrentUser = null;
  let gcSelectedAmount = 0;

  // Modal open/close
  const gcModal = document.getElementById('giftCardModal');
  const gcOpenBtn = document.getElementById('openGiftCardModal');
  const gcCloseBtn = document.querySelector('.gc-modal-close');

  gcOpenBtn?.addEventListener('click', () => {
    gcModal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  });

  gcCloseBtn?.addEventListener('click', closeGcModal);
  gcModal?.addEventListener('click', (e) => {
    if (e.target === gcModal) closeGcModal();
  });

  function closeGcModal() {
    gcModal?.classList.add('hidden');
    document.body.style.overflow = '';
  }

  // Format code input
  const gcCodeInput = document.getElementById('gcGiftCardCode');
  gcCodeInput?.addEventListener('input', (e) => {
    let value = e.target.value.toUpperCase().replace(/[^A-HJ-NP-Z2-9]/g, '');
    if (value.length > 4) {
      const prefix = value.substring(0, 4);
      const rest = value.substring(4);
      const chunks = rest.match(/.{1,4}/g) || [];
      value = prefix + '-' + chunks.join('-');
    }
    e.target.value = value;
  });

  // Redeem form
  const gcRedeemForm = document.getElementById('gcRedeemForm');
  gcRedeemForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (!gcCurrentUser) return;

    const code = document.getElementById('gcGiftCardCode').value.trim();
    const errorEl = document.getElementById('gcRedeemError');
    const successEl = document.getElementById('gcRedeemSuccess');
    const btn = document.getElementById('gcRedeemBtn');

    errorEl.style.display = 'none';
    successEl.style.display = 'none';
    btn.disabled = true;

    try {
      const response = await fetch('/api/giftcards/redeem', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ code, userId: gcCurrentUser.uid })
      });
      const result = await response.json();

      if (result.success) {
        successEl.textContent = result.message;
        successEl.style.display = 'block';
        document.getElementById('gcGiftCardCode').value = '';
        document.getElementById('gcCreditBalance').textContent = `¬£${result.newBalance.toFixed(2)}`;
      } else {
        errorEl.textContent = result.error || 'Failed to redeem';
        errorEl.style.display = 'block';
      }
    } catch (err) {
      errorEl.textContent = 'Something went wrong';
      errorEl.style.display = 'block';
    } finally {
      btn.disabled = false;
    }
  });

  // Amount selection
  document.querySelector('.gc-amount-selector')?.addEventListener('click', (e) => {
    const btn = e.target.closest('.gc-amount-btn');
    if (!btn) return;

    document.querySelectorAll('.gc-amount-btn').forEach(b => b.classList.remove('active'));
    btn.classList.add('active');

    const amount = btn.dataset.amount;
    if (amount === 'custom') {
      document.getElementById('gcCustomAmountWrapper')?.classList.remove('hidden');
      const customVal = parseInt(document.getElementById('gcCustomAmount')?.value) || 0;
      updateGcAmount(customVal >= 5 ? customVal : 0);
    } else {
      document.getElementById('gcCustomAmountWrapper')?.classList.add('hidden');
      updateGcAmount(parseInt(amount));
    }
  });

  document.getElementById('gcCustomAmount')?.addEventListener('input', (e) => {
    let value = parseInt(e.target.value) || 0;
    if (value > 500) { value = 500; e.target.value = 500; }
    updateGcAmount(value >= 5 ? value : 0);
  });

  function updateGcAmount(amount) {
    gcSelectedAmount = amount;
    document.getElementById('gcSelectedAmount').textContent = `¬£${amount}`;
    const btn = document.getElementById('gcPurchaseBtn');
    const btnText = btn?.querySelector('.gc-btn-text');
    if (amount > 0) {
      btnText.textContent = `Purchase Gift Card - ¬£${amount}`;
      btn.disabled = false;
    } else {
      btnText.textContent = 'Select an amount';
      btn.disabled = true;
    }
  }

  // Recipient toggle
  document.querySelectorAll('input[name="gcRecipientType"]').forEach(input => {
    input.addEventListener('change', () => {
      if (input.value === 'gift') {
        document.getElementById('gcGiftFields')?.classList.remove('hidden');
        document.getElementById('gcSelfFields')?.classList.add('hidden');
      } else {
        document.getElementById('gcGiftFields')?.classList.add('hidden');
        document.getElementById('gcSelfFields')?.classList.remove('hidden');
        if (gcCurrentUser) {
          document.getElementById('gcSelfEmail').textContent = gcCurrentUser.email || '-';
        }
      }
    });
  });

  // Purchase
  document.getElementById('gcPurchaseBtn')?.addEventListener('click', async () => {
    if (!gcCurrentUser || gcSelectedAmount < 5) return;

    const errorEl = document.getElementById('gcPurchaseError');
    const btn = document.getElementById('gcPurchaseBtn');
    const btnText = btn.querySelector('.gc-btn-text');
    const btnLoading = btn.querySelector('.gc-btn-loading');

    const recipientType = document.querySelector('input[name="gcRecipientType"]:checked')?.value || 'gift';
    const recipientName = document.getElementById('gcRecipientName')?.value.trim() || '';
    const recipientEmail = document.getElementById('gcRecipientEmail')?.value.trim() || '';
    const message = document.getElementById('gcGiftMessage')?.value.trim() || '';
    const paymentMethod = document.querySelector('input[name="gcPaymentMethod"]:checked')?.value || 'stripe';

    if (recipientType === 'gift' && !recipientEmail) {
      errorEl.textContent = 'Please enter recipient email';
      errorEl.style.display = 'block';
      return;
    }

    errorEl.style.display = 'none';
    btn.disabled = true;
    btnText.classList.add('hidden');
    btnLoading.classList.remove('hidden');

    const purchaseData = {
      amount: gcSelectedAmount,
      buyerUserId: gcCurrentUser.uid,
      buyerEmail: gcCurrentUser.email,
      buyerName: gcCurrentUser.displayName || '',
      recipientType,
      recipientName: recipientType === 'self' ? (gcCurrentUser.displayName || '') : recipientName,
      recipientEmail: recipientType === 'gift' ? recipientEmail : gcCurrentUser.email,
      message
    };

    try {
      if (paymentMethod === 'stripe') {
        // Create Stripe checkout session
        const response = await fetch('/api/giftcards/create-stripe-session', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(purchaseData)
        });
        const result = await response.json();

        if (result.success && result.checkoutUrl) {
          // Redirect to Stripe checkout
          window.location.href = result.checkoutUrl;
        } else {
          errorEl.textContent = result.error || 'Failed to create checkout session';
          errorEl.style.display = 'block';
          btn.disabled = false;
          btnText.classList.remove('hidden');
          btnLoading.classList.add('hidden');
        }
      } else {
        // Create PayPal order
        const response = await fetch('/api/giftcards/create-paypal-order', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(purchaseData)
        });
        const result = await response.json();

        if (result.success && result.approvalUrl) {
          // Redirect to PayPal approval
          window.location.href = result.approvalUrl;
        } else {
          errorEl.textContent = result.error || 'Failed to create PayPal order';
          errorEl.style.display = 'block';
          btn.disabled = false;
          btnText.classList.remove('hidden');
          btnLoading.classList.add('hidden');
        }
      }
    } catch (err) {
      errorEl.textContent = 'Something went wrong';
      errorEl.style.display = 'block';
      btn.disabled = false;
      btnText.classList.remove('hidden');
      btnLoading.classList.add('hidden');
    }
  });

  // Load balance
  async function loadGcBalance(userId) {
    try {
      const response = await fetch(`/api/giftcards/balance?userId=${userId}`);
      const result = await response.json();
      if (result.success) {
        document.getElementById('gcCreditBalance').textContent = `¬£${result.balance.toFixed(2)}`;
        document.getElementById('gcBalanceDisplay')?.classList.remove('hidden');
      }
    } catch (e) {}
  }

  // Auth state
  function updateGcAuthUI(user) {
    gcCurrentUser = user;
    if (user) {
      document.getElementById('gcLoginPrompt')?.classList.add('hidden');
      document.getElementById('gcRedeemForm')?.classList.remove('hidden');
      document.getElementById('gcPurchaseLoginPrompt')?.classList.add('hidden');
      document.getElementById('gcPurchaseActions')?.classList.remove('hidden');
      document.getElementById('gcPaymentSection')?.classList.remove('hidden');
      document.getElementById('gcSelfEmail').textContent = user.email || '-';
      loadGcBalance(user.uid);
    } else {
      document.getElementById('gcLoginPrompt')?.classList.remove('hidden');
      document.getElementById('gcRedeemForm')?.classList.add('hidden');
      document.getElementById('gcPurchaseLoginPrompt')?.classList.remove('hidden');
      document.getElementById('gcPurchaseActions')?.classList.add('hidden');
      document.getElementById('gcPaymentSection')?.classList.add('hidden');
      document.getElementById('gcBalanceDisplay')?.classList.add('hidden');
    }
  }

  onAuthStateChanged(auth, updateGcAuthUI);
</script>

