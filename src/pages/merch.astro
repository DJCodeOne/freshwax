              data-created={product.createdAt}
            >
              <div class="product-badges">
                {product.featured && <span class="badge badge-featured">Featured</span>}
                {product.onSale && <span class="badge badge-sale">Sale</span>}
                {product.stockStatus === 'low-stock' && <span class="badge badge-low-stock">Low Stock</span>}
                {product.stockStatus === 'out-of-stock' && <span class="badge badge-out-of-stock">Sold Out</span>}
