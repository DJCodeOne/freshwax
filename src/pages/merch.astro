  <script>
    // State
    let currentProduct = null;
    let selectedSize = null;
    let selectedColor = null;

    // DOM Elements
    const productsGrid = document.getElementById('productsGrid');
    const visibleCount = document.getElementById('visibleCount');
    const sortSelect = document.getElementById('sortSelect');
    const clearFiltersBtn = document.getElementById('clearFilters');
    const quickViewModal = document.getElementById('quickViewModal');
    const closeModalBtn = document.getElementById('closeModal');
    const addToCartBtn = document.getElementById('addToCartBtn');
    const toast = document.getElementById('toast');
    const cartCountEl = document.getElementById('cartCount');

    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
      updateCartCount();
      setupFilters();
      setupQuickView();
      setupModal();
    });

    // Cart count
    function updateCartCount() {
      var cart = JSON.parse(localStorage.getItem('cart') || '[]');
      var count = cart.reduce(function(sum, item) { return sum + (item.quantity || 1); }, 0);
      
      if (count > 0) {
        cartCountEl.textContent = count;
        cartCountEl.classList.remove('hidden');
      } else {
        cartCountEl.classList.add('hidden');
      }
    }

    // Filters
    function setupFilters() {
      var filterInputs = document.querySelectorAll('.filter-option input');
      
      filterInputs.forEach(function(input) {
        input.addEventListener('change', applyFilters);
      });
      
      sortSelect.addEventListener('change', applyFilters);
      
      clearFiltersBtn.addEventListener('click', function() {
        filterInputs.forEach(function(input) {
          if (input.value === '') input.checked = true;
        });
        sortSelect.value = 'featured';
        applyFilters();
      });
    }

    function applyFilters() {
      var category = document.querySelector('input[name="category"]:checked').value;
      var type = document.querySelector('input[name="type"]:checked').value;
      var stock = document.querySelector('input[name="stock"]:checked').value;
      var sort = sortSelect.value;
      
      var cards = Array.from(productsGrid.querySelectorAll('.product-card'));
      var visible = 0;
      
      cards.forEach(function(card) {
        var show = true;
        
        if (category && card.dataset.category !== category) show = false;
        if (type && card.dataset.type !== type) show = false;
        if (stock === 'in-stock' && card.dataset.stock === 'out-of-stock') show = false;
        if (stock === 'on-sale' && card.dataset.sale !== 'true') show = false;
        
        if (show) {
          card.classList.remove('hidden');
          visible++;
        } else {
          card.classList.add('hidden');
        }
      });
      
      // Sort
      var visibleCards = cards.filter(function(c) { return !c.classList.contains('hidden'); });
      
      visibleCards.sort(function(a, b) {
        switch (sort) {
          case 'featured':
            if (a.dataset.featured === 'true' && b.dataset.featured !== 'true') return -1;
            if (a.dataset.featured !== 'true' && b.dataset.featured === 'true') return 1;
            return 0;
          case 'newest':
            return new Date(b.dataset.created).getTime() - new Date(a.dataset.created).getTime();
          case 'price-low':
            return parseFloat(a.dataset.price) - parseFloat(b.dataset.price);
          case 'price-high':
            return parseFloat(b.dataset.price) - parseFloat(a.dataset.price);
          case 'name':
            return a.dataset.name.localeCompare(b.dataset.name);
          default:
            return 0;
        }
      });
      
      visibleCards.forEach(function(card) {
        productsGrid.appendChild(card);
      });
      
      visibleCount.textContent = visible;
    }

    // Quick View
    function setupQuickView() {
      var quickViewBtns = document.querySelectorAll('.quick-view-btn');
      
      quickViewBtns.forEach(function(btn) {
        btn.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          
          var productData = JSON.parse(btn.dataset.product);
          openQuickView(productData);
        });
      });
    }

    function openQuickView(product) {
      currentProduct = product;
      selectedSize = null;
      selectedColor = null;
      
      // Populate modal
      document.getElementById('modalCategory').textContent = product.categoryName || 'Fresh Wax';
      document.getElementById('modalName').textContent = product.name;
      document.getElementById('modalDescription').textContent = product.description || 'No description available.';
      
      // Price
      var priceEl = document.getElementById('modalPrice');
      if (product.onSale && product.salePrice) {
        priceEl.innerHTML = '£' + product.salePrice.toFixed(2) + '<span class="original">£' + product.retailPrice.toFixed(2) + '</span>';
        priceEl.classList.add('sale');
      } else {
        priceEl.textContent = '£' + product.retailPrice.toFixed(2);
        priceEl.classList.remove('sale');
      }
      
      // Images
      var mainImg = document.getElementById('modalMainImage');
      var thumbs = document.getElementById('modalThumbnails');
      
      var images = product.images || [];
      if (images.length === 0 && product.primaryImage) {
        images = [{ url: product.primaryImage }];
      }
      
      if (images.length > 0) {
        mainImg.src = images[0].url || images[0];
        
        if (images.length > 1) {
          thumbs.innerHTML = images.map(function(img, idx) {
            var url = img.url || img;
            return '<img src="' + url + '" class="modal-thumb' + (idx === 0 ? ' active' : '') + '" data-idx="' + idx + '" />';
          }).join('');
          thumbs.style.display = 'flex';
          
          thumbs.querySelectorAll('.modal-thumb').forEach(function(thumb) {
            thumb.addEventListener('click', function() {
              mainImg.src = thumb.src;
              thumbs.querySelectorAll('.modal-thumb').forEach(function(t) { t.classList.remove('active'); });
              thumb.classList.add('active');
            });
          });
        } else {
          thumbs.style.display = 'none';
        }
      } else {
        mainImg.src = '/placeholder.jpg';
        thumbs.style.display = 'none';
      }
      
      // Sizes
      var sizesContainer = document.getElementById('modalSizes');
      var sizeGrid = document.getElementById('modalSizeGrid');
      
      if (product.hasSizes && product.sizes && product.sizes.length > 0) {
        sizeGrid.innerHTML = product.sizes.map(function(size) {
          return '<button class="option-btn size-btn" data-size="' + size + '">' + size + '</button>';
        }).join('');
        sizesContainer.style.display = 'block';
        
        sizeGrid.querySelectorAll('.size-btn').forEach(function(btn) {
          btn.addEventListener('click', function() {
            sizeGrid.querySelectorAll('.size-btn').forEach(function(b) { b.classList.remove('selected'); });
            btn.classList.add('selected');
            selectedSize = btn.dataset.size;
            updateAddToCartBtn();
          });
        });
      } else {
        sizesContainer.style.display = 'none';
      }
      
      // Colors
      var colorsContainer = document.getElementById('modalColors');
      var colorGrid = document.getElementById('modalColorGrid');
      
      if (product.hasColors && product.colors && product.colors.length > 0) {
        colorGrid.innerHTML = product.colors.map(function(color) {
          return '<button class="option-btn color-btn" data-color="' + color.name + '" style="background: ' + (color.hex || '#ccc') + ';" title="' + color.name + '"></button>';
        }).join('');
        colorsContainer.style.display = 'block';
        
        colorGrid.querySelectorAll('.color-btn').forEach(function(btn) {
          btn.addEventListener('click', function() {
            colorGrid.querySelectorAll('.color-btn').forEach(function(b) { b.classList.remove('selected'); });
            btn.classList.add('selected');
            selectedColor = btn.dataset.color;
            updateAddToCartBtn();
          });
        });
      } else {
        colorsContainer.style.display = 'none';
      }
      
      // Stock
      var stockEl = document.getElementById('modalStock');
      var stockDot = stockEl.querySelector('.stock-dot');
      var stockText = stockEl.querySelector('span:last-child');
      
      stockDot.className = 'stock-dot ' + product.stockStatus;
      stockText.textContent = product.stockLabel;
      
      updateAddToCartBtn();
      
      quickViewModal.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function updateAddToCartBtn() {
      var btn = document.getElementById('addToCartBtn');
      
      if (!currentProduct) return;
      
      if (currentProduct.stockStatus === 'out-of-stock') {
        btn.disabled = true;
        btn.textContent = 'Out of Stock';
        return;
      }
      
      var needsSize = currentProduct.hasSizes && currentProduct.sizes && currentProduct.sizes.length > 0;
      var needsColor = currentProduct.hasColors && currentProduct.colors && currentProduct.colors.length > 0;
      
      if ((needsSize && !selectedSize) || (needsColor && !selectedColor)) {
        btn.disabled = true;
        btn.textContent = 'Select Options';
      } else {
        btn.disabled = false;
        btn.textContent = 'Add to Cart';
      }
    }

    // Modal
    function setupModal() {
      closeModalBtn.addEventListener('click', closeModal);
      
      quickViewModal.addEventListener('click', function(e) {
        if (e.target === quickViewModal) closeModal();
      });
      
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && quickViewModal.classList.contains('active')) {
          closeModal();
        }
      });
      
      addToCartBtn.addEventListener('click', addToCart);
    }

    function closeModal() {
      quickViewModal.classList.remove('active');
      document.body.style.overflow = '';
      currentProduct = null;
      selectedSize = null;
      selectedColor = null;
    }

    // Add to cart
    function addToCart() {
      if (!currentProduct || addToCartBtn.disabled) return;
      
      var cart = JSON.parse(localStorage.getItem('cart') || '[]');
      
      var price = currentProduct.onSale && currentProduct.salePrice 
        ? currentProduct.salePrice 
        : currentProduct.retailPrice;
      
      var cartItem = {
        id: currentProduct.id,
        type: 'merch',
        name: currentProduct.name,
        price: price,
        image: currentProduct.primaryImage || (currentProduct.images && currentProduct.images[0] ? (currentProduct.images[0].url || currentProduct.images[0]) : '/placeholder.jpg'),
        size: selectedSize || null,
        color: selectedColor || null,
        quantity: 1,
        addedAt: new Date().toISOString()
      };
      
      // Check if already in cart
      var variantKey = cartItem.id + '-' + (cartItem.size || 'onesize') + '-' + (cartItem.color || 'default');
      var existingIndex = cart.findIndex(function(item) {
        var itemKey = item.id + '-' + (item.size || 'onesize') + '-' + (item.color || 'default');
        return itemKey === variantKey;
      });
      
      if (existingIndex >= 0) {
        cart[existingIndex].quantity = (cart[existingIndex].quantity || 1) + 1;
      } else {
        cart.push(cartItem);
      }
      
      localStorage.setItem('cart', JSON.stringify(cart));
      updateCartCount();
      
      showToast('Added to cart!', 'success');
      closeModal();
      
      // Dispatch event for other components
      window.dispatchEvent(new CustomEvent('cartUpdated'));
    }

    // Toast
    function showToast(message, type) {
      type = type || 'success';
      toast.textContent = message;
      toast.className = 'toast ' + type + ' show';
      
      setTimeout(function() {
        toast.classList.remove('show');
      }, 3000);
    }

    // Listen for cart updates
    window.addEventListener('storage', function(e) {
      if (e.key === 'cart') updateCartCount();
    });
  </script>
