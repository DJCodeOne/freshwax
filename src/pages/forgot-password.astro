---
// src/pages/forgot-password.astro
// Password reset page - sends reset email via Firebase Auth
export const prerender = false;

const response = Astro.response;
response.headers.set('Cache-Control', 'no-store, no-cache, must-revalidate, max-age=0');
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password - Fresh Wax</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
  <div class="split-container">
    <!-- Left Side - Branding -->
    <div class="branding-side">
      <div class="branding-content">
        <a href="/" class="logo-link">
          <div class="logo-container">
            <img src="/logo.webp" alt="Fresh Wax Logo" class="logo-image" width="160" height="53" />
          </div>
        </a>
        <h2 class="welcome-text">Reset Password</h2>
        <p class="tagline">We'll send you a link to reset your password</p>

        <div class="features">
          <div class="feature">
            <svg class="feature-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span>Check your email inbox</span>
          </div>
          <div class="feature">
            <svg class="feature-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
            <span>Click the reset link</span>
          </div>
          <div class="feature">
            <svg class="feature-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
            </svg>
            <span>Create a new password</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Side - Reset Form -->
    <div class="form-side">
      <div class="form-container">
        <!-- Mobile Logo -->
        <a href="/" class="mobile-logo">
          <div class="logo-container">
            <img src="/logo.webp" alt="Fresh Wax" width="120" height="40" />
          </div>
        </a>

        <div class="form-header">
          <h2>Forgot Password?</h2>
          <p>Enter your email to receive a reset link</p>
        </div>

        <div class="message success-message" id="successMessage">
          <span class="message-icon">âœ“</span>
          <span class="message-text">Password reset email sent! Check your inbox.</span>
        </div>

        <div class="message error-message" id="errorMessage"></div>

        <form id="resetForm">
          <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" required placeholder="you@example.com" autocomplete="email">
            <p class="field-error" id="emailError"></p>
          </div>

          <button type="submit" class="submit-btn" id="submitBtn">
            <span class="btn-text">Send Reset Link</span>
            <span class="btn-loading hidden">
              <svg class="spinner" viewBox="0 0 24 24">
                <circle class="spinner-circle" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" fill="none" />
              </svg>
              Sending...
            </span>
          </button>
        </form>

        <div class="form-footer">
          <p>Remember your password? <a href="/login">Sign In</a></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Firebase SDK -->
  <script type="module">
    import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js';
    import { getAuth, sendPasswordResetEmail } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js';

    const firebaseConfig = {
      apiKey: import.meta.env.PUBLIC_FIREBASE_API_KEY || 'AIzaSyBiZGsWdvA9ESm3OsUpZ-VQpwqMjMpBY6g',
      authDomain: "freshwax-store.firebaseapp.com",
      projectId: "freshwax-store",
      storageBucket: "freshwax-store.firebasestorage.app",
      messagingSenderId: "675435782973",
      appId: "1:675435782973:web:e8459c2ec4a5f6d683db54"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);

    const form = document.getElementById('resetForm');
    const submitBtn = document.getElementById('submitBtn');
    const errorMessage = document.getElementById('errorMessage');
    const successMessage = document.getElementById('successMessage');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Clear messages
      document.getElementById('emailError').textContent = '';
      errorMessage.textContent = '';
      errorMessage.style.display = 'none';
      successMessage.style.display = 'none';

      const email = document.getElementById('email').value.trim();

      // Validation
      if (!email) {
        document.getElementById('emailError').textContent = 'Email is required';
        return;
      }

      // Show loading
      submitBtn.disabled = true;
      submitBtn.querySelector('.btn-text').classList.add('hidden');
      submitBtn.querySelector('.btn-loading').classList.remove('hidden');

      try {
        console.log('[ForgotPassword] Sending reset email to:', email);
        await sendPasswordResetEmail(auth, email);
        console.log('[ForgotPassword] Reset email sent successfully');

        // Show success
        successMessage.style.display = 'flex';
        form.reset();

      } catch (error) {
        console.error('[ForgotPassword] Error:', error.code, error.message);

        let message = 'Failed to send reset email. Please try again.';
        if (error.code === 'auth/user-not-found') {
          message = 'No account found with this email address.';
        } else if (error.code === 'auth/invalid-email') {
          message = 'Please enter a valid email address.';
        } else if (error.code === 'auth/too-many-requests') {
          message = 'Too many requests. Please try again later.';
        } else if (error.code === 'auth/network-request-failed') {
          message = 'Network error. Please check your connection.';
        } else if (error.code === 'auth/missing-email') {
          message = 'Please enter an email address.';
        }

        errorMessage.textContent = message;
        errorMessage.style.display = 'block';
      }

      submitBtn.disabled = false;
      submitBtn.querySelector('.btn-text').classList.remove('hidden');
      submitBtn.querySelector('.btn-loading').classList.add('hidden');
    });
  </script>

  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: #000;
      color: #fff;
      min-height: 100vh;
    }

    .split-container {
      display: flex;
      min-height: 100vh;
    }

    .branding-side {
      flex: 1;
      background: linear-gradient(135deg, #1a1a1a 0%, #000 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 3rem;
      border-right: 3px solid #dc2626;
    }

    .branding-content {
      max-width: 400px;
    }

    .logo-link {
      display: block;
      margin-bottom: 2rem;
    }

    .logo-container {
      display: inline-block;
      background: #fff;
      border-radius: 14px;
      padding: 1rem 1.25rem;
    }

    .logo-image {
      height: 180px;
      width: auto;
      display: block;
    }

    .welcome-text {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
    }

    .tagline {
      color: #888;
      font-size: 1.25rem;
      margin-bottom: 2.5rem;
    }

    .features {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
    }

    .feature {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      color: #ccc;
      font-size: 1.1rem;
    }

    .feature-icon {
      width: 28px;
      height: 28px;
      flex-shrink: 0;
    }

    .form-side {
      flex: 1;
      background: #fff;
      color: #000;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .form-container {
      width: 100%;
      max-width: 480px;
    }

    .mobile-logo {
      display: none;
    }

    .form-header {
      margin-bottom: 2.5rem;
    }

    .form-header h2 {
      font-size: 2.75rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
    }

    .form-header p {
      color: #666;
      font-size: 1.25rem;
    }

    .form-group {
      margin-bottom: 1.75rem;
    }

    .form-group label {
      display: block;
      font-size: 1.15rem;
      font-weight: 600;
      margin-bottom: 0.6rem;
    }

    .form-group input[type="email"] {
      width: 100%;
      padding: 1.125rem 1.25rem;
      font-size: 1.2rem;
      border: 2px solid #e5e5e5;
      background: #fff;
      transition: border-color 0.2s;
      box-sizing: border-box;
    }

    .form-group input:focus {
      outline: none;
      border-color: #000;
    }

    .field-error {
      color: #dc2626;
      font-size: 1rem;
      margin-top: 0.4rem;
      min-height: 1.2em;
    }

    .submit-btn {
      width: 100%;
      padding: 1.25rem;
      background: #000;
      color: #fff;
      border: none;
      font-size: 1.25rem;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.2s;
    }

    .submit-btn:hover {
      background: #dc2626;
    }

    .submit-btn:disabled {
      opacity: 0.7;
      cursor: not-allowed;
    }

    .btn-loading {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .spinner {
      width: 20px;
      height: 20px;
      animation: spin 1s linear infinite;
    }

    .spinner-circle {
      stroke-dasharray: 50;
      stroke-dashoffset: 20;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .hidden {
      display: none !important;
    }

    .message {
      padding: 1.125rem 1.25rem;
      margin-bottom: 1.5rem;
      font-size: 1.1rem;
      display: none;
      align-items: center;
      gap: 0.5rem;
      border-radius: 6px;
    }

    .error-message {
      background: #fee2e2;
      border: 1px solid #dc2626;
      color: #991b1b;
    }

    .success-message {
      background: #dcfce7;
      border: 1px solid #16a34a;
      color: #166534;
    }

    .message-icon {
      font-size: 1.35rem;
    }

    .form-footer {
      text-align: center;
      margin-top: 2rem;
      padding-top: 1.75rem;
      border-top: 1px solid #e5e5e5;
      color: #666;
      font-size: 1.15rem;
    }

    .form-footer a {
      color: #dc2626;
      font-weight: 600;
      text-decoration: none;
    }

    @media (max-width: 900px) {
      .branding-side {
        display: none;
      }

      .form-side {
        padding: 1.5rem;
      }

      .mobile-logo {
        display: flex;
        justify-content: center;
        margin-bottom: 2rem;
      }

      .mobile-logo .logo-container {
        background: #fff;
        border-radius: 12px;
        padding: 0.6rem 0.875rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        border: 1px solid #e5e5e5;
      }

      .mobile-logo img {
        height: 120px;
        display: block;
      }
    }
  </style>
</body>
</html>
