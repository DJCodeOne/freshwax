---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ReleasePlate from '../components/ReleasePlate.astro';
import { getReleasesForPage } from '../lib/releases';

// Get the 20 most recent releases for homepage
const featuredReleases = await getReleasesForPage(20);
---

<Layout title="Fresh Wax - Jungle Beats & Vinyl">
  <Header />
  
  <main class="min-h-screen bg-gray-50">

    <!-- Welcome Hero Section -->
    <section class="bg-black text-white py-16 sm:py-20">
      <div class="container mx-auto px-6 sm:px-8 md:px-12 lg:px-16 max-w-5xl text-center">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-black mb-4 uppercase" style="letter-spacing: 0.08em; white-space: nowrap;">
          Welcome to Fresh Wax
        </h1>
        <p class="text-xl sm:text-2xl text-gray-300 font-semibold">
          Your destination for the finest in Jungle and Drum and Bass
        </p>
      </div>
    </section>

    <!-- Featured Releases Section -->
    <section class="container mx-auto px-6 sm:px-8 md:px-12 lg:px-16 py-8 sm:py-12 max-w-5xl">
      <div class="mb-8 text-center">
        <h2 class="text-3xl sm:text-4xl font-black text-gray-900 mb-2 uppercase" style="letter-spacing: 0.1em;">Latest Releases</h2>
        <p class="text-gray-600 mb-6">Freshly pressed and ready to drop - showing {featuredReleases.length} most recent</p>
        
        <!-- Separator Line -->
        <div class="w-full h-px bg-gray-300 mt-6"></div>
      </div>

      {featuredReleases.length === 0 ? (
        <div class="text-center py-20 bg-white rounded-lg">
          <div class="text-6xl mb-4">ðŸŽµ</div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">No Releases Yet</h3>
          <p class="text-gray-600 mb-6">New releases coming soon!</p>
          <p class="text-sm text-gray-500">Check your Cloudinary master JSON at: dm9gldbda/raw/upload/releases/releases.json</p>
        </div>
      ) : (
        <div class="space-y-6">
          {featuredReleases.map((release) => (
            <div id={release.id} class="scroll-mt-6">
              <ReleasePlate {...release} />
            </div>
          ))}
        </div>
      )}

      {featuredReleases.length > 0 && (
        <div class="mt-12 text-center">
          <a 
            href="/releases" 
            class="inline-block bg-black text-white px-8 py-4 rounded-lg font-bold text-lg uppercase hover:bg-gray-800 transition-colors"
          >
            View All Releases â†’
          </a>
        </div>
      )}
    </section>

  </main>

  <Footer />
</Layout>

<style>
  /* Smooth transitions for hover effects */
  a {
    transition: all 0.3s ease;
  }
</style>