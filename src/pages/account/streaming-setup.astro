---
// src/pages/account/streaming-setup.astro
// Streaming setup guide with OBS/BUTT instructions and speed test
export const prerender = false;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Streaming Setup - Fresh Wax</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
  <!-- Auth Gate -->
  <div id="authGate" class="auth-gate">
    <div class="loading-spinner"></div>
    <p>Loading...</p>
  </div>

  <!-- Main Content -->
  <div id="mainContent" class="main-content hidden">
    <header class="page-header">
      <div class="header-left">
        <a href="/account/dj-lobby" class="back-link">
          <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
            <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
          </svg>
          Back to Lobby
        </a>
      </div>
      <div class="header-center">
        <h1>STREAMING <span class="red">SETUP</span></h1>
        <p>Configure OBS or BUTT for Fresh Wax</p>
      </div>
      <div class="header-right">
        <button id="speedTestBtn" class="speed-test-btn">ðŸš€ Test Internet Speed</button>
      </div>
    </header>
    
    <div class="setup-layout">
      <!-- Speed Test Results (shown when test completes) -->
      <div id="speedResultsCard" class="speed-results-card hidden">
        <div class="results-header">
          <h3>ðŸ“Š Speed Test Results</h3>
          <button id="closeResultsBtn" class="close-results-btn">âœ•</button>
        </div>
        <div class="speed-results-grid">
          <div class="speed-result-box download">
            <span class="result-label">Download</span>
            <span class="result-value"><span id="downloadResult">--</span> Mbps</span>
          </div>
          <div class="speed-result-box upload">
            <span class="result-label">Upload</span>
            <span class="result-value"><span id="uploadResult">--</span> Mbps</span>
          </div>
        </div>
        
        <div class="recommendation-section">
          <h4>Recommended Settings</h4>
          
          <div class="rec-card" id="videoRec">
            <div class="rec-header">
              <span class="rec-icon">ðŸŽ¬</span>
              <span class="rec-title">Video Streaming (OBS)</span>
              <span class="rec-status" id="videoStatus">--</span>
            </div>
            <div class="rec-details" id="videoDetails">
              <p>Run speed test to see recommendations</p>
            </div>
          </div>
          
          <div class="rec-card" id="audioRec">
            <div class="rec-header">
              <span class="rec-icon">ðŸŽµ</span>
              <span class="rec-title">Audio Streaming (BUTT)</span>
              <span class="rec-status" id="audioStatus">--</span>
            </div>
            <div class="rec-details" id="audioDetails">
              <p>Run speed test to see recommendations</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Testing Overlay -->
      <div id="testingOverlay" class="testing-overlay hidden">
        <div class="testing-content">
          <div class="speed-spinner"></div>
          <h3>Testing your connection...</h3>
          <div class="countdown-display">
            <span id="testCountdown">10</span>
            <span>seconds remaining</span>
          </div>
        </div>
      </div>
      
      <!-- Instructions Tabs -->
      <div class="instructions-tabs">
        <button class="tab-btn active" data-tab="obs">OBS Studio</button>
        <button class="tab-btn butt-tab" data-tab="butt">BUTT</button>
        <button class="tab-btn pro-tab" data-tab="pro">Pro Multi-Stream</button>
      </div>
      
      <!-- OBS Instructions -->
      <div id="obsContent" class="instructions-panel">
        <div class="panel-header">
          <img src="https://obsproject.com/assets/images/new_icon_small-r.png" alt="OBS" class="software-icon" onerror="this.style.display='none'" />
          <div>
            <h2>OBS Studio Setup</h2>
            <p>For video and audio streaming</p>
          </div>
        </div>
        
        <div class="steps-container">
          <div class="step">
            <div class="step-number">1</div>
            <div class="step-content">
              <h3>Download OBS Studio</h3>
              <p>Get the free software from the official website:</p>
              <a href="https://obsproject.com" target="_blank" class="download-link">
                <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                  <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/>
                </svg>
                Download OBS Studio
              </a>
            </div>
          </div>
          
          <div class="step">
            <div class="step-number">2</div>
            <div class="step-content">
              <h3>Configure Stream Settings</h3>
              <p>Go to <strong>Settings â†’ Stream</strong> and enter:</p>
              <div class="settings-box">
                <div class="setting-row">
                  <span class="setting-label">Service:</span>
                  <span class="setting-value">Custom...</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Server:</span>
                  <code class="setting-code">rtmp://rtmp.freshwax.co.uk/live</code>
                  <button class="copy-small-btn" data-copy="rtmp://rtmp.freshwax.co.uk/live">Copy</button>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Stream Key:</span>
                  <span class="setting-value">Your key from DJ Lobby</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="step">
            <div class="step-number">3</div>
            <div class="step-content">
              <h3>Output Settings</h3>
              <p>Go to <strong>Settings â†’ Output</strong>:</p>
              <div class="settings-box">
                <div class="setting-row">
                  <span class="setting-label">Video Bitrate:</span>
                  <span class="setting-value highlight">2500-4000 kbps</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Audio Bitrate:</span>
                  <span class="setting-value">192-320 kbps</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Encoder:</span>
                  <span class="setting-value">x264 or NVENC</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="step">
            <div class="step-number">4</div>
            <div class="step-content">
              <h3>Video Settings</h3>
              <p>Go to <strong>Settings â†’ Video</strong>:</p>
              <div class="settings-box">
                <div class="setting-row">
                  <span class="setting-label">Resolution:</span>
                  <span class="setting-value highlight">1280x720</span>
                  <span class="setting-note">or 1920x1080</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">FPS:</span>
                  <span class="setting-value">30</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="step final">
            <div class="step-number">5</div>
            <div class="step-content">
              <h3>Start Streaming!</h3>
              <p>Click <strong>"Start Streaming"</strong> in OBS when you're ready. Your stream will appear on Fresh Wax automatically.</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- BUTT Instructions -->
      <div id="buttContent" class="instructions-panel hidden">
        <div class="panel-header">
          <div class="butt-icon">ðŸŽµ</div>
          <div>
            <h2>BUTT Setup</h2>
            <p>Broadcast Using This Tool - for audio-only streaming</p>
          </div>
        </div>

        <div class="steps-container">
          <div class="step">
            <div class="step-number">1</div>
            <div class="step-content">
              <h3>Download BUTT</h3>
              <p>Get the free audio streaming software:</p>
              <a href="https://danielnoethen.de/butt/" target="_blank" class="download-link">
                <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                  <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/>
                </svg>
                Download BUTT
              </a>
            </div>
          </div>

          <div class="step">
            <div class="step-number">2</div>
            <div class="step-content">
              <h3>Add Server</h3>
              <p>Open BUTT, click <strong>Settings</strong> (gear icon), go to <strong>Main</strong> tab and click <strong>"ADD"</strong>:</p>
              <div class="settings-box">
                <div class="setting-row">
                  <span class="setting-label">Name:</span>
                  <span class="setting-value">Fresh Wax</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Type:</span>
                  <span class="setting-value">Icecast</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Address:</span>
                  <code class="setting-code">stream.freshwax.co.uk</code>
                  <button class="copy-small-btn" data-copy="stream.freshwax.co.uk">Copy</button>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Port:</span>
                  <span class="setting-value">8000</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Password:</span>
                  <span class="setting-value">Your stream key</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Mountpoint:</span>
                  <code class="setting-code">/live</code>
                </div>
              </div>
            </div>
          </div>

          <div class="step">
            <div class="step-number">3</div>
            <div class="step-content">
              <h3>Audio Settings</h3>
              <p>Go to the <strong>Audio</strong> tab:</p>
              <div class="settings-box">
                <div class="setting-row">
                  <span class="setting-label">Audio Device:</span>
                  <span class="setting-value">Your DJ controller/soundcard</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Codec:</span>
                  <span class="setting-value highlight">MP3 or AAC</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Bitrate:</span>
                  <span class="setting-value highlight">192-320 kbps</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Samplerate:</span>
                  <span class="setting-value">44100 Hz</span>
                </div>
              </div>
            </div>
          </div>

          <div class="step final">
            <div class="step-number">4</div>
            <div class="step-content">
              <h3>Start Streaming!</h3>
              <p>Click <strong>Save</strong>, then click the <strong>Play button</strong> to start streaming. Check the signal meter - aim for peaks around -6dB.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Pro Multi-Stream Panel -->
      <div id="proContent" class="instructions-panel hidden">
        <div class="panel-header">
          <div class="pro-icon-wrap">
            <svg viewBox="0 0 24 24" fill="currentColor" width="32" height="32" class="pro-icon">
              <path d="M12 2L4 5v6.09c0 5.05 3.41 9.76 8 10.91 4.59-1.15 8-5.86 8-10.91V5l-8-3zm-1.06 13.54L7.4 12l1.41-1.41 2.12 2.12 4.24-4.24 1.41 1.41-5.64 5.66z"/>
            </svg>
            <span class="pro-badge-header">PRO</span>
          </div>
          <div>
            <h2>Pro <span class="red">Multi-Stream</span></h2>
            <p>Broadcast to multiple platforms simultaneously</p>
          </div>
        </div>

        <div class="pro-settings-grid">
          <!-- Twitch Multi-streaming -->
          <div class="settings-section">
            <div class="section-title">
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20" class="twitch-icon">
                <path d="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714Z"/>
              </svg>
              <h3>Twitch Multi-Stream</h3>
            </div>
            <p class="section-desc">Broadcast to your Twitch channel simultaneously</p>

            <div class="settings-form">
              <div class="form-row">
                <label for="twitchUsername">Twitch Username</label>
                <input type="text" id="twitchUsername" placeholder="your_twitch_username" autocomplete="off" />
              </div>
              <div class="form-row">
                <label for="twitchStreamKey">Twitch Stream Key</label>
                <input type="text" id="twitchStreamKey" placeholder="live_123456789_AbCdEfGhIjK..." autocomplete="off" />
              </div>
              <button type="button" class="save-btn" id="saveTwitchBtn">Save Twitch Settings</button>
            </div>
          </div>

          <!-- Relay Settings -->
          <div class="settings-section">
            <div class="section-title">
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20" class="relay-icon">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
              </svg>
              <h3>Stream Relay</h3>
            </div>
            <p class="section-desc">Relay from another radio station through Fresh Wax</p>

            <div class="settings-form">
              <div class="form-row">
                <label for="relayUrl">Relay Source URL</label>
                <div class="input-with-btn">
                  <input type="text" id="relayUrl" placeholder="HLS or stream URL to relay" autocomplete="off" />
                  <button type="button" class="select-btn" id="openRelayModal" title="Select from radio stations">
                    <svg viewBox="0 0 24 24" fill="currentColor" width="16" height="16">
                      <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 14H4V6h16v12zM6 10h2v2H6zm0 4h8v2H6zm10 0h2v2h-2zm-6-4h8v2h-8z"/>
                    </svg>
                  </button>
                </div>
                <span id="relaySourceName" class="source-hint"></span>
              </div>
            </div>
          </div>

          <!-- Output URL -->
          <div class="settings-section output-section">
            <div class="section-title">
              <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20" class="output-icon">
                <path d="M21 3H3c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H3V5h18v14zM9 8h2v8H9zm4 2h2v6h-2zm-8 4h2v2H5z"/>
              </svg>
              <h3>Fresh Wax Output</h3>
            </div>
            <p class="section-desc">Share this URL with radio stations to relay your Fresh Wax stream</p>

            <div class="output-url-box">
              <code id="outputUrl">https://rtmp.freshwax.co.uk/live/freshwax-main/index.m3u8</code>
              <button class="copy-btn" id="copyOutputUrl">Copy URL</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Relay Sources Modal -->
      <div id="relaySourcesModal" class="modal-overlay hidden">
        <div class="modal-content">
          <div class="modal-header">
            <h3>Select Radio Station</h3>
            <button class="modal-close-btn" id="closeRelayModal">&times;</button>
          </div>
          <div class="modal-body">
            <p class="modal-hint">Select a station you're currently streaming on to relay through Fresh Wax</p>
            <div id="relaySourcesList" class="relay-sources-list">
              <div class="loading-sources">Loading stations...</div>
            </div>
          </div>
          <div class="modal-footer">
            <button class="modal-btn secondary" id="clearRelaySource">Clear Selection</button>
          </div>
        </div>
      </div>
    </div>
  </div>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    font-family: 'Inter', sans-serif;
    background: linear-gradient(to bottom, #000000, #111827, #1f2937);
    color: #fff;
    min-height: 100vh;
  }
  
  .hidden { display: none !important; }
  .red { color: #dc2626; }
  
  /* Auth Gate */
  .auth-gate {
    position: fixed;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to bottom, #000000, #111827);
    gap: 1rem;
    color: #9ca3af;
  }
  
  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid #333;
    border-top-color: #dc2626;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    to { transform: rotate(360deg); }
  }
  
  /* Header */
  .page-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background: #111;
    border-bottom: 2px solid #333;
  }
  
  .back-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #9ca3af;
    text-decoration: none;
    font-size: 0.9rem;
  }
  
  .back-link:hover { color: #fff; }
  
  .header-center { text-align: center; }
  
  .header-center h1 {
    font-family: 'Inter', sans-serif; font-weight: 700;
    font-size: 2rem;
    letter-spacing: 0.05em;
    color: #fff;
  }
  
  .header-center p { color: #9ca3af; font-size: 0.85rem; }
  
  .speed-test-btn {
    padding: 0.6rem 1.25rem;
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    border: none;
    border-radius: 8px;
    color: #fff;
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .speed-test-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
  }
  
  /* Layout */
  .setup-layout {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  /* Speed Results Card */
  .speed-results-card {
    background: linear-gradient(to bottom, #1f2937, #111827);
    border: 2px solid #dc2626;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .results-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .results-header h3 {
    font-size: 1.1rem;
    color: #fff;
  }
  
  .close-results-btn {
    background: none;
    border: none;
    font-size: 1.25rem;
    color: #9ca3af;
    cursor: pointer;
  }
  
  .close-results-btn:hover { color: #fff; }
  
  .speed-results-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .speed-result-box {
    padding: 1rem;
    border-radius: 10px;
    text-align: center;
  }
  
  .speed-result-box.download {
    background: rgba(16, 185, 129, 0.15);
    border: 2px solid #10b981;
  }
  
  .speed-result-box.upload {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(59, 130, 246, 0.1));
    border: 2px solid #3b82f6;
  }
  
  .result-label {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    color: #9ca3af;
    text-transform: uppercase;
    margin-bottom: 0.25rem;
  }
  
  .result-value {
    font-family: 'Inter', sans-serif; font-weight: 700;
    font-size: 1.75rem;
    color: #fff;
  }
  
  .recommendation-section h4 {
    font-size: 0.95rem;
    margin-bottom: 0.75rem;
    color: #fff;
  }
  
  .rec-card {
    background: linear-gradient(to bottom, #1f2937, #111827);
    border: 2px solid #374151;
    border-radius: 8px;
    padding: 0.75rem;
    margin-bottom: 0.5rem;
  }
  
  .rec-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }
  
  .rec-icon { font-size: 1.1rem; }
  .rec-title { flex: 1; font-weight: 600; font-size: 0.9rem; color: #fff; }
  
  .rec-status {
    padding: 0.15rem 0.6rem;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: 700;
  }
  
  .rec-status.excellent { background: #d1fae5; color: #059669; }
  .rec-status.good { background: #dbeafe; color: #2563eb; }
  .rec-status.marginal { background: #fef3c7; color: #d97706; }
  .rec-status.poor { background: #fee2e2; color: #dc2626; }
  
  .rec-details {
    font-size: 0.8rem;
    color: #9ca3af;
  }
  
  .rec-details ul {
    margin: 0.5rem 0 0 1rem;
    padding: 0;
  }
  
  .rec-details li { margin-bottom: 0.2rem; }
  .rec-details strong { color: #fff; }
  
  /* Testing Overlay */
  .testing-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
  }
  
  .testing-content {
    background: linear-gradient(to bottom, #1f2937, #111827);
    padding: 3rem;
    border-radius: 16px;
    text-align: center;
  }
  
  .speed-spinner {
    width: 60px;
    height: 60px;
    border: 4px solid #374151;
    border-top-color: #dc2626;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1.5rem;
  }
  
  .testing-content h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: #fff;
  }
  
  .countdown-display {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .countdown-display #testCountdown {
    font-family: 'Inter', sans-serif; font-weight: 700;
    font-size: 3rem;
    color: #dc2626;
    line-height: 1;
  }
  
  .countdown-display span:last-child {
    color: #9ca3af;
    font-size: 0.9rem;
  }
  
  /* Tabs */
  .instructions-tabs {
    display: flex;
    gap: 0.5rem;
