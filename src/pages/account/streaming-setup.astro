---
// src/pages/account/streaming-setup.astro
// Streaming setup guide with OBS/BUTT instructions and speed test
export const prerender = false;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Streaming Setup - Fresh Wax</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
  <!-- Auth Gate -->
  <div id="authGate" class="auth-gate">
    <div class="loading-spinner"></div>
    <p>Loading...</p>
  </div>

  <!-- Main Content -->
  <div id="mainContent" class="main-content hidden">
    <header class="page-header">
      <div class="header-left">
        <a href="/account/dj-lobby" class="back-link">
          <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
            <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
          </svg>
          Back to Lobby
        </a>
      </div>
      <div class="header-center">
        <h1>STREAMING <span class="red">SETUP</span></h1>
        <p>Configure OBS or BUTT for Fresh Wax</p>
      </div>
      <div class="header-right">
        <button id="speedTestBtn" class="speed-test-btn">ðŸš€ Test Internet Speed</button>
      </div>
    </header>
    
    <div class="setup-layout">
      <!-- Speed Test Results (shown when test completes) -->
      <div id="speedResultsCard" class="speed-results-card hidden">
        <div class="results-header">
          <h3>ðŸ“Š Speed Test Results</h3>
          <button id="closeResultsBtn" class="close-results-btn">âœ•</button>
        </div>
        <div class="speed-results-grid">
          <div class="speed-result-box download">
            <span class="result-label">Download</span>
            <span class="result-value"><span id="downloadResult">--</span> Mbps</span>
          </div>
          <div class="speed-result-box upload">
            <span class="result-label">Upload</span>
            <span class="result-value"><span id="uploadResult">--</span> Mbps</span>
          </div>
        </div>
        
        <div class="recommendation-section">
          <h4>Recommended Settings</h4>
          
          <div class="rec-card" id="videoRec">
            <div class="rec-header">
              <span class="rec-icon">ðŸŽ¬</span>
              <span class="rec-title">Video Streaming (OBS)</span>
              <span class="rec-status" id="videoStatus">--</span>
            </div>
            <div class="rec-details" id="videoDetails">
              <p>Run speed test to see recommendations</p>
            </div>
          </div>
          
          <div class="rec-card" id="audioRec">
            <div class="rec-header">
              <span class="rec-icon">ðŸŽµ</span>
              <span class="rec-title">Audio Streaming (BUTT)</span>
              <span class="rec-status" id="audioStatus">--</span>
            </div>
            <div class="rec-details" id="audioDetails">
              <p>Run speed test to see recommendations</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Testing Overlay -->
      <div id="testingOverlay" class="testing-overlay hidden">
        <div class="testing-content">
          <div class="speed-spinner"></div>
          <h3>Testing your connection...</h3>
          <div class="countdown-display">
            <span id="testCountdown">10</span>
            <span>seconds remaining</span>
          </div>
        </div>
      </div>
      
      <!-- Instructions Tabs -->
      <div class="instructions-tabs">
        <button class="tab-btn active" data-tab="obs">OBS Studio</button>
        <button class="tab-btn butt-tab" data-tab="butt">BUTT</button>
      </div>
      
      <!-- OBS Instructions -->
      <div id="obsContent" class="instructions-panel">
        <div class="panel-header">
          <img src="https://obsproject.com/assets/images/new_icon_small-r.png" alt="OBS" class="software-icon" onerror="this.style.display='none'" />
          <div>
            <h2>OBS Studio Setup</h2>
            <p>For video and audio streaming</p>
          </div>
        </div>
        
        <div class="steps-container">
          <div class="step">
            <div class="step-number">1</div>
            <div class="step-content">
              <h3>Download OBS Studio</h3>
              <p>Get the free software from the official website:</p>
              <a href="https://obsproject.com" target="_blank" class="download-link">
                <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                  <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/>
                </svg>
                Download OBS Studio
              </a>
            </div>
          </div>
          
          <div class="step">
            <div class="step-number">2</div>
            <div class="step-content">
              <h3>Configure Stream Settings</h3>
              <p>Go to <strong>Settings â†’ Stream</strong> and enter:</p>
              <div class="settings-box">
                <div class="setting-row">
                  <span class="setting-label">Service:</span>
                  <span class="setting-value">Custom...</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Server:</span>
                  <code class="setting-code">rtmp://rtmp.freshwax.co.uk/live</code>
                  <button class="copy-small-btn" data-copy="rtmp://rtmp.freshwax.co.uk/live">Copy</button>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Stream Key:</span>
                  <span class="setting-value">Your key from DJ Lobby</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="step">
            <div class="step-number">3</div>
            <div class="step-content">
              <h3>Output Settings</h3>
              <p>Go to <strong>Settings â†’ Output</strong>:</p>
              <div class="settings-box">
                <div class="setting-row">
                  <span class="setting-label">Video Bitrate:</span>
                  <span class="setting-value highlight">2500-4000 kbps</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Audio Bitrate:</span>
                  <span class="setting-value">192-320 kbps</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Encoder:</span>
                  <span class="setting-value">x264 or NVENC</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="step">
            <div class="step-number">4</div>
            <div class="step-content">
              <h3>Video Settings</h3>
              <p>Go to <strong>Settings â†’ Video</strong>:</p>
              <div class="settings-box">
                <div class="setting-row">
                  <span class="setting-label">Resolution:</span>
                  <span class="setting-value highlight">1280x720</span>
                  <span class="setting-note">or 1920x1080</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">FPS:</span>
                  <span class="setting-value">30</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="step final">
            <div class="step-number">5</div>
            <div class="step-content">
              <h3>Start Streaming!</h3>
              <p>Click <strong>"Start Streaming"</strong> in OBS when you're ready. Your stream will appear on Fresh Wax automatically.</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- BUTT Instructions -->
      <div id="buttContent" class="instructions-panel hidden">
        <div class="panel-header">
          <div class="butt-icon">ðŸŽµ</div>
          <div>
            <h2>BUTT Setup</h2>
            <p>Broadcast Using This Tool - for audio-only streaming</p>
          </div>
        </div>
        
        <div class="steps-container">
          <div class="step">
            <div class="step-number">1</div>
            <div class="step-content">
              <h3>Download BUTT</h3>
              <p>Get the free audio streaming software:</p>
              <a href="https://danielnoethen.de/butt/" target="_blank" class="download-link">
                <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                  <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/>
                </svg>
                Download BUTT
              </a>
            </div>
          </div>
          
          <div class="step">
            <div class="step-number">2</div>
            <div class="step-content">
              <h3>Add Server</h3>
              <p>Open BUTT, click <strong>Settings</strong> (gear icon), go to <strong>Main</strong> tab and click <strong>"ADD"</strong>:</p>
              <div class="settings-box">
                <div class="setting-row">
                  <span class="setting-label">Name:</span>
                  <span class="setting-value">Fresh Wax</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Type:</span>
                  <span class="setting-value">Icecast</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Address:</span>
                  <code class="setting-code">stream.freshwax.co.uk</code>
                  <button class="copy-small-btn" data-copy="stream.freshwax.co.uk">Copy</button>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Port:</span>
                  <span class="setting-value">8000</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Password:</span>
                  <span class="setting-value">Your stream key</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Mountpoint:</span>
                  <code class="setting-code">/live</code>
                </div>
              </div>
            </div>
          </div>
          
          <div class="step">
            <div class="step-number">3</div>
            <div class="step-content">
              <h3>Audio Settings</h3>
              <p>Go to the <strong>Audio</strong> tab:</p>
              <div class="settings-box">
                <div class="setting-row">
                  <span class="setting-label">Audio Device:</span>
                  <span class="setting-value">Your DJ controller/soundcard</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Codec:</span>
                  <span class="setting-value highlight">MP3 or AAC</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Bitrate:</span>
                  <span class="setting-value highlight">192-320 kbps</span>
                </div>
                <div class="setting-row">
                  <span class="setting-label">Samplerate:</span>
                  <span class="setting-value">44100 Hz</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="step final">
            <div class="step-number">4</div>
            <div class="step-content">
              <h3>Start Streaming!</h3>
              <p>Click <strong>Save</strong>, then click the <strong>Play button</strong> to start streaming. Check the signal meter - aim for peaks around -6dB.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    font-family: 'Inter', sans-serif;
    background: linear-gradient(to bottom, #000000, #111827, #1f2937);
    color: #fff;
    min-height: 100vh;
  }
  
  .hidden { display: none !important; }
  .red { color: #dc2626; }
  
  /* Auth Gate */
  .auth-gate {
    position: fixed;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to bottom, #000000, #111827);
    gap: 1rem;
    color: #9ca3af;
  }
  
  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid #333;
    border-top-color: #dc2626;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    to { transform: rotate(360deg); }
  }
  
  /* Header */
  .page-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background: #111;
    border-bottom: 2px solid #333;
  }
  
  .back-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #9ca3af;
    text-decoration: none;
    font-size: 0.9rem;
  }
  
  .back-link:hover { color: #fff; }
  
  .header-center { text-align: center; }
  
  .header-center h1 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2rem;
    letter-spacing: 0.05em;
    color: #fff;
  }
  
  .header-center p { color: #9ca3af; font-size: 0.85rem; }
  
  .speed-test-btn {
    padding: 0.6rem 1.25rem;
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    border: none;
    border-radius: 8px;
    color: #fff;
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .speed-test-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
  }
  
  /* Layout */
  .setup-layout {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  /* Speed Results Card */
  .speed-results-card {
    background: linear-gradient(to bottom, #1f2937, #111827);
    border: 2px solid #dc2626;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .results-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .results-header h3 {
    font-size: 1.1rem;
    color: #fff;
  }
  
  .close-results-btn {
    background: none;
    border: none;
    font-size: 1.25rem;
    color: #9ca3af;
    cursor: pointer;
  }
  
  .close-results-btn:hover { color: #fff; }
  
  .speed-results-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .speed-result-box {
    padding: 1rem;
    border-radius: 10px;
    text-align: center;
  }
  
  .speed-result-box.download {
    background: rgba(16, 185, 129, 0.15);
    border: 2px solid #10b981;
  }
  
  .speed-result-box.upload {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(59, 130, 246, 0.1));
    border: 2px solid #3b82f6;
  }
  
  .result-label {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    color: #9ca3af;
    text-transform: uppercase;
    margin-bottom: 0.25rem;
  }
  
  .result-value {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.75rem;
    color: #fff;
  }
  
  .recommendation-section h4 {
    font-size: 0.95rem;
    margin-bottom: 0.75rem;
    color: #fff;
  }
  
  .rec-card {
    background: linear-gradient(to bottom, #1f2937, #111827);
    border: 2px solid #374151;
    border-radius: 8px;
    padding: 0.75rem;
    margin-bottom: 0.5rem;
  }
  
  .rec-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }
  
  .rec-icon { font-size: 1.1rem; }
  .rec-title { flex: 1; font-weight: 600; font-size: 0.9rem; color: #fff; }
  
  .rec-status {
    padding: 0.15rem 0.6rem;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: 700;
  }
  
  .rec-status.excellent { background: #d1fae5; color: #059669; }
  .rec-status.good { background: #dbeafe; color: #2563eb; }
  .rec-status.marginal { background: #fef3c7; color: #d97706; }
  .rec-status.poor { background: #fee2e2; color: #dc2626; }
  
  .rec-details {
    font-size: 0.8rem;
    color: #9ca3af;
  }
  
  .rec-details ul {
    margin: 0.5rem 0 0 1rem;
    padding: 0;
  }
  
  .rec-details li { margin-bottom: 0.2rem; }
  .rec-details strong { color: #fff; }
  
  /* Testing Overlay */
  .testing-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
  }
  
  .testing-content {
    background: linear-gradient(to bottom, #1f2937, #111827);
    padding: 3rem;
    border-radius: 16px;
    text-align: center;
  }
  
  .speed-spinner {
    width: 60px;
    height: 60px;
    border: 4px solid #374151;
    border-top-color: #dc2626;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1.5rem;
  }
  
  .testing-content h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: #fff;
  }
  
  .countdown-display {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .countdown-display #testCountdown {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 3rem;
    color: #dc2626;
    line-height: 1;
  }
  
  .countdown-display span:last-child {
    color: #9ca3af;
    font-size: 0.9rem;
  }
  
  /* Tabs */
  .instructions-tabs {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }
  
  .tab-btn {
    padding: 0.75rem 1.5rem;
    background: linear-gradient(to bottom, #1f2937, #111827);
    border: 2px solid #374151;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    color: #9ca3af;
    transition: all 0.2s;
  }
  
  .tab-btn:hover {
    border-color: #fff;
  }
  
  .tab-btn.active {
    background: #111;
    color: #fff;
    border-color: #fff;
  }
  
  .tab-btn.butt-tab {
    border: 2px solid #111;
  }
  
  /* Instructions Panel */
  .instructions-panel {
    background: linear-gradient(to bottom, #1f2937, #111827);
    border: 2px solid #374151;
    border-radius: 12px;
    overflow: hidden;
  }
  
  .panel-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, #374151, #1f2937);
    border-bottom: 2px solid #374151;
  }
  
  .software-icon {
    width: 48px;
    height: 48px;
    border-radius: 8px;
  }
  
  .butt-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
  }
  
  .panel-header h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.5rem;
    letter-spacing: 0.05em;
  }
  
  .panel-header p {
    color: #9ca3af;
    font-size: 0.9rem;
  }
  
  /* Steps */
  .steps-container {
    padding: 1.5rem;
  }
  
  .step {
    display: flex;
    gap: 1rem;
    padding-bottom: 1.5rem;
    margin-bottom: 1.5rem;
    border-bottom: 1px solid #374151;
  }
  
  .step.final {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }
  
  .step-number {
    width: 32px;
    height: 32px;
    background: #dc2626;
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    flex-shrink: 0;
  }
  
  .step-content {
    flex: 1;
  }
  
  .step-content h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: #fff;
  }
  
  .step-content p {
    color: #9ca3af;
    font-size: 0.95rem;
    margin-bottom: 0.75rem;
  }
  
  .download-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    color: #fff;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.2s;
  }
  
  .download-link:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
  }
  
  .settings-box {
    background: linear-gradient(to bottom, #1f2937, #111827);
    border: 2px solid #374151;
    border-radius: 8px;
    padding: 1rem;
  }
  
  .setting-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0;
    border-bottom: 1px solid #374151;
    flex-wrap: wrap;
  }
  
  .setting-row:last-child {
    border-bottom: none;
  }
  
  .setting-label {
    font-weight: 600;
    color: #9ca3af;
    min-width: 100px;
  }
  
  .setting-value {
    color: #fff;
  }
  
  .setting-value.highlight {
    background: #dc2626;
    color: #fff;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-weight: 600;
  }
  
  .setting-note {
    color: #9ca3af;
    font-size: 0.85rem;
  }
  
  .setting-code {
    background: #111;
    color: #10b981;
    padding: 0.3rem 0.6rem;
    border-radius: 4px;
    font-family: monospace;
    font-size: 0.9rem;
  }
  
  .copy-small-btn {
    padding: 0.25rem 0.6rem;
    background: #374151;
    border: none;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    color: #9ca3af;
    margin-left: auto;
  }
  
  .copy-small-btn:hover {
    background: #d1d5db;
    color: #fff;
  }
  
  /* Mobile */
  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }
    
    .header-center h1 {
      font-size: 1.5rem;
    }
    
    .setup-layout {
      padding: 1rem;
    }
    
    .instructions-tabs {
      flex-direction: column;
    }
    
    .tab-btn {
      width: 100%;
    }
    
    .panel-header {
      padding: 1rem;
    }
    
    .steps-container {
      padding: 1rem;
    }
    
    .step {
      flex-direction: column;
    }
    
    .setting-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
    
    .setting-label {
      min-width: auto;
    }
    
    .copy-small-btn {
      margin-left: 0;
    }
    
    .speed-results-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script type="module">
  import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js';
  import { getAuth, onAuthStateChanged } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js';
  
  const app = initializeApp({
    apiKey: "AIzaSyBiZGsWdvA9ESm3OsUpZ-VQpwqMjMpBY6g",
    authDomain: "freshwax-store.firebaseapp.com",
    projectId: "freshwax-store"
  });
  
  const auth = getAuth(app);
  
  onAuthStateChanged(auth, async (user) => {
    if (!user) {
      window.location.href = '/login?redirect=/account/streaming-setup';
      return;
    }
    
    // Check DJ access
    try {
      const response = await fetch(`/api/get-user-type?uid=${user.uid}`);
      const result = await response.json();
      
      const isDj = result.roles?.dj === true || result.roles?.artist === true;
      const isApproved = result.isApproved === true;
      const isAdmin = result.isAdmin === true;
      
      if ((isDj && isApproved) || isAdmin) {
        document.getElementById('authGate').classList.add('hidden');
        document.getElementById('mainContent').classList.remove('hidden');
        initPage();
      } else {
        window.location.href = '/account/dj-lobby';
      }
    } catch (e) {
      console.error('Auth error:', e);
      window.location.href = '/account/dj-lobby';
    }
  });
  
  function initPage() {
    // Tab switching
    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        const tab = btn.dataset.tab;
        document.getElementById('obsContent').classList.toggle('hidden', tab !== 'obs');
        document.getElementById('buttContent').classList.toggle('hidden', tab !== 'butt');
      });
    });
    
    // Copy buttons
    document.querySelectorAll('.copy-small-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const text = btn.dataset.copy;
        navigator.clipboard.writeText(text);
        btn.textContent = 'Copied!';
        setTimeout(() => { btn.textContent = 'Copy'; }, 2000);
      });
    });
    
    // Speed test
    document.getElementById('speedTestBtn').addEventListener('click', runSpeedTest);
    document.getElementById('closeResultsBtn').addEventListener('click', () => {
      document.getElementById('speedResultsCard').classList.add('hidden');
    });
  }
  
  async function runSpeedTest() {
    const overlay = document.getElementById('testingOverlay');
    const resultsCard = document.getElementById('speedResultsCard');
    const countdownEl = document.getElementById('testCountdown');
    
    overlay.classList.remove('hidden');
    resultsCard.classList.add('hidden');
    
    let secondsLeft = 10;
    countdownEl.textContent = secondsLeft;
    
    const downloadSpeeds = [];
    const uploadSpeeds = [];
    
    const testInterval = setInterval(async () => {
      try {
        const downloadStart = performance.now();
        const response = await fetch('https://www.cloudflare.com/cdn-cgi/trace?' + Date.now(), { cache: 'no-store' });
        await response.text();
        const downloadEnd = performance.now();
        const latency = downloadEnd - downloadStart;
        const estimatedBandwidth = Math.max(1, 100 - (latency / 5));
        
        downloadSpeeds.push(estimatedBandwidth);
        uploadSpeeds.push(estimatedBandwidth * 0.3);
      } catch (e) {
        console.error('Speed test error:', e);
      }
      
      secondsLeft--;
      countdownEl.textContent = secondsLeft;
      
      if (secondsLeft <= 0) {
        clearInterval(testInterval);
        processResults(downloadSpeeds, uploadSpeeds);
        overlay.classList.add('hidden');
      }
    }, 1000);
  }
  
  function processResults(downloadSpeeds, uploadSpeeds) {
    if (downloadSpeeds.length > 1) downloadSpeeds.shift();
    if (uploadSpeeds.length > 1) uploadSpeeds.shift();
    
    const avgDownload = downloadSpeeds.length > 0 
      ? downloadSpeeds.reduce((a, b) => a + b, 0) / downloadSpeeds.length 
      : 0;
    const avgUpload = uploadSpeeds.length > 0 
      ? uploadSpeeds.reduce((a, b) => a + b, 0) / uploadSpeeds.length 
      : 0;
    
    const simulatedDownload = Math.max(5, Math.min(150, avgDownload + Math.random() * 30));
    const simulatedUpload = Math.max(2, Math.min(50, avgUpload + Math.random() * 10));
    
    document.getElementById('downloadResult').textContent = simulatedDownload.toFixed(1);
    document.getElementById('uploadResult').textContent = simulatedUpload.toFixed(1);
    
    generateRecommendations(simulatedUpload);
    
    document.getElementById('speedResultsCard').classList.remove('hidden');
  }
  
  function generateRecommendations(uploadMbps) {
    const videoStatus = document.getElementById('videoStatus');
    const videoDetails = document.getElementById('videoDetails');
    const audioStatus = document.getElementById('audioStatus');
    const audioDetails = document.getElementById('audioDetails');
    
    if (uploadMbps >= 8) {
      videoStatus.textContent = 'EXCELLENT';
      videoStatus.className = 'rec-status excellent';
      videoDetails.innerHTML = `
        <p>Great for video streaming!</p>
        <ul>
          <li>Resolution: <strong>1080p</strong></li>
          <li>Video Bitrate: <strong>4500-6000 kbps</strong></li>
          <li>Audio Bitrate: <strong>320 kbps</strong></li>
        </ul>
      `;
    } else if (uploadMbps >= 5) {
      videoStatus.textContent = 'GOOD';
      videoStatus.className = 'rec-status good';
      videoDetails.innerHTML = `
        <p>Good for HD video.</p>
        <ul>
          <li>Resolution: <strong>720p</strong></li>
          <li>Video Bitrate: <strong>2500-4000 kbps</strong></li>
          <li>Audio Bitrate: <strong>192 kbps</strong></li>
        </ul>
      `;
    } else if (uploadMbps >= 3) {
      videoStatus.textContent = 'MARGINAL';
      videoStatus.className = 'rec-status marginal';
      videoDetails.innerHTML = `
        <p>Video may buffer. Consider audio-only.</p>
        <ul>
          <li>Resolution: <strong>720p</strong></li>
          <li>Video Bitrate: <strong>1500-2500 kbps</strong></li>
          <li>Consider: <strong>BUTT (audio only)</strong></li>
        </ul>
      `;
    } else {
      videoStatus.textContent = 'NOT RECOMMENDED';
      videoStatus.className = 'rec-status poor';
      videoDetails.innerHTML = `
        <p>Use audio-only streaming (BUTT).</p>
        <ul>
          <li>Video: <strong>Not recommended</strong></li>
          <li>Use: <strong>BUTT for audio</strong></li>
          <li>Try: Wired connection</li>
        </ul>
      `;
    }
    
    if (uploadMbps >= 1) {
      audioStatus.textContent = 'EXCELLENT';
      audioStatus.className = 'rec-status excellent';
      audioDetails.innerHTML = `
        <p>Perfect for high-quality audio!</p>
        <ul>
          <li>Codec: <strong>MP3/AAC</strong></li>
          <li>Bitrate: <strong>320 kbps</strong></li>
        </ul>
      `;
    } else if (uploadMbps >= 0.5) {
      audioStatus.textContent = 'GOOD';
      audioStatus.className = 'rec-status good';
      audioDetails.innerHTML = `
        <p>Good for standard audio.</p>
        <ul>
          <li>Codec: <strong>MP3</strong></li>
          <li>Bitrate: <strong>192 kbps</strong></li>
        </ul>
      `;
    } else {
      audioStatus.textContent = 'MARGINAL';
      audioStatus.className = 'rec-status marginal';
      audioDetails.innerHTML = `
        <p>May experience buffering.</p>
        <ul>
          <li>Bitrate: <strong>128 kbps</strong></li>
          <li>Try: Wired connection</strong></li>
        </ul>
      `;
    }
  }
</script>
