  async function checkProSubscription(userId) {
    try {
      const response = await fetch(`/api/user/profile?userId=${userId}`);
      const result = await response.json();
      if (result.success && result.user) {
        const subscription = result.user.subscription;
        if (subscription?.tier === 'pro' && subscription.expiresAt) {
          return new Date(subscription.expiresAt) > new Date();
        }
      }
    } catch (e) {
      console.warn('Error checking subscription:', e);
    }
    return false;
  }

  async function initEventRequestSection() {
    if (!currentUser) return;

    const isPro = await checkProSubscription(currentUser.uid);
    if (isPro) {
      document.getElementById('eventRequestSection')?.classList.remove('hidden');
      setupEventRequestHandlers();
      loadMyEventRequests();
    }
  }

  function setupEventRequestHandlers() {
    // Set min date to tomorrow
    const eventDateInput = document.getElementById('eventDate');
    if (eventDateInput) {
      const tomorrow = new Date();
      tomorrow.setDate(tomorrow.getDate() + 1);
      eventDateInput.min = tomorrow.toISOString().split('T')[0];
    }

    // Submit event request
    document.getElementById('submitEventRequest')?.addEventListener('click', async () => {
      const eventName = document.getElementById('eventName')?.value.trim();
      const eventDate = document.getElementById('eventDate')?.value;
      const eventHours = parseInt(document.getElementById('eventHours')?.value || '4');
      const eventDescription = document.getElementById('eventDescription')?.value.trim();
      const statusEl = document.getElementById('eventRequestStatus');
      const btn = document.getElementById('submitEventRequest');

      if (!eventName || !eventDate) {
        showEventStatus('Please fill in all required fields', 'error');
        return;
      }

      if (eventHours < 1 || eventHours > 12) {
        showEventStatus('Hours must be between 1 and 12', 'error');
        return;
      }

      btn.disabled = true;
      btn.textContent = 'Submitting...';

      try {
        const response = await fetch('/api/livestream/event-requests', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            action: 'create',
            userId: currentUser.uid,
            userEmail: currentUser.email,
            userName: artistData?.djName || artistData?.artistName || currentUser.displayName || 'Unknown',
            eventName,
            eventDate,
            hoursRequested: eventHours,
            eventDescription
          })
        });

        const result = await response.json();

        if (result.success) {
          showEventStatus("Request submitted! We'll review it and get back to you.", 'success');
          document.getElementById('eventName').value = '';
          document.getElementById('eventDate').value = '';
          document.getElementById('eventHours').value = '4';
          document.getElementById('eventDescription').value = '';
          loadMyEventRequests();
        } else {
          showEventStatus(result.error || 'Failed to submit request', 'error');
        }
      } catch (error) {
        console.error('Event request error:', error);
        showEventStatus('Failed to submit request. Please try again.', 'error');
      }

      btn.disabled = false;
      btn.textContent = 'Submit Request';
    });
  }

  function showEventStatus(message, type) {
    const statusEl = document.getElementById('eventRequestStatus');
    if (statusEl) {
      statusEl.textContent = message;
      statusEl.className = 'event-request-status ' + type;
      statusEl.classList.remove('hidden');
      setTimeout(() => statusEl.classList.add('hidden'), 5000);
    }
  }

  async function loadMyEventRequests() {
    if (!currentUser) return;

    try {
      const response = await fetch(`/api/livestream/event-requests?userId=${currentUser.uid}`);
      const result = await response.json();

      const container = document.getElementById('myEventRequests');
      const listEl = document.getElementById('eventRequestsList');

      if (result.success && result.requests?.length > 0) {
        container?.classList.remove('hidden');
        listEl.innerHTML = result.requests.map(req => {
          const eventDate = new Date(req.eventDate + 'T00:00:00').toLocaleDateString('en-GB', {
            weekday: 'short', day: 'numeric', month: 'short'
          });
          return `
            <div class="event-request-item ${req.status}">
              <div class="event-info">
                <div class="event-name">${req.eventName}</div>
                <div class="event-meta">${eventDate} ‚Ä¢ ${req.hoursRequested} hours requested</div>
              </div>
              <span class="event-status ${req.status}">${req.status}</span>
            </div>
          `;
        }).join('');
      } else {
        container?.classList.add('hidden');
      }
    } catch (error) {
      console.error('Error loading event requests:', error);
    }
  }

