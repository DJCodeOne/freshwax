    const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZabcdefghjkmnpqrstuvwxyz23456789';
    let key = 'fw_';
    for (let i = 0; i < 20; i++) key += chars[Math.floor(Math.random() * chars.length)];
