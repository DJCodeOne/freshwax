    if (!currentUser) return;
    
    try {
      const response = await fetch(`/api/admin/bypass-requests?action=status&userId=${currentUser.uid}`);
      const result = await response.json();
      
      if (result.success) {
        currentBypassStatus = { ...result, ...eligibility };
