---
// /src/pages/artist/mix-stats.astro
// Mix Analytics - Comprehensive stats for all DJ mixes

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getDocument, queryCollection } from '../../lib/firebase-rest';

const partnerId = Astro.cookies.get('partnerId')?.value || '';
let partner = null;
let mixes: any[] = [];
let totals = {
  mixes: 0,
  plays: 0,
  likes: 0,
  downloads: 0,
  comments: 0,
  totalRating: 0
};

// Rating calculation function
const calculateRating = (mix: any): number => {
  const downloads = mix.downloads || 0;
  const likes = mix.likes || 0;
  const comments = mix.commentCount || mix.comments?.length || 0;
  const plays = mix.plays || 0;
  return (downloads * 3) + (likes * 2) + (comments * 1) + (plays * 0.1);
};

if (partnerId) {
  try {
    partner = await getDocument('artists', partnerId);
    if (partner) {
      // Get all mixes and filter
      const allMixes = await queryCollection('dj-mixes');
      const partnerName = partner.artistName?.toLowerCase().trim();

      // Filter mixes belonging to this user
      const userMixes = allMixes.filter((mix: any) => {
        const matchesUserId = mix.userId === partnerId;
        const matchesDjName = partnerName && (
          mix.djName?.toLowerCase().trim() === partnerName ||
          mix.dj_name?.toLowerCase().trim() === partnerName
        );
        return matchesUserId || matchesDjName;
      });

      // Sort by engagement score descending (highest rated first)
      userMixes.sort((a: any, b: any) => {
        const scoreA = calculateRating(a);
        const scoreB = calculateRating(b);
        return scoreB - scoreA;
      });

      for (const mixData of userMixes) {
        mixData.engagementScore = calculateRating(mixData);
        mixes.push(mixData);
        
        // Accumulate totals
        totals.plays += mixData.plays || 0;
        totals.likes += mixData.likes || 0;
        totals.downloads += mixData.downloads || 0;
        totals.comments += mixData.commentCount || (mixData.comments?.length || 0);
        totals.totalRating += mixData.engagementScore;
      }
      
      totals.mixes = mixes.length;
    }
  } catch (e) {
    console.error('Error fetching mix stats:', e);
  }
}

const isLoggedIn = !!partner;

const formatDate = (dateStr: string) => {
  if (!dateStr) return 'Unknown';
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });
};

const formatNumber = (num: number) => new Intl.NumberFormat('en-GB').format(num || 0);

export const prerender = false;
---

<Layout title="Mix Analytics | Fresh Wax">
  <Header />
  
  <main class="stats-main">
    <div class="container">
      <!-- Page Header -->
      <div class="page-header">
        <div class="header-left">
          <a href="/artist/dashboard" class="back-link">‚Üê Dashboard</a>
          <h1>Mix Analytics</h1>
          <p>Track performance across all your DJ mixes</p>
        </div>
      </div>

      {!isLoggedIn ? (
        <div class="login-prompt">
          <p>Please log in to view your analytics.</p>
          <a href="/login" class="login-btn">Sign In</a>
        </div>
      ) : mixes.length === 0 ? (
        <div class="empty-state">
          <div class="empty-icon">üìä</div>
          <h2>No analytics yet</h2>
          <p>Upload your first mix to start tracking performance!</p>
          <a href="/upload-mix" class="upload-btn">Upload Mix</a>
        </div>
      ) : (
        <>
          <!-- Total Stats Overview -->
          <div class="totals-section">
            <h2>Overall Performance</h2>
            <div class="totals-grid">
              <div class="total-card">
                <div class="total-icon">üéß</div>
                <div class="total-value">{totals.mixes}</div>
                <div class="total-label">Total Mixes</div>
              </div>
              <div class="total-card highlight">
                <div class="total-icon">‚ñ∂Ô∏è</div>
                <div class="total-value">{formatNumber(totals.plays)}</div>
                <div class="total-label">Total Plays</div>
              </div>
              <div class="total-card red">
                <div class="total-icon">‚ù§Ô∏è</div>
                <div class="total-value">{formatNumber(totals.likes)}</div>
                <div class="total-label">Total Likes</div>
              </div>
              <div class="total-card">
                <div class="total-icon">‚¨áÔ∏è</div>
                <div class="total-value">{formatNumber(totals.downloads)}</div>
                <div class="total-label">Downloads</div>
              </div>
            </div>
          </div>

          <!-- Individual Mix Stats -->
          <div class="mixes-section">
            <div class="section-header-row">
              <div>
                <h2>Mix Breakdown</h2>
                <p class="section-desc">Sorted by rating (Downloads√ó3 + Likes√ó2 + Comments√ó1 + Plays√ó0.1)</p>
              </div>
              <a href="/dj-mix-chart" class="chart-link">üèÜ View All-Time Chart ‚Üí</a>
            </div>
            
            <div class="mix-stats-list">
              {mixes.map((mix, index) => (
                <div class="mix-stat-card">
                  <div class="mix-rank">#{index + 1}</div>
                  
                  <div class="mix-info">
                    <img 
                      src={mix.artworkUrl || mix.artwork_url || '/place-holder.webp'} 
                      alt={mix.title || mix.mixTitle}
                      class="mix-artwork"
                    />
                    <div class="mix-details">
                      <h3>{mix.title || mix.mixTitle}</h3>
                      <div class="mix-meta">
                        <span>{mix.genre || 'Jungle'}</span>
                        <span>‚Ä¢</span>
                        <span>{mix.duration || mix.durationFormatted || '0:00'}</span>
                        <span>‚Ä¢</span>
                        <span>{formatDate(mix.createdAt || mix.uploadedAt)}</span>
                      </div>
                    </div>
                  </div>
                  
                  <div class="mix-stats-grid">
                    <div class="stat-item">
                      <span class="stat-value">{formatNumber(mix.plays || 0)}</span>
                      <span class="stat-label">Plays</span>
                    </div>
                    <div class="stat-item red">
                      <span class="stat-value">{formatNumber(mix.likes || 0)}</span>
                      <span class="stat-label">Likes</span>
                    </div>
                    <div class="stat-item">
                      <span class="stat-value">{formatNumber(mix.downloads || 0)}</span>
                      <span class="stat-label">Downloads</span>
                    </div>
                    <div class="stat-item green">
                      <span class="stat-value">{Math.round(mix.engagementScore)}</span>
                      <span class="stat-label">Rating</span>
                    </div>
                    <div class="stat-item">
                      <span class="stat-value">{mix.commentCount || mix.comments?.length || 0}</span>
                      <span class="stat-label">Comments</span>
                    </div>
                  </div>
                  
                  <div class="mix-actions">
                    <a href={`/dj-mix/${mix.id}`} class="view-btn" target="_blank">View Mix ‚Üí</a>
                  </div>
                  
                  {/* Activity timestamps */}
                  {(mix.last_played_date || mix.last_liked_date || mix.last_downloaded_date) && (
                    <div class="activity-row">
                      {mix.last_played_date && (
                        <span class="activity-item">Last played: {formatDate(mix.last_played_date)}</span>
                      )}
                      {mix.last_liked_date && (
                        <span class="activity-item">Last liked: {formatDate(mix.last_liked_date)}</span>
                      )}
                      {mix.last_downloaded_date && (
                        <span class="activity-item">Last download: {formatDate(mix.last_downloaded_date)}</span>
                      )}
                    </div>
                  )}
                </div>
              ))}
            </div>
          </div>
        </>
      )}
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .stats-main {
    min-height: calc(100vh - 200px);
    background: linear-gradient(to bottom, #000000, #111827);
