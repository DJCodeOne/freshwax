    modal.style.display = 'flex';

    try {
      // Upload images
      const imageUrls = [];
      const imagesToUpload = uploadedImages.filter(img => img && img.file && !img.uploaded);

      for (let i = 0; i < imagesToUpload.length; i++) {
        status.textContent = `Uploading image ${i + 1} of ${imagesToUpload.length}...`;
        progress.style.width = `${((i + 1) / (imagesToUpload.length + tracks.length + 2)) * 100}%`;

        const imgData = new FormData();
        imgData.append('file', imagesToUpload[i].file);
        imgData.append('sellerId', sellerInfo.id);
        imgData.append('imageIndex', i.toString());

        const response = await fetch('/api/vinyl/upload-image', {
          method: 'POST',
          body: imgData
        });

        const result = await response.json();
        if (!result.success) {
          throw new Error(result.error || 'Failed to upload image');
        }

        imageUrls.push(result.url);
      }

      // Upload track audio samples
      const tracksWithAudio = tracks.filter(t => t.audioBlob);
      const uploadedTracks = [];

      for (let i = 0; i < tracks.length; i++) {
        const track = tracks[i];
        let audioUrl = null;

        if (track.audioBlob) {
          status.textContent = `Uploading audio for track ${i + 1}...`;
          progress.style.width = `${((imagesToUpload.length + i + 1) / (imagesToUpload.length + tracks.length + 2)) * 100}%`;

          const audioData = new FormData();
