<!-- LameJS is loaded above -->

<script type="module">
  // Import WaveSurfer as ES module
  import WaveSurfer from 'https://cdn.jsdelivr.net/npm/wavesurfer.js@7/dist/wavesurfer.esm.js';
  import RegionsPlugin from 'https://cdn.jsdelivr.net/npm/wavesurfer.js@7/dist/plugins/regions.esm.js';

  import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js';
  import { getAuth, onAuthStateChanged } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js';

  const firebaseConfig = {
    apiKey: 'AIzaSyBiZGsWdvA9ESm3OsUpZ-VQpwqMjMpBY6g',
    authDomain: "freshwax-store.firebaseapp.com",
    projectId: "freshwax-store"
  };

  const app = initializeApp(firebaseConfig);
  const auth = getAuth(app);

  let currentUser = null;
  let sellerInfo = null;
  let uploadedImages = [];

  const MAX_AUDIO_DURATION = 90; // 1:30 in seconds

  // Tracklist state - array of track objects
  let tracks = [];
  let trackIdCounter = 0;

  // Modal waveform state
  let modalWavesurfer = null;
  let modalActiveRegion = null;
  let modalOriginalAudioBuffer = null;
  let modalRegionStart = 0;
  let modalRegionEnd = 0;
  let currentEditingTrackId = null;

  onAuthStateChanged(auth, async (user) => {
    if (!user) {
      window.location.href = '/login?redirect=/artist/vinyl/new';
      return;
    }
    currentUser = user;

    // Fetch seller info
    try {
      const response = await fetch(`/api/get-user-type?uid=${user.uid}`);
      const data = await response.json();
      if (!data.isVinylSeller) {
        alert('You need to be an approved vinyl seller to list records.');
        window.location.href = '/artist/dashboard';
        return;
      }
      sellerInfo = { id: user.uid, name: data.displayName || user.displayName || 'Unknown' };
    } catch (e) {
      console.error('Failed to verify seller status:', e);
    }
  });

  // Image upload handlers
  document.querySelectorAll('.image-input').forEach(input => {
    input.addEventListener('change', async (e) => {
      const file = e.target.files[0];
      if (!file) return;

      const slot = e.target.closest('.image-slot');
      const index = parseInt(slot.dataset.index);
      const preview = slot.querySelector('.image-preview');
      const removeBtn = slot.querySelector('.remove-btn');

      // Show preview
      const reader = new FileReader();
      reader.onload = (e) => {
        preview.style.backgroundImage = `url(${e.target.result})`;
        slot.classList.remove('empty');
        slot.classList.add('has-image');
        removeBtn.style.display = 'block';
      };
      reader.readAsDataURL(file);

      // Store for upload
      uploadedImages[index] = { file, uploaded: false, url: null };
    });
  });

  // Remove image handlers
  document.querySelectorAll('.remove-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const slot = e.target.closest('.image-slot');
      const index = parseInt(slot.dataset.index);
      const preview = slot.querySelector('.image-preview');
      const input = slot.querySelector('.image-input');

      preview.style.backgroundImage = '';
      slot.classList.add('empty');
      slot.classList.remove('has-image');
      btn.style.display = 'none';
      input.value = '';
      uploadedImages[index] = null;
    });
  });

  // =====================
  // TRACKLIST MANAGEMENT
  // =====================

  function createTrackRow(trackId) {
    const track = tracks.find(t => t.id === trackId);
    if (!track) return null;

    const row = document.createElement('div');
    row.className = 'track-row';
    row.dataset.trackId = trackId;

    row.innerHTML = `
      <div class="track-number">${tracks.indexOf(track) + 1}</div>
      <div class="track-fields">
        <div class="track-field track-side">
          <select class="track-side-select" data-field="side">
            <option value="A" ${track.side === 'A' ? 'selected' : ''}>A</option>
            <option value="B" ${track.side === 'B' ? 'selected' : ''}>B</option>
            <option value="C" ${track.side === 'C' ? 'selected' : ''}>C</option>
            <option value="D" ${track.side === 'D' ? 'selected' : ''}>D</option>
          </select>
        </div>
        <div class="track-field track-name-field">
          <input type="text" class="track-name-input" data-field="name" placeholder="Track name" value="${track.name}" maxlength="100">
        </div>
        <div class="track-field track-sample">
          <button type="button" class="add-sample-btn ${track.audioBlob ? 'has-sample' : ''}" data-action="add-sample">
            ${track.audioBlob ? `<span class="sample-icon">&#9834;</span> ${formatDuration(track.audioDuration)}` : '<span class="sample-icon">+</span> Sample'}
          </button>
        </div>
      </div>
      <button type="button" class="remove-track-btn" data-action="remove">&times;</button>
    `;

    // Event listeners for this row
    row.querySelector('.track-side-select').addEventListener('change', (e) => {
      track.side = e.target.value;
    });

    row.querySelector('.track-name-input').addEventListener('input', (e) => {
      track.name = e.target.value;
    });

    row.querySelector('.add-sample-btn').addEventListener('click', () => {
      openWaveformModal(trackId);
    });

    row.querySelector('.remove-track-btn').addEventListener('click', () => {
      removeTrack(trackId);
    });

    return row;
  }

  function addTrack() {
    const trackId = ++trackIdCounter;
    const track = {
      id: trackId,
      side: 'A',
      name: '',
      audioFile: null,
      audioBlob: null,
      audioDuration: 0,
      regionStart: 0,
      regionEnd: 0
    };
    tracks.push(track);
    renderTracklist();
  }

  function removeTrack(trackId) {
    tracks = tracks.filter(t => t.id !== trackId);
    renderTracklist();
  }

  function renderTracklist() {
    const container = document.getElementById('tracklistContainer');
    container.innerHTML = '';

    tracks.forEach((track, index) => {
      const row = createTrackRow(track.id);
      if (row) {
        // Update track number
        row.querySelector('.track-number').textContent = index + 1;
        container.appendChild(row);
      }
    });
  }

  // Add Track button
  document.getElementById('addTrackBtn').addEventListener('click', addTrack);

  // =====================
  // WAVEFORM MODAL
  // =====================

  function openWaveformModal(trackId) {
    currentEditingTrackId = trackId;
    const track = tracks.find(t => t.id === trackId);
    if (!track) return;

    const modal = document.getElementById('waveformModal');
    const audioLabel = document.getElementById('modalAudioLabel');
    const audioLoading = document.getElementById('modalAudioLoading');
    const waveformEditor = document.getElementById('modalWaveformEditor');
    const confirmBtn = document.getElementById('confirmWaveformModal');

    // Reset modal state
    audioLabel.style.display = 'flex';
    audioLoading.style.display = 'none';
    waveformEditor.style.display = 'none';
    confirmBtn.disabled = true;

    // If track already has audio, reload it
    if (track.audioFile) {
      loadAudioIntoModal(track.audioFile, track.regionStart, track.regionEnd);
    }

    modal.style.display = 'flex';
  }

  function closeWaveformModal() {
    const modal = document.getElementById('waveformModal');
    modal.style.display = 'none';

    // Clean up waveform
    if (modalWavesurfer) {
      modalWavesurfer.destroy();
      modalWavesurfer = null;
    }
    modalActiveRegion = null;
    modalOriginalAudioBuffer = null;
    currentEditingTrackId = null;

    // Reset input
    document.getElementById('modalAudioInput').value = '';
  }

  // Modal close buttons
  document.getElementById('closeWaveformModal').addEventListener('click', closeWaveformModal);
  document.getElementById('cancelWaveformModal').addEventListener('click', closeWaveformModal);

  // Close on overlay click
  document.getElementById('waveformModal').addEventListener('click', (e) => {
    if (e.target.id === 'waveformModal') {
      closeWaveformModal();
    }
  });

  // Initialize modal waveform with regions plugin
  function initModalWaveform() {
    if (modalWavesurfer) {
      modalWavesurfer.destroy();
    }

    // Create regions plugin instance (imported at top of module)
    const regions = RegionsPlugin.create();

    modalWavesurfer = WaveSurfer.create({
      container: '#modalWaveform',
      waveColor: '#999',
      progressColor: '#000',
      cursorColor: '#333',
      height: 100,
      normalize: true,
      plugins: [regions],
    });

    // Region event handlers
    regions.on('region-updated', (region) => {
      // Enforce max duration
      let start = region.start;
      let end = region.end;
      let duration = end - start;

      if (duration > MAX_AUDIO_DURATION) {
        end = start + MAX_AUDIO_DURATION;
        region.setOptions({ start, end });
        duration = MAX_AUDIO_DURATION;
      }

      modalRegionStart = start;
      modalRegionEnd = end;
      updateModalRegionDisplay();
    });

    regions.on('region-clicked', (region, e) => {
      e.stopPropagation();
      region.play();
    });

    return { wavesurfer: modalWavesurfer, regions };
  }

  function updateModalRegionDisplay() {
    const duration = modalRegionEnd - modalRegionStart;
    document.getElementById('modalRegionStart').value = formatDuration(modalRegionStart);
    document.getElementById('modalRegionEnd').value = formatDuration(modalRegionEnd);
    document.getElementById('modalRegionDuration').textContent = formatDuration(duration);

    // Show warning if at max
    const durationEl = document.getElementById('modalRegionDuration');
    if (duration >= MAX_AUDIO_DURATION - 0.5) {
      durationEl.style.color = '#dc2626';
    } else {
      durationEl.style.color = '#000';
    }

    // Enable confirm button
    document.getElementById('confirmWaveformModal').disabled = duration <= 0;
  }

  async function loadAudioIntoModal(file, startAt = 0, endAt = null) {
    const audioLabel = document.getElementById('modalAudioLabel');
    const audioLoading = document.getElementById('modalAudioLoading');
    const waveformEditor = document.getElementById('modalWaveformEditor');

    // Show loading state
    audioLabel.style.display = 'none';
    audioLoading.style.display = 'flex';

    try {
      const { wavesurfer: ws, regions } = initModalWaveform();

      // Load the file directly as blob (avoids CSP blob: URL issues)
      await ws.loadBlob(file);

      // Store decoded audio for later extraction
      const audioContext = new (window.AudioContext || window.webkitAudioContext)();
      const arrayBuffer = await file.arrayBuffer();
      modalOriginalAudioBuffer = await audioContext.decodeAudioData(arrayBuffer);

      // Get duration and set initial region
      const totalDuration = ws.getDuration();
      const initialEnd = endAt !== null ? Math.min(endAt, totalDuration) : Math.min(totalDuration, MAX_AUDIO_DURATION);
      const initialStart = Math.min(startAt, totalDuration);

      // Create the selection region
      modalActiveRegion = regions.addRegion({
        start: initialStart,
        end: initialEnd,
        color: 'rgba(0, 0, 0, 0.2)',
        drag: true,
        resize: true,
        minLength: 5,
      });

      modalRegionStart = initialStart;
      modalRegionEnd = initialEnd;

      // Update display
      document.getElementById('modalTrackName').textContent = file.name;
      updateModalRegionDisplay();

      // Show waveform editor
      audioLoading.style.display = 'none';
      waveformEditor.style.display = 'block';

