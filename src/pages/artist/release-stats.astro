---
// /src/pages/artist/release-stats.astro
// Release Analytics - Sales, plays, and performance tracking
// Source of truth: salesLedger collection

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getDocument, queryCollection } from '../../lib/firebase-rest';
import { saQueryCollection } from '../../lib/firebase-service-account';

const partnerId = Astro.cookies.get('partnerId')?.value || '';
let partner: any = null;
let releases: any[] = [];
let ledgerEntries: any[] = [];
let totals = {
  releases: 0,
  liveReleases: 0,
  pendingReleases: 0,
  plays: 0,
  sales: 0,
  revenue: 0,
  earnings: 0
};

// Get service account credentials
const env = (Astro.locals as any)?.runtime?.env;
const projectId = env?.FIREBASE_PROJECT_ID || import.meta.env.FIREBASE_PROJECT_ID || 'freshwax-store';
const clientEmail = env?.FIREBASE_CLIENT_EMAIL || import.meta.env.FIREBASE_CLIENT_EMAIL;
const privateKey = env?.FIREBASE_PRIVATE_KEY || import.meta.env.FIREBASE_PRIVATE_KEY;

let serviceAccountKey: string | null = null;
if (clientEmail && privateKey) {
  serviceAccountKey = JSON.stringify({
    type: 'service_account',
    project_id: projectId,
    private_key_id: 'auto',
    private_key: privateKey.replace(/\\n/g, '\n'),
    client_email: clientEmail,
    client_id: '',
    auth_uri: 'https://accounts.google.com/o/oauth2/auth',
    token_uri: 'https://oauth2.googleapis.com/token'
  });
}

// Build a map of release sales from ledger
const releaseSalesMap = new Map<string, { sales: number; revenue: number; earnings: number }>();

if (partnerId) {
  try {
    partner = await getDocument('artists', partnerId);
    if (partner) {
      // Query releases by user ID fields
      const releaseMap = new Map<string, any>();

      // Query by submitterId (primary - used for payouts)
      const bySubmitterId = await queryCollection('releases', {
        filters: [{ field: 'submitterId', op: 'EQUAL', value: partnerId }]
      });
      bySubmitterId.forEach(r => releaseMap.set(r.id, r));

      // Query by uploadedBy (fallback)
      const byUploadedBy = await queryCollection('releases', {
        filters: [{ field: 'uploadedBy', op: 'EQUAL', value: partnerId }]
      });
      byUploadedBy.forEach(r => releaseMap.set(r.id, r));

      // Query by userId (fallback)
      const byUserId = await queryCollection('releases', {
        filters: [{ field: 'userId', op: 'EQUAL', value: partnerId }]
      });
      byUserId.forEach(r => releaseMap.set(r.id, r));

      releases = Array.from(releaseMap.values());
      const releaseIds = releases.map(r => r.id);

      // Query salesLedger for accurate sales data (source of truth)
      if (serviceAccountKey && releaseIds.length > 0) {
        try {
          const allLedgerEntries = await saQueryCollection(serviceAccountKey, projectId, 'salesLedger', {
            orderBy: { field: 'timestamp', direction: 'DESCENDING' },
            limit: 1000
          });

          // Filter entries that contain this artist's releases
          allLedgerEntries.forEach((entry: any) => {
            const artistItems = (entry.items || []).filter((item: any) =>
              (item.type === 'release' || item.type === 'track') && releaseIds.includes(item.id)
            );

            if (artistItems.length > 0) {
              ledgerEntries.push(entry);

              // Aggregate sales by release ID
              artistItems.forEach((item: any) => {
                const existing = releaseSalesMap.get(item.id) || { sales: 0, revenue: 0, earnings: 0 };
                existing.sales += item.quantity || 1;
                existing.revenue += item.lineTotal || item.unitPrice || 0;
                releaseSalesMap.set(item.id, existing);
              });

              // Add artist payout to totals
              totals.earnings += entry.artistPayout || entry.actualArtistPayout || 0;
            }
          });
        } catch (ledgerErr) {
          console.error('Error fetching ledger entries:', ledgerErr);
        }
      }

      // Calculate totals using ledger data where available
      releases.forEach(release => {
        totals.plays += release.stats?.plays || release.plays || 0;

        // Use ledger data if available, otherwise fall back to release stats
        const ledgerData = releaseSalesMap.get(release.id);
        if (ledgerData) {
          totals.sales += ledgerData.sales;
          totals.revenue += ledgerData.revenue;
          // Store ledger sales on the release for display
          release.ledgerSales = ledgerData.sales;
          release.ledgerRevenue = ledgerData.revenue;
        } else {
          totals.sales += release.stats?.downloads || release.sales || 0;
          totals.revenue += (release.stats?.downloads || release.sales || 0) * (release.pricePerSale || release.price || 0);
        }

        if (release.status === 'live') {
          totals.liveReleases++;
        } else {
          totals.pendingReleases++;
        }
      });

      totals.releases = releases.length;

      // Sort by sales descending (best sellers first)
      releases.sort((a, b) => {
        const aSales = a.ledgerSales ?? a.stats?.downloads ?? a.sales ?? 0;
        const bSales = b.ledgerSales ?? b.stats?.downloads ?? b.sales ?? 0;
        return bSales - aSales;
      });
    }
  } catch (e) {
    console.error('Error fetching release stats:', e);
  }
}

const isLoggedIn = !!partner;

const formatDate = (dateStr: string) => {
  if (!dateStr) return 'Unknown';
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });
};

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('en-GB', { style: 'currency', currency: 'GBP' }).format(price || 0);
};

const formatNumber = (num: number) => new Intl.NumberFormat('en-GB').format(num || 0);

export const prerender = false;
---

<Layout title="Release Analytics">
  <Header />
  
  <main class="stats-main">
    <div class="container">
      <!-- Page Header -->
      <div class="page-header">
        <div class="header-left">
          <a href="/artist/dashboard" class="back-link">‚Üê Dashboard</a>
          <h1>Release Analytics</h1>
          <p>Track sales and performance across your releases</p>
        </div>
      </div>

      {!isLoggedIn ? (
        <div class="login-prompt">
          <p>Please log in to view your analytics.</p>
          <a href="/login" class="login-btn">Sign In</a>
        </div>
      ) : releases.length === 0 ? (
        <div class="empty-state">
          <div class="empty-icon">üìä</div>
          <h2>No analytics yet</h2>
          <p>Upload your first release to start tracking performance!</p>
          <a href="/pro/releases/new" class="upload-btn">Upload Release</a>
        </div>
      ) : (
        <>
          <!-- Total Stats Overview -->
          <div class="totals-section">
            <h2>Overall Performance</h2>
            <div class="totals-grid">
              <div class="total-card">
                <div class="total-icon">üíø</div>
                <div class="total-value">{totals.releases}</div>
                <div class="total-label">Total Releases</div>
              </div>
              <div class="total-card green">
                <div class="total-icon">üü¢</div>
                <div class="total-value">{totals.liveReleases}</div>
                <div class="total-label">Live</div>
              </div>
              <div class="total-card amber">
                <div class="total-icon">üü°</div>
                <div class="total-value">{totals.pendingReleases}</div>
                <div class="total-label">Pending</div>
              </div>
              <div class="total-card highlight">
                <div class="total-icon">üõí</div>
                <div class="total-value">{formatNumber(totals.sales)}</div>
                <div class="total-label">Total Sales</div>
              </div>
              <div class="total-card">
                <div class="total-icon">‚ñ∂Ô∏è</div>
                <div class="total-value">{formatNumber(totals.plays)}</div>
                <div class="total-label">Total Plays</div>
              </div>
              <div class="total-card green">
                <div class="total-icon">üí∞</div>
                <div class="total-value">{formatPrice(totals.revenue)}</div>
                <div class="total-label">Revenue</div>
              </div>
            </div>
          </div>

          <!-- Individual Release Stats -->
          <div class="releases-section">
            <h2>Release Breakdown</h2>
            <p class="section-desc">Sorted by sales (best sellers first)</p>
            
            <div class="release-stats-list">
              {releases.map((release, index) => (
                <div class="release-stat-card">
                  <div class="release-rank">#{index + 1}</div>
                  
                  <div class="release-info">
                    <img 
                      src={release.coverArtUrl || release.artworkUrl || release.artwork_url || release.coverUrl || '/place-holder.webp'} 
                      alt={release.releaseName || release.title}
                      class="release-artwork"
                    />
                    <div class="release-details">
                      <h3>{release.releaseName || release.title}</h3>
                      <div class="release-meta">
                        <span>{release.genre || 'Drum and Bass'}</span>
                        <span>‚Ä¢</span>
                        <span>{formatDate(release.releaseDate || release.createdAt || release.uploadedAt)}</span>
                        <span class={`status-dot ${release.status || 'pending'}`}></span>
                      </div>
                    </div>
                  </div>
                  
                  <div class="release-stats-grid">
                    <div class="stat-item">
                      <span class="stat-value">{formatNumber(release.ledgerSales ?? release.stats?.downloads ?? release.sales ?? 0)}</span>
                      <span class="stat-label">Sales</span>
                    </div>
                    <div class="stat-item">
                      <span class="stat-value">{formatNumber(release.stats?.plays || release.plays || 0)}</span>
                      <span class="stat-label">Plays</span>
                    </div>
                    <div class="stat-item green">
                      <span class="stat-value">{formatPrice(release.pricePerSale || release.price || 0)}</span>
                      <span class="stat-label">Price</span>
                    </div>
                    <div class="stat-item highlight">
                      <span class="stat-value">{formatPrice(release.ledgerRevenue ?? ((release.stats?.downloads || release.sales || 0) * (release.pricePerSale || release.price || 0)))}</span>
                      <span class="stat-label">Revenue</span>
                    </div>
                  </div>
                  
                  <div class="release-actions">
                    <a href={`/item/${release.id}`} class="view-btn" target="_blank">View ‚Üí</a>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </>
      )}
    </div>
  </main>

  <Footer />
</Layout>

