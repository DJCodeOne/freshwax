// /src/pages/artist/dashboard.astro
// Fresh Wax Partner Dashboard - 3 Role System
// Roles: isArtist (releases), isDJ (mixes), isMerchSupplier (view stock/sales only)

import { initializeApp, cert, getApps } from 'firebase-admin/app';
import { getFirestore } from 'firebase-admin/firestore';

// Initialize Firebase Admin
if (!getApps().length) {
  initializeApp({
    credential: cert({
      projectId: import.meta.env.FIREBASE_PROJECT_ID,
      clientEmail: import.meta.env.FIREBASE_CLIENT_EMAIL,
      privateKey: import.meta.env.FIREBASE_PRIVATE_KEY?.replace(/\\n/g, '\n'),
    }),
  });
}

const db = getFirestore();

// This would come from session/auth - placeholder for now
// In production, get this from Firebase Auth session cookie
const partnerId = Astro.cookies.get('partnerId')?.value || '';
let partner = null;
let stats = {
  releases: 0,
  liveReleases: 0,
  mixes: 0,
  mixPlays: 0,
  merchProducts: 0,
  merchSold: 0,
  earnings: 0
};

if (partnerId) {
  try {
    const partnerDoc = await db.collection('artists').doc(partnerId).get();
    if (partnerDoc.exists) {
      partner = { id: partnerDoc.id, ...partnerDoc.data() };
      
      // Fetch stats based on role
      if (partner.isArtist) {
        const releasesSnap = await db.collection('releases')
          .where('artistId', '==', partnerId)
          .select('status')
          .get();
        stats.releases = releasesSnap.size;
        stats.liveReleases = releasesSnap.docs.filter(d => d.data().status === 'live').length;
      }
      
      if (partner.isDJ) {
        const mixesSnap = await db.collection('dj-mixes')
          .where('userId', '==', partnerId)
          .select('plays')
          .get();
        stats.mixes = mixesSnap.size;
        stats.mixPlays = mixesSnap.docs.reduce((sum, d) => sum + (d.data().plays || 0), 0);
      }
      
      if (partner.isMerchSupplier) {
        // Get merch linked to this supplier
        const merchSnap = await db.collection('merch')
          .where('supplierId', '==', partnerId)
          .select('totalStock', 'totalSold')
          .get();
        stats.merchProducts = merchSnap.size;
        stats.merchSold = merchSnap.docs.reduce((sum, d) => sum + (d.data().totalSold || 0), 0);
        
        // Calculate earnings from orders
        // This is simplified - in production you'd have a proper earnings collection
      }
    }
  } catch (e) {
    console.error('Error fetching partner:', e);
  }
}

// If not logged in, we'll show login prompt
const isLoggedIn = !!partner;
const isApproved = partner?.approved === true;

// Determine roles
const isArtist = partner?.isArtist || false;
const isDJ = partner?.isDJ || false;
const isMerchSupplier = partner?.isMerchSupplier || false;

// Format number
const formatNumber = (num) => new Intl.NumberFormat('en-GB').format(num || 0);
const formatCurrency = (amount) => new Intl.NumberFormat('en-GB', { style: 'currency', currency: 'GBP' }).format(amount || 0);
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Partner Dashboard | Fresh Wax</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
