      align-items: center;
      justify-content: center;
      font-size: 1.25rem;
      font-weight: 600;
      color: #fff;
    }
    
    .welcome-text h1 {
      font-size: 1.5rem;
      font-weight: 700;
      color: #fff;
    }
    
    .welcome-text p {
      font-size: 0.875rem;
      color: #888;
    }
    
    .role-badges {
      display: flex;
      gap: 0.5rem;
    }
    
    .role-badge {
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 500;
    }
    
    .role-artist { background: rgba(59, 130, 246, 0.2); color: #60a5fa; border: 1px solid rgba(59, 130, 246, 0.3); }
