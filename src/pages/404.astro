---
// src/pages/404.astro
// Custom 404 error page
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found - Fresh Wax" noindex={true}>
  <Header />

  <main class="error-page">
    <div class="error-container">
      <div class="error-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <circle cx="12" cy="12" r="10"/>
          <path d="M8 15s1.5 2 4 2 4-2 4-2"/>
          <line x1="9" y1="9" x2="9.01" y2="9"/>
          <line x1="15" y1="9" x2="15.01" y2="9"/>
        </svg>
      </div>

      <h1>4<span class="red">0</span>4</h1>
      <p class="error-message">This record seems to be missing from the crate.</p>
      <p class="error-sub">The page you're looking for doesn't exist or has been moved.</p>

      <div class="error-actions">
        <a href="/" class="cta-btn">Back to Home</a>
        <a href="/releases" class="cta-btn secondary">Browse Releases</a>
      </div>

      <div class="error-links">
        <p>Or try one of these:</p>
        <div class="link-grid">
          <a href="/releases">New Releases</a>
          <a href="/dj-mixes">DJ Mixes</a>
          <a href="/account/dashboard">My Account</a>
          <a href="/account/dj-lobby">DJ Lobby</a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .error-page {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    background: linear-gradient(180deg, #0a0a0a 0%, #111 100%);
  }

  .error-container {
    text-align: center;
    max-width: 600px;
  }

  .error-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 2rem;
    color: #666;
  }

  .error-icon svg {
    width: 100%;
    height: 100%;
  }

  h1 {
    font-size: 8rem;
    font-weight: 700;
    line-height: 1;
    margin: 0 0 1rem;
    color: #fff;
    letter-spacing: -0.05em;
  }

  .red {
    color: #ef4444;
  }

  .error-message {
    font-size: 1.5rem;
    color: #fff;
    margin: 0 0 0.5rem;
  }

  .error-sub {
    font-size: 1rem;
    color: #888;
    margin: 0 0 2rem;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .cta-btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .cta-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(239, 68, 68, 0.3);
  }

  .cta-btn.secondary {
    background: transparent;
    border: 1px solid #333;
    color: #ccc;
  }

  .cta-btn.secondary:hover {
    background: rgba(255,255,255,0.05);
    border-color: #555;
    box-shadow: none;
  }

  .error-links {
    padding-top: 2rem;
    border-top: 1px solid #222;
  }

  .error-links p {
    color: #666;
    margin-bottom: 1rem;
  }

  .link-grid {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .link-grid a {
    color: #888;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .link-grid a:hover {
    color: #ef4444;
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 5rem;
    }

    .error-message {
      font-size: 1.25rem;
    }

    .error-actions {
      flex-direction: column;
    }

    .cta-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>
