---
// /src/pages/dj-mix-chart.astro
// All-Time DJ Mix Chart - Ranked by engagement score
// Rating = (Downloads x 3) + (Likes x 2) + (Comments x 1) + (Plays x 0.1)

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { initializeApp, cert, getApps } from 'firebase-admin/app';
import { getFirestore } from 'firebase-admin/firestore';

// Initialize Firebase Admin
if (!getApps().length) {
  initializeApp({
    credential: cert({
      projectId: import.meta.env.FIREBASE_PROJECT_ID,
      clientEmail: import.meta.env.FIREBASE_CLIENT_EMAIL,
      privateKey: import.meta.env.FIREBASE_PRIVATE_KEY?.replace(/\\n/g, '\n'),
    }),
  });
}

const db = getFirestore();

// Rating calculation function
function calculateRating(mix: any): number {
  const downloads = mix.downloads || 0;
  const likes = mix.likes || 0;
  const comments = mix.commentCount || mix.comments?.length || 0;
  const plays = mix.plays || 0;
  
  // Weighted score: downloads most valuable, then likes, comments, plays
  const score = (downloads * 3) + (likes * 2) + (comments * 1) + (plays * 0.1);
  return score;
}

// Convert score to 5-star rating based on engagement thresholds
function scoreToStars(score: number): number {
  if (score >= 100) return 5.0;
  if (score >= 50) return 4.0 + ((score - 50) / 50);
  if (score >= 25) return 3.0 + ((score - 25) / 25);
  if (score >= 10) return 2.0 + ((score - 10) / 15);
  if (score >= 1) return 1.0 + ((score - 1) / 9);
  return 0;
}

let mixes: any[] = [];

try {
  // Get all mixes (no index required)
  const mixesSnap = await db.collection('dj-mixes').get();
  
  // Filter to published/live mixes and calculate ratings
  mixes = mixesSnap.docs
    .map(doc => {
      const data = { id: doc.id, ...doc.data() };
      data.engagementScore = calculateRating(data);
      return data;
    })
    .filter(mix => {
      return mix.published === true || mix.status === 'live';
    });
  
  // Add star rating based on engagement score
  mixes = mixes.map(mix => ({
    ...mix,
    starRating: scoreToStars(mix.engagementScore)
  }));
  
  // Sort by engagement score descending
  mixes.sort((a, b) => b.engagementScore - a.engagementScore);
  
} catch (e) {
  console.error('Error fetching mixes:', e);
}

const formatNumber = (num: number) => new Intl.NumberFormat('en-GB').format(num || 0);

// Render stars
const renderStars = (rating: number) => {
  const fullStars = Math.floor(rating);
  const hasHalf = rating % 1 >= 0.5;
  const emptyStars = 5 - fullStars - (hasHalf ? 1 : 0);
  return '‚òÖ'.repeat(fullStars) + (hasHalf ? '¬Ω' : '') + '‚òÜ'.repeat(emptyStars);
};

export const prerender = false;
---

<Layout title="DJ Mix Chart | Fresh Wax">
  <Header />
  
  <main class="chart-main">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <span class="hero-badge">üèÜ All-Time Chart</span>
        <h1>DJ MIX CHART</h1>
        <p class="subtitle-red">Top mixes ranked by engagement</p>
      </div>
    </section>

    <div class="container">
      {mixes.length === 0 ? (
        <div class="empty-state">
          <div class="empty-icon">üéß</div>
          <h2>No mixes yet</h2>
          <p>Be the first to upload a mix!</p>
          <a href="/upload-mix" class="upload-btn">Upload Mix</a>
        </div>
      ) : (
        <div class="chart-list">
          {mixes.slice(0, 50).map((mix, index) => (
            <a href={`/dj-mix/${mix.id}`} class={`chart-item ${index < 3 ? 'top-three' : ''}`}>
              <div class="rank">
                {index === 0 && <span class="medal gold">ü•á</span>}
                {index === 1 && <span class="medal silver">ü•à</span>}
                {index === 2 && <span class="medal bronze">ü•â</span>}
                {index > 2 && <span class="rank-number">{index + 1}</span>}
              </div>
              
              <img 
                src={mix.artworkUrl || mix.artwork_url || '/logo.webp'} 
                alt={mix.title || mix.mixTitle}
                class="artwork"
              />
              
              <div class="mix-info">
                <h2>{mix.title || mix.mixTitle}</h2>
                <p class="dj-name">{mix.djName || mix.dj_name}</p>
                <div class="mix-meta">
                  <span>{mix.genre || 'Jungle'}</span>
                  <span>‚Ä¢</span>
                  <span>{mix.duration || mix.durationFormatted || '0:00'}</span>
                </div>
              </div>
              
              <div class="rating-section">
                <div class="star-rating" title={`${mix.starRating.toFixed(1)} / 5`}>
                  <span class="stars">{renderStars(mix.starRating)}</span>
                  <span class="rating-value">{mix.starRating.toFixed(1)}</span>
                </div>
                <div class="score">
                  {Math.round(mix.engagementScore)} pts
                </div>
              </div>
              
              <div class="stats">
                <div class="stat">
                  <span class="stat-value">{formatNumber(mix.plays || 0)}</span>
                  <span class="stat-label">plays</span>
                </div>
                <div class="stat">
                  <span class="stat-value red">{formatNumber(mix.likes || 0)}</span>
                  <span class="stat-label">likes</span>
                </div>
                <div class="stat">
                  <span class="stat-value">{formatNumber(mix.downloads || 0)}</span>
                  <span class="stat-label">downloads</span>
                </div>
                <div class="stat">
                  <span class="stat-value">{mix.commentCount || mix.comments?.length || 0}</span>
                  <span class="stat-label">comments</span>
                </div>
              </div>
              
              <div class="arrow">‚Üí</div>
            </a>
          ))}
        </div>
      )}
    </div>
  </main>

  <Footer />
</Layout>

<style>
