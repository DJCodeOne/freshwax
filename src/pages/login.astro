---
// src/pages/login.astro (Artist Login)
// OPTIMIZED: Reduced Firebase reads, better error handling, redirect support
export const prerender = false;

const response = Astro.response;
response.headers.set('Cache-Control', 'no-store');
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Artist Login - Fresh Wax</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
  <div class="split-container">
    <!-- Left Side - Branding -->
    <div class="branding-side">
      <div class="branding-content">
        <a href="/" class="logo-link">
          <img src="/logo.webp" alt="Fresh Wax Logo" class="logo-image" />
        </a>
        <h2 class="welcome-text">Artist / Label Portal</h2>
        <p class="tagline">Your hub for releases, mixes, orders, stock & account management</p>
        <div class="features">
          <div class="feature">
            <svg class="feature-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
            <span>Upload releases & DJ mixes</span>
          </div>
          <div class="feature">
            <svg class="feature-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            <span>Track orders & sales</span>
          </div>
          <div class="feature">
            <svg class="feature-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
            <span>Manage stock & inventory</span>
          </div>
          <div class="feature">
            <svg class="feature-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Account & profile settings</span>
          </div>
        </div>
        
        <div class="artist-types">
          <span class="type-badge">Artists</span>
          <span class="type-badge">Producers</span>
          <span class="type-badge">DJs</span>
          <span class="type-badge">Labels</span>
          <span class="type-badge">Merch Suppliers</span>
        </div>
      </div>
    </div>

    <!-- Right Side - Login Form -->
    <div class="form-side">
      <div class="form-container">
        <div class="form-header">
          <h2>Sign In</h2>
          <p>Access your artist dashboard</p>
        </div>

        <div class="message success-message" id="successMessage">
          Login successful! Redirecting to dashboard...
        </div>

        <div class="message error-message" id="errorMessage"></div>

        <form id="loginForm">
          <div class="form-group">
            <label for="email">
              <svg class="input-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Email Address
