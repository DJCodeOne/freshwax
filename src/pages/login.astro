      gap: 0.5rem;
    }

    .type-badge {
      padding: 0.4rem 0.75rem;
      font-size: 0.8rem;
    }
  }
</style>

<script type="module">
  // OPTIMIZED: Uses single API call to verify user type instead of multiple Firestore reads
  (function() {
    // Firebase config
    const firebaseConfig = {
      apiKey: "AIzaSyBiZGsWdvA9ESm3OsUpZ-VQpwqMjMpBY6g",
      authDomain: "freshwax-store.firebaseapp.com",
      projectId: "freshwax-store",
      storageBucket: "freshwax-store.firebasestorage.app",
      messagingSenderId: "675435782973",
      appId: "1:675435782973:web:e8459c2ec4a5f6d683db54"
    };

    let auth = null;
    let isInitialized = false;

    // Get redirect URL from query params
    function getRedirectUrl() {
      const params = new URLSearchParams(window.location.search);
      return params.get('redirect') || '/artist/dashboard';
    }

    // Initialize Firebase
    async function initFirebase() {
      if (isInitialized) return auth;
      
      try {
        const { initializeApp } = await import('https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js');
        const { getAuth, signInWithEmailAndPassword, sendPasswordResetEmail, setPersistence, browserLocalPersistence, browserSessionPersistence } = await import('https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js');
        
        const app = initializeApp(firebaseConfig);
        auth = getAuth(app);
        
        // Store auth methods globally for use in handlers
        window._authMethods = { signInWithEmailAndPassword, sendPasswordResetEmail, setPersistence, browserLocalPersistence, browserSessionPersistence };
        
        isInitialized = true;
        console.log('[Artist Login] Firebase initialized');
        return auth;
      } catch (error) {
        console.error('[Artist Login] Firebase init error:', error);
        throw error;
      }
    }

    // UI Elements
    const form = document.getElementById('loginForm');
    const submitBtn = document.getElementById('submitBtn');
    const btnText = submitBtn?.querySelector('.btn-text');
    const btnArrow = submitBtn?.querySelector('.btn-arrow');
    const btnSpinner = submitBtn?.querySelector('.btn-spinner');
    const successMessage = document.getElementById('successMessage');
    const errorMessage = document.getElementById('errorMessage');
    const forgotPasswordLink = document.getElementById('forgotPasswordLink');
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('password');
    const emailInput = document.getElementById('email');
    const rememberMe = document.getElementById('rememberMe');

    // Toggle password visibility
    if (togglePassword && passwordInput) {
      togglePassword.addEventListener('click', function() {
        const eyeIcon = togglePassword.querySelector('.eye-icon');
        const eyeOffIcon = togglePassword.querySelector('.eye-off-icon');
        
        if (passwordInput.type === 'password') {
          passwordInput.type = 'text';
          eyeIcon?.classList.add('hidden');
          eyeOffIcon?.classList.remove('hidden');
        } else {
          passwordInput.type = 'password';
          eyeIcon?.classList.remove('hidden');
          eyeOffIcon?.classList.add('hidden');
        }
      });
    }

    // Show/hide loading state
    function setLoading(isLoading) {
      if (submitBtn) submitBtn.disabled = isLoading;
      if (btnText) btnText.textContent = isLoading ? 'Signing In...' : 'Sign In';
      if (btnArrow) btnArrow.classList.toggle('hidden', isLoading);
      if (btnSpinner) btnSpinner.classList.toggle('hidden', !isLoading);
    }

    // Show error message
    function showError(msg) {
      if (errorMessage) {
        errorMessage.textContent = msg;
        errorMessage.style.display = 'block';
      }
      if (successMessage) successMessage.style.display = 'none';
    }

    // Show success message
    function showSuccess(msg) {
      if (successMessage) {
        successMessage.textContent = msg;
        successMessage.style.display = 'block';
      }
      if (errorMessage) errorMessage.style.display = 'none';
    }

    // Clear messages
    function clearMessages() {
      if (errorMessage) errorMessage.style.display = 'none';
      if (successMessage) successMessage.style.display = 'none';
    }

    // Form submission
    if (form) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        clearMessages();

        const email = emailInput?.value.trim();
        const password = passwordInput?.value;

        if (!email || !password) {
          showError('Please enter both email and password.');
          return;
        }

        setLoading(true);

        try {
          // Initialize Firebase
          const authInstance = await initFirebase();
          const { signInWithEmailAndPassword, setPersistence, browserLocalPersistence, browserSessionPersistence } = window._authMethods;

          // Set persistence based on "Remember me" checkbox
          const persistenceType = rememberMe?.checked ? browserLocalPersistence : browserSessionPersistence;
          await setPersistence(authInstance, persistenceType);

          // Sign in
          const userCredential = await signInWithEmailAndPassword(authInstance, email, password);
          const user = userCredential.user;

          console.log('[Artist Login] Firebase auth successful for:', user.uid);

          // OPTIMIZED: Use single API call to check user type
          // This replaces direct Firestore queries - more efficient!
          const response = await fetch('/api/get-user-type?uid=' + user.uid);
          const userData = await response.json();

          console.log('[Artist Login] User type check:', userData);

          if (!userData.success) {
            await authInstance.signOut();
            showError('Unable to verify account. Please try again.');
            setLoading(false);
            return;
          }

          if (!userData.isArtist) {
            // Not an artist account
            await authInstance.signOut();
            
            if (userData.isCustomer) {
              showError('This is a customer account. Please use the Customer Login instead.');
            } else {
              showError('Artist account not found. Please register first.');
            }
            setLoading(false);
            return;
          }

          // Success! Cache user type for Header component
          try {
            sessionStorage.setItem('freshwax_user_type_cache', JSON.stringify({
              isArtist: userData.isArtist,
              isCustomer: userData.isCustomer,
              name: userData.name,
              timestamp: Date.now()
            }));
          } catch (e) {
            // Ignore cache errors
          }

          showSuccess('Login successful! Redirecting to dashboard...');
          
          // Hide form
          form.style.opacity = '0.5';
          form.style.pointerEvents = 'none';

          // Redirect after short delay
          const redirectUrl = getRedirectUrl();
          console.log('[Artist Login] Redirecting to:', redirectUrl);
          
          setTimeout(function() {
            window.location.href = redirectUrl;
          }, 800);

        } catch (error) {
          console.error('[Artist Login] Error:', error);
          
          let errorMsg = 'Login failed. Please try again.';
          
          if (error.code === 'auth/user-not-found' || error.code === 'auth/wrong-password' || error.code === 'auth/invalid-credential') {
            errorMsg = 'Invalid email or password.';
          } else if (error.code === 'auth/invalid-email') {
            errorMsg = 'Please enter a valid email address.';
          } else if (error.code === 'auth/too-many-requests') {
            errorMsg = 'Too many failed attempts. Please wait a few minutes and try again.';
          } else if (error.code === 'auth/network-request-failed') {
            errorMsg = 'Network error. Please check your internet connection.';
          } else if (error.code === 'auth/user-disabled') {
            errorMsg = 'This account has been disabled. Please contact support.';
          }

          showError(errorMsg);
          setLoading(false);
        }
      });
    }

    // Forgot password
    if (forgotPasswordLink) {
      forgotPasswordLink.addEventListener('click', async function(e) {
        e.preventDefault();
        clearMessages();

        const email = emailInput?.value.trim();

        if (!email) {
          showError('Please enter your email address first, then click "Forgot password?"');
          emailInput?.focus();
          return;
        }

        // Basic email validation
        if (!email.includes('@') || !email.includes('.')) {
          showError('Please enter a valid email address.');
          return;
        }

        try {
          const authInstance = await initFirebase();
          const { sendPasswordResetEmail } = window._authMethods;

          await sendPasswordResetEmail(authInstance, email);
          showSuccess('Password reset email sent! Check your inbox (and spam folder).');
        } catch (error) {
          console.error('[Artist Login] Password reset error:', error);
          
          let errorMsg = 'Failed to send reset email. Please try again.';
          
          if (error.code === 'auth/user-not-found') {
            errorMsg = 'No account found with this email address.';
          } else if (error.code === 'auth/invalid-email') {
            errorMsg = 'Please enter a valid email address.';
          } else if (error.code === 'auth/too-many-requests') {
            errorMsg = 'Too many requests. Please wait a few minutes.';
          }

          showError(errorMsg);
        }
      });
    }

    // Check if already logged in
    async function checkExistingSession() {
      try {
        const authInstance = await initFirebase();
        const { onAuthStateChanged } = await import('https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js');
        
        onAuthStateChanged(authInstance, function(user) {
          if (user) {
            // Already logged in - check if artist
            fetch('/api/get-user-type?uid=' + user.uid)
              .then(r => r.json())
              .then(data => {
                if (data.isArtist) {
                  console.log('[Artist Login] Already logged in, redirecting...');
                  window.location.href = getRedirectUrl();
                }
              })
              .catch(() => {});
          }
        });
      } catch (e) {
        // Ignore - will initialize on form submit
      }
    }

    // Check session on page load
    checkExistingSession();

    console.log('[Artist Login] Page initialized');
  })();
</script>