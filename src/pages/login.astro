  <!-- Clear Cache Script - Runs immediately -->
  <script>
    // Clear all Fresh Wax cached data on login page load
    (function() {
      try {
        // Check if remember me was set
        const rememberMe = localStorage.getItem('fw_remember_me') === 'true';
        
        // Clear sessionStorage items (always clear these)
        const sessionKeys = Object.keys(sessionStorage);
        sessionKeys.forEach(key => {
          if (key.startsWith('fw_') || key.includes('fresh') || key.includes('user')) {
            sessionStorage.removeItem(key);
          }
        });
        
        // Clear localStorage items (except remember me preferences and Firebase auth)
        const localKeys = Object.keys(localStorage);
        localKeys.forEach(key => {
          // Preserve remember me settings
          if (key === 'fw_remember_me' || key === 'fw_saved_email') {
            return;
          }
          // Never clear Firebase auth - let Firebase handle its own state
          if (key.includes('firebase')) {
            return;
          }
          if (key.startsWith('fw_') || key.includes('fresh')) {
            localStorage.removeItem(key);
          }
        });
        
        // Clear stale cookies (will be reset on login)
        document.cookie = 'userId=; path=/; max-age=0';
        document.cookie = 'customerId=; path=/; max-age=0';
        document.cookie = 'partnerId=; path=/; max-age=0';
        
        console.log('[Login] Cleared cached data, rememberMe:', rememberMe);
      } catch (e) {
        console.warn('[Login] Cache clear error:', e);
      }
    })();
  </script>

  <!-- Firebase SDK -->
  <script type="module" define:vars={{ redirectTo, firebaseConfig }}>
    import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js';
    import { getAuth, signInWithEmailAndPassword, signOut, setPersistence, browserLocalPersistence, onAuthStateChanged } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js';
    import { getFirestore, doc, getDoc } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-firestore.js';

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    // Check if user is already logged in - redirect them immediately
    onAuthStateChanged(auth, (user) => {
      if (user) {
        console.log('[Login] User already logged in, redirecting to:', redirectTo);
        window.location.href = redirectTo;
      }
    });

    // Restore remember me preference
    const rememberMeCheckbox = document.getElementById('rememberMe');
    if (localStorage.getItem('fw_remember_me') === 'true') {
      rememberMeCheckbox.checked = true;
    }
    
    // Restore saved email if remember me was checked
    const savedEmail = localStorage.getItem('fw_saved_email');
    if (savedEmail && rememberMeCheckbox.checked) {
      document.getElementById('email').value = savedEmail;
    }

    // Toggle password visibility
    document.querySelector('.toggle-password').addEventListener('click', function() {
      const input = document.getElementById('password');
      input.type = input.type === 'password' ? 'text' : 'password';
    });

    // Form submission
    const form = document.getElementById('loginForm');
    const submitBtn = document.getElementById('submitBtn');
    const errorMessage = document.getElementById('errorMessage');
    const successMessage = document.getElementById('successMessage');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Clear messages
      document.querySelectorAll('.field-error').forEach(el => el.textContent = '');
      errorMessage.textContent = '';
      errorMessage.style.display = 'none';
      successMessage.style.display = 'none';
      
      const email = document.getElementById('email').value.trim();
      const password = document.getElementById('password').value;
      const rememberMe = document.getElementById('rememberMe').checked;
      
      // Validation
      let hasErrors = false;
      
      if (!email) {
        document.getElementById('emailError').textContent = 'Email is required';
        hasErrors = true;
      }
      
      if (!password) {
        document.getElementById('passwordError').textContent = 'Password is required';
        hasErrors = true;
      }
      
      if (hasErrors) return;
      
      // Show loading
      submitBtn.disabled = true;
      submitBtn.querySelector('.btn-text').classList.add('hidden');
      submitBtn.querySelector('.btn-loading').classList.remove('hidden');
      
      try {
        // Sign out any existing user first to ensure clean state
        if (auth.currentUser) {
          await auth.signOut();
        }
        
        // Always use local persistence for reliability (session persistence causes issues)
        await setPersistence(auth, browserLocalPersistence);
        
        // Save remember me preference
        if (rememberMe) {
          localStorage.setItem('fw_remember_me', 'true');
          localStorage.setItem('fw_saved_email', email);
        } else {
          localStorage.removeItem('fw_remember_me');
          localStorage.removeItem('fw_saved_email');
        }
        
        // Sign in
        const userCredential = await signInWithEmailAndPassword(auth, email, password);
        const user = userCredential.user;
        
        // Cookie expiry: 30 days if remember me, 1 day otherwise
        const cookieMaxAge = rememberMe ? 2592000 : 86400;
        
        // Everyone goes to customer dashboard by default
        let finalRedirect = redirectTo;
        
        try {
          // Use consolidated API endpoint (single call instead of multiple Firebase reads)
          const profileResponse = await fetch(`/api/get-user-type?uid=${encodeURIComponent(user.uid)}`);
          const profile = await profileResponse.json();
          
          console.log('[Login] User profile response:', profile);
          console.log('[Login] User UID:', user.uid);
          console.log('[Login] isAdmin:', profile.isAdmin);
          
          // Cache the profile in sessionStorage for future use
          if (profile.success) {
            try {
              profile.cachedAt = Date.now();
              sessionStorage.setItem(`fw_user_profile_${user.uid}`, JSON.stringify(profile));
            } catch (e) { /* Ignore cache errors */ }
          }
          
          // Set partnerId cookie if they're an approved partner (needed for pro dashboard)
          if (profile.success && profile.isPro) {
            document.cookie = `partnerId=${user.uid}; path=/; max-age=${cookieMaxAge}; SameSite=Lax`;
          }
          
          // Always set userId and customerId cookies
          document.cookie = `userId=${user.uid}; path=/; max-age=${cookieMaxAge}; SameSite=Lax`;
          document.cookie = `customerId=${user.uid}; path=/; max-age=${cookieMaxAge}; SameSite=Lax`;
          
          // If admin, redirect to admin dashboard (unless a specific redirect was requested)
          if (profile.success && profile.isAdmin && redirectTo === '/account/dashboard') {
            console.log('[Login] Redirecting to admin dashboard');
            finalRedirect = '/admin';
          } else {
            console.log('[Login] Redirecting to:', finalRedirect);
          }
          
        } catch (err) {
          console.error('[Login] Error fetching user profile:', err);
          document.cookie = `userId=${user.uid}; path=/; max-age=${cookieMaxAge}; SameSite=Lax`;
          document.cookie = `customerId=${user.uid}; path=/; max-age=${cookieMaxAge}; SameSite=Lax`;
        }
        
        // Show success
        successMessage.style.display = 'flex';
        
        
        // Redirect
        setTimeout(() => {
          window.location.href = finalRedirect;
        }, 1000);
        
      } catch (error) {
        console.error('Login error:', error);
        console.error('Error code:', error.code);
        console.error('Error message:', error.message);
        
        let message = 'Login failed. Please try again.';
        if (error.code === 'auth/user-not-found') {
          message = 'No account found with this email.';
        } else if (error.code === 'auth/wrong-password') {
          message = 'Incorrect password.';
        } else if (error.code === 'auth/invalid-credential') {
          message = 'Invalid email or password.';
        } else if (error.code === 'auth/invalid-email') {
          message = 'Please enter a valid email address.';
        } else if (error.code === 'auth/too-many-requests') {
          message = 'Too many failed attempts. Please try again later.';
        } else if (error.code === 'auth/user-disabled') {
          message = 'This account has been disabled.';
        } else if (error.code === 'auth/network-request-failed') {
          message = 'Network error. Please check your connection.';
        } else if (error.code) {
          message = `Login failed: ${error.code}`;
        } else if (error.message) {
          message = `Login failed: ${error.message}`;
        } else {
          message = `Login failed: ${JSON.stringify(error)}`;
        }
        
        errorMessage.textContent = message;
        errorMessage.style.display = 'block';
        
        submitBtn.disabled = false;
        submitBtn.querySelector('.btn-text').classList.remove('hidden');
        submitBtn.querySelector('.btn-loading').classList.add('hidden');
      }
    });
  </script>

