            <input type="email" id="email" name="email" required placeholder="artist@example.com" autocomplete="email" autofocus>
          </div>

          <div class="form-group">
            <label for="password">
              <svg class="input-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
