---
// Public Livestream Schedule
// Shows today's DJ lineup visible to everyone

interface Props {
  showDate?: boolean;
  compact?: boolean;
}

const { showDate = true, compact = false } = Astro.props;
---
<div class={`livestream-schedule ${compact ? 'compact' : ''}`} id="livestreamSchedule">
  {showDate && (
    <div class="schedule-header">
      <h3>Today's Lineup</h3>
      <span class="schedule-date" id="scheduleDate"></span>
    </div>
  )}

  <div id="scheduleContent" class="schedule-content">
    <div class="loading">Loading schedule...</div>
  </div>

  <div id="noShows" class="no-shows" style="display: none;">
    <p>No shows scheduled today</p>
  </div>
</div>

<style>
  .livestream-schedule {
    background: var(--bg-secondary, #141414);
    border: 1px solid var(--border-color, #262626);
    border-radius: 8px;
    padding: 1.25rem;
  }

  .livestream-schedule.compact {
    padding: 1rem;
  }

  .schedule-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border-color, #262626);
  }

  .schedule-header h3 {
    color: var(--text-primary, #fff);
    margin: 0;
    font-size: 1rem;
  }

  .schedule-date {
    font-size: 0.85rem;
    color: var(--text-secondary, #a3a3a3);
  }

  .schedule-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .loading {
    text-align: center;
    padding: 1.5rem;
    color: var(--text-secondary, #a3a3a3);
    font-size: 0.9rem;
  }

  .no-shows {
    text-align: center;
    padding: 1.5rem;
    color: var(--text-muted, #666);
  }

  .no-shows p {
    margin: 0;
  }

  .schedule-slot {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem;
    background: var(--bg-tertiary, #1a1a1a);
    border-radius: 6px;
    transition: all 0.2s;
  }

  .compact .schedule-slot {
    padding: 0.5rem 0.75rem;
    gap: 0.75rem;
  }

  .schedule-slot.live {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
  }

  .schedule-slot.upcoming {
    border: 1px solid transparent;
  }

  .schedule-slot.past {
    opacity: 0.5;
  }

  .slot-time {
    min-width: 80px;
    text-align: center;
  }

  .compact .slot-time {
    min-width: 60px;
  }

  .time-display {
    font-weight: 600;
    color: var(--text-primary, #fff);
    font-size: 0.9rem;
  }

  .compact .time-display {
    font-size: 0.8rem;
  }

  .time-status {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 0.15rem;
  }

  .time-status.live {
    color: #ef4444;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .time-status.upcoming {
    color: var(--text-muted, #666);
  }

  .time-status.past {
    color: var(--text-muted, #666);
  }

  .slot-info {
    flex: 1;
    min-width: 0;
  }

  .slot-title {
    font-weight: 600;
    color: var(--text-primary, #fff);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .compact .slot-title {
    font-size: 0.9rem;
  }

  .slot-dj {
    font-size: 0.85rem;
    color: var(--accent, #22c55e);
  }

  .compact .slot-dj {
    font-size: 0.8rem;
  }

  .slot-duration {
    font-size: 0.75rem;
    color: var(--text-muted, #666);
    padding: 0.2rem 0.5rem;
    background: var(--bg-secondary, #141414);
    border-radius: 4px;
  }

  /* Live indicator */
  .live-indicator {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.7rem;
    font-weight: 600;
    color: #ef4444;
    text-transform: uppercase;
  }

  .live-dot {
    width: 8px;
    height: 8px;
    background: #ef4444;
    border-radius: 50%;
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }
</style>

<script type="module">
  import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-app.js';
  import { getFirestore, collection, query, where, getDocs, orderBy, Timestamp } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-firestore.js';

  const firebaseConfig = window.FIREBASE_CONFIG || {};
  const app = initializeApp(firebaseConfig);
  const db = getFirestore(app);

  const scheduleContent = document.getElementById('scheduleContent');
  const noShows = document.getElementById('noShows');
  const scheduleDateEl = document.getElementById('scheduleDate');

  async function loadSchedule() {
    const now = new Date();
    const startOfDay = new Date(now);
    startOfDay.setHours(0, 0, 0, 0);
    const endOfDay = new Date(now);
    endOfDay.setHours(23, 59, 59, 999);

    // Update date display
    if (scheduleDateEl) {
      scheduleDateEl.textContent = now.toLocaleDateString('en-GB', {
        weekday: 'long',
        day: 'numeric',
        month: 'long'
      });
    }

    try {
      const bookingsQuery = query(
        collection(db, 'livestream-bookings'),
        where('startTime', '>=', Timestamp.fromDate(startOfDay)),
        where('startTime', '<=', Timestamp.fromDate(endOfDay)),
        orderBy('startTime', 'asc')
      );

      const snapshot = await getDocs(bookingsQuery);
      
      if (snapshot.empty) {
        scheduleContent.style.display = 'none';
        noShows.style.display = 'block';
        return;
      }

      noShows.style.display = 'none';
      scheduleContent.style.display = 'flex';

      const bookings = [];
      snapshot.forEach(doc => {
        bookings.push({ id: doc.id, ...doc.data() });
      });

      scheduleContent.innerHTML = bookings.map(booking => {
        const startTime = booking.startTime.toDate();
        const endTime = new Date(startTime);
        endTime.setHours(endTime.getHours() + (booking.duration || 1));

        const isLive = now >= startTime && now < endTime;
        const isPast = now >= endTime;

        const formatHour = (h) => {
          const display = h === 0 ? 12 : h > 12 ? h - 12 : h;
          const ampm = h >= 12 && h < 24 ? 'PM' : 'AM';
          return `${display}:00 ${ampm}`;
        };

        let statusClass = 'upcoming';
        let statusText = formatHour(startTime.getHours());
        if (isLive) {
          statusClass = 'live';
          statusText = '';
        } else if (isPast) {
          statusClass = 'past';
        }

        const timeRange = `${formatHour(startTime.getHours())} - ${formatHour(endTime.getHours())}`;

        return `
          <div class="schedule-slot ${statusClass}">
            <div class="slot-time">
              ${isLive ? `
                <div class="live-indicator">
                  <span class="live-dot"></span>
                  LIVE
                </div>
              ` : `
                <div class="time-display">${formatHour(startTime.getHours())}</div>
                <div class="time-status ${statusClass}">${isPast ? 'Ended' : ''}</div>
              `}
            </div>
            <div class="slot-info">
              <div class="slot-title">${booking.streamTitle}</div>
              <div class="slot-dj">${booking.djName}</div>
            </div>
            <div class="slot-duration">${booking.duration || 1}hr</div>
          </div>
        `;
      }).join('');

    } catch (error) {
      console.error('Error loading schedule:', error);
      scheduleContent.innerHTML = '<div class="loading">Error loading schedule</div>';
    }
  }

  // Initial load
  loadSchedule();

  // Refresh every minute
  setInterval(loadSchedule, 60000);
</script>
