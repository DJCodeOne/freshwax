<script type="module" define:vars={{ firebaseConfig }}>
  import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js';
  import { getAuth, onAuthStateChanged, signOut } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js';

  // Initialize Firebase only once
  let app;
  let auth;
  
  // Create auth ready promise that other scripts can wait on
  let authReadyResolve;
  window.authReady = new Promise(resolve => { authReadyResolve = resolve; });
  window.authUser = null; // Will be set when auth state is known
  
  try {
    app = initializeApp(firebaseConfig);
    auth = getAuth(app);
    window.firebaseAuth = auth;
  } catch (e) {
    // App already initialized, get existing instance
    const { getApps, getApp } = await import('https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js');
    app = getApps().length ? getApp() : initializeApp(firebaseConfig);
    auth = getAuth(app);
    window.firebaseAuth = auth;
  }
  
  // Set up one-time auth state listener to resolve authReady
  const unsubscribeInitial = onAuthStateChanged(auth, (user) => {
    window.authUser = user;
    authReadyResolve(user);
    unsubscribeInitial(); // Only need this once for initial state
  });

  // Cache helpers
  const USER_CACHE_KEY = 'freshwax_user_type_cache';
  const CACHE_DURATION = 5 * 60 * 1000; // 5 minutes (reduced from 30)

  function getCachedUserType() {
    try {
      const cached = sessionStorage.getItem(USER_CACHE_KEY);
      if (!cached) return null;
      const data = JSON.parse(cached);
      if (Date.now() - data.timestamp > CACHE_DURATION) {
        sessionStorage.removeItem(USER_CACHE_KEY);
        return null;
      }
      if (data.isAdmin === undefined) {
        sessionStorage.removeItem(USER_CACHE_KEY);
        return null;
      }
      return data;
    } catch {
      return null;
    }
  }

  function setCachedUserType(userType, isAdmin, avatarUrl = null) {
    try {
      sessionStorage.setItem(USER_CACHE_KEY, JSON.stringify({
        userType,
        isAdmin,
        avatarUrl,
        timestamp: Date.now()
      }));
    } catch {
      // Ignore storage errors
    }
  }

  // Debounced search
  let searchTimeout;
  const SEARCH_DEBOUNCE = 300;
  const MIN_QUERY_LENGTH = 2;
  const searchCache = new Map();

  async function performSearch(query, resultsContainer, contentContainer) {
    if (searchCache.has(query)) {
      displayResults(searchCache.get(query), contentContainer);
      resultsContainer.classList.remove('fwx-hidden');
      resultsContainer.style.display = 'block';
      return;
    }

    try {
      const response = await fetch(`/api/search-releases?q=${encodeURIComponent(query)}&limit=10`);
      if (!response.ok) throw new Error('Search failed');
      const data = await response.json();
      searchCache.set(query, data);
      displayResults(data, contentContainer);
      resultsContainer.classList.remove('fwx-hidden');
      resultsContainer.style.display = 'block';
    } catch (error) {
      console.error('Search error:', error);
      contentContainer.innerHTML = '<p style="padding: 1rem; color: #666; text-align: center;">Search unavailable</p>';
      resultsContainer.classList.remove('fwx-hidden');
      resultsContainer.style.display = 'block';
    }
  }

  function displayResults(data, container) {
    const results = data.results || [];
    
    if (results.length === 0) {
      container.innerHTML = '<p style="padding: 1rem; color: #666; text-align: center;">No results found</p>';
      return;
    }

    // Group results by type
    const releases = results.filter(r => r.type === 'release');
    const mixes = results.filter(r => r.type === 'mix');

    let html = '';
    
    if (releases.length > 0) {
      html += '<div style="padding: 0.5rem 1rem; font-size: 0.75rem; font-weight: 600; color: #666; text-transform: uppercase; border-bottom: 1px solid #eee;">Releases</div>';
      releases.forEach(r => {
        html += `<a href="/item/${r.id}" style="display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1rem; color: black; text-decoration: none; transition: background 0.15s;" onmouseover="this.style.background='#f3f4f6'" onmouseout="this.style.background='transparent'">
          <img src="${r.artwork_url || '/place-holder.webp'}" alt="" style="width: 40px; height: 40px; border-radius: 4px; object-fit: cover;" onerror="this.src='/place-holder.webp'" />
          <div>
            <div style="font-weight: 500; font-size: 0.875rem;">${r.title}</div>
            <div style="font-size: 0.75rem; color: #666;">${r.artist_name}</div>
          </div>
        </a>`;
      });
    }
    
    if (mixes.length > 0) {
      html += '<div style="padding: 0.5rem 1rem; font-size: 0.75rem; font-weight: 600; color: #666; text-transform: uppercase; border-top: 1px solid #eee; border-bottom: 1px solid #eee;">DJ Mixes</div>';
      mixes.forEach(m => {
        html += `<a href="/dj-mix/${m.id}" style="display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1rem; color: black; text-decoration: none; transition: background 0.15s;" onmouseover="this.style.background='#f3f4f6'" onmouseout="this.style.background='transparent'">
