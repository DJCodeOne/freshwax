---
// src/components/Header.astro
// OPTIMIZED: Minimal API calls with aggressive caching + debounced search
---

<header id="freshwax-header">
  <div class="fwx-header-inner">
    
    <!-- Mobile Layout -->
    <div class="fwx-mobile">
      <div class="fwx-mobile-top">
        <div class="fwx-mobile-left">
          <a href="/" class="fwx-logo-link" id="logoMobile">
            <img src="/logo.webp" alt="Fresh Wax" class="fwx-logo-mobile" />
          </a>
        </div>
        
        <div class="fwx-mobile-right">
          <!-- Mobile LIVE Button -->
          <a href="/live" id="liveButtonMobile" class="live-button fwx-live-btn">
            <span class="live-dot"></span>
            <span class="live-text">LIVE</span>
          </a>
          
          <!-- Account Dropdown Mobile -->
          <div class="account-dropdown fwx-account">
            <button class="account-button fwx-account-btn">
              <div class="account-avatar fwx-avatar">
                <svg class="account-avatar-icon fwx-avatar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span class="account-avatar-initial fwx-hidden"></span>
                <img class="account-avatar-img fwx-hidden" src="" alt="" />
              </div>
              <span class="account-name">Login</span>
              <svg class="fwx-chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="account-menu fwx-dropdown fwx-hidden">
              <div class="logged-out">
                <a href="/login" class="fwx-dropdown-link">Login</a>
                <a href="/register" class="fwx-dropdown-link">Register</a>
              </div>
              <div class="logged-in fwx-hidden">
                <a href="/account/dashboard" class="fwx-dropdown-link">My Account</a>
                <button class="logout-btn fwx-logout-btn">Logout</button>
              </div>
            </div>
          </div>

          <a href="/cart" class="fwx-cart-btn">
            <svg class="fwx-cart-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
            <span class="fwx-cart-text">Bag</span>
            <span id="cart-count-mobile" class="fwx-cart-count fwx-hidden">0</span>
          </a>
        </div>
      </div>
      
      <div class="fwx-search-mobile">
        <div class="fwx-search-icon-wrap">
          <svg class="fwx-search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
        <input
          type="text"
          id="search-input-mobile"
          placeholder="Search releases, artists, tracks..."
          class="fwx-search-input"
          autocomplete="off"
        />
        <!-- Mobile Search Results Dropdown -->
        <div id="search-results-mobile" class="fwx-search-results fwx-hidden">
          <div id="search-results-content-mobile" class="fwx-search-content"></div>
        </div>
      </div>
    </div>

    <!-- Desktop Layout -->
    <div class="fwx-desktop">
      <!-- Logo -->
      <a href="/" class="fwx-logo-link" id="logoDesktop">
        <img src="/logo.webp" alt="Fresh Wax" class="fwx-logo-desktop" />
      </a>
      
      <!-- Search Bar (centered between logo and nav) -->
      <div class="fwx-search-desktop">
        <div class="fwx-search-icon-wrap">
          <svg class="fwx-search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
        <input
          type="text"
          id="search-input"
          placeholder="Search releases, artists..."
          class="fwx-search-input"
          autocomplete="off"
        />
        <!-- Search Results Dropdown -->
        <div id="search-results" class="fwx-search-results fwx-hidden">
          <div id="search-results-content" class="fwx-search-content"></div>
        </div>
      </div>
      
      <!-- Center section: Navigation tabs -->
      <div class="fwx-nav">
        <a href="/releases" class="fwx-nav-btn">
          <svg class="fwx-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
          </svg>
          All Releases
        </a>

        <a href="/dj-mixes" class="fwx-nav-btn">
          <svg class="fwx-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" />
          </svg>
          DJ Mixes
        </a>

        <a href="/merch" class="fwx-nav-btn">
          <svg class="fwx-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6.5 2L2 6l3 2v12a1 1 0 001 1h12a1 1 0 001-1V8l3-2-4.5-4h-3L12 5l-2.5-3h-3z" />
          </svg>
          Merch
        </a>

        <a href="/samples" class="fwx-nav-btn">
          <svg class="fwx-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
          </svg>
          Samples
        </a>

        <a href="/giftcards" class="fwx-nav-btn">
          <svg class="fwx-nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
          </svg>
          Gift Cards
        </a>
      </div>

      <!-- Account Dropdown (centered between nav and bag) -->
      <div class="account-dropdown fwx-account">
        <button class="account-button fwx-account-btn">
          <div class="account-avatar fwx-avatar">
            <svg class="account-avatar-icon fwx-avatar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span class="account-avatar-initial fwx-hidden"></span>
            <img class="account-avatar-img fwx-hidden" src="" alt="" />
          </div>
          <span class="account-name">Login</span>
          <svg class="fwx-chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div class="account-menu fwx-dropdown fwx-hidden">
          <div class="logged-out">
            <a href="/login" class="fwx-dropdown-link">Login</a>
            <a href="/register" class="fwx-dropdown-link">Register</a>
          </div>
          <div class="logged-in fwx-hidden">
            <a href="/account/dashboard" class="fwx-dropdown-link">My Account</a>
            <button class="logout-btn fwx-logout-btn">Logout</button>
          </div>
        </div>
      </div>

      <!-- Bag -->
      <a href="/cart" class="fwx-cart-btn fwx-cart-black">
        <svg class="fwx-cart-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
        </svg>
        Bag
        <span id="cart-count" class="fwx-cart-count fwx-hidden">0</span>
      </a>

      <!-- LIVE Button -->
      <a href="/live" id="liveButton" class="live-button fwx-live-btn">
        <span class="live-dot"></span>
        <span class="live-text">LIVE</span>
      </a>
    </div>
  </div>
</header>

<script type="module">
  import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js';
  import { getAuth, onAuthStateChanged, signOut } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js';

  // Firebase config - matches working admin login
  const firebaseConfig = {
    apiKey: "AIzaSyBiZGsWdvA9ESm3OsUpZ-VQpwqMjMpBY6g",
    authDomain: "freshwax-store.firebaseapp.com",
    projectId: "freshwax-store",
    storageBucket: "freshwax-store.firebasestorage.app",
    messagingSenderId: "675435782973",
    appId: "1:675435782973:web:e8459c2ec4a5f6d683db54"
  };

  // Initialize Firebase only once
  let app;
  let auth;
  
  // Create auth ready promise that other scripts can wait on
  let authReadyResolve;
  window.authReady = new Promise(resolve => { authReadyResolve = resolve; });
  window.authUser = null; // Will be set when auth state is known
  
  try {
    app = initializeApp(firebaseConfig);
    auth = getAuth(app);
    window.firebaseAuth = auth;
  } catch (e) {
    // App already initialized, get existing instance
    const { getApps, getApp } = await import('https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js');
    app = getApps().length ? getApp() : initializeApp(firebaseConfig);
    auth = getAuth(app);
    window.firebaseAuth = auth;
  }
  
  // Set up one-time auth state listener to resolve authReady
  const unsubscribeInitial = onAuthStateChanged(auth, (user) => {
    window.authUser = user;
    authReadyResolve(user);
    unsubscribeInitial(); // Only need this once for initial state
  });

  // Cache helpers
  const USER_CACHE_KEY = 'freshwax_user_type_cache';
  const CACHE_DURATION = 30 * 60 * 1000;

  function getCachedUserType() {
    try {
      const cached = sessionStorage.getItem(USER_CACHE_KEY);
      if (!cached) return null;
      const data = JSON.parse(cached);
      if (Date.now() - data.timestamp > CACHE_DURATION) {
        sessionStorage.removeItem(USER_CACHE_KEY);
        return null;
      }
      if (data.isAdmin === undefined) {
        sessionStorage.removeItem(USER_CACHE_KEY);
        return null;
      }
      return data;
    } catch {
      return null;
    }
  }

  function setCachedUserType(userType, isAdmin, avatarUrl = null) {
    try {
      sessionStorage.setItem(USER_CACHE_KEY, JSON.stringify({
        userType,
        isAdmin,
        avatarUrl,
        timestamp: Date.now()
      }));
    } catch {
      // Ignore storage errors
    }
  }

  // Debounced search
  let searchTimeout;
  const SEARCH_DEBOUNCE = 300;
  const MIN_QUERY_LENGTH = 2;
  const searchCache = new Map();

  async function performSearch(query, resultsContainer, contentContainer) {
    if (searchCache.has(query)) {
      displayResults(searchCache.get(query), contentContainer);
      resultsContainer.classList.remove('fwx-hidden');
      resultsContainer.style.display = 'block';
      return;
    }

    try {
      const response = await fetch(`/api/search-releases?q=${encodeURIComponent(query)}&limit=10`);
      if (!response.ok) throw new Error('Search failed');
      const data = await response.json();
      searchCache.set(query, data);
      displayResults(data, contentContainer);
      resultsContainer.classList.remove('fwx-hidden');
      resultsContainer.style.display = 'block';
    } catch (error) {
      console.error('Search error:', error);
      contentContainer.innerHTML = '<p style="padding: 1rem; color: #666; text-align: center;">Search unavailable</p>';
      resultsContainer.classList.remove('fwx-hidden');
      resultsContainer.style.display = 'block';
    }
  }

  function displayResults(data, container) {
    const results = data.results || [];
    
    if (results.length === 0) {
      container.innerHTML = '<p style="padding: 1rem; color: #666; text-align: center;">No results found</p>';
      return;
    }

    // Group results by type
    const releases = results.filter(r => r.type === 'release');
    const mixes = results.filter(r => r.type === 'mix');

    let html = '';
    
    if (releases.length > 0) {
      html += '<div style="padding: 0.5rem 1rem; font-size: 0.75rem; font-weight: 600; color: #666; text-transform: uppercase; border-bottom: 1px solid #eee;">Releases</div>';
      releases.forEach(r => {
        html += `<a href="/item/${r.id}" style="display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1rem; color: black; text-decoration: none; transition: background 0.15s;" onmouseover="this.style.background='#f3f4f6'" onmouseout="this.style.background='transparent'">
          <img src="${r.artwork_url || '/place-holder.webp'}" alt="" style="width: 40px; height: 40px; border-radius: 4px; object-fit: cover;" onerror="this.src='/place-holder.webp'" />
          <div>
            <div style="font-weight: 500; font-size: 0.875rem;">${r.title}</div>
            <div style="font-size: 0.75rem; color: #666;">${r.artist_name}</div>
          </div>
        </a>`;
      });
    }
    
    if (mixes.length > 0) {
      html += '<div style="padding: 0.5rem 1rem; font-size: 0.75rem; font-weight: 600; color: #666; text-transform: uppercase; border-top: 1px solid #eee; border-bottom: 1px solid #eee;">DJ Mixes</div>';
      mixes.forEach(m => {
        html += `<a href="/dj-mix/${m.id}" style="display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1rem; color: black; text-decoration: none; transition: background 0.15s;" onmouseover="this.style.background='#f3f4f6'" onmouseout="this.style.background='transparent'">
          <img src="${m.artwork_url || '/place-holder.webp'}" alt="" style="width: 40px; height: 40px; border-radius: 4px; object-fit: cover;" onerror="this.src='/place-holder.webp'" />
          <div>
            <div style="font-weight: 500; font-size: 0.875rem;">${m.title}</div>
            <div style="font-size: 0.75rem; color: #666;">${m.artist_name}</div>
          </div>
        </a>`;
      });
    }

    container.innerHTML = html;
  }

  // Check live status
  async function checkLiveStatus() {
    try {
      const response = await fetch('/api/livestream/status');
      const data = await response.json();
      
      document.querySelectorAll('.live-button').forEach(btn => {
        if (data.isLive) {
          btn.classList.add('is-live');
        } else {
          btn.classList.remove('is-live');
        }
      });
    } catch (e) {
      // Ignore errors
    }
  }

  // Track if we've set up global listeners
  let globalListenersSet = false;
  let liveStatusInterval = null;

  // Initialize header functionality - called on every page load
  function initHeader() {
    // Setup search functionality
    function setupSearch(inputId, resultsId, contentId) {
      const input = document.getElementById(inputId);
      const results = document.getElementById(resultsId);
      const content = document.getElementById(contentId);
      
      if (!input || !results || !content) return;
      
      // Ensure initial hidden state
      results.style.display = 'none';

      // Remove old listeners by cloning
      const newInput = input.cloneNode(true);
      input.parentNode.replaceChild(newInput, input);

      newInput.addEventListener('input', (e) => {
        const query = e.target.value.trim();
        clearTimeout(searchTimeout);
        
        if (query.length < MIN_QUERY_LENGTH) {
          results.classList.add('fwx-hidden');
          results.style.display = 'none';
          return;
        }

        searchTimeout = setTimeout(() => performSearch(query, results, content), SEARCH_DEBOUNCE);
      });
    }

    setupSearch('search-input', 'search-results', 'search-results-content');
    setupSearch('search-input-mobile', 'search-results-mobile', 'search-results-content-mobile');

    // Account dropdown functionality - re-attach listeners
    document.querySelectorAll('.account-dropdown').forEach(dropdown => {
      const button = dropdown.querySelector('.account-button');
      const menu = dropdown.querySelector('.account-menu');
      
      if (button && menu) {
        // Clone to remove old listeners
        const newButton = button.cloneNode(true);
        button.parentNode.replaceChild(newButton, button);
        
        newButton.addEventListener('click', (e) => {
          e.stopPropagation();
          menu.classList.toggle('fwx-hidden');
          menu.style.display = menu.classList.contains('fwx-hidden') ? 'none' : 'block';
        });
      }
    });

    // Close dropdowns on click outside (only set once)
    if (!globalListenersSet) {
      document.addEventListener('click', () => {
        document.querySelectorAll('.account-menu').forEach(menu => {
          menu.classList.add('fwx-hidden');
          menu.style.display = 'none';
        });
        document.querySelectorAll('.fwx-search-results').forEach(results => {
          results.classList.add('fwx-hidden');
          results.style.display = 'none';
        });
      });
      globalListenersSet = true;
    }

    // Check live status
    checkLiveStatus();
    if (liveStatusInterval) clearInterval(liveStatusInterval);
    liveStatusInterval = setInterval(checkLiveStatus, 30000);

    // Update UI based on current auth state
    updateAuthUI();
  }

  // Update auth UI without re-subscribing to onAuthStateChanged
  function updateAuthUI() {
    const user = auth.currentUser;
    const accountNames = document.querySelectorAll('.account-name');
    const loggedOutSections = document.querySelectorAll('.logged-out');
    const loggedInSections = document.querySelectorAll('.logged-in');
    const logoutBtns = document.querySelectorAll('.logout-btn');
    const avatars = document.querySelectorAll('.account-avatar');
    const logoLinks = document.querySelectorAll('.fwx-logo-link');
    
    if (user) {
      const cachedData = getCachedUserType() || { userType: 'customer', isAdmin: false };
      const displayName = user.displayName || user.email?.split('@')[0] || 'Account';
      
      accountNames.forEach(el => el.textContent = displayName);
      loggedOutSections.forEach(el => { el.classList.add('fwx-hidden'); el.style.display = 'none'; });
      loggedInSections.forEach(el => { el.classList.remove('fwx-hidden'); el.style.display = 'block'; });
      
      // Toggle admin-mode class on logo (red background indicates admin)
      // Admin logo links to /admin dashboard, regular users link to /
      if (cachedData.isAdmin) {
        logoLinks.forEach(logo => {
          logo.classList.add('admin-mode');
          logo.href = '/admin';
        });
      } else {
        logoLinks.forEach(logo => {
          logo.classList.remove('admin-mode');
          logo.href = '/';
        });
      }
      
      avatars.forEach(avatar => {
        const icon = avatar.querySelector('.account-avatar-icon');
        const initial = avatar.querySelector('.account-avatar-initial');
        const img = avatar.querySelector('.account-avatar-img');
        
        // Use cached avatarUrl first, then fall back to Firebase photoURL
        const avatarUrl = cachedData.avatarUrl || user.photoURL;
        
        if (avatarUrl && img) {
          icon?.classList.add('fwx-hidden');
          initial?.classList.add('fwx-hidden');
          img.src = avatarUrl;
          img.classList.remove('fwx-hidden');
        } else if (initial) {
          icon?.classList.add('fwx-hidden');
          initial.textContent = displayName.charAt(0).toUpperCase();
          initial.classList.remove('fwx-hidden');
          img?.classList.add('fwx-hidden');
        }
      });
      
      // Re-attach logout listeners
      logoutBtns.forEach(btn => {
        const newBtn = btn.cloneNode(true);
        btn.parentNode.replaceChild(newBtn, btn);
        newBtn.addEventListener('click', async () => {
          try {
            sessionStorage.removeItem(USER_CACHE_KEY);
            await signOut(auth);
            window.location.href = '/';
          } catch (e) {
            console.error('Logout error:', e);
          }
        });
      });
    } else {
      accountNames.forEach(el => el.textContent = 'Login');
      loggedOutSections.forEach(el => { el.classList.remove('fwx-hidden'); el.style.display = 'block'; });
      loggedInSections.forEach(el => { el.classList.add('fwx-hidden'); el.style.display = 'none'; });
      logoLinks.forEach(logo => {
        logo.classList.remove('admin-mode');
        logo.href = '/';
      });
    }
  }

  // Auth state change listener (only set once)
  onAuthStateChanged(auth, async (user) => {
    if (user) {
      let cachedData = getCachedUserType();
      if (!cachedData) {
        try {
          const response = await fetch(`/api/get-user-type?uid=${encodeURIComponent(user.uid)}`);
          const data = await response.json();
          if (data.success) {
            setCachedUserType(data.isArtist ? 'artist' : 'customer', data.isAdmin, data.avatarUrl || null);
          } else {
            setCachedUserType('customer', false, null);
          }
        } catch (e) {
          setCachedUserType('customer', false, null);
        }
      }
    }
    updateAuthUI();
  });

  // ========== CART BADGE FUNCTIONALITY ==========
  function updateHeaderCartBadge() {
    // Get cart count from FreshWaxCart if available, otherwise check localStorage
    let count = 0;
    
    if (window.FreshWaxCart && typeof window.FreshWaxCart.count === 'function') {
      count = window.FreshWaxCart.count();
    } else {
      // Fallback: read directly from localStorage
      try {
        const customerId = document.cookie.split(';')
          .find(c => c.trim().startsWith('customerId='))
          ?.split('=')[1];
        
        if (customerId) {
          const cartKey = 'freshwax_cart_' + customerId;
          const stored = localStorage.getItem(cartKey);
          if (stored) {
            const data = JSON.parse(stored);
            const items = data.items || data || [];
            count = items.reduce((sum, item) => sum + (item.quantity || 1), 0);
          }
        }
      } catch (e) {
        console.error('Error reading cart:', e);
      }
    }
    
    // Update both desktop and mobile cart counts
    const desktopCount = document.getElementById('cart-count');
    const mobileCount = document.getElementById('cart-count-mobile');
    
    [desktopCount, mobileCount].forEach(el => {
      if (el) {
        el.textContent = count.toString();
        if (count > 0) {
          el.classList.remove('fwx-hidden');
          el.style.display = '';
        } else {
          el.classList.add('fwx-hidden');
          el.style.display = 'none';
        }
      }
    });
  }
  
  // Listen for cart updates
  window.addEventListener('cart-updated', updateHeaderCartBadge);
  window.addEventListener('cartUpdated', updateHeaderCartBadge);
  window.addEventListener('storage', (e) => {
    if (e.key && e.key.startsWith('freshwax_cart_')) {
      updateHeaderCartBadge();
    }
  });

  // Initialize on first load
  initHeader();
  updateHeaderCartBadge();

  // Re-initialize on View Transitions page load
  document.addEventListener('astro:page-load', () => {
    initHeader();
    updateHeaderCartBadge();
  });
</script>

<style>
  /* ============================================
     FRESHWAX HEADER STYLES - SCOPED & ISOLATED
     ============================================ */
  
  #freshwax-header {
    position: sticky !important;
    top: 0 !important;
    left: 0 !important;
