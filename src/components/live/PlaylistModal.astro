---
// src/components/live/PlaylistModal.astro
// Playlist modal for adding and managing media queue
---

<div id="playlistModal" class="playlist-modal hidden">
  <div class="playlist-modal-backdrop"></div>
  <div class="playlist-modal-content playlist-modal-large">
    <div class="playlist-modal-header">
      <button id="backFromPlaylist" class="back-btn" aria-label="Back to stream">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        <span>Back</span>
      </button>
      <h2>DJ Waitlist</h2>
      <button id="closePlaylistModal" class="close-btn" aria-label="Close playlist">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <div class="playlist-modal-body">
      <!-- Now Playing Strip - shows when a track is active -->
      <div id="nowPlayingStrip" class="now-playing-strip hidden">
        <div class="now-playing-label">
          <span class="now-playing-pulse"></span>
          NOW PLAYING
        </div>
        <div class="now-playing-info">
          <span id="nowPlayingTitle" class="now-playing-title">--</span>
        </div>
      </div>

      <!-- Two Column Layout for Queue and My Playlist -->
      <div class="playlist-columns">
        <!-- Left Column: Queue Section (split into queue list + video preview) -->
        <div class="playlist-column queue-column">
          <!-- URL Input - Only for logged in users -->
          <div class="playlist-add-section">
            <div id="playlistAuthNotice" class="playlist-auth-notice hidden">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
              </svg>
              <span>Sign in to add videos to the playlist</span>
            </div>
            <div id="playlistInputGroup" class="playlist-input-group">
              <input
                type="url"
                id="playlistUrlInput"
                class="playlist-url-input"
                placeholder="Paste a YouTube Or SoundCloud Link Here..."
                autocomplete="off"
              />
              <button id="clearPlaylistInput" class="clear-input-btn hidden" title="Clear input">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </button>
              <div class="input-button-group">
                <button id="addToPlaylistBtn" class="add-to-playlist-btn" title="Add to Playlist Queue">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="5 3 19 12 5 21 5 3"></polygon>
                  </svg>
                  Queue
                </button>
                <button id="saveForLaterBtn" class="save-for-later-btn" title="Save to My Playlist for later">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                  </svg>
                  Save
                </button>
              </div>
            </div>
            <div id="playlistError" class="playlist-error hidden"></div>
            <div id="playlistSuccess" class="playlist-success hidden"></div>
          </div>

          <!-- Split container: Queue List + Video Preview -->
          <div class="queue-split-container">
            <!-- Queue List Side -->
            <div class="queue-list-side">
              <div class="playlist-queue-header">
                <h3>Playlist Queue <span id="queueCount" class="queue-count">0/10</span></h3>
              </div>

              <!-- Position Indicator - centered above the queue -->
              <div id="positionIndicator" class="position-indicator hidden">
                <span id="positionText"></span>
              </div>

              <div id="playlistQueue" class="playlist-queue-grid">
                <div class="playlist-empty">
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <polygon points="5 3 19 12 5 21 5 3"></polygon>
                  </svg>
                  <p>DJ Waitlist is empty</p>
                  <p class="playlist-empty-hint">Add a track to join</p>
                </div>
              </div>
            </div>

            <!-- Video Preview Side -->
            <div class="queue-preview-side">
              <!-- Position Indicator (Your Track Playing) - shown above Now Playing when it's your turn -->
              <div id="yourTrackIndicator" class="your-track-indicator hidden">
                <span id="yourTrackText">ðŸŽ§ YOUR TRACK IS PLAYING</span>
              </div>
              <div class="preview-header">
                <h3>Now Playing</h3>
              </div>
              <div id="queueVideoPreview" class="queue-video-preview">
                <div class="preview-empty">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="2" y="2" width="20" height="20" rx="2.18" ry="2.18"></rect>
                    <line x1="7" y1="2" x2="7" y2="22"></line>
                    <line x1="17" y1="2" x2="17" y2="22"></line>
                    <line x1="2" y1="12" x2="22" y2="12"></line>
                    <line x1="2" y1="7" x2="7" y2="7"></line>
                    <line x1="2" y1="17" x2="7" y2="17"></line>
                    <line x1="17" y1="17" x2="22" y2="17"></line>
                    <line x1="17" y1="7" x2="22" y2="7"></line>
                  </svg>
                  <p>No video playing</p>
                </div>
                <div id="previewPlayerContainer" class="preview-player-container hidden">
                  <!-- Video iframe will be inserted here -->
                </div>
              </div>
              <div id="previewTrackInfo" class="preview-track-info hidden">
                <div class="preview-track-title" id="previewTrackTitle">--</div>
                <div class="preview-track-bottom">
                  <div class="preview-track-dj" id="previewTrackDj">Selecter: --</div>
                  <div class="preview-duration-box" id="previewDurationBox">
                    <span class="preview-duration-value" id="previewDuration">--:--</span>
                    <span class="preview-duration-label">LEFT</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column: My Playlist Section -->
        <div class="playlist-column my-playlist-column">
          <div id="myPlaylistSection" class="my-playlist-section" style="display: flex;">
            <div class="my-playlist-header">
              <div class="my-playlist-title-group">
                <h3>My Playlist</h3>
                <span id="myPlaylistCount" class="my-playlist-count-box">0</span>
                <select id="playlistSortSelect" class="playlist-sort-select">
                  <option value="recent">Recently Added</option>
                  <option value="oldest">Oldest First</option>
                  <option value="alpha-az">A-Z</option>
                  <option value="alpha-za">Z-A</option>
                </select>
                <div class="playlist-layout-toggle">
                  <button id="layoutSingleBtn" class="layout-btn active" title="Single column">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="3" width="18" height="4" rx="1"></rect>
                      <rect x="3" y="10" width="18" height="4" rx="1"></rect>
                      <rect x="3" y="17" width="18" height="4" rx="1"></rect>
                    </svg>
                  </button>
                  <button id="layoutGridBtn" class="layout-btn" title="Two columns">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="3" width="7" height="7" rx="1"></rect>
                      <rect x="14" y="3" width="7" height="7" rx="1"></rect>
                      <rect x="3" y="14" width="7" height="7" rx="1"></rect>
                      <rect x="14" y="14" width="7" height="7" rx="1"></rect>
                    </svg>
                  </button>
                </div>
              </div>
              <div class="my-playlist-actions">
                <button id="exportPlaylistBtn" class="export-playlist-btn" title="Export playlist">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                  </svg>
                  Export
                </button>
                <button id="clearMyPlaylistBtn" class="clear-playlist-btn" title="Clear all">Clear</button>
                <button id="backToStreamBtn" class="back-to-stream-btn" title="Back to stream">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                  </svg>
                  Back
                </button>
              </div>
            </div>

            <!-- Clear Playlist Confirmation Modal -->
            <div id="clearPlaylistModal" class="clear-playlist-modal hidden">
              <div class="clear-modal-backdrop"></div>
              <div class="clear-modal-content">
                <div class="clear-modal-icon">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M3 6h18"></path>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                  </svg>
                </div>
                <h3>Clear Playlist?</h3>
                <p>This will remove all <span id="clearItemCount">0</span> tracks from your playlist. This action cannot be undone.</p>
                <div class="clear-modal-actions">
                  <button id="cancelClearBtn" class="cancel-clear-btn">Cancel</button>
                  <button id="confirmClearBtn" class="confirm-clear-btn">Clear All</button>
                </div>
              </div>
            </div>
            <!-- Pagination tabs for large playlists (20+ items) -->
            <div id="myPlaylistPagination" class="my-playlist-pagination hidden"></div>
            <div id="myPlaylistGrid" class="my-playlist-grid">
              <div class="playlist-empty">
                <p>Your playlist is empty</p>
                <p class="playlist-empty-hint">Save tracks for later</p>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<style is:global>
  /* Full page modal */
  .playlist-modal-large {
    width: 100%;
    max-width: 100%;
    height: 100vh;
    max-height: 100vh;
    border-radius: 0;
    overflow: hidden;
  }

  /* Header with back button */
  .playlist-modal-large .playlist-modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .playlist-modal-large .playlist-modal-header h2 {
    flex: 1;
    text-align: center;
    margin: 0;
  }

  /* Back button */
  .back-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    color: #fff;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .back-btn:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  /* Now Playing Strip */
  .now-playing-strip {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(90deg, rgba(220, 38, 38, 0.15), rgba(220, 38, 38, 0.1));
    border-bottom: 1px solid rgba(220, 38, 38, 0.3);
    margin-bottom: 1rem;
  }

  .now-playing-strip.hidden {
    display: none;
  }

  .now-playing-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 1px;
    color: #dc2626;
    text-transform: uppercase;
  }

  .now-playing-pulse {
    width: 8px;
    height: 8px;
    background: #dc2626;
    border-radius: 50%;
    animation: pulse 1.5s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(0.8); }
  }

  .now-playing-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: #fff;
  }

  .now-playing-dj {
    font-weight: 600;
    color: #60a5fa;
  }

  .now-playing-separator {
    color: rgba(255, 255, 255, 0.3);
  }

  .now-playing-title {
    color: rgba(255, 255, 255, 0.8);
    max-width: 300px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* Two Column Layout */
  .playlist-columns {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    flex: 1;
    overflow: hidden;
  }

  .playlist-column {
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .queue-column {
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    padding-right: 1.5rem;
  }

  .my-playlist-column {
    padding-left: 0.5rem;
  }

  /* Split container for queue list + video preview */
  .queue-split-container {
    display: flex;
    gap: 1rem;
    flex: 1;
    min-height: 0;
    overflow: hidden;
  }

  .queue-list-side {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-width: 0;
    overflow: hidden;
  }

  .queue-preview-side {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-width: 0;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 12px;
    padding: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .preview-header {
    margin-bottom: 0.75rem;
  }

  .preview-header h3 {
    font-size: 0.9rem;
    font-weight: 600;
    color: #fff;
    margin: 0;
  }

  .queue-video-preview {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.4);
    border-radius: 8px;
    overflow: hidden;
    min-height: 200px;
  }

  .preview-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.3);
    text-align: center;
    padding: 1rem;
  }

  .preview-empty svg {
    opacity: 0.4;
  }

  .preview-empty p {
    font-size: 0.85rem;
    margin: 0;
  }

  .preview-player-container {
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .preview-thumbnail-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000;
    border-radius: 8px;
    overflow: hidden;
  }

  .preview-thumbnail-wrapper img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .preview-playing-indicator {
    position: absolute;
    bottom: 12px;
    left: 12px;
    display: flex;
    gap: 3px;
    align-items: flex-end;
    height: 20px;
    padding: 6px 10px;
    background: rgba(0, 0, 0, 0.7);
    border-radius: 4px;
  }

  .playing-bar {
    width: 4px;
    background: #22c55e;
    border-radius: 2px;
    animation: playingBars 0.8s ease-in-out infinite;
  }

  .playing-bar:nth-child(1) {
    height: 8px;
    animation-delay: 0s;
  }

  .playing-bar:nth-child(2) {
    height: 14px;
    animation-delay: 0.2s;
  }

  .playing-bar:nth-child(3) {
    height: 10px;
    animation-delay: 0.4s;
  }

  @keyframes playingBars {
    0%, 100% {
      transform: scaleY(0.5);
    }
    50% {
      transform: scaleY(1);
    }
  }

  .preview-no-thumb {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.4);
    border-radius: 8px;
    color: rgba(255, 255, 255, 0.3);
  }

  .preview-track-info {
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .preview-track-title {
    font-size: 0.85rem;
    font-weight: 600;
    color: #fff;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 0.25rem;
  }

  .preview-track-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
  }

  .preview-track-dj {
    font-size: 0.75rem;
    color: #60a5fa;
    flex: 1;
    min-width: 0;
  }

  .preview-duration-box {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid #333;
    border-radius: 6px;
    padding: 0.25rem 0.5rem;
    flex-shrink: 0;
  }

  .preview-duration-label {
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #666;
  }

  .preview-duration-value {
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    font-size: 0.85rem;
    color: #dc2626;
    font-variant-numeric: tabular-nums;
    min-width: 35px;
    text-align: left;
  }

  /* Add section styling */
  .playlist-modal-large .playlist-add-section {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    padding: 1rem 0;
    margin-bottom: 1rem;
  }

  /* Input group */
  .playlist-modal-large .playlist-input-group {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    width: 100%;
    position: relative;
  }

  .playlist-modal-large .playlist-url-input {
    flex: 1;
    padding: 1rem 3rem 1rem 1rem;
    font-size: 1rem;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: #fff;
  }

  .playlist-modal-large .playlist-url-input:focus {
    outline: none;
    border-color: #3b82f6;
  }

  .playlist-modal-large .playlist-url-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  /* Clear input button */
  .clear-input-btn {
    position: absolute;
    right: 90px;
    padding: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.6);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .clear-input-btn:hover {
    background: rgba(220, 38, 38, 0.3);
    color: #dc2626;
  }

  .clear-input-btn.hidden {
    display: none;
  }

  /* Button group for input */
  .input-button-group {
    display: flex;
    gap: 0.5rem;
  }

  /* Add to Queue button */
  .playlist-modal-large .add-to-playlist-btn {
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
    border-radius: 10px;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    border: none;
    color: #fff;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .playlist-modal-large .add-to-playlist-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(34, 197, 94, 0.4);
  }

  /* Save for Later button */
  .save-for-later-btn {
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
    border-radius: 10px;
    background: linear-gradient(135deg, #2563eb, #1d4ed8);
    border: none;
    color: #fff;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .save-for-later-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(37, 99, 235, 0.4);
  }

  /* Queue header styling */
  .playlist-modal-large .playlist-queue-header {
    margin-bottom: 0.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }

  .playlist-modal-large .playlist-queue-header h3 {
    margin: 0;
    font-size: 1.25rem;
    color: #fff;
  }

  /* Compact list for queue items - all 10 visible */
  .playlist-queue-grid {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    padding: 0.5rem 0;
    flex: 1;
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: rgba(59, 130, 246, 0.5) transparent;
  }

  .playlist-queue-grid::-webkit-scrollbar {
    width: 4px;
  }

  .playlist-queue-grid::-webkit-scrollbar-track {
    background: transparent;
  }

  .playlist-queue-grid::-webkit-scrollbar-thumb {
    background: rgba(59, 130, 246, 0.5);
    border-radius: 2px;
  }

  /* Modal body fills available space */
  .playlist-modal-large .playlist-modal-body {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 1.5rem 2rem;
    overflow: hidden;
  }

  /* Queue item card style - compact rows for all items */
  .playlist-grid-item {
    display: flex !important;
    flex-direction: row !important;
    align-items: center !important;
    background: rgba(20, 20, 35, 0.9) !important;
    border: 1px solid rgba(255, 255, 255, 0.15) !important;
    border-radius: 6px !important;
    overflow: hidden !important;
    transition: all 0.2s ease;
    height: 50px !important;
    padding: 0 !important;
  }

  .playlist-grid-item::before {
    display: none !important;
    content: none !important;
  }

  .playlist-grid-item:hover {
    border-color: rgba(255, 255, 255, 0.3) !important;
    background: rgba(30, 30, 50, 0.95) !important;
  }

  /* Compact thumbnail for all items */
  .playlist-grid-item .playlist-grid-thumb {
    width: 70px !important;
    min-width: 70px !important;
    max-width: 70px !important;
    height: 50px !important;
    aspect-ratio: auto !important;
  }

