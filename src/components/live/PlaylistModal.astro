---
// src/components/live/PlaylistModal.astro
// Playlist modal for adding and managing media queue
---

<div id="playlistModal" class="playlist-modal hidden">
  <div class="playlist-modal-backdrop"></div>
  <div class="playlist-modal-content playlist-modal-large">
    <div class="playlist-modal-header">
      <h2>Playlist Queue</h2>
      <button id="closePlaylistModal" class="close-btn" aria-label="Close playlist">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <div class="playlist-modal-body">
      <!-- URL Input -->
      <div class="playlist-add-section">
        <div class="playlist-input-group">
          <input
            type="url"
            id="playlistUrlInput"
            class="playlist-url-input"
            placeholder="Paste YouTube, Vimeo, SoundCloud, or direct video URL..."
            autocomplete="off"
          />
          <button id="addToPlaylistBtn" class="add-to-playlist-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Add
          </button>
        </div>
        <div id="playlistError" class="playlist-error hidden"></div>
        <div id="playlistSuccess" class="playlist-success hidden"></div>
      </div>

      <!-- Queue Status -->
      <div class="playlist-queue-header">
        <h3>Queue <span id="queueCount" class="queue-count">0/10</span></h3>
      </div>

      <!-- Queue Grid (2 columns) -->
      <div id="playlistQueue" class="playlist-queue-grid">
        <div class="playlist-empty">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <polygon points="5 3 19 12 5 21 5 3"></polygon>
          </svg>
          <p>Your playlist is empty</p>
          <p class="playlist-empty-hint">Add a URL above to get started</p>
        </div>
      </div>

      <!-- Playback Controls - Stop and Volume only -->
      <div id="playlistControls" class="playlist-controls hidden">
        <div class="playlist-controls-simple">
          <button id="stopPlayBtn" class="control-btn control-btn-large" title="Stop/Resume">
            <svg id="stopIcon" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
              <rect x="6" y="6" width="12" height="12"></rect>
            </svg>
            <svg id="playIcon" class="hidden" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
              <polygon points="5 3 19 12 5 21 5 3"></polygon>
            </svg>
          </button>

          <div class="volume-control">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
              <path d="M15.54 8.46a5 5 0 0 1 0 7.07"></path>
              <path d="M19.07 4.93a10 10 0 0 1 0 14.14"></path>
            </svg>
            <input type="range" id="volumeSlider" class="volume-slider" min="0" max="100" value="80" />
          </div>
        </div>

        <div class="playlist-status">
          <span id="playlistStatusText">Playing</span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Large modal for 2-column grid */
  .playlist-modal-large {
    width: 95%;
    max-width: 900px;
    max-height: 90vh;
  }

  /* 2-column grid for queue items */
  .playlist-queue-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    padding: 1rem 0;
    max-height: 50vh;
    overflow-y: auto;
  }

  /* Queue item card style */
  .playlist-grid-item {
    display: flex;
    flex-direction: column;
    background: rgba(30, 30, 50, 0.8);
    border: 1px solid rgba(139, 92, 246, 0.3);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .playlist-grid-item:hover {
    border-color: rgba(139, 92, 246, 0.6);
    transform: translateY(-2px);
  }

  .playlist-grid-item.active {
    border-color: #8b5cf6;
    box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
  }

  .playlist-grid-item.active::before {
    content: 'NOW PLAYING';
    display: block;
    background: linear-gradient(90deg, #8b5cf6, #6366f1);
    color: white;
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 1px;
    text-align: center;
    padding: 4px;
  }

  .playlist-grid-thumb {
    position: relative;
    width: 100%;
    aspect-ratio: 16/9;
    background: #1a1a2e;
    overflow: hidden;
  }

  .playlist-grid-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .playlist-grid-thumb-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #1a1a2e 0%, #2d1b4e 100%);
    color: rgba(139, 92, 246, 0.5);
  }

  .playlist-grid-info {
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .playlist-grid-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: #fff;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .playlist-grid-platform {
    font-size: 0.75rem;
    color: rgba(139, 92, 246, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .playlist-grid-actions {
    display: flex;
    gap: 0.5rem;
    margin-top: auto;
  }

  .playlist-action-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    padding: 0.5rem;
    border: none;
    border-radius: 6px;
    font-size: 0.75rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .playlist-copy-btn {
    background: rgba(59, 130, 246, 0.2);
    color: #60a5fa;
  }

  .playlist-copy-btn:hover {
    background: rgba(59, 130, 246, 0.4);
  }

  .playlist-remove-btn {
    background: rgba(239, 68, 68, 0.2);
    color: #f87171;
  }

  .playlist-remove-btn:hover {
    background: rgba(239, 68, 68, 0.4);
  }

  /* Simple controls layout */
  .playlist-controls-simple {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    padding: 1rem;
  }

  .volume-control {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #888;
  }

  .volume-slider {
    width: 120px;
    height: 6px;
    -webkit-appearance: none;
    appearance: none;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    outline: none;
    cursor: pointer;
  }

  .volume-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 16px;
    height: 16px;
    background: #8b5cf6;
    border-radius: 50%;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .volume-slider::-webkit-slider-thumb:hover {
    transform: scale(1.2);
  }

  .volume-slider::-moz-range-thumb {
    width: 16px;
    height: 16px;
    background: #8b5cf6;
    border: none;
    border-radius: 50%;
    cursor: pointer;
  }

  /* Mobile: single column */
  @media (max-width: 640px) {
    .playlist-queue-grid {
      grid-template-columns: 1fr;
    }

    .playlist-modal-large {
      width: 100%;
      max-width: 100%;
      height: 100vh;
      max-height: 100vh;
      border-radius: 0;
    }

    .playlist-controls-simple {
      flex-direction: column;
      gap: 1rem;
    }

    .volume-slider {
      width: 150px;
    }
  }
</style>

<script>
  import { PlaylistManager } from '../../lib/playlist-manager';
  import { getPlatformName } from '../../lib/url-parser';

  // Global playlist manager instance
  let playlistManager: PlaylistManager | null = null;
  let isStopped = false;

  // Initialize playlist on page load
  async function initPlaylist() {
    if (playlistManager) return;

    // @ts-ignore - Assuming user auth is available globally
    const user = window.currentUser || null;
    playlistManager = new PlaylistManager('playlistPlayer');
    await playlistManager.initialize(user?.uid);

    // Expose globally for live-stream.js
    (window as any).playlistManager = playlistManager;
    console.log('[PlaylistModal] Manager initialized and exposed to window');
  }

  // Initialize immediately
  initPlaylist();

  // Re-initialize on auth state change (in case user logs in/out)
  document.addEventListener('authStateChanged', (e: any) => {
    if (playlistManager && e.detail?.user) {
      playlistManager.initialize(e.detail.user.uid);
    }
  });

  // Open modal
  const playlistBtn = document.getElementById('playlistBtn');
  const modal = document.getElementById('playlistModal');
  const closeBtn = document.getElementById('closePlaylistModal');
  const backdrop = modal?.querySelector('.playlist-modal-backdrop');

  playlistBtn?.addEventListener('click', () => {
    modal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  });

  // Close modal
  function closeModal() {
    modal?.classList.add('hidden');
    document.body.style.overflow = '';
  }

  closeBtn?.addEventListener('click', closeModal);
  backdrop?.addEventListener('click', closeModal);

  // Add to playlist
  const urlInput = document.getElementById('playlistUrlInput') as HTMLInputElement;
  const addBtn = document.getElementById('addToPlaylistBtn');
  const errorDiv = document.getElementById('playlistError');
  const successDiv = document.getElementById('playlistSuccess');

  async function addToPlaylist() {
    if (!playlistManager || !urlInput) return;

    const url = urlInput.value.trim();
    if (!url) return;

    // Hide previous messages
    errorDiv?.classList.add('hidden');
    successDiv?.classList.add('hidden');

    const result = await playlistManager.addItem(url);

    if (result.success) {
      urlInput.value = '';
      isStopped = false;
      updateStopPlayButton();
      if (successDiv) {
        successDiv.textContent = result.message || 'Added to queue';
        successDiv.classList.remove('hidden');
        setTimeout(() => successDiv.classList.add('hidden'), 3000);
      }
    } else {
      if (errorDiv) {
        errorDiv.textContent = result.error || 'Failed to add';
        errorDiv.classList.remove('hidden');
      }
    }
  }

  addBtn?.addEventListener('click', addToPlaylist);
  urlInput?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      addToPlaylist();
    }
  });

  // Stop/Play toggle
  const stopPlayBtn = document.getElementById('stopPlayBtn');
  const stopIcon = document.getElementById('stopIcon');
  const playIcon = document.getElementById('playIcon');

  function updateStopPlayButton() {
    if (isStopped) {
      stopIcon?.classList.add('hidden');
      playIcon?.classList.remove('hidden');
    } else {
      stopIcon?.classList.remove('hidden');
      playIcon?.classList.add('hidden');
    }
  }

  stopPlayBtn?.addEventListener('click', async () => {
    if (!playlistManager) return;

    if (isStopped) {
      // Resume playback
      await playlistManager.resume();
      isStopped = false;
    } else {
      // Stop playback
      await playlistManager.pause();
      isStopped = true;
    }
    updateStopPlayButton();
  });

  // Volume control
  const volumeSlider = document.getElementById('volumeSlider') as HTMLInputElement;
  volumeSlider?.addEventListener('input', () => {
    const volume = parseInt(volumeSlider.value);
    if (playlistManager) {
      playlistManager.setVolume(volume);
    }
  });

  // Listen for playlist updates
  window.addEventListener('playlistUpdate', (event: any) => {
    const { queue, currentIndex, isPlaying, queueSize } = event.detail;

    // Update queue display
    renderQueue(queue, currentIndex);

    // Update controls visibility
    const controlsDiv = document.getElementById('playlistControls');
    if (queueSize > 0) {
      controlsDiv?.classList.remove('hidden');
    } else {
      controlsDiv?.classList.add('hidden');
    }

    // Update status text
    const statusText = document.getElementById('playlistStatusText');
    if (statusText && queueSize > 0) {
      const currentItem = queue[currentIndex];
      statusText.textContent = currentItem?.title || 'Playing';
    }

    // Update queue count
    const queueCount = document.getElementById('queueCount');
    if (queueCount) {
      queueCount.textContent = `${queueSize}/10`;
    }

    // Update stop/play state
    isStopped = !isPlaying;
    updateStopPlayButton();
  });

  // Copy to clipboard function
  async function copyToClipboard(url: string, btn: HTMLElement) {
    try {
      await navigator.clipboard.writeText(url);
      const originalText = btn.innerHTML;
      btn.innerHTML = '<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg> Copied!';
      setTimeout(() => {
        btn.innerHTML = originalText;
      }, 2000);
    } catch (err) {
      console.error('Failed to copy:', err);
    }
  }

  // Render queue items in 2-column grid
  function renderQueue(queue: any[], currentIndex: number) {
    const queueDiv = document.getElementById('playlistQueue');
    if (!queueDiv) return;

    if (queue.length === 0) {
      queueDiv.innerHTML = `
        <div class="playlist-empty" style="grid-column: 1 / -1;">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <polygon points="5 3 19 12 5 21 5 3"></polygon>
          </svg>
          <p>Your playlist is empty</p>
          <p class="playlist-empty-hint">Add a URL above to get started</p>
        </div>
      `;
      return;
    }

    queueDiv.innerHTML = queue.map((item, index) => `
      <div class="playlist-grid-item ${index === currentIndex ? 'active' : ''}" data-id="${item.id}">
        <div class="playlist-grid-thumb">
          ${item.thumbnail
            ? `<img src="${item.thumbnail}" alt="${item.title || 'Video thumbnail'}" loading="lazy" />`
            : `<div class="playlist-grid-thumb-placeholder">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="5 3 19 12 5 21 5 3"></polygon>
                </svg>
              </div>`
          }
        </div>
        <div class="playlist-grid-info">
          <div class="playlist-grid-title">${item.title || 'Untitled'}</div>
          <div class="playlist-grid-platform">${getPlatformName(item.platform)}</div>
          <div class="playlist-grid-actions">
            <button class="playlist-action-btn playlist-copy-btn" data-url="${item.url}" title="Copy link">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
              </svg>
              Copy
            </button>
            <button class="playlist-action-btn playlist-remove-btn" data-id="${item.id}" title="Remove">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="3 6 5 6 21 6"></polyline>
                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
              </svg>
              Remove
            </button>
          </div>
        </div>
      </div>
    `).join('');

    // Add copy button listeners
    queueDiv.querySelectorAll('.playlist-copy-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const url = (e.currentTarget as HTMLElement).dataset.url;
        if (url) {
          await copyToClipboard(url, e.currentTarget as HTMLElement);
        }
      });
    });

    // Add remove button listeners
    queueDiv.querySelectorAll('.playlist-remove-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const itemId = (e.currentTarget as HTMLElement).dataset.id;
        if (itemId && playlistManager) {
          await playlistManager.removeItem(itemId);
        }
      });
    });
  }
</script>
