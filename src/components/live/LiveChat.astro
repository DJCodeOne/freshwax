---
// src/components/live/LiveChat.astro
// Live stream chat with emoji picker and GIF support
---

<div class="chat-section">
  <div class="chat-header">
    <h3>LIVE CHAT</h3>
    <span class="chat-viewers" id="chatViewers">0 watching</span>
  </div>

  <div class="chat-messages" id="chatMessages">
    <div class="chat-welcome">
      <p>Welcome to <span class="brand-fresh">Fresh</span> <span class="brand-wax">Wax</span> Live Stream!</p>
      <p class="chat-hint">Chat is active during live streams.</p>
    </div>
  </div>

  <div id="chatInputSection" class="chat-input-section" style="position: relative;">
    <div id="loginPrompt" class="login-prompt">
      <p><a href="/login">Sign in</a> to chat</p>
    </div>

    <div id="chatForm" class="chat-form hidden">
      <div id="replyIndicator" class="reply-indicator" style="display: none;"></div>
      <div class="chat-input-wrapper">
        <input type="text" id="chatInput" placeholder="Say something..." maxlength="500" autocomplete="off" />
        <div class="chat-input-tools">
          <button type="button" id="emojiBtn" class="input-tool-btn" title="Emojis">
            <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm3.5-9c.83 0 1.5-.67 1.5-1.5S16.33 8 15.5 8 14 8.67 14 9.5s.67 1.5 1.5 1.5zm-7 0c.83 0 1.5-.67 1.5-1.5S9.33 8 8.5 8 7 8.67 7 9.5 7.67 11 8.5 11zm3.5 6.5c2.33 0 4.31-1.46 5.11-3.5H6.89c.8 2.04 2.78 3.5 5.11 3.5z"/></svg>
          </button>
          <button type="button" id="giphyBtn" class="input-tool-btn" title="GIFs">
            <span style="font-size: 11px; font-weight: 700;">GIF</span>
          </button>
        </div>
        <button type="submit" id="sendBtn">
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/></svg>
        </button>
      </div>
    </div>

    <!-- Emoji Picker - positioned above chat input -->
    <div id="emojiPicker" class="picker-modal hidden">
      <div class="picker-header">
        <span>Emojis</span>
        <button type="button" class="picker-close" onclick="window.toggleEmojiPicker()">Ã—</button>
      </div>
      <div class="emoji-categories">
        <button class="emoji-cat active" data-cat="music" onclick="window.switchEmojiCategory('music')">ðŸŽµ Music</button>
        <button class="emoji-cat" data-cat="reactions" onclick="window.switchEmojiCategory('reactions')">ðŸ”¥ Fire</button>
        <button class="emoji-cat" data-cat="faces" onclick="window.switchEmojiCategory('faces')">ðŸ˜Ž Faces</button>
        <button class="emoji-cat" data-cat="vibes" onclick="window.switchEmojiCategory('vibes')">ðŸŒ´ Vibes</button>
      </div>
      <div class="emoji-grid" id="emojiGrid"></div>
    </div>

  </div>
</div>

<!-- Large GIF Modal - Full overlay -->
<div id="giphyModal" class="gif-modal-overlay hidden" onclick="if(event.target === this) window.toggleGiphyPicker()">
  <div class="gif-modal">
    <div class="gif-modal-header">
      <h2>Choose a GIF</h2>
      <button type="button" class="gif-modal-close" onclick="window.toggleGiphyPicker()">Ã—</button>
    </div>
    <div class="gif-modal-search">
      <input type="text" id="giphySearch" placeholder="Search GIFs..." oninput="window.searchGiphyDebounced(this.value)" />
    </div>
    <div class="gif-modal-categories">
      <button class="gif-cat active" data-cat="trending" onclick="window.switchGifCategory('trending')">Trending</button>
      <button class="gif-cat" data-cat="reactions" onclick="window.switchGifCategory('reactions')">Reactions</button>
      <button class="gif-cat" data-cat="music" onclick="window.switchGifCategory('music')">Music</button>
      <button class="gif-cat" data-cat="dance" onclick="window.switchGifCategory('dance')">Dance</button>
      <button class="gif-cat" data-cat="party" onclick="window.switchGifCategory('party')">Party</button>
      <button class="gif-cat" data-cat="dj" onclick="window.switchGifCategory('dj')">DJ</button>
    </div>
    <div class="gif-modal-grid" id="giphyGrid">
      <p class="gif-loading">Loading trending GIFs...</p>
    </div>
    <div class="gif-modal-footer">
      <span class="giphy-attribution">Powered by GIPHY</span>
    </div>
  </div>
</div>

<style is:global>
  /* Reply Indicator */
  .reply-indicator {
    display: flex;
    align-items: center;
    padding: 0.5rem 0.75rem;
    background: #1a1a2e;
    border-radius: 6px;
    margin-bottom: 0.5rem;
    font-size: 0.8125rem;
    gap: 0.25rem;
  }

  /* Picker Modal - Fixed positioning to ensure visibility */
  .picker-modal {
    position: absolute;
    bottom: calc(100% + 10px);
    left: 0;
    right: 0;
    background: #1a1a1a;
    border: 2px solid #444;
    border-radius: 12px;
    padding: 0;
    z-index: 9999;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.5);
    max-height: 450px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  /* Specific GIF picker sizing */
  #giphyPicker {
    max-height: 500px;
  }

  .picker-modal.hidden {
    display: none !important;
  }

  .picker-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: #222;
    border-bottom: 1px solid #333;
    font-weight: 600;
    color: #fff;
  }

  .picker-close {
    background: none;
    border: none;
    color: #888;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0;
    line-height: 1;
  }

  .picker-close:hover {
    color: #fff;
  }

  /* Emoji Categories */
  .emoji-categories {
    display: flex;
    gap: 0.25rem;
    padding: 0.5rem;
    background: #1a1a1a;
    border-bottom: 1px solid #333;
    flex-wrap: wrap;
  }

  .emoji-cat {
    padding: 0.375rem 0.625rem;
    background: #2a2a2a;
    border: none;
    border-radius: 6px;
    font-size: 0.75rem;
    cursor: pointer;
    color: #aaa;
    transition: all 0.15s;
  }

  .emoji-cat:hover,
  .emoji-cat.active {
    background: #6366f1;
    color: #fff;
  }

  /* Emoji Grid */
  .emoji-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 0.25rem;
    padding: 0.5rem;
    overflow-y: auto;
    flex: 1;
  }

  .emoji-item {
    padding: 0.5rem;
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    border-radius: 6px;
    transition: background-color 0.15s;
    text-align: center;
  }

  .emoji-item:hover {
    background: rgba(99, 102, 241, 0.3);
  }

  /* Large GIF Modal Overlay */
  .gif-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.85);
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    animation: fadeIn 0.2s ease;
  }

  .gif-modal-overlay.hidden {
    display: none !important;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .gif-modal {
    background: #1a1a1a;
    border-radius: 16px;
    width: 100%;
    max-width: 600px;
    max-height: 70vh;
    display: flex;
    flex-direction: column;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    border: 1px solid #333;
    animation: slideUp 0.25s ease;
  }

  @keyframes slideUp {
    from { transform: translateY(20px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  .gif-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid #333;
    background: #222;
    border-radius: 16px 16px 0 0;
  }

  .gif-modal-header h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: #fff;
  }

  .gif-modal-close {
    background: none;
    border: none;
    color: #888;
    font-size: 2rem;
    cursor: pointer;
    padding: 0;
    line-height: 1;
    transition: color 0.15s;
  }

  .gif-modal-close:hover {
    color: #fff;
  }

  .gif-modal-search {
    padding: 1rem 1.5rem;
    background: #1a1a1a;
    border-bottom: 1px solid #333;
  }

  .gif-modal-search input {
    width: 100%;
    padding: 0.875rem 1.25rem;
    background: #111;
    border: 2px solid #333;
    border-radius: 12px;
    color: #fff;
    font-size: 1rem;
    transition: border-color 0.15s;
  }

  .gif-modal-search input:focus {
    outline: none;
    border-color: #6366f1;
  }

  .gif-modal-search input::placeholder {
    color: #666;
  }

  .gif-modal-categories {
    display: flex;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: #1a1a1a;
    border-bottom: 1px solid #333;
    flex-wrap: wrap;
  }

  .gif-cat {
    padding: 0.5rem 1rem;
    background: #2a2a2a;
    border: none;
    border-radius: 20px;
    font-size: 0.875rem;
    cursor: pointer;
    color: #aaa;
    transition: all 0.15s;
    font-weight: 500;
  }

  .gif-cat:hover {
    background: #3a3a3a;
    color: #fff;
  }

  .gif-cat.active {
    background: #6366f1;
    color: #fff;
  }

  .gif-modal-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.25rem;
    padding: 1.5rem;
    overflow-y: auto;
    flex: 1;
    min-height: 300px;
  }

  @media (max-width: 768px) {
    .gif-modal-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .gif-modal-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.875rem;
    }
  }

  .giphy-item {
    position: relative;
    width: 100%;
    padding-bottom: 100%; /* Force square aspect ratio */
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.15s, box-shadow 0.15s;
    background: #222;
    border: 2px solid #333;
    box-sizing: border-box;
  }

  .giphy-item:hover {
    transform: scale(1.03);
    box-shadow: 0 4px 20px rgba(99, 102, 241, 0.3);
    border-color: #6366f1;
  }

  .giphy-item img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gif-loading {
    grid-column: 1 / -1;
    text-align: center;
    color: #666;
    padding: 3rem;
    margin: 0;
    font-size: 1rem;
  }

  .gif-modal-footer {
    padding: 0.75rem 1.5rem;
    background: #222;
    border-top: 1px solid #333;
    border-radius: 0 0 16px 16px;
    text-align: right;
  }

  .giphy-attribution {
    font-size: 0.75rem;
    color: #666;
  }

  /* Chat input tools - inline between input and send */
  .chat-input-tools {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0 0.5rem;
  }

  .input-tool-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: transparent;
    border: none;
    border-radius: 6px;
    color: #888;
    cursor: pointer;
    transition: all 0.15s;
  }

  .input-tool-btn:hover {
    background: rgba(99, 102, 241, 0.2);
    color: #6366f1;
  }

  .input-tool-btn.active {
    background: rgba(99, 102, 241, 0.3);
    color: #6366f1;
  }

  .input-tool-btn svg {
    width: 20px;
    height: 20px;
  }
</style>
