    function loadComments(releaseId) {
      fetch('/api/get-comments?releaseId=' + releaseId)
        .then(function(response) { return response.json(); })
        .then(function(data) {
          if (data.success && data.comments && data.comments.length > 0) {
            commentsList.innerHTML = data.comments.map(function(comment) {
              var text = comment.comment || comment.text || '';
              var username = comment.userName || comment.username || 'Anonymous';
              var timestamp = comment.timestamp || comment.createdAt || new Date().toISOString();
              
