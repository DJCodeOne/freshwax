  // ============================================
  // WISHLIST FUNCTIONALITY
  // Toggle wishlist with optimistic UI
  // ============================================
  function initWishlistButtons() {
    // Cache for wishlist state
    var wishlistCache = FWCache.get('wishlist_items') || {};
    
    // Check if user is logged in
    function getCurrentUserId() {
      if (window.firebaseAuth && window.firebaseAuth.currentUser) {
        return window.firebaseAuth.currentUser.uid;
      }
      return null;
    }
    
    // Update button visual state
    function updateButtonState(button, isInWishlist) {
      if (isInWishlist) {
        button.classList.add('active');
        button.title = 'Remove from Wishlist';
      } else {
        button.classList.remove('active');
        button.title = 'Add to Wishlist';
      }
    }
    
    // Load initial wishlist state
    async function loadWishlistState() {
      var userId = getCurrentUserId();
      if (!userId) return;
      
      try {
        var response = await fetch('/api/wishlist?userId=' + userId);
        var data = await response.json();
        
        if (data.success && data.wishlist) {
          // Build cache of wishlisted items
          wishlistCache = {};
          data.wishlist.forEach(function(item) {
            wishlistCache[item.id] = true;
          });
          FWCache.set('wishlist_items', wishlistCache, FWCache.TTL.OWNERSHIP);
          
          // Update all visible buttons
          document.querySelectorAll('.wishlist-button').forEach(function(btn) {
            var releaseId = btn.getAttribute('data-release-id');
            if (wishlistCache[releaseId]) {
              updateButtonState(btn, true);
            }
          });
        }
      } catch (err) {
        // Silent fail
      }
    }
    
    // Handle wishlist button click
    document.querySelectorAll('.wishlist-button').forEach(function(button) {
      var releaseId = button.getAttribute('data-release-id');
      
      // Set initial state from cache
      if (wishlistCache[releaseId]) {
        updateButtonState(button, true);
      }
      
      button.onclick = async function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        var userId = getCurrentUserId();
        if (!userId) {
          // Redirect to login
          window.location.href = '/account/login?redirect=' + encodeURIComponent(window.location.pathname);
          return;
        }
        
        var isCurrentlyInWishlist = button.classList.contains('active');
        
        // Optimistic UI update
        updateButtonState(button, !isCurrentlyInWishlist);
        
        try {
          var response = await fetch('/api/wishlist', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              userId: userId,
              releaseId: releaseId,
              action: 'toggle'
            })
          });
          
          var data = await response.json();
          
          if (data.success) {
            // Update cache
            if (data.inWishlist) {
              wishlistCache[releaseId] = true;
            } else {
              delete wishlistCache[releaseId];
            }
            FWCache.set('wishlist_items', wishlistCache, FWCache.TTL.OWNERSHIP);
            
            // Ensure button state matches server
            updateButtonState(button, data.inWishlist);
            
            // Show brief feedback
            var title = button.getAttribute('data-title') || 'Release';
            var message = data.inWishlist ? 'Added to wishlist' : 'Removed from wishlist';
            showToast(message);
          } else {
            // Revert on failure
            updateButtonState(button, isCurrentlyInWishlist);
          }
        } catch (err) {
          // Revert on error
          updateButtonState(button, isCurrentlyInWishlist);
        }
      };
    });
    
    // Load initial state when auth is ready
    if (window.firebaseAuth) {
      loadWishlistState();
    } else {
      // Wait for auth to be ready
      var authCheckInterval = setInterval(function() {
        if (window.firebaseAuth) {
          clearInterval(authCheckInterval);
          loadWishlistState();
        }
      }, 500);
      // Stop checking after 10 seconds
      setTimeout(function() { clearInterval(authCheckInterval); }, 10000);
    }
  }
  
  // Simple toast notification
