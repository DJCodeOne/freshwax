---
// src/components/ReleasePlate.astro
// OPTIMIZED: Server-side ratings eliminate batch API calls
// OPTIMIZED: Lazy audio element creation reduces DOM size
// OPTIMIZED: Extended cache duration, debounced interactions, optimistic UI

interface Track {
  trackNumber?: number;
  displayTrackNumber?: number;
  trackName?: string;
  featured?: string;
  remixer?: string;
  previewUrl?: string | null;
  wavUrl?: string;
  mp3Url?: string;
  duration?: string | number;
  ratings?: {
    average: number;
    count: number;
    total: number;
  };
  comments?: any[];
}

interface Comment {
  id: string;
  userName?: string;
  username?: string;
  comment?: string;
  text?: string;
  timestamp: string;
  createdAt?: string;
}

interface Props {
  id: string;
  artistName?: string;
  releaseName?: string;
  labelName?: string;
  recordLabel?: string;
  copyrightHolder?: string;
  labelCode?: string;
  genre?: string;
  coverArtUrl?: string;
  additionalArtwork?: string[];
  tracks?: Track[];
  releaseDate?: string;
  processedAt?: string;
  uploadedAt?: string;
  publishedAt?: string;
  pricePerSale?: number;
  trackPrice?: number;
  vinylRelease?: boolean;
  vinylRecordCount?: string;
  vinylPrice?: number;
  hasLimitedEdition?: boolean;
  limitedEditionType?: string;
  limitedEditionDetails?: string;
  releaseDescription?: string;
  pricing?: {
    digital?: number;
    track?: number;
    vinyl?: number;
  };
  vinyl?: {
    price?: number;
    recordCount?: number | string;
    available?: boolean;
  };
  ratings?: {
    average?: number;
    count?: number;
    total?: number;
  };
  overallRating?: {
    average: number;
    count: number;
    total: number;
  };
  comments?: Comment[];
  socialLinks?: any;
  notes?: string;
  submittedBy?: string;
  status?: string;
  approved?: boolean;
  published?: boolean;
  stats?: {
    totalTracks: number;
    totalPreviews: number;
    totalArtwork: number;
    plays: number;
    downloads: number;
    views: number;
  };
}

const { 
  id = '', 
  artistName = 'Unknown Artist',
  releaseName = 'Untitled Release',
  labelName = '',
  recordLabel = '',
  copyrightHolder = '',
  labelCode = '',
  genre = '',
  coverArtUrl = '/logo.webp',
  additionalArtwork = [],
  tracks = [],
  releaseDate = new Date().toISOString(),
  pricePerSale = 0,
  trackPrice = 1.00,
  vinylRelease = false,
  vinylRecordCount = '',
  vinylPrice = 0,
  hasLimitedEdition = false,
  limitedEditionType = '',
  limitedEditionDetails = '',
  releaseDescription = '',
  pricing = {},
  vinyl = {},
  ratings = {},
  overallRating = { average: 0, count: 0, total: 0 },
  comments = [],
  notes = '',
  status = 'live'
} = Astro.props;

// Use whichever label field is available
const displayLabel = labelName || recordLabel || copyrightHolder || '';

// Handle nested pricing structure
const finalDigitalPrice = pricing?.digital || pricePerSale || (trackPrice * tracks.length);
const finalTrackPrice = pricing?.track || trackPrice || 1.00;
const finalVinylPrice = vinyl?.price || pricing?.vinyl || vinylPrice || 0;

// Handle nested vinyl structure
const finalVinylRecordCount = vinyl?.recordCount?.toString() || vinylRecordCount || '0';
const finalVinylAvailable = vinyl?.available !== undefined ? vinyl.available : vinylRelease;

// Handle ratings - prefer ratings over overallRating (server-side normalized)
const finalRating = {
  average: ratings?.average || overallRating?.average || 0,
  count: ratings?.count || overallRating?.count || 0,
  total: ratings?.total || overallRating?.total || 0
};

// Flag to indicate if ratings came from server (non-zero means server-provided)
const hasServerRatings = finalRating.count > 0 || finalRating.average > 0;

// Parse social links from notes - ONLY social links, no descriptions
let socialLink = '';
if (notes) {
  try {
    const parts = notes.split(/[\n\s]+/);
    for (const part of parts) {
      if (part && (part.startsWith('http://') || part.startsWith('https://'))) {
        socialLink = part;
        break;
      }
    }
  } catch (e) {
    console.error('[ReleasePlate] Error parsing notes:', e);
  }
}

// Process tracks with IDs and sort by track number
const tracksWithIds = tracks.map((track, index) => {
  const displayNum = track.displayTrackNumber || track.trackNumber || (index + 1);
  return {
    id: `${id}-track-${displayNum}`,
    title: track.trackName || `Track ${displayNum}`,
    featured: track.featured || '',
    remixer: track.remixer || '',
    preview_url: track.previewUrl || null,
    track_number: displayNum,
    mp3Url: track.mp3Url,
    wavUrl: track.wavUrl,
    duration: track.duration
  };
}).sort((a, b) => a.track_number - b.track_number);

const formattedDate = new Date(releaseDate).toLocaleDateString('en-GB', {
  day: 'numeric',
  month: 'short',
  year: 'numeric'
});

const vinylAvailable = finalVinylAvailable && parseInt(finalVinylRecordCount) > 0;
const digitalPrice = finalDigitalPrice;
---

<article 
  class="release-plate-container bg-gradient-to-b from-black via-gray-800 to-white rounded-lg shadow-sm border border-gray-200 p-6 mb-4 w-full" 
  data-release={id}
  data-has-server-ratings={hasServerRatings ? 'true' : 'false'}
>
  <div class="content-wrapper flex flex-col md:flex-row gap-6">
    <!-- LEFT: ARTWORK + BUY BUTTONS -->
    <div class="relative flex-shrink-0">
      <img 
        src={coverArtUrl} 
        alt={`${releaseName} by ${artistName}`} 
        class="w-64 h-64 object-cover rounded-md shadow-md mb-4"
        loading="lazy"
        onerror="this.src='/logo.webp'"
      />
      
      <div class="flex gap-2 w-64">
        <button 
          data-release-id={id}
          data-product-type="digital"
          data-price={digitalPrice}
          data-title={releaseName}
          data-artist={artistName}
          data-artwork={coverArtUrl}
          class="add-to-cart bg-gray-900 hover:bg-black text-white px-4 py-3 rounded-lg flex items-center justify-center gap-2 transition-all font-semibold text-base flex-1 shadow-sm"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
          </svg>
          <span>Digital ¬£{digitalPrice.toFixed(2)}</span>
        </button>
        
        <button 
          data-release-id={id}
          data-product-type="vinyl"
          data-price={finalVinylPrice}
          data-digital-price={digitalPrice}
          data-title={releaseName}
          data-artist={artistName}
          data-artwork={coverArtUrl}
          data-includes-digital="true"
          disabled={!vinylAvailable}
          class={`add-to-cart px-4 py-3 rounded-lg flex items-center justify-center gap-2 transition-all font-semibold text-base flex-1 shadow-sm ${
            vinylAvailable
              ? 'bg-red-600 hover:bg-red-700 text-white' 
              : 'bg-gray-200 text-gray-500 cursor-not-allowed'
          }`}
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
            <circle cx="12" cy="12" r="3" fill="currentColor"/>
          </svg>
          <span>
            {!finalVinylAvailable ? 'No Vinyl' : vinylAvailable ? `Vinyl ¬£${finalVinylPrice?.toFixed(2)}` : 'Vinyl Sold Out'}
          </span>
        </button>
      </div>
    </div>

    <!-- MIDDLE: INFO SECTION -->
    <div class="flex-1 min-w-0 flex flex-col">
      <div class="space-y-3 flex-1 flex flex-col">
        <h3 class="text-3xl font-bold text-red-600 leading-tight">
          {releaseName}
        </h3>
        
        <div class="space-y-1">
          <p class="text-xl font-semibold text-white">
            {artistName}
          </p>
          <p class="text-base font-medium text-white">
            {displayLabel ? `¬© ${displayLabel}` : '¬© Unknown Label'}
          </p>
        </div>
        
        <div class="flex items-center gap-2 text-base text-gray-300">
          {labelCode && (
            <span class="text-sm px-2 py-1 bg-gray-700 text-white rounded font-medium">{labelCode}</span>
          )}
          {genre && (
            <>
              {labelCode && <span class="text-gray-400">‚Ä¢</span>}
              <span class="text-sm px-2 py-1 bg-gray-700 text-white rounded font-medium">{genre}</span>
            </>
          )}
        </div>

        <!-- Rating, Comments & Share Section -->
        <div class="flex items-center gap-4 pt-4 border-t border-gray-600 mt-6">
          <!-- 5-Star Rating Display -->
          <div class="flex items-center gap-2">
            <div class="flex items-center gap-0.5">
              {[1, 2, 3, 4, 5].map((star) => (
                <button
                  class="rating-star transition-colors"
                  data-release-id={id}
                  data-star={star}
                  title={`Rate ${star} out of 5`}
                >
                  <svg class="w-6 h-6" fill={star <= Math.round(finalRating.average) ? "currentColor" : "none"} stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                  </svg>
                </button>
              ))}
            </div>
            <span class="text-sm font-semibold text-gray-300">
              <span class="rating-value" data-release-id={id}>{finalRating.average.toFixed(1)}</span>
              <span class="rating-count text-gray-400" data-release-id={id}> ({finalRating.count})</span>
            </span>
          </div>

          <button 
            class="comments-button flex items-center gap-1.5 px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-all text-sm font-semibold border border-gray-600"
            data-release-id={id}
            data-title={releaseName}
            data-artist={artistName}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
            </svg>
            <span class="comments-count" data-release-id={id}>{comments?.length || 0}</span>
          </button>

          <button 
            class="share-button flex items-center gap-1.5 px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-all text-sm font-semibold border border-gray-600"
            data-release-id={id}
            data-title={releaseName}
            data-artist={artistName}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
            </svg>
            Share
          </button>
        </div>

        <!-- Release Details Box -->
        <div class="pt-4 mt-auto">
          <a href={`/item/${id}`} class="details-preview block p-3 bg-gradient-to-r from-gray-400 to-black border-l-4 border-gray-300 rounded-r text-base cursor-pointer hover:opacity-90 transition-all group">
            <div class="flex items-start justify-between gap-3">
              <div class="flex-1 min-w-0">
                <div class="text-xs font-bold text-white uppercase tracking-wider mb-1.5">Release Details</div>
                <div class="space-y-1 text-sm text-gray-200">
                  <div class="truncate">{formattedDate}</div>
                  <div class="truncate">{finalVinylAvailable ? 'Vinyl + Digital' : 'Digital Only'}</div>
                  <div class="truncate">{socialLink || 'Social Links'}</div>
                </div>
              </div>
              <div class="flex-shrink-0 flex items-center gap-2">
                <span class="text-sm font-semibold text-red-500 group-hover:text-red-400 transition-colors">View Full Details</span>
                <svg class="w-5 h-5 text-white group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>

    <!-- RIGHT: TRACKS SECTION -->
    <div class="flex-1 bg-gradient-to-r from-gray-400 to-black rounded-lg p-4 pb-3 min-w-0 max-w-full overflow-hidden border border-gray-200">
      <div class="mb-3 flex items-center justify-between">
        <h4 class="text-sm font-bold text-white uppercase tracking-wider">
          TRACKS ({tracksWithIds.length})
        </h4>
        <div class="text-sm font-bold text-white">
          ¬£{finalTrackPrice.toFixed(2)} per track
        </div>
      </div>

      {tracksWithIds.length > 0 ? (
        <div class="flex flex-col">
          <div class="track-list-container mb-4 relative" style="max-height: 140px; overflow-y: auto; overflow-x: hidden;">
            {tracksWithIds.map((track) => (
              <div class="track-row flex items-center gap-2 py-2 px-2 hover:bg-white/20 rounded transition-colors">
                <span class="text-sm font-semibold text-white w-6 text-center flex-shrink-0">
                  {track.track_number}
                </span>
                <!-- OPTIMIZED: Audio created on demand via data attribute -->
                <button 
                  class="play-button flex-shrink-0 w-7 h-7 flex items-center justify-center rounded-full bg-gray-900 text-white hover:bg-black transition-all"
                  data-track-id={track.id}
                  data-release-id={id}
                  data-preview-url={track.preview_url || ''}
                  data-track-title={track.title}
                  title="Play"
                >
                  <svg class="w-3.5 h-3.5 play-icon" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                  <svg class="w-3.5 h-3.5 pause-icon hidden" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"/>
                  </svg>
                </button>
                <p class="text-base font-medium text-white truncate flex-1 min-w-0" title={track.title} data-track-title={track.title}>
                  {track.title}
                  {track.featured && <span class="text-gray-300"> feat. {track.featured}</span>}
                  {track.remixer && <span class="text-gray-300"> ({track.remixer} Remix)</span>}
                </p>
                <button 
                  class="buy-track flex-shrink-0 text-sm font-bold text-white bg-green-500 hover:bg-green-600 transition-all px-4 py-1.5 rounded"
                  data-track-id={track.id}
                  data-track-title={track.title}
                  data-track-price={finalTrackPrice}
                  data-release-id={id}
                  data-artist={artistName}
                  data-artwork={coverArtUrl}
                  title="Buy this track"
                >
                  Buy
                </button>
              </div>
            ))}
            
            {/* Scroll indicator - shows when there are more than 3 tracks */}
            {tracksWithIds.length > 3 && (
              <div class="scroll-indicator absolute bottom-0 left-0 right-0 h-8 bg-gradient-to-t from-black/60 to-transparent pointer-events-none flex items-end justify-center pb-1">
                <svg class="w-4 h-4 text-white animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </div>
            )}
          </div>

          <div class="player-section pt-3 border-t border-gray-200 mb-4">
            <div class="flex items-center justify-between mb-2 gap-2">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-bold text-white uppercase tracking-wide">NOW PLAYING</p>
                <p class="text-sm text-red-500 truncate" data-now-playing-text={id}>
                  No track selected
                </p>
              </div>
              <div class="flex items-center gap-2 flex-shrink-0 min-w-fit">
                <svg class="w-4 h-4 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M9.383 3.076A1 1 0 0110 4v12a1 1 0 01-1.707.707L4.586 13H2a1 1 0 01-1-1V8a1 1 0 011-1h2.586l3.707-3.707a1 1 0 011.09-.217zM12.293 7.293a1 1 0 011.414 0 3 3 0 010 4.242 1 1 0 11-1.414-1.414 1 1 0 000-1.414 1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
                <input 
                  type="range" 
                  min="0" 
                  max="100" 
                  value="70" 
                  class="shared-volume-slider flex-shrink-0"
                  style="width: 72px;"
                  data-release-id={id}
                  title="Volume"
                />
                <svg class="w-4 h-4 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M9.383 3.076A1 1 0 0110 4v12a1 1 0 01-1.707.707L4.586 13H2a1 1 0 01-1-1V8a1 1 0 011-1h2.586l3.707-3.707a1 1 0 011.09-.217zM14.657 2.929a1 1 0 011.414 0A9.972 9.972 0 0119 10a9.972 9.972 0 01-2.929 7.071 1 1 0 01-1.414-1.414A7.971 7.971 0 0017 10c0-2.21-.894-4.208-2.343-5.657a1 1 0 010-1.414zm-2.829 2.828a1 1 0 011.415 0A5.983 5.983 0 0115 10a5.984 5.984 0 01-1.757 4.243 1 1 0 01-1.415-1.415A3.984 3.984 0 0013 10a3.983 3.983 0 00-1.172-2.828 1 1 0 010-1.415z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
            <div class="waveform-wrapper px-2 pb-2" style="width: 100%; max-width: 100%; overflow: hidden;">
              <canvas 
                class="shared-waveform cursor-pointer bg-white rounded border border-gray-200"
                width="400"
                height="50"
                style="width: 100%; height: 50px; display: block; max-width: 100%;"
                data-release-id={id}
              ></canvas>
            </div>
          </div>
        </div>
      ) : (
        <div class="flex-1 flex items-center justify-center text-white">
          <p class="text-base">No tracks available</p>
        </div>
      )}
    </div>
  </div>
</article>

<!-- Comments Modal -->
<div id="comments-modal" class="fixed inset-0 z-50 hidden">
  <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity" id="comments-modal-backdrop"></div>
  <div class="fixed inset-0 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg max-w-2xl w-full max-h-[80vh] shadow-xl transform transition-all border-2 border-gray-900 flex flex-col">
      <div class="flex items-center justify-between p-4 border-b-2 border-gray-900 flex-shrink-0">
        <div>
          <h3 class="text-lg font-bold text-gray-900">Comments</h3>
          <p class="text-sm text-gray-600">
            <span id="comments-modal-title" class="font-semibold"></span> by <span id="comments-modal-artist" class="font-semibold"></span>
          </p>
        </div>
        <button id="comments-modal-close" class="text-gray-400 hover:text-gray-900 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <div class="flex-1 overflow-y-auto p-4" id="comments-list">
        <p class="text-center text-gray-400 text-sm py-8">No comments yet. Be the first to comment!</p>
      </div>
      
      <div class="border-t-2 border-gray-900 p-4 flex-shrink-0">
        <div class="space-y-3">
          <input 
            type="text" 
            id="comment-username" 
            placeholder="Your name (optional)" 
            maxlength="30"
            class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent"
          />
          
          <div class="flex items-center gap-2 pb-2 border-b border-gray-200">
            <span class="text-xs font-bold text-gray-500 uppercase">Quick Emojis:</span>
            <div class="flex gap-1 flex-wrap">
              <button type="button" class="emoji-btn text-xl hover:scale-125 transition-transform" data-emoji="üî•">üî•</button>
              <button type="button" class="emoji-btn text-xl hover:scale-125 transition-transform" data-emoji="‚ù§Ô∏è">‚ù§Ô∏è</button>
              <button type="button" class="emoji-btn text-xl hover:scale-125 transition-transform" data-emoji="üòç">üòç</button>
              <button type="button" class="emoji-btn text-xl hover:scale-125 transition-transform" data-emoji="üéµ">üéµ</button>
              <button type="button" class="emoji-btn text-xl hover:scale-125 transition-transform" data-emoji="üéß">üéß</button>
              <button type="button" class="emoji-btn text-xl hover:scale-125 transition-transform" data-emoji="üíØ">üíØ</button>
              <button type="button" class="emoji-btn text-xl hover:scale-125 transition-transform" data-emoji="üëç">üëç</button>
              <button type="button" class="emoji-btn text-xl hover:scale-125 transition-transform" data-emoji="üôå">üôå</button>
              <button type="button" class="emoji-btn text-xl hover:scale-125 transition-transform" data-emoji="‚ú®">‚ú®</button>
              <button type="button" class="emoji-btn text-xl hover:scale-125 transition-transform" data-emoji="üéâ">üéâ</button>
            </div>
          </div>
          
          <textarea 
            id="comment-text" 
            placeholder="Write your comment here... (login required, max 300 characters)" 
            maxlength="300"
            rows="3"
            class="w-full px-3 py-2 border-2 border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent resize-none"
          ></textarea>
          <div class="flex items-center justify-between">
            <span class="text-xs text-gray-500">
              <span id="char-count">0</span>/300
            </span>
            <button 
              id="submit-comment-btn" 
              class="px-4 py-2 bg-gray-900 hover:bg-black text-white rounded-lg transition-all font-semibold text-sm"
            >
              Post Comment
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Share Modal -->
<div id="share-modal" class="fixed inset-0 z-50 hidden">
  <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity" id="share-modal-backdrop"></div>
  <div class="fixed inset-0 flex items-center justify-center p-4">
