        fetch('/api/add-comment', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            releaseId: currentReleaseId,
            userName: username.substring(0, 30),
            comment: sanitizedText,
            userId: user.uid
          })
        })
        .then(function(response) { return response.json(); })
        .then(function(data) {
