          alert('Please enter a comment');
          return;
        }
        
        if (text.length > 300) {
          alert('Comment is too long (max 300 characters)');
          return;
        }
        
        var sanitizedText = sanitizeComment(text);
        var username = commentUsername.value.trim() || 'Anonymous';
        
        submitCommentBtn.disabled = true;
