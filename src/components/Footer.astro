            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links - SEO Important -->
      <div>
        <h3 class="text-white font-bold text-xl mb-5">Explore</h3>
        <ul class="space-y-3 text-base">
          <li><a href="/releases" class="hover:text-white transition-colors">All Releases</a></li>
          <li><a href="/dj-mixes" class="hover:text-white transition-colors">DJ Mixes</a></li>
          <li><a href="/merch" class="hover:text-white transition-colors">Merchandise</a></li>
          <li><a href="/giftcards" class="hover:text-white transition-colors">Gift Cards</a></li>
          <li><a href="/live" class="hover:text-white transition-colors">Live Radio</a></li>
        </ul>
      </div>

      <!-- Info Links - SEO & Legal -->
      <div>
        <h3 class="text-white font-bold text-xl mb-5">Information</h3>
        <ul class="space-y-3 text-base">
          <li><a href="/about" class="hover:text-white transition-colors">About Us</a></li>
          <li><a href="/contact" class="hover:text-white transition-colors">Contact</a></li>
          <li><a href="/shipping" class="hover:text-white transition-colors">Shipping & Returns</a></li>
          <li><a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a></li>
          <li><a href="/terms" class="hover:text-white transition-colors">Terms & Conditions</a></li>
        </ul>
      </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="border-t border-gray-800 mt-10 pt-10">
      <div class="max-w-xl mx-auto text-center">
        <h3 class="text-white font-bold text-xl mb-3">Stay Fresh</h3>
        <p class="text-gray-400 text-base mb-5">Subscribe for new releases, exclusive offers, and label news.</p>
        <form id="newsletter-form" class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
          <input 
            type="email" 
            placeholder="Enter your email" 
            required
            class="flex-1 px-5 py-3 bg-gray-800 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:border-white transition-colors text-base rounded-lg"
          />
          <button 
            type="submit" 
            class="px-8 py-3 bg-white text-black font-bold hover:bg-red-600 hover:text-white transition-colors rounded-lg text-base"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-base text-gray-400">
        Â© {currentYear} <span class="text-white">Fresh</span> <span class="text-red-600">Wax</span>. All rights reserved.
      </p>
      <div class="flex items-center gap-6 text-base text-gray-500">
        <span class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
          </svg>
          Jungle & D&B
        </span>
        <a href="/sitemap.xml" class="hover:text-white transition-colors">Sitemap</a>
      </div>
    </div>
  </div>
</footer>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('newsletter-form');
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const email = (form.querySelector('input[type="email"]') as HTMLInputElement)?.value;
      alert('Thanks for subscribing! You\'ll hear from us soon.');
      form.reset();
    });
  });
</script>
