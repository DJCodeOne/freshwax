---
// src/layouts/InfoPageLayout.astro
// Layout for info pages (About, Legal, etc.)

import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  lastUpdated?: string;
}

const { title, description, lastUpdated } = Astro.props;
---

<Layout title={title} description={description}>
  <Header />
  
  <main class="bg-gray-50 min-h-screen">
    <!-- Hero -->
    <section class="bg-black text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-bold tracking-wide mb-4">{title.toUpperCase()}</h1>
        {lastUpdated && (
          <p class="text-gray-400 text-sm">Last updated: {lastUpdated}</p>
        )}
      </div>
    </section>

    <!-- Content -->
    <article class="container mx-auto px-4 py-12 max-w-4xl">
      <div class="bg-white border-2 border-black p-8 md:p-12 prose prose-lg max-w-none
                  prose-headings:font-bold prose-headings:text-black prose-headings:tracking-wide
                  prose-h2:text-2xl prose-h2:mt-8 prose-h2:mb-4 prose-h2:pb-2 prose-h2:border-b-2 prose-h2:border-gray-200
                  prose-h3:text-xl prose-h3:mt-6 prose-h3:mb-3
                  prose-p:text-gray-700 prose-p:leading-relaxed
                  prose-li:text-gray-700
                  prose-a:text-black prose-a:font-semibold prose-a:underline hover:prose-a:text-red-600
                  prose-strong:text-black">
        <slot />
      </div>
    </article>
  </main>

  <Footer />
</Layout>

<style>
  /* Override Tailwind prose for better readability */
  .prose h2 {
    font-family: 'Bebas Neue', sans-serif;
    letter-spacing: 0.05em;
  }
  
  .prose h3 {
    font-family: 'Bebas Neue', sans-serif;
  }
</style>