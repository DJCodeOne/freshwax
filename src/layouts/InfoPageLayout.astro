---
// src/layouts/InfoPageLayout.astro
// Layout for info pages (About, Legal, etc.)

import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  lastUpdated?: string;
  faqs?: { question: string; answer: string }[];
  breadcrumbs?: { name: string; url: string }[];
}

const { title, description, lastUpdated, faqs, breadcrumbs } = Astro.props;
---

<Layout title={title} description={description} faqs={faqs} breadcrumbs={breadcrumbs}>
  <Header />
  
  <main class="bg-gray-50 min-h-screen">
    <!-- Hero -->
    <section class="bg-black text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-bold tracking-wide mb-4">{title.toUpperCase()}</h1>
        {lastUpdated && (
          <p class="text-gray-400 text-sm">Last updated: {lastUpdated}</p>
        )}
      </div>
    </section>

    <!-- Content -->
    <article class="container mx-auto px-4 py-12 max-w-4xl">
      <button type="button" class="back-btn" onclick="history.back()">
        <span class="back-arrow">‚Üê</span>
        <span>Back</span>
      </button>
      <div class="bg-white border-2 border-black p-8 md:p-12 info-content">
        <slot />
      </div>
    </article>
  </main>

  <Footer />
</Layout>

<style>
  /* Back button */
  .back-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #000;
    color: #fff;
    border: 2px solid #000;
    padding: 0.625rem 1.25rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    margin-bottom: 1.5rem;
    transition: all 0.2s;
  }

  .back-btn:hover {
    background: #dc2626;
    border-color: #dc2626;
  }

  .back-arrow {
    font-size: 1.125rem;
    line-height: 1;
  }

  /* Info page content styles */
  .info-content {
    color: #374151;
    font-size: 1.125rem;
    line-height: 1.75;
  }
  
  .info-content h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: #000;
    letter-spacing: 0.05em;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #e5e7eb;
  }
  
  .info-content h3 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.375rem;
    font-weight: 700;
    color: #000;
    margin-top: 1.75rem;
    margin-bottom: 0.75rem;
  }
  
  .info-content p {
    color: #374151;
    margin-bottom: 1rem;
  }
  
  .info-content ul {
    list-style-type: disc;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
    color: #374151;
  }
  
  .info-content ul li {
    margin-bottom: 0.5rem;
    color: #374151;
  }
  
  .info-content a {
    color: #000;
    font-weight: 600;
    text-decoration: underline;
  }
  
  .info-content a:hover {
    color: #dc2626;
  }
  
  .info-content strong {
    color: #000;
    font-weight: 600;
  }
  
  .info-content table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
  }
  
  .info-content table th {
    background: #000;
    color: #fff;
    padding: 0.75rem;
    text-align: left;
    font-weight: 600;
  }
  
  .info-content table td {
    padding: 0.75rem;
    border-bottom: 1px solid #e5e7eb;
    color: #374151;
  }
  
  .info-content table tr:nth-child(even) {
    background: #f9fafb;
  }
  
  .info-content .overflow-x-auto {
    overflow-x: auto;
  }
</style>