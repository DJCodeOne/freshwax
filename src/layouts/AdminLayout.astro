<body>
  <!-- Top Navigation Bar -->
  <nav class="admin-topbar">
    <div class="topbar-container">
      <div class="topbar-left">
        <a href="/" class="admin-logo">
          <span class="admin-logo-text">FRESH<span>WAX</span></span>
        </a>
        <span class="admin-badge">Admin</span>
      </div>
      
      <div class="topbar-nav">
        {navItems.map(item => (
          <a 
            href={item.href} 
            class:list={['nav-link', { active: activeNav === item.id }]}
          >
            <span class="nav-icon">{item.icon}</span>
            <span>{item.label}</span>
          </a>
        ))}
      </div>
      
      <div class="topbar-right">
        <a href="/" class="topbar-link">‚Üê Store</a>
        <a href="/releases" class="topbar-link">Releases</a>
        <a href="/dj-mixes" class="topbar-link">Mixes</a>
      </div>
    </div>
  </nav>
  
  <!-- Page Header -->
  <header class="page-header">
    <div class="header-container">
      <div class="header-left">
        <slot name="breadcrumb">
          <div class="header-breadcrumb">
            <a href="/admin">Admin</a>
            <span>‚Ä∫</span>
            <span>{title}</span>
          </div>
        </slot>
        <h1>{title}</h1>
      </div>
      <div class="header-actions">
        <slot name="actions" />
      </div>
    </div>
  </header>
  
  <!-- Stats Bar (optional) -->
  {showStats && stats.length > 0 && (
    <div class="stats-bar">
      <div class="stats-container">
        {stats.map(stat => (
          <div class:list={['stat-pill', stat.type || 'default']}>
            <span class="label">{stat.label}</span>
            <span class="value">{stat.value}</span>
          </div>
        ))}
      </div>
    </div>
  )}
  
  <!-- Main Content -->
  <main class="admin-main">
    <slot />
  </main>
  
  <!-- Toast Container -->
  <div id="toast" class="toast"></div>
  
  <!-- Modal Slot -->
  <slot name="modals" />
  
  <!-- Scripts -->
  <script is:inline>
    // Global toast function
    window.showToast = function(message, type = 'success') {
      const toast = document.getElementById('toast');
      if (!toast) return;
      
      toast.textContent = message;
      toast.className = 'toast ' + type;
      toast.classList.add('show');
      
      setTimeout(() => {
        toast.classList.remove('show');
      }, 3000);
    };
    
    // Global modal functions
    window.openModal = function(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) modal.classList.add('active');
    };
    
    window.closeModal = function(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) modal.classList.remove('active');
    };
    
    // Close modal on backdrop click
    document.addEventListener('click', (e) => {
      if (e.target.classList.contains('modal-overlay')) {
        e.target.classList.remove('active');
      }
    });
    
    // Close modal on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.querySelectorAll('.modal-overlay.active').forEach(modal => {
          modal.classList.remove('active');
        });
      }
    });
  </script>
  
  <slot name="scripts" />
</body>
