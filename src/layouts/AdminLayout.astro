       ============================================= */
    
    .text-center { text-align: center; }
    .text-right { text-align: right; }
    .text-muted { color: var(--text-muted); }
    .text-success { color: var(--accent-green); }
    .text-danger { color: var(--accent-red); }
    .text-warning { color: var(--accent-amber); }
    
    .font-mono { font-family: 'SF Mono', Monaco, monospace; }
    .font-bold { font-weight: 700; }
    
    .mb-0 { margin-bottom: 0; }
    .mb-1 { margin-bottom: var(--spacing-sm); }
    .mb-2 { margin-bottom: var(--spacing-md); }
    .mb-3 { margin-bottom: var(--spacing-lg); }
    .mb-4 { margin-bottom: var(--spacing-xl); }
    
    .mt-1 { margin-top: var(--spacing-sm); }
    .mt-2 { margin-top: var(--spacing-md); }
    
    .gap-1 { gap: var(--spacing-sm); }
    .gap-2 { gap: var(--spacing-md); }
    .gap-3 { gap: var(--spacing-lg); }
    
    .flex { display: flex; }
    .flex-wrap { flex-wrap: wrap; }
    .items-center { align-items: center; }
    .justify-between { justify-content: space-between; }
    .justify-end { justify-content: flex-end; }
    
    .grid { display: grid; gap: 1rem; }
    .grid-2 { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem; margin: 0 auto var(--spacing-lg); max-width: 91%; }
    .grid-3 { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem; margin: 0 auto var(--spacing-lg); max-width: 91%; }
    .grid-4 { display: grid; grid-template-columns: repeat(4, 1fr); gap: 1rem; margin: 0 auto var(--spacing-lg); max-width: 91%; }
    .grid-6 { display: grid; grid-template-columns: repeat(6, 1fr); gap: 1rem; margin: 0 auto var(--spacing-lg); max-width: 91%; }
    
    /* Centered container matching grid width - use for standalone cards/sections */
    .card-full,
    .section-centered {
      margin: 0 auto var(--spacing-lg);
      max-width: 91%;
    }
    
    /* Override to restore full width when needed */
    .full-width { max-width: 100% !important; margin-left: 0 !important; margin-right: 0 !important; }
    
    .hidden { display: none !important; }
    
    /* Product/Item cells */
    .item-cell {
      display: flex;
      align-items: center;
      gap: var(--spacing-md);
    }
    
    .item-cell img {
      width: 48px;
      height: 48px;
      object-fit: cover;
      border: 2px solid var(--border-light);
    }
    
    .item-cell .item-info h4 {
      font-weight: 600;
      font-size: 0.9rem;
      margin-bottom: 0.125rem;
    }
    
    .item-cell .item-info p {
      font-size: 0.75rem;
      color: var(--text-secondary);
