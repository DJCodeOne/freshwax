---
// src/layouts/AdminLayout.astro
// Unified Admin Layout - Light Theme with Fresh Wax Branding
// All admin pages use this for consistent styling

interface Props {
  title: string;
  activeNav?: string;
  showStats?: boolean;
  stats?: Array<{
    label: string;
    value: string | number;
    type?: 'default' | 'success' | 'warning' | 'danger' | 'info';
    detail?: string;
  }>;
}

const { title, activeNav = '', showStats = false, stats = [] } = Astro.props;

// Navigation items
const navItems = [
  { href: '/admin', label: 'Dashboard', icon: 'üìä', id: 'dashboard' },
  { href: '/admin/orders', label: 'Orders', icon: 'üìã', id: 'orders' },
  { href: '/admin/releases/manage', label: 'Releases', icon: 'üíø', id: 'releases' },
  { href: '/admin/users', label: 'Users', icon: 'üë•', id: 'users' },
  { href: '/admin/artists/manage', label: 'Partners', icon: 'ü§ù', id: 'partners' },
  { href: '/admin/merch/manage', label: 'Merch', icon: 'üëï', id: 'merch' },
  { href: '/admin/dj-mixes/manage', label: 'DJ Mixes', icon: 'üéß', id: 'mixes' },
  { href: '/admin/streaming', label: 'Live', icon: 'üî¥', id: 'live' },
  { href: '/admin/newsletter', label: 'Newsletter', icon: 'üìß', id: 'newsletter' },
  { href: '/admin/analytics', label: 'Analytics', icon: 'üìà', id: 'analytics' },
];
---

<!DOCTYPE html>
<html lang="en-GB">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | Fresh Wax Admin</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <style is:global>
    /* =============================================
       FRESH WAX ADMIN - UNIFIED DESIGN SYSTEM
       Light theme with black/red accents
       ============================================= */
    
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    :root {
      /* Core Colors */
      --bg-primary: #f5f5f5;
      --bg-secondary: #ffffff;
      --bg-dark: #000000;
      --bg-hover: #fafafa;
      
      /* Text Colors */
      --text-primary: #000000;
      --text-secondary: #666666;
      --text-muted: #888888;
      --text-light: #ffffff;
      
      /* Accent Colors */
      --accent-red: #dc2626;
      --accent-red-dark: #b91c1c;
      --accent-green: #16a34a;
      --accent-amber: #d97706;
      --accent-blue: #2563eb;
      --accent-purple: #7c3aed;
      
      /* Border Colors */
      --border-light: #e5e5e5;
      --border-medium: #cccccc;
      --border-dark: #000000;
      
      /* Shadows */
      --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
      --shadow-md: 0 4px 6px rgba(0,0,0,0.07);
      --shadow-lg: 0 10px 15px rgba(0,0,0,0.1);
      --shadow-brutal: 4px 4px 0 #000;
      
      /* Spacing */
      --container-max: 1600px;
      --spacing-xs: 0.25rem;
      --spacing-sm: 0.5rem;
      --spacing-md: 1rem;
      --spacing-lg: 1.5rem;
      --spacing-xl: 2rem;
      
      /* Border Radius */
      --radius-sm: 4px;
      --radius-md: 8px;
      --radius-lg: 12px;
      --radius-full: 9999px;
      
      /* Transitions */
      --transition-fast: 0.15s ease;
      --transition-normal: 0.2s ease;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: var(--bg-primary);
      color: var(--text-primary);
      min-height: 100vh;
      line-height: 1.5;
      -webkit-font-smoothing: antialiased;
    }
    
    /* =============================================
       TOP NAVIGATION BAR
       ============================================= */
    
    .admin-topbar {
      background: var(--bg-dark);
      color: var(--text-light);
      position: sticky;
      top: 0;
      z-index: 100;
      border-bottom: 3px solid var(--accent-red);
    }
    
    .topbar-container {
      max-width: var(--container-max);
      margin: 0 auto;
      padding: 0 var(--spacing-lg);
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 60px;
    }
    
    .topbar-left {
      display: flex;
      align-items: center;
      gap: var(--spacing-md);
    }
    
    .admin-logo {
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
      text-decoration: none;
      color: var(--text-light);
    }
    
    .admin-logo img {
      height: 36px;
      width: auto;
    }
    
    .admin-logo-text {
      font-family: 'Bebas Neue', sans-serif;
      font-size: 1.5rem;
      letter-spacing: 0.02em;
    }
    
    .admin-logo-text span {
      color: var(--accent-red);
    }
    
    .admin-badge {
      background: var(--accent-red);
      color: var(--text-light);
      font-size: 0.625rem;
      font-weight: 700;
      padding: 0.2rem 0.5rem;
      border-radius: var(--radius-sm);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    
    .topbar-nav {
      display: flex;
      align-items: center;
      gap: var(--spacing-xs);
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }
    
    .topbar-nav::-webkit-scrollbar {
      display: none;
    }
    
    .nav-link {
      display: flex;
      align-items: center;
      gap: 0.35rem;
      padding: 0.5rem 0.75rem;
      color: #ccc;
      text-decoration: none;
      font-size: 0.8rem;
      font-weight: 500;
      border-radius: var(--radius-md);
      white-space: nowrap;
      transition: all var(--transition-fast);
    }
    
    .nav-link:hover {
      color: var(--text-light);
      background: rgba(255,255,255,0.1);
    }
    
    .nav-link.active {
      color: var(--text-light);
      background: var(--accent-red);
    }
    
    .nav-icon {
      font-size: 0.9rem;
    }
    
    .topbar-right {
      display: flex;
      align-items: center;
      gap: var(--spacing-md);
    }
    
    .topbar-link {
      color: #bbb;
      text-decoration: none;
      font-size: 0.8rem;
      transition: color var(--transition-fast);
    }
    
    .topbar-link:hover {
      color: var(--text-light);
    }
    
    /* =============================================
       PAGE HEADER
       ============================================= */
    
    .page-header {
      background: var(--bg-secondary);
      border-bottom: 2px solid var(--border-light);
      padding: var(--spacing-lg) var(--spacing-xl);
    }
    
    .header-container {
      max-width: var(--container-max);
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: var(--spacing-md);
    }
    
    .header-left h1 {
      font-family: 'Bebas Neue', sans-serif;
      font-size: 2rem;
      font-weight: 400;
      letter-spacing: 0.02em;
      color: var(--text-primary);
    }
    
    .header-breadcrumb {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.8rem;
      color: var(--text-muted);
      margin-bottom: 0.25rem;
    }
    
    .header-breadcrumb a {
      color: var(--text-secondary);
      text-decoration: none;
    }
    
    .header-breadcrumb a:hover {
      color: var(--accent-red);
    }
    
    .header-actions {
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
    }
    
    /* =============================================
       STATS BAR
       ============================================= */
    
    .stats-bar {
      background: var(--bg-secondary);
      border-bottom: 1px solid var(--border-light);
      padding: var(--spacing-md) var(--spacing-xl);
    }
    
    .stats-container {
      max-width: var(--container-max);
      margin: 0 auto;
      display: flex;
      gap: var(--spacing-md);
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      padding-bottom: var(--spacing-xs);
    }
    
    .stat-pill {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: var(--bg-primary);
      border: 1px solid var(--border-light);
      border-radius: var(--radius-full);
      white-space: nowrap;
      flex-shrink: 0;
    }
    
    .stat-pill .label {
      font-size: 0.75rem;
      color: var(--text-secondary);
      text-transform: uppercase;
      letter-spacing: 0.03em;
    }
    
    .stat-pill .value {
      font-size: 0.9rem;
      font-weight: 700;
      color: var(--text-primary);
    }
    
    .stat-pill.success .value { color: var(--accent-green); }
    .stat-pill.warning .value { color: var(--accent-amber); }
    .stat-pill.danger .value { color: var(--accent-red); }
    .stat-pill.info .value { color: var(--accent-blue); }
    
    /* =============================================
       MAIN CONTENT AREA
       ============================================= */
    
    .admin-main {
      max-width: var(--container-max);
      margin: 0 auto;
      padding: var(--spacing-xl);
    }
    
    /* Center all direct children of admin-main at 91% width */
    .admin-main > * {
      max-width: 91%;
      margin-left: auto;
      margin-right: auto;
    }
    
    .admin-main > *.full-width {
      max-width: 100%;
    }
    
    /* Stats grid inside cards should fill the card width */
    .card .stats-grid,
    .card-body .stats-grid {
      max-width: 100%;
      margin-left: 0;
      margin-right: 0;
    }
    
    /* =============================================
       CARDS & PANELS
       ============================================= */
    
    .card {
      background: var(--bg-secondary);
      border: 2px solid var(--border-dark);
      border-radius: 0;
      overflow: hidden;
    }
    
    .card-header {
      background: var(--bg-dark);
      color: var(--text-light);
      padding: var(--spacing-md) var(--spacing-lg);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .card-header h2 {
      font-size: 1rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    
    .card-body {
      padding: var(--spacing-lg);
    }
    
    .card-footer {
      padding: var(--spacing-md) var(--spacing-lg);
      border-top: 1px solid var(--border-light);
      background: var(--bg-hover);
    }
    
    /* Soft Card Variant */
    .card-soft {
      border: 1px solid var(--border-light);
      border-radius: var(--radius-lg);
    }
    
    .card-soft .card-header {
      background: var(--bg-hover);
      color: var(--text-primary);
      border-bottom: 1px solid var(--border-light);
    }
    
    /* =============================================
       TABLES
       ============================================= */
    
    .table-wrapper {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }
    
    .data-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 1rem;
    }
    
    .data-table th {
      background: var(--bg-dark);
      color: var(--text-light);
      padding: var(--spacing-md);
      text-align: left;
      font-size: 0.8rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      white-space: nowrap;
    }
    
    .data-table th.text-right {
      text-align: right;
    }
    
    .data-table th.text-center {
      text-align: center;
    }
    
    .data-table td {
      padding: var(--spacing-md);
      border-bottom: 1px solid var(--border-light);
      vertical-align: middle;
      font-size: 0.95rem;
    }
    
    .data-table td.text-right {
      text-align: right;
    }
    
    .data-table td.text-center {
      text-align: center;
    }
    
    .data-table tbody tr:hover {
      background: var(--bg-hover);
    }
    
    .data-table .cell-primary {
      font-weight: 600;
      color: var(--text-primary);
      font-size: 1rem;
    }
    
    .data-table .cell-secondary {
      color: var(--text-secondary);
      font-size: 0.9rem;
    }
    
    .data-table .cell-mono {
      font-family: 'SF Mono', Monaco, monospace;
      font-size: 0.85rem;
      color: var(--text-muted);
    }
    
    /* =============================================
       BUTTONS
       ============================================= */
    
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0.625rem 1.25rem;
      font-size: 0.875rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.03em;
      border: 2px solid transparent;
      cursor: pointer;
      transition: all var(--transition-fast);
      text-decoration: none;
      white-space: nowrap;
    }
    
    .btn-primary {
      background: var(--bg-dark);
      color: var(--text-light);
      border-color: var(--bg-dark);
    }
    
    .btn-primary:hover {
      background: var(--text-light);
      color: var(--bg-dark);
    }
    
    .btn-danger {
      background: var(--accent-red);
      color: var(--text-light);
      border-color: var(--accent-red);
    }
    
    .btn-danger:hover {
      background: var(--accent-red-dark);
      border-color: var(--accent-red-dark);
    }
    
    .btn-success {
      background: var(--accent-green);
      color: var(--text-light);
      border-color: var(--accent-green);
    }
    
    .btn-success:hover {
      opacity: 0.9;
    }
    
    .btn-outline {
      background: transparent;
      color: var(--text-primary);
      border-color: var(--border-dark);
    }
    
    .btn-outline:hover {
      background: var(--bg-dark);
      color: var(--text-light);
    }
    
    .btn-ghost {
      background: transparent;
      color: var(--text-secondary);
      border-color: transparent;
      padding: 0.5rem 0.75rem;
    }
    
    .btn-ghost:hover {
      background: var(--bg-primary);
      color: var(--text-primary);
    }
    
    .btn-sm {
      padding: 0.4rem 0.75rem;
      font-size: 0.7rem;
    }
    
    .btn-lg {
      padding: 0.875rem 1.75rem;
      font-size: 0.9rem;
    }
    
    .btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    
    /* Icon Buttons */
    .btn-icon {
      width: 36px;
      height: 36px;
      padding: 0;
      border-radius: var(--radius-md);
    }
    
    .btn-icon.btn-sm {
      width: 28px;
      height: 28px;
    }
    
    /* =============================================
       FORM ELEMENTS
       ============================================= */
    
    .form-group {
      margin-bottom: var(--spacing-lg);
    }
    
    .form-label {
      display: block;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.03em;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }
    
    .form-label .required {
      color: var(--accent-red);
    }
    
    .form-input,
    .form-select,
    .form-textarea {
      width: 100%;
      padding: 0.75rem 1rem;
      font-size: 0.9rem;
      font-family: inherit;
      background: var(--bg-secondary);
      border: 2px solid var(--border-dark);
      color: var(--text-primary);
      transition: all var(--transition-fast);
    }
    
    .form-input:focus,
    .form-select:focus,
    .form-textarea:focus {
      outline: none;
      box-shadow: var(--shadow-brutal);
    }
    
    .form-textarea {
      min-height: 100px;
      resize: vertical;
    }
    
    .form-hint {
      font-size: 0.75rem;
      color: var(--text-muted);
      margin-top: 0.35rem;
    }
    
    .form-row {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-md);
    }
    
    .form-row-3 {
      grid-template-columns: repeat(3, 1fr);
    }
    
    /* Search Input */
    .search-wrapper {
      position: relative;
    }
    
    .search-wrapper .search-icon {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: var(--text-muted);
      pointer-events: none;
    }
    
    .search-wrapper input {
      padding-left: 2.75rem;
    }
    
    /* =============================================
       STATUS BADGES
       ============================================= */
    
    .badge {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      padding: 0.3rem 0.75rem;
      font-size: 0.8rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.03em;
      border-radius: var(--radius-sm);
    }
    
    .badge-live, .badge-active, .badge-approved, .badge-delivered, .badge-completed {
      background: #dcfce7;
      color: #166534;
    }
    
    .badge-pending, .badge-draft {
      background: #fef3c7;
      color: #92400e;
    }
    
    .badge-processing {
      background: #dbeafe;
      color: #1e40af;
    }
    
    .badge-shipped {
      background: #f3e8ff;
      color: #6b21a8;
    }
    
    .badge-cancelled, .badge-rejected, .badge-danger {
      background: #fee2e2;
      color: #991b1b;
    }
    
    .badge-info {
      background: #e0e7ff;
      color: #3730a3;
    }
    
    /* =============================================
       FILTERS & TOOLBAR
       ============================================= */
    
    .toolbar {
      display: flex;
      flex-wrap: wrap;
      gap: var(--spacing-md);
      align-items: center;
      padding: var(--spacing-md);
      background: var(--bg-secondary);
      border: 2px solid var(--border-dark);
      margin-bottom: var(--spacing-lg);
    }
    
    .filter-group {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .filter-label {
      font-size: 0.7rem;
      font-weight: 600;
      text-transform: uppercase;
      color: var(--text-secondary);
    }
    
    .filter-tabs {
      display: flex;
      gap: 0.25rem;
    }
    
    .filter-tab {
      padding: 0.5rem 1rem;
      background: transparent;
      border: 2px solid var(--border-light);
      font-size: 0.75rem;
      font-weight: 600;
      cursor: pointer;
      transition: all var(--transition-fast);
    }
    
    .filter-tab:hover {
      border-color: var(--border-dark);
    }
    
    .filter-tab.active {
      background: var(--bg-dark);
      color: var(--text-light);
      border-color: var(--bg-dark);
    }
    
    /* =============================================
       MODALS
       ============================================= */
    
    .modal-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.75);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      padding: var(--spacing-lg);
      overflow-y: auto;
    }
    
    .modal-overlay.active {
      display: flex;
    }
    
    .modal {
      background: var(--bg-secondary);
      border: 3px solid var(--border-dark);
      width: 100%;
      max-width: 600px;
      max-height: 90vh;
      overflow-y: auto;
    }
    
    .modal-header {
      background: var(--bg-dark);
      color: var(--text-light);
      padding: var(--spacing-md) var(--spacing-lg);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .modal-header h2 {
      font-size: 1rem;
      font-weight: 700;
      text-transform: uppercase;
    }
    
    .modal-close {
      background: none;
      border: none;
      color: var(--text-light);
      font-size: 1.5rem;
      cursor: pointer;
      line-height: 1;
      opacity: 0.7;
      transition: opacity var(--transition-fast);
    }
    
    .modal-close:hover {
      opacity: 1;
    }
    
    .modal-body {
      padding: var(--spacing-xl);
    }
    
    .modal-footer {
      padding: var(--spacing-md) var(--spacing-xl);
      border-top: 1px solid var(--border-light);
      display: flex;
      justify-content: flex-end;
      gap: var(--spacing-sm);
    }
    
    /* =============================================
       TOAST NOTIFICATIONS
       ============================================= */
    
    .toast {
      position: fixed;
      bottom: var(--spacing-xl);
      right: var(--spacing-xl);
      padding: 1rem 1.5rem;
      background: var(--bg-dark);
      color: var(--text-light);
      font-weight: 600;
      border-left: 4px solid var(--accent-green);
      transform: translateY(100px);
      opacity: 0;
      transition: all 0.3s ease;
      z-index: 1001;
      max-width: 400px;
    }
    
    .toast.show {
      transform: translateY(0);
      opacity: 1;
    }
    
    .toast.error {
      border-left-color: var(--accent-red);
    }
    
    .toast.warning {
      border-left-color: var(--accent-amber);
    }
    
    /* =============================================
       EMPTY STATES
       ============================================= */
    
    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
    }
    
    .empty-state-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
      opacity: 0.5;
    }
    
    .empty-state-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }
    
    .empty-state-text {
      color: var(--text-secondary);
      margin-bottom: 1.5rem;
    }
    
    /* =============================================
       LOADING STATES
       ============================================= */
    
    .loading {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 4rem 2rem;
      gap: 1rem;
    }
    
    .spinner {
      width: 40px;
      height: 40px;
      border: 3px solid var(--border-light);
      border-top-color: var(--bg-dark);
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    
    /* =============================================
       QUICK STATS GRID
