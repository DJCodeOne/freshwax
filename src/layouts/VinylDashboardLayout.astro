---
// Vinyl Dashboard Layout
// Separate dashboard for Vinyl Crates sellers - no music releases navigation
import '../styles/global.css';
import { getAdminUids } from '../lib/admin';

interface Props {
  title: string;
  activeSection?: string;
}

const { title, activeSection } = Astro.props;
const adminUids = getAdminUids();
---
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | Vinyl Crates | Fresh Wax</title>
</head>
<body data-active-section={activeSection || ''}>
  <div class="vinyl-dashboard" id="vinylDashboard">
    <!-- Loading state -->
    <div id="loadingState" class="loading-state">
      <div class="spinner"></div>
      <p>Loading...</p>
    </div>

    <!-- Access denied state -->
    <div id="accessDenied" class="access-denied" style="display: none;">
      <div class="access-denied-content">
        <h1>Vinyl Crates</h1>
        <p>You don't have access to sell vinyl yet.</p>
        <p class="sub">Apply to become a Vinyl Seller to list records for sale.</p>
        <div class="actions">
          <a href="/account" class="btn btn-secondary">Go to Account</a>
          <a href="/account/request-role" class="btn btn-primary">Request Access</a>
        </div>
      </div>
    </div>

    <!-- Dashboard content -->
    <div id="dashboardContent" class="dashboard-layout" style="display: none;">
      <!-- Sidebar -->
      <aside class="sidebar">
        <div class="sidebar-header">
          <a href="/" class="logo"><span class="fresh">Fresh</span> <span class="wax">Wax</span></a>
          <span class="badge">CRATES</span>
        </div>

        <nav class="sidebar-nav">
          <div class="nav-section">
            <div class="nav-section-title">Vinyl Crates</div>
            <a href="/artist/vinyl" class={`nav-link ${activeSection === '/artist/vinyl' || activeSection === 'listings' ? 'active' : ''}`}>
              <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
              My Listings
            </a>
            <a href="/artist/vinyl/new" class={`nav-link ${activeSection === '/artist/vinyl/new' || activeSection === 'new' ? 'active' : ''}`}>
              <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 5v14M5 12h14"></path>
              </svg>
              List New Vinyl
            </a>
            <a href="/artist/vinyl/orders" class={`nav-link ${activeSection === '/artist/vinyl/orders' || activeSection === 'orders' ? 'active' : ''}`}>
              <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 5H7a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-2"></path>
                <rect x="9" y="3" width="6" height="4" rx="1"></rect>
                <path d="M9 12h6M9 16h6"></path>
              </svg>
              Orders
            </a>
            <a href="/artist/vinyl/settings" class={`nav-link ${activeSection === '/artist/vinyl/settings' || activeSection === 'settings' ? 'active' : ''}`}>
              <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="3"></circle>
                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
              </svg>
              Settings
            </a>
          </div>
        </nav>

        <div class="sidebar-footer">
          <a href="/account" class="sidebar-link">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            Account
          </a>
          <a href="/crates" class="sidebar-link">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2"></rect>
              <path d="M3 9h18M9 21V9"></path>
            </svg>
            Browse Crates
          </a>
          <a href="/" class="sidebar-link">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
            Back to Store
          </a>
          <button id="logoutBtn" class="sidebar-link logout">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
              <polyline points="16 17 21 12 16 7"></polyline>
              <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>
            Sign Out
          </button>
        </div>
      </aside>

      <!-- Main content -->
      <main class="main-content">
        <header class="content-header">
          <h1>{title}</h1>
          <div class="user-info" id="userInfo">
            <span class="user-name"></span>
            <span class="user-store"></span>
          </div>
        </header>

        <div class="content-body">
          <slot />
        </div>
      </main>
    </div>
  </div>

  <style is:global>
    /* Vinyl Dashboard - Orange accent theme */
    .vinyl-dashboard {
      min-height: 100vh;
      background: #0a0a0a;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }

    .vinyl-dashboard h1, .vinyl-dashboard h2, .vinyl-dashboard h3 {
      font-family: 'Inter', sans-serif;
      font-weight: 700;
    }

    .loading-state {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      color: #b8b8b8;
    }

    .spinner {
      width: 40px;
      height: 40px;
      border: 3px solid #262626;
      border-top-color: #f97316;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-bottom: 1rem;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .access-denied {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 2rem;
    }

    .access-denied-content {
      text-align: center;
      max-width: 400px;
    }

    .access-denied h1 {
      color: #fff;
      margin-bottom: 1rem;
    }

    .access-denied p {
      color: #a3a3a3;
      margin-bottom: 0.5rem;
    }

    .access-denied .sub {
      font-size: 0.875rem;
      margin-bottom: 1.5rem;
    }

    .access-denied .actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
    }

    .btn {
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.2s;
      border: none;
      cursor: pointer;
    }

    .btn-primary {
      background: #f97316;
      color: #fff;
    }

    .btn-primary:hover {
      background: #ea580c;
    }

    .btn-secondary {
      background: #141414;
      color: #fff;
      border: 1px solid #262626;
    }

    .dashboard-layout {
      display: grid;
      grid-template-columns: 260px 1fr;
      min-height: 100vh;
    }

    @media (max-width: 768px) {
      .dashboard-layout {
        grid-template-columns: 1fr;
      }

      .sidebar {
        position: fixed;
        left: -260px;
        top: 0;
        bottom: 0;
        z-index: 100;
        transition: left 0.3s;
      }

      .sidebar.open {
        left: 0;
      }
    }

    .sidebar {
      background: #141414;
      border-right: 1px solid #262626;
      display: flex;
      flex-direction: column;
      height: 100vh;
      position: sticky;
      top: 0;
      overflow: hidden;
    }

    .sidebar svg {
      width: 18px !important;
      height: 18px !important;
      min-width: 18px !important;
      min-height: 18px !important;
      max-width: 18px !important;
      max-height: 18px !important;
      flex-shrink: 0;
    }

    .sidebar-header {
      padding: 1.5rem;
      border-bottom: 1px solid #262626;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .sidebar-header .logo {
      font-size: 1.25rem;
      font-weight: 700;
      text-decoration: none;
      letter-spacing: 0.05em;
    }

    .sidebar-header .logo .fresh {
      color: #fff;
    }

    .sidebar-header .logo .wax {
      color: #f97316;
    }

    .sidebar-header .badge {
      background: #f97316;
      color: #fff;
      font-size: 0.65rem;
      font-weight: 700;
      padding: 0.2rem 0.5rem;
      border-radius: 4px;
    }

    .sidebar-nav {
      flex: 1;
      padding: 1rem 0;
      overflow-y: auto;
    }

    .nav-section {
      margin-bottom: 1.5rem;
    }

    .nav-section-title {
      padding: 0.5rem 1.5rem;
      font-size: 0.7rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: #666;
    }

    .nav-link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1.5rem;
      color: #b8b8b8;
      text-decoration: none;
      transition: all 0.2s;
      font-size: 0.9rem;
    }

    .nav-link:hover {
      color: #fff;
      background: rgba(255, 255, 255, 0.05);
    }

    .nav-link.active {
      color: #fff;
      background: rgba(249, 115, 22, 0.15);
      border-right: 2px solid #f97316;
    }

    .nav-link .icon {
      width: 18px;
      height: 18px;
      min-width: 18px;
      min-height: 18px;
      flex-shrink: 0;
    }

    .sidebar-footer {
      border-top: 1px solid #262626;
      padding: 1rem;
    }

    .sidebar-link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.625rem 0.75rem;
      color: #b8b8b8;
      text-decoration: none;
      font-size: 0.85rem;
      border-radius: 6px;
      transition: all 0.2s;
      background: none;
      border: none;
      cursor: pointer;
      width: 100%;
      text-align: left;
    }

    .sidebar-link:hover {
      color: #fff;
      background: rgba(255, 255, 255, 0.05);
    }

    .sidebar-link.logout:hover {
      color: #ef4444;
    }

    .sidebar-link .icon,
    .sidebar-link svg {
      width: 16px;
      height: 16px;
      min-width: 16px;
      min-height: 16px;
      flex-shrink: 0;
    }

    .main-content {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .content-header {
      padding: 1.5rem 2rem;
      border-bottom: 1px solid #262626;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #141414;
    }

    .content-header h1 {
      font-size: 1.5rem;
      letter-spacing: 0.05em;
      color: #fff;
      margin: 0;
    }

    .user-info {
      text-align: right;
    }

    .user-name {
      font-weight: 600;
      color: #fff;
      display: block;
    }

    .user-store {
      font-size: 0.85rem;
      color: #f97316;
    }

    .content-body {
      flex: 1;
      padding: 2rem;
    }
  </style>

  <script is:inline define:vars={{ adminUids }}>
    window.ADMIN_UIDS = adminUids;
  </script>
  <script type="module" is:inline>
    import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js';
    import { getAuth, onAuthStateChanged, signOut } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js';
    import { getFirestore, doc, getDoc } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-firestore.js';

    const firebaseConfig = {
      apiKey: 'AIzaSyBiZGsWdvA9ESm3OsUpZ-VQpwqMjMpBY6g',
      authDomain: "freshwax-store.firebaseapp.com",
      projectId: "freshwax-store"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    const loadingState = document.getElementById('loadingState');
    const accessDenied = document.getElementById('accessDenied');
    const dashboardContent = document.getElementById('dashboardContent');
    const userInfo = document.getElementById('userInfo');
    const logoutBtn = document.getElementById('logoutBtn');

    function showUserInfo(user, sellerData) {
      const userName = userInfo.querySelector('.user-name');
      const userStore = userInfo.querySelector('.user-store');

      userName.textContent = user.displayName || user.email;
      if (sellerData?.storeName) {
        userStore.textContent = sellerData.storeName;
      }
    }

    onAuthStateChanged(auth, async (user) => {
      if (!user) {
        window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
        return;
      }

      try {
        let isVinylSeller = false;
        let sellerData = null;
        const ADMIN_UIDS = window.ADMIN_UIDS || [];
        const isAdmin = ADMIN_UIDS.includes(user.uid);

        // Admin override - skip Firestore checks entirely for admins
        if (isAdmin) {
          showUserInfo(user, null);
          loadingState.style.display = 'none';
          dashboardContent.style.display = 'grid';
          return;
        }

        // Check users collection for vinyl seller role
        try {
          const userDoc = await getDoc(doc(db, 'users', user.uid));
          if (userDoc.exists()) {
            const userData = userDoc.data();
            isVinylSeller = userData.roles?.vinylSeller === true || userData.isVinylSeller === true;
          }
        } catch (e) {
          console.log('Could not read users collection');
        }

        // Also check artists collection
        if (!isVinylSeller) {
          try {
            const artistDoc = await getDoc(doc(db, 'artists', user.uid));
            if (artistDoc.exists()) {
              const artistData = artistDoc.data();
              isVinylSeller = artistData.isVinylSeller === true;
            }
          } catch (e) {
            console.log('Could not read artists collection');
          }
        }

        // Check vinyl-sellers collection for store info
        try {
          const sellerDoc = await getDoc(doc(db, 'vinyl-sellers', user.uid));
          if (sellerDoc.exists()) {
            sellerData = sellerDoc.data();
            if (!isVinylSeller) {
              isVinylSeller = sellerData.approved !== false;
            }
          }
        } catch (e) {
          console.log('Could not read vinyl-sellers collection');
        }

        if (!isVinylSeller) {
          loadingState.style.display = 'none';
          accessDenied.style.display = 'flex';
          return;
        }

        showUserInfo(user, sellerData);
        loadingState.style.display = 'none';
        dashboardContent.style.display = 'grid';

      } catch (error) {
        console.error('[VinylDashboard] Error loading user data:', error);
        loadingState.style.display = 'none';
        accessDenied.style.display = 'flex';
      }
    });

    logoutBtn.addEventListener('click', async () => {
      try {
        await signOut(auth);
        window.location.href = '/';
      } catch (error) {
        console.error('Logout error:', error);
      }
    });
  </script>
</body>
</html>
