---
// src/layouts/Layout.astro
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import GlobalAudioPlayer from '../components/GlobalAudioPlayer.astro';
import AudioCoordinator from '../components/AudioCoordinator.astro';
import { getReleasesForPage } from '../lib/releases';

interface Props {
  title: string;
}

const { title } = Astro.props;

// Pre-load shuffle tracks (avoids API call when shuffle is clicked)
let shuffleTracks: any[] = [];
try {
  const releases = await getReleasesForPage(30);
  shuffleTracks = releases.flatMap(release => 
    (release.tracks || [])
      .filter((track: any) => track.previewUrl || track.mp3Url)
      .map((track: any, index: number) => ({
        id: release.id + '-track-' + (track.trackNumber || index + 1),
        title: track.trackName || 'Track ' + (index + 1),
        artist: release.artistName || 'Unknown Artist',
        releaseId: release.id,
        artwork: release.coverArtUrl || '/logo.webp',
        previewUrl: track.previewUrl || track.mp3Url
      }))
  );
} catch (e) {
  console.error('[Layout] Failed to pre-load shuffle tracks:', e);
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Fresh Wax - Independent Music Store" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - freshwax.co.uk</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Bebas+Neue&display=swap" rel="stylesheet">
    
    <style>
      body {
        font-family: 'Inter', sans-serif;
      }
      
      h1, h2, h3, h4, h5, h6 {
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 0.02em;
      }
    </style>
    
    <!-- ViewTransitions at the end -->
    <ViewTransitions />
  </head>
  <body>
    <!-- Audio Coordinator MUST come first to set up AudioManager -->
    <AudioCoordinator />
    
    <!-- Pre-cache shuffle tracks (no API call needed) -->
    {shuffleTracks.length > 0 && (
      <script define:vars={{ shuffleTracksJson: JSON.stringify(shuffleTracks) }}>
        window.SHUFFLE_TRACKS_CACHE = JSON.parse(shuffleTracksJson);
      </script>
    )}
    
    <slot />
    
    <!-- Global Audio Player for DJ Mixes -->
    <GlobalAudioPlayer />
    
    <!-- Spacer for mini player -->
    <div id="mini-player-spacer" class="h-0 transition-all duration-300"></div>
  </body>
</html>

<style is:global>
  body:has(#mini-player.visible) #mini-player-spacer {
    height: 70px;
  }
  
  @media (min-width: 640px) {
    body:has(#mini-player.visible) #mini-player-spacer {
      height: 80px;
    }
  }
</style>