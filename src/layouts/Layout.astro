---
// src/layouts/Layout.astro
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import GlobalAudioPlayer from '../components/GlobalAudioPlayer.astro';
import AudioCoordinator from '../components/AudioCoordinator.astro';
import SEO from '../components/SEO.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article' | 'product' | 'music.album';
  noindex?: boolean;
  product?: {
    price: number;
    currency?: string;
    availability?: 'in_stock' | 'out_of_stock' | 'preorder';
    sku?: string;
  };
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
  };
  music?: {
    artist?: string;
    releaseDate?: string;
    album?: string;
  };
}

const { 
  title, 
  description = 'Fresh Wax - Independent jungle and drum & bass record label. Digital downloads and limited edition vinyl.',
  image,
  type,
  noindex,
  product,
  article,
  music
} = Astro.props;
---

<!doctype html>
<html lang="en-GB">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Component -->
    <SEO 
      title={title}
      description={description}
      image={image}
      type={type}
      noindex={noindex}
      product={product}
      article={article}
      music={music}
    />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Bebas+Neue&display=swap" rel="stylesheet">
    
    <style>
      body {
        font-family: 'Inter', sans-serif;
      }
      
      h1, h2, h3, h4, h5, h6 {
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 0.02em;
      }
    </style>
    
    <ViewTransitions />
  </head>
  <body>
    <!-- Audio Coordinator MUST come first -->
    <AudioCoordinator />
    
    <slot />
    
    <!-- Global Audio Player for DJ Mixes & Shuffle -->
    <GlobalAudioPlayer />
    
    <!-- Spacer for mini player -->
    <div id="mini-player-spacer" class="h-0 transition-all duration-300"></div>
  </body>
</html>

<style is:global>
  body:has(#mini-player.visible) #mini-player-spacer {
    height: 70px;
  }
  
  @media (min-width: 640px) {
    body:has(#mini-player.visible) #mini-player-spacer {
      height: 80px;
    }
  }
</style>