---
// Pro Dashboard Layout
// Only accessible to users with approved Artist or Merch Seller roles
// Shows sections based on approved roles

interface Props {
  title: string;
  activeSection?: string;
}

const { title, activeSection } = Astro.props;
---
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | Pro Dashboard | Fresh Wax</title>
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body>
  <div class="pro-dashboard" id="proDashboard">
    <!-- Loading state -->
    <div id="loadingState" class="loading-state">
      <div class="spinner"></div>
      <p>Loading dashboard...</p>
    </div>

    <!-- Access denied state -->
    <div id="accessDenied" class="access-denied" style="display: none;">
      <div class="access-denied-content">
        <h1>Pro Dashboard</h1>
        <p>You don't have access to the Pro Dashboard yet.</p>
        <p class="sub">The Pro Dashboard is available to approved Artists and Merch Sellers.</p>
        <div class="actions">
          <a href="/account" class="btn btn-secondary">Go to Account</a>
          <a href="/account/request-role" class="btn btn-primary">Request Access</a>
        </div>
      </div>
    </div>

    <!-- Dashboard content -->
    <div id="dashboardContent" class="dashboard-layout" style="display: none;">
      <!-- Sidebar -->
      <aside class="sidebar">
        <div class="sidebar-header">
          <a href="/" class="logo">Fresh Wax</a>
          <span class="badge">PRO</span>
        </div>

        <nav class="sidebar-nav" id="sidebarNav">
          <!-- Navigation items populated by JS based on roles -->
        </nav>

        <div class="sidebar-footer">
          <a href="/account" class="sidebar-link">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            Account Dashboard
          </a>
          <a href="/" class="sidebar-link">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
            Back to Store
          </a>
          <button id="logoutBtn" class="sidebar-link logout">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
              <polyline points="16 17 21 12 16 7"></polyline>
              <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>
            Sign Out
          </button>
        </div>
      </aside>

      <!-- Main content -->
      <main class="main-content">
        <header class="content-header">
          <h1>{title}</h1>
          <div class="user-info" id="userInfo">
            <span class="user-name"></span>
            <div class="user-roles"></div>
          </div>
        </header>

        <div class="content-body">
          <slot />
        </div>
      </main>
    </div>
  </div>

  <style>
    .pro-dashboard {
      min-height: 100vh;
      background: var(--bg-primary, #0a0a0a);
    }

    .loading-state {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      color: var(--text-secondary, #a3a3a3);
    }

    .spinner {
      width: 40px;
      height: 40px;
      border: 3px solid var(--border-color, #262626);
      border-top-color: var(--accent, #22c55e);
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-bottom: 1rem;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .access-denied {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 2rem;
    }

    .access-denied-content {
      text-align: center;
      max-width: 400px;
    }

    .access-denied h1 {
      color: var(--text-primary, #fff);
      margin-bottom: 1rem;
    }

    .access-denied p {
      color: var(--text-secondary, #a3a3a3);
      margin-bottom: 0.5rem;
    }

    .access-denied .sub {
      font-size: 0.875rem;
      margin-bottom: 1.5rem;
    }

    .access-denied .actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
    }

    .btn {
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.2s;
      border: none;
      cursor: pointer;
    }

    .btn-primary {
      background: var(--accent, #22c55e);
      color: #000;
    }

    .btn-secondary {
      background: var(--bg-secondary, #141414);
      color: var(--text-primary, #fff);
      border: 1px solid var(--border-color, #262626);
    }

    .dashboard-layout {
      display: grid;
      grid-template-columns: 260px 1fr;
      min-height: 100vh;
    }

    @media (max-width: 768px) {
      .dashboard-layout {
        grid-template-columns: 1fr;
      }

      .sidebar {
        position: fixed;
        left: -260px;
        top: 0;
        bottom: 0;
        z-index: 100;
        transition: left 0.3s;
      }

      .sidebar.open {
        left: 0;
      }
    }

    .sidebar {
      background: var(--bg-secondary, #141414);
      border-right: 1px solid var(--border-color, #262626);
      display: flex;
      flex-direction: column;
      height: 100vh;
      position: sticky;
      top: 0;
    }

    .sidebar-header {
      padding: 1.5rem;
      border-bottom: 1px solid var(--border-color, #262626);
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .sidebar-header .logo {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--accent, #22c55e);
      text-decoration: none;
    }

    .sidebar-header .badge {
      background: var(--accent, #22c55e);
      color: #000;
      font-size: 0.65rem;
      font-weight: 700;
      padding: 0.2rem 0.5rem;
      border-radius: 4px;
    }

    .sidebar-nav {
      flex: 1;
      padding: 1rem 0;
      overflow-y: auto;
    }

    .nav-section {
      margin-bottom: 1.5rem;
    }

    .nav-section-title {
      padding: 0.5rem 1.5rem;
      font-size: 0.7rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--text-muted, #666);
    }

    .nav-link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1.5rem;
      color: var(--text-secondary, #a3a3a3);
      text-decoration: none;
      transition: all 0.2s;
      font-size: 0.9rem;
    }

    .nav-link:hover {
      color: var(--text-primary, #fff);
      background: var(--bg-tertiary, #1a1a1a);
    }

    .nav-link.active {
      color: var(--accent, #22c55e);
      background: rgba(34, 197, 94, 0.1);
      border-right: 2px solid var(--accent, #22c55e);
    }

    .nav-link .icon {
      width: 18px;
      height: 18px;
    }

    .sidebar-footer {
      border-top: 1px solid var(--border-color, #262626);
      padding: 1rem;
    }

    .sidebar-link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.625rem 0.75rem;
      color: var(--text-secondary, #a3a3a3);
      text-decoration: none;
      font-size: 0.85rem;
      border-radius: 6px;
      transition: all 0.2s;
      background: none;
      border: none;
      cursor: pointer;
      width: 100%;
      text-align: left;
    }

    .sidebar-link:hover {
      color: var(--text-primary, #fff);
      background: var(--bg-tertiary, #1a1a1a);
    }

    .sidebar-link.logout:hover {
      color: #ef4444;
    }

    .sidebar-link .icon {
      width: 16px;
      height: 16px;
    }

    .main-content {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .content-header {
      padding: 1.5rem 2rem;
      border-bottom: 1px solid var(--border-color, #262626);
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: var(--bg-secondary, #141414);
    }

    .content-header h1 {
      font-size: 1.5rem;
      color: var(--text-primary, #fff);
      margin: 0;
    }

    .user-info {
      text-align: right;
    }

    .user-name {
      font-weight: 600;
      color: var(--text-primary, #fff);
    }

    .user-roles {
      display: flex;
      gap: 0.5rem;
      margin-top: 0.25rem;
      justify-content: flex-end;
    }

    .role-badge {
      font-size: 0.7rem;
      padding: 0.2rem 0.5rem;
      border-radius: 4px;
      background: var(--bg-tertiary, #1a1a1a);
      color: var(--text-secondary, #a3a3a3);
    }

    .role-badge.artist {
      background: rgba(139, 92, 246, 0.2);
      color: #a78bfa;
    }

    .role-badge.merch {
      background: rgba(59, 130, 246, 0.2);
      color: #60a5fa;
    }

    .content-body {
      flex: 1;
      padding: 2rem;
    }
  </style>

  <script type="module" define:vars={{ activeSection }}>
    import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-app.js';
    import { getAuth, onAuthStateChanged, signOut } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-auth.js';
    import { getFirestore, doc, getDoc } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-firestore.js';

    const firebaseConfig = window.FIREBASE_CONFIG || {
      apiKey: import.meta.env?.PUBLIC_FIREBASE_API_KEY,
      authDomain: import.meta.env?.PUBLIC_FIREBASE_AUTH_DOMAIN,
      projectId: import.meta.env?.PUBLIC_FIREBASE_PROJECT_ID,
      storageBucket: import.meta.env?.PUBLIC_FIREBASE_STORAGE_BUCKET,
      messagingSenderId: import.meta.env?.PUBLIC_FIREBASE_MESSAGING_SENDER_ID,
      appId: import.meta.env?.PUBLIC_FIREBASE_APP_ID
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    const loadingState = document.getElementById('loadingState');
    const accessDenied = document.getElementById('accessDenied');
    const dashboardContent = document.getElementById('dashboardContent');
    const sidebarNav = document.getElementById('sidebarNav');
    const userInfo = document.getElementById('userInfo');
    const logoutBtn = document.getElementById('logoutBtn');

    // Navigation items per role
    const navItems = {
      artist: {
        title: 'Artist / Label',
        items: [
          { href: '/pro/releases', label: 'My Releases', icon: 'disc' },
          { href: '/pro/releases/new', label: 'New Release', icon: 'plus' },
          { href: '/pro/sales', label: 'Sales', icon: 'chart' },
          { href: '/pro/analytics', label: 'Analytics', icon: 'analytics' },
          { href: '/pro/payouts', label: 'Payouts', icon: 'wallet' }
        ]
      },
      merchSeller: {
        title: 'Merch Seller',
        items: [
          { href: '/pro/merch', label: 'My Products', icon: 'box' },
          { href: '/pro/merch/stock', label: 'Stock Levels', icon: 'inventory' },
          { href: '/pro/merch/orders', label: 'Orders', icon: 'orders' },
          { href: '/pro/merch/analytics', label: 'Analytics', icon: 'analytics' },
          { href: '/pro/merch/account', label: 'Account', icon: 'settings' }
        ]
      }
    };

    const icons = {
      disc: '<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 14c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4zm0-6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"></path>',
      plus: '<path d="M12 5v14M5 12h14"></path>',
      chart: '<path d="M18 20V10M12 20V4M6 20v-6"></path>',
      analytics: '<path d="M21 21H3M21 21V3M3 21V3M7 14l4-4 4 4 4-4"></path>',
      wallet: '<path d="M21 4H3a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h18a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z"></path><path d="M16 12h2"></path>',
      box: '<path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>',
      inventory: '<path d="M20 7h-4V4c0-1.1-.9-2-2-2h-4c-1.1 0-2 .9-2 2v3H4c-1.1 0-2 .9-2 2v11c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V9c0-1.1-.9-2-2-2zM10 4h4v3h-4V4z"></path>',
      orders: '<path d="M9 5H7a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-2"></path><rect x="9" y="3" width="6" height="4" rx="1"></rect><path d="M9 12h6M9 16h6"></path>',
      settings: '<circle cx="12" cy="12" r="3"></circle><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>'
    };

    function buildNavigation(roles) {
      let html = '';
      
      if (roles.artist) {
        html += `<div class="nav-section">
          <div class="nav-section-title">${navItems.artist.title}</div>
          ${navItems.artist.items.map(item => `
            <a href="${item.href}" class="nav-link ${activeSection === item.href ? 'active' : ''}">
              <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">${icons[item.icon] || ''}</svg>
              ${item.label}
            </a>
          `).join('')}
        </div>`;
      }

      if (roles.merchSeller) {
        html += `<div class="nav-section">
          <div class="nav-section-title">${navItems.merchSeller.title}</div>
          ${navItems.merchSeller.items.map(item => `
            <a href="${item.href}" class="nav-link ${activeSection === item.href ? 'active' : ''}">
              <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">${icons[item.icon] || ''}</svg>
              ${item.label}
            </a>
          `).join('')}
        </div>`;
      }

      sidebarNav.innerHTML = html;
    }

    function showUserInfo(user, roles) {
      const userName = userInfo.querySelector('.user-name');
      const userRoles = userInfo.querySelector('.user-roles');
      
      userName.textContent = user.displayName || user.email;
      
      let badges = '';
      if (roles.artist) badges += '<span class="role-badge artist">Artist</span>';
      if (roles.merchSeller) badges += '<span class="role-badge merch">Merch Seller</span>';
      userRoles.innerHTML = badges;
    }

    // Auth state listener
    onAuthStateChanged(auth, async (user) => {
      if (!user) {
        // Not logged in, redirect to login
        window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
        return;
      }

      try {
        // Get user document
        const userDoc = await getDoc(doc(db, 'users', user.uid));
        
        if (!userDoc.exists()) {
          // User document doesn't exist, show access denied
          loadingState.style.display = 'none';
          accessDenied.style.display = 'flex';
          return;
        }

        const userData = userDoc.data();
        const roles = userData.roles || {};

        // Check if user has any pro roles
        if (!roles.artist && !roles.merchSeller) {
          loadingState.style.display = 'none';
          accessDenied.style.display = 'flex';
          return;
        }

        // User has access, show dashboard
        buildNavigation(roles);
        showUserInfo(user, roles);
        
        loadingState.style.display = 'none';
        dashboardContent.style.display = 'grid';

      } catch (error) {
        console.error('Error loading user data:', error);
        loadingState.style.display = 'none';
        accessDenied.style.display = 'flex';
      }
    });

    // Logout handler
    logoutBtn.addEventListener('click', async () => {
      try {
        await signOut(auth);
        window.location.href = '/';
      } catch (error) {
        console.error('Logout error:', error);
      }
    });
  </script>
</body>
</html>
